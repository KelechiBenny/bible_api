"songs": {
    "short": "Songs",
    "name": "Songs of Solomon",
    "chapters": {
        "songs1": {
            "id": 1,
            "short": "Songs 1",
            "name": "Songs of Solomon 1",
            "verses": {
                "songs1.1": {
                    "id": 1,
                    "short": "Songs 1:1",
                    "name": "Songs of Solomon 1:1",
                    "scripture": "The song of songs, which is Solomon's."
                },
                "songs1.2": {
                    "id": 2,
                    "short": "Songs 1:2",
                    "name": "Songs of Solomon 1:2",
                    "scripture": "Let him kiss me with the kisses of his mouth: for thy love is better than wine."
                },
                "songs1.3": {
                    "id": 3,
                    "short": "Songs 1:3",
                    "name": "Songs of Solomon 1:3",
                    "scripture": "Because of the savour of thy good ointments thy name is as ointment poured forth, therefore do the virgins love thee."
                },
                "songs1.4": {
                    "id": 4,
                    "short": "Songs 1:4",
                    "name": "Songs of Solomon 1:4",
                    "scripture": "Draw me, we will run after thee: the king hath brought me into his chambers: we will be glad and rejoice in thee, we will remember thy love more than wine: the upright love thee."
                },
                "songs1.5": {
                    "id": 5,
                    "short": "Songs 1:5",
                    "name": "Songs of Solomon 1:5",
                    "scripture": "I am black, but comely, O ye daughters of Jerusalem, as the tents of Kedar, as the curtains of Solomon."
                },
                "songs1.6": {
                    "id": 6,
                    "short": "Songs 1:6",
                    "name": "Songs of Solomon 1:6",
                    "scripture": "Look not upon me, because I am black, because the sun hath looked upon me: my mother's children were angry with me; they made me the keeper of the vineyards; but mine own vineyard have I not kept."
                },
                "songs1.7": {
                    "id": 7,
                    "short": "Songs 1:7",
                    "name": "Songs of Solomon 1:7",
                    "scripture": "Tell me, O thou whom my soul loveth, where thou feedest, where thou makest thy flock to rest at noon: for why should I be as one that turneth aside by the flocks of thy companions?"
                },
                "songs1.8": {
                    "id": 8,
                    "short": "Songs 1:8",
                    "name": "Songs of Solomon 1:8",
                    "scripture": "If thou know not, O thou fairest among women, go thy way forth by the footsteps of the flock, and feed thy kids beside the shepherds' tents."
                },
                "songs1.9": {
                    "id": 9,
                    "short": "Songs 1:9",
                    "name": "Songs of Solomon 1:9",
                    "scripture": "I have compared thee, O my love, to a company of horses in Pharaoh's chariots."
                },
                "songs1.10": {
                    "id": 10,
                    "short": "Songs 1:10",
                    "name": "Songs of Solomon 1:10",
                    "scripture": "Thy cheeks are comely with rows of jewels, thy neck with chains of gold."
                },
                "songs1.11": {
                    "id": 11,
                    "short": "Songs 1:11",
                    "name": "Songs of Solomon 1:11",
                    "scripture": "We will make thee borders of gold with studs of silver."
                },
                "songs1.12": {
                    "id": 12,
                    "short": "Songs 1:12",
                    "name": "Songs of Solomon 1:12",
                    "scripture": "While the king sitteth at his table, my spikenard sendeth forth the smell thereof."
                },
                "songs1.13": {
                    "id": 13,
                    "short": "Songs 1:13",
                    "name": "Songs of Solomon 1:13",
                    "scripture": "A bundle of myrrh is my wellbeloved unto me; he shall lie all night betwixt my breasts."
                },
                "songs1.14": {
                    "id": 14,
                    "short": "Songs 1:14",
                    "name": "Songs of Solomon 1:14",
                    "scripture": "My beloved is unto me as a cluster of camphire in the vineyards of Enâ€“gedi."
                },
                "songs1.15": {
                    "id": 15,
                    "short": "Songs 1:15",
                    "name": "Songs of Solomon 1:15",
                    "scripture": "Behold, thou art fair, my love; behold, thou art fair; thou hast doves' eyes."
                },
                "songs1.16": {
                    "id": 16,
                    "short": "Songs 1:16",
                    "name": "Songs of Solomon 1:16",
                    "scripture": "Behold, thou art fair, my beloved, yea, pleasant: also our bed is green."
                },
                "songs1.17": {
                    "id": 17,
                    "short": "Songs 1:17",
                    "name": "Songs of Solomon 1:17",
                    "scripture": "The beams of our house are cedar, and our rafters of fir."
                }
            }
        },
        "songs2": {
            "id": 2,
            "short": "Songs 2",
            "name": "Songs of Solomon 2",
            "verses": {
                "songs2.1": {
                    "id": 1,
                    "short": "Songs 2:1",
                    "name": "Songs of Solomon 2:1",
                    "scripture": "I am the rose of Sharon, and the lily of the valleys."
                },
                "songs2.2": {
                    "id": 2,
                    "short": "Songs 2:2",
                    "name": "Songs of Solomon 2:2",
                    "scripture": "As the lily among thorns, so is my love among the daughters."
                },
                "songs2.3": {
                    "id": 3,
                    "short": "Songs 2:3",
                    "name": "Songs of Solomon 2:3",
                    "scripture": "As the apple tree among the trees of the wood, so is my beloved among the sons. I sat down under his shadow with great delight, and his fruit was sweet to my taste."
                },
                "songs2.4": {
                    "id": 4,
                    "short": "Songs 2:4",
                    "name": "Songs of Solomon 2:4",
                    "scripture": "He brought me to the banqueting house, and his banner over me was love."
                },
                "songs2.5": {
                    "id": 5,
                    "short": "Songs 2:5",
                    "name": "Songs of Solomon 2:5",
                    "scripture": "Stay me with flagons, comfort me with apples: for I am sick of love."
                },
                "songs2.6": {
                    "id": 6,
                    "short": "Songs 2:6",
                    "name": "Songs of Solomon 2:6",
                    "scripture": "His left hand is under my head, and his right hand doth embrace me."
                },
                "songs2.7": {
                    "id": 7,
                    "short": "Songs 2:7",
                    "name": "Songs of Solomon 2:7",
                    "scripture": "I charge you, O ye daughters of Jerusalem, by the roes, and by the hinds of the field, that ye stir not up, nor awake my love, till he please."
                },
                "songs2.8": {
                    "id": 8,
                    "short": "Songs 2:8",
                    "name": "Songs of Solomon 2:8",
                    "scripture": "The voice of my beloved! behold, he cometh leaping upon the mountains, skipping upon the hills."
                },
                "songs2.9": {
                    "id": 9,
                    "short": "Songs 2:9",
                    "name": "Songs of Solomon 2:9",
                    "scripture": "My beloved is like a roe or a young hart: behold, he standeth behind our wall, he looketh forth at the windows, shewing himself through the lattice."
                },
                "songs2.10": {
                    "id": 10,
                    "short": "Songs 2:10",
                    "name": "Songs of Solomon 2:10",
                    "scripture": "My beloved spake, and said unto me, Rise up, my love, my fair one, and come away."
                },
                "songs2.11": {
                    "id": 11,
                    "short": "Songs 2:11",
                    "name": "Songs of Solomon 2:11",
                    "scripture": "For, lo, the winter is past, the rain is over and gone;"
                },
                "songs2.12": {
                    "id": 12,
                    "short": "Songs 2:12",
                    "name": "Songs of Solomon 2:12",
                    "scripture": "The flowers appear on the earth; the time of the singing of birds is come, and the voice of the turtle is heard in our land;"
                },
                "songs2.13": {
                    "id": 13,
                    "short": "Songs 2:13",
                    "name": "Songs of Solomon 2:13",
                    "scripture": "The fig tree putteth forth her green figs, and the vines with the tender grape give a good smell. Arise, my love, my fair one, and come away."
                },
                "songs2.14": {
                    "id": 14,
                    "short": "Songs 2:14",
                    "name": "Songs of Solomon 2:14",
                    "scripture": "O my dove, that art in the clefts of the rock, in the secret places of the stairs, let me see thy countenance, let me hear thy voice; for sweet is thy voice, and thy countenance is comely."
                },
                "songs2.15": {
                    "id": 15,
                    "short": "Songs 2:15",
                    "name": "Songs of Solomon 2:15",
                    "scripture": "Take us the foxes, the little foxes, that spoil the vines: for our vines have tender grapes."
                },
                "songs2.16": {
                    "id": 16,
                    "short": "Songs 2:16",
                    "name": "Songs of Solomon 2:16",
                    "scripture": "My beloved is mine, and I am his: he feedeth among the lilies."
                },
                "songs2.17": {
                    "id": 17,
                    "short": "Songs 2:17",
                    "name": "Songs of Solomon 2:17",
                    "scripture": "Until the day break, and the shadows flee away, turn, my beloved, and be thou like a roe or a young hart upon the mountains of Bether."
                }
            }
        },
        "songs3": {
            "id": 3,
            "short": "Songs 3",
            "name": "Songs of Solomon 3",
            "verses": {
                "songs3.1": {
                    "id": 1,
                    "short": "Songs 3:1",
                    "name": "Songs of Solomon 3:1",
                    "scripture": "By night on my bed I sought him whom my soul loveth: I sought him, but I found him not."
                },
                "songs3.2": {
                    "id": 2,
                    "short": "Songs 3:2",
                    "name": "Songs of Solomon 3:2",
                    "scripture": "I will rise now, and go about the city in the streets, and in the broad ways I will seek him whom my soul loveth: I sought him, but I found him not."
                },
                "songs3.3": {
                    "id": 3,
                    "short": "Songs 3:3",
                    "name": "Songs of Solomon 3:3",
                    "scripture": "The watchmen that go about the city found me: to whom I said, Saw ye him whom my soul loveth?"
                },
                "songs3.4": {
                    "id": 4,
                    "short": "Songs 3:4",
                    "name": "Songs of Solomon 3:4",
                    "scripture": "It was but a little that I passed from them, but I found him whom my soul loveth: I held him, and would not let him go, until I had brought him into my mother's house, and into the chamber of her that conceived me."
                },
                "songs3.5": {
                    "id": 5,
                    "short": "Songs 3:5",
                    "name": "Songs of Solomon 3:5",
                    "scripture": "I charge you, O ye daughters of Jerusalem, by the roes, and by the hinds of the field, that ye stir not up, nor awake my love, till he please."
                },
                "songs3.6": {
                    "id": 6,
                    "short": "Songs 3:6",
                    "name": "Songs of Solomon 3:6",
                    "scripture": "Who is this that cometh out of the wilderness like pillars of smoke, perfumed with myrrh and frankincense, with all powders of the merchant?"
                },
                "songs3.7": {
                    "id": 7,
                    "short": "Songs 3:7",
                    "name": "Songs of Solomon 3:7",
                    "scripture": "Behold his bed, which is Solomon's; threescore valiant men are about it, of the valiant of Israel."
                },
                "songs3.8": {
                    "id": 8,
                    "short": "Songs 3:8",
                    "name": "Songs of Solomon 3:8",
                    "scripture": "They all hold swords, being expert in war: every man hath his sword upon his thigh because of fear in the night."
                },
                "songs3.9": {
                    "id": 9,
                    "short": "Songs 3:9",
                    "name": "Songs of Solomon 3:9",
                    "scripture": "King Solomon made himself a chariot of the wood of Lebanon."
                },
                "songs3.10": {
                    "id": 10,
                    "short": "Songs 3:10",
                    "name": "Songs of Solomon 3:10",
                    "scripture": "He made the pillars thereof of silver, the bottom thereof of gold, the covering of it of purple, the midst thereof being paved with love, for the daughters of Jerusalem."
                },
                "songs3.11": {
                    "id": 11,
                    "short": "Songs 3:11",
                    "name": "Songs of Solomon 3:11",
                    "scripture": "Go forth, O ye daughters of Zion, and behold king Solomon with the crown wherewith his mother crowned him in the day of his espousals, and in the day of the gladness of his heart."
                }
            }
        },
        "songs4": {
            "id": 4,
            "short": "Songs 4",
            "name": "Songs of Solomon 4",
            "verses": {
                "songs4.1": {
                    "id": 1,
                    "short": "Songs 4:1",
                    "name": "Songs of Solomon 4:1",
                    "scripture": "Behold, thou art fair, my love; behold, thou art fair; thou hast doves' eyes within thy locks: thy hair is as a flock of goats, that appear from mount Gilead."
                },
                "songs4.2": {
                    "id": 2,
                    "short": "Songs 4:2",
                    "name": "Songs of Solomon 4:2",
                    "scripture": "Thy teeth are like a flock of sheep that are even shorn, which came up from the washing; whereof every one bear twins, and none is barren among them."
                },
                "songs4.3": {
                    "id": 3,
                    "short": "Songs 4:3",
                    "name": "Songs of Solomon 4:3",
                    "scripture": "Thy lips are like a thread of scarlet, and thy speech is comely: thy temples are like a piece of a pomegranate within thy locks."
                },
                "songs4.4": {
                    "id": 4,
                    "short": "Songs 4:4",
                    "name": "Songs of Solomon 4:4",
                    "scripture": "Thy neck is like the tower of David builded for an armoury, whereon there hang a thousand bucklers, all shields of mighty men."
                },
                "songs4.5": {
                    "id": 5,
                    "short": "Songs 4:5",
                    "name": "Songs of Solomon 4:5",
                    "scripture": "Thy two breasts are like two young roes that are twins, which feed among the lilies."
                },
                "songs4.6": {
                    "id": 6,
                    "short": "Songs 4:6",
                    "name": "Songs of Solomon 4:6",
                    "scripture": "Until the day break, and the shadows flee away, I will get me to the mountain of myrrh, and to the hill of frankincense."
                },
                "songs4.7": {
                    "id": 7,
                    "short": "Songs 4:7",
                    "name": "Songs of Solomon 4:7",
                    "scripture": "Thou art all fair, my love; there is no spot in thee."
                },
                "songs4.8": {
                    "id": 8,
                    "short": "Songs 4:8",
                    "name": "Songs of Solomon 4:8",
                    "scripture": "Come with me from Lebanon, my spouse, with me from Lebanon: look from the top of Amana, from the top of Senir and Hermon, from the lions' dens, from the mountains of the leopards."
                },
                "songs4.9": {
                    "id": 9,
                    "short": "Songs 4:9",
                    "name": "Songs of Solomon 4:9",
                    "scripture": "Thou hast ravished my heart, my sister, my spouse; thou hast ravished my heart with one of thine eyes, with one chain of thy neck."
                },
                "songs4.10": {
                    "id": 10,
                    "short": "Songs 4:10",
                    "name": "Songs of Solomon 4:10",
                    "scripture": "How fair is thy love, my sister, my spouse! how much better is thy love than wine! and the smell of thine ointments than all spices!"
                },
                "songs4.11": {
                    "id": 11,
                    "short": "Songs 4:11",
                    "name": "Songs of Solomon 4:11",
                    "scripture": "Thy lips, O my spouse, drop as the honeycomb: honey and milk are under thy tongue; and the smell of thy garments is like the smell of Lebanon."
                },
                "songs4.12": {
                    "id": 12,
                    "short": "Songs 4:12",
                    "name": "Songs of Solomon 4:12",
                    "scripture": "A garden inclosed is my sister, my spouse; a spring shut up, a fountain sealed."
                },
                "songs4.13": {
                    "id": 13,
                    "short": "Songs 4:13",
                    "name": "Songs of Solomon 4:13",
                    "scripture": "Thy plants are an orchard of pomegranates, with pleasant fruits; camphire, with spikenard,"
                },
                "songs4.14": {
                    "id": 14,
                    "short": "Songs 4:14",
                    "name": "Songs of Solomon 4:14",
                    "scripture": "Spikenard and saffron; calamus and cinnamon, with all trees of frankincense; myrrh and aloes, with all the chief spices:"
                },
                "songs4.15": {
                    "id": 15,
                    "short": "Songs 4:15",
                    "name": "Songs of Solomon 4:15",
                    "scripture": "A fountain of gardens, a well of living waters, and streams from Lebanon."
                },
                "songs4.16": {
                    "id": 16,
                    "short": "Songs 4:16",
                    "name": "Songs of Solomon 4:16",
                    "scripture": "Awake, O north wind; and come, thou south; blow upon my garden, that the spices thereof may flow out. Let my beloved come into his garden, and eat his pleasant fruits."
                }
            }
        },
        "songs5": {
            "id": 5,
            "short": "Songs 5",
            "name": "Songs of Solomon 5",
            "verses": {
                "songs5.1": {
                    "id": 1,
                    "short": "Songs 5:1",
                    "name": "Songs of Solomon 5:1",
                    "scripture": "I am come into my garden, my sister, my spouse: I have gathered my myrrh with my spice; I have eaten my honeycomb with my honey; I have drunk my wine with my milk: eat, O friends; drink, yea, drink abundantly, O beloved."
                },
                "songs5.2": {
                    "id": 2,
                    "short": "Songs 5:2",
                    "name": "Songs of Solomon 5:2",
                    "scripture": "I sleep, but my heart waketh: it is the voice of my beloved that knocketh, saying, Open to me, my sister, my love, my dove, my undefiled: for my head is filled with dew, and my locks with the drops of the night."
                },
                "songs5.3": {
                    "id": 3,
                    "short": "Songs 5:3",
                    "name": "Songs of Solomon 5:3",
                    "scripture": "I have put off my coat; how shall I put it on? I have washed my feet; how shall I defile them?"
                },
                "songs5.4": {
                    "id": 4,
                    "short": "Songs 5:4",
                    "name": "Songs of Solomon 5:4",
                    "scripture": "My beloved put in his hand by the hole of the door, and my bowels were moved for him."
                },
                "songs5.5": {
                    "id": 5,
                    "short": "Songs 5:5",
                    "name": "Songs of Solomon 5:5",
                    "scripture": "I rose up to open to my beloved; and my hands dropped with myrrh, and my fingers with sweet smelling myrrh, upon the handles of the lock."
                },
                "songs5.6": {
                    "id": 6,
                    "short": "Songs 5:6",
                    "name": "Songs of Solomon 5:6",
                    "scripture": "I opened to my beloved; but my beloved had withdrawn himself, and was gone: my soul failed when he spake: I sought him, but I could not find him; I called him, but he gave me no answer."
                },
                "songs5.7": {
                    "id": 7,
                    "short": "Songs 5:7",
                    "name": "Songs of Solomon 5:7",
                    "scripture": "The watchmen that went about the city found me, they smote me, they wounded me; the keepers of the walls took away my veil from me."
                },
                "songs5.8": {
                    "id": 8,
                    "short": "Songs 5:8",
                    "name": "Songs of Solomon 5:8",
                    "scripture": "I charge you, O daughters of Jerusalem, if ye find my beloved, that ye tell him, that I am sick of love."
                },
                "songs5.9": {
                    "id": 9,
                    "short": "Songs 5:9",
                    "name": "Songs of Solomon 5:9",
                    "scripture": "What is thy beloved more than another beloved, O thou fairest among women? what is thy beloved more than another beloved, that thou dost so charge us?"
                },
                "songs5.10": {
                    "id": 10,
                    "short": "Songs 5:10",
                    "name": "Songs of Solomon 5:10",
                    "scripture": "My beloved is white and ruddy, the chiefest among ten thousand."
                },
                "songs5.11": {
                    "id": 11,
                    "short": "Songs 5:11",
                    "name": "Songs of Solomon 5:11",
                    "scripture": "His head is as the most fine gold, his locks are bushy, and black as a raven."
                },
                "songs5.12": {
                    "id": 12,
                    "short": "Songs 5:12",
                    "name": "Songs of Solomon 5:12",
                    "scripture": "His eyes are as the eyes of doves by the rivers of waters, washed with milk, and fitly set."
                },
                "songs5.13": {
                    "id": 13,
                    "short": "Songs 5:13",
                    "name": "Songs of Solomon 5:13",
                    "scripture": "His cheeks are as a bed of spices, as sweet flowers: his lips like lilies, dropping sweet smelling myrrh."
                },
                "songs5.14": {
                    "id": 14,
                    "short": "Songs 5:14",
                    "name": "Songs of Solomon 5:14",
                    "scripture": "His hands are as gold rings set with the beryl: his belly is as bright ivory overlaid with sapphires."
                },
                "songs5.15": {
                    "id": 15,
                    "short": "Songs 5:15",
                    "name": "Songs of Solomon 5:15",
                    "scripture": "His legs are as pillars of marble, set upon sockets of fine gold: his countenance is as Lebanon, excellent as the cedars."
                },
                "songs5.16": {
                    "id": 16,
                    "short": "Songs 5:16",
                    "name": "Songs of Solomon 5:16",
                    "scripture": "His mouth is most sweet: yea, he is altogether lovely. This is my beloved, and this is my friend, O daughters of Jerusalem."
                }
            }
        },
        "songs6": {
            "id": 6,
            "short": "Songs 6",
            "name": "Songs of Solomon 6",
            "verses": {
                "songs6.1": {
                    "id": 1,
                    "short": "Songs 6:1",
                    "name": "Songs of Solomon 6:1",
                    "scripture": "Whither is thy beloved gone, O thou fairest among women? whither is thy beloved turned aside? that we may seek him with thee."
                },
                "songs6.2": {
                    "id": 2,
                    "short": "Songs 6:2",
                    "name": "Songs of Solomon 6:2",
                    "scripture": "My beloved is gone down into his garden, to the beds of spices, to feed in the gardens, and to gather lilies."
                },
                "songs6.3": {
                    "id": 3,
                    "short": "Songs 6:3",
                    "name": "Songs of Solomon 6:3",
                    "scripture": "I am my beloved's, and my beloved is mine: he feedeth among the lilies."
                },
                "songs6.4": {
                    "id": 4,
                    "short": "Songs 6:4",
                    "name": "Songs of Solomon 6:4",
                    "scripture": "Thou art beautiful, O my love, as Tirzah, comely as Jerusalem, terrible as an army with banners."
                },
                "songs6.5": {
                    "id": 5,
                    "short": "Songs 6:5",
                    "name": "Songs of Solomon 6:5",
                    "scripture": "Turn away thine eyes from me, for they have overcome me: thy hair is as a flock of goats that appear from Gilead."
                },
                "songs6.6": {
                    "id": 6,
                    "short": "Songs 6:6",
                    "name": "Songs of Solomon 6:6",
                    "scripture": "Thy teeth are as a flock of sheep which go up from the washing, whereof every one beareth twins, and there is not one barren among them."
                },
                "songs6.7": {
                    "id": 7,
                    "short": "Songs 6:7",
                    "name": "Songs of Solomon 6:7",
                    "scripture": "As a piece of a pomegranate are thy temples within thy locks."
                },
                "songs6.8": {
                    "id": 8,
                    "short": "Songs 6:8",
                    "name": "Songs of Solomon 6:8",
                    "scripture": "There are threescore queens, and fourscore concubines, and virgins without number."
                },
                "songs6.9": {
                    "id": 9,
                    "short": "Songs 6:9",
                    "name": "Songs of Solomon 6:9",
                    "scripture": "My dove, my undefiled is but one; she is the only one of her mother, she is the choice one of her that bare her. The daughters saw her, and blessed her; yea, the queens and the concubines, and they praised her."
                },
                "songs6.10": {
                    "id": 10,
                    "short": "Songs 6:10",
                    "name": "Songs of Solomon 6:10",
                    "scripture": "Who is she that looketh forth as the morning, fair as the moon, clear as the sun, and terrible as an army with banners?"
                },
                "songs6.11": {
                    "id": 11,
                    "short": "Songs 6:11",
                    "name": "Songs of Solomon 6:11",
                    "scripture": "I went down into the garden of nuts to see the fruits of the valley, and to see whether the vine flourished, and the pomegranates budded."
                },
                "songs6.12": {
                    "id": 12,
                    "short": "Songs 6:12",
                    "name": "Songs of Solomon 6:12",
                    "scripture": "Or ever I was aware, my soul made me like the chariots of Amminadib."
                },
                "songs6.13": {
                    "id": 13,
                    "short": "Songs 6:13",
                    "name": "Songs of Solomon 6:13",
                    "scripture": "Return, return, O Shulamite; return, return, that we may look upon thee. What will ye see in the Shulamite? As it were the company of two armies."
                }
            }
        },
        "songs7": {
            "id": 7,
            "short": "Songs 7",
            "name": "Songs of Solomon 7",
            "verses": {
                "songs7.1": {
                    "id": 1,
                    "short": "Songs 7:1",
                    "name": "Songs of Solomon 7:1",
                    "scripture": "How beautiful are thy feet with shoes, O prince's daughter! the joints of thy thighs are like jewels, the work of the hands of a cunning workman."
                },
                "songs7.2": {
                    "id": 2,
                    "short": "Songs 7:2",
                    "name": "Songs of Solomon 7:2",
                    "scripture": "Thy navel is like a round goblet, which wanteth not liquor: thy belly is like an heap of wheat set about with lilies."
                },
                "songs7.3": {
                    "id": 3,
                    "short": "Songs 7:3",
                    "name": "Songs of Solomon 7:3",
                    "scripture": "Thy two breasts are like two young roes that are twins."
                },
                "songs7.4": {
                    "id": 4,
                    "short": "Songs 7:4",
                    "name": "Songs of Solomon 7:4",
                    "scripture": "Thy neck is as a tower of ivory; thine eyes like the fishpools in Heshbon, by the gate of Bathâ€“rabbim: thy nose is as the tower of Lebanon which looketh toward Damascus."
                },
                "songs7.5": {
                    "id": 5,
                    "short": "Songs 7:5",
                    "name": "Songs of Solomon 7:5",
                    "scripture": "Thine head upon thee is like Carmel, and the hair of thine head like purple; the king is held in the galleries."
                },
                "songs7.6": {
                    "id": 6,
                    "short": "Songs 7:6",
                    "name": "Songs of Solomon 7:6",
                    "scripture": "How fair and how pleasant art thou, O love, for delights!"
                },
                "songs7.7": {
                    "id": 7,
                    "short": "Songs 7:7",
                    "name": "Songs of Solomon 7:7",
                    "scripture": "This thy stature is like to a palm tree, and thy breasts to clusters of grapes."
                },
                "songs7.8": {
                    "id": 8,
                    "short": "Songs 7:8",
                    "name": "Songs of Solomon 7:8",
                    "scripture": "I said, I will go up to the palm tree, I will take hold of the boughs thereof: now also thy breasts shall be as clusters of the vine, and the smell of thy nose like apples;"
                },
                "songs7.9": {
                    "id": 9,
                    "short": "Songs 7:9",
                    "name": "Songs of Solomon 7:9",
                    "scripture": "And the roof of thy mouth like the best wine for my beloved, that goeth down sweetly, causing the lips of those that are asleep to speak."
                },
                "songs7.10": {
                    "id": 10,
                    "short": "Songs 7:10",
                    "name": "Songs of Solomon 7:10",
                    "scripture": "I am my beloved's, and his desire is toward me."
                },
                "songs7.11": {
                    "id": 11,
                    "short": "Songs 7:11",
                    "name": "Songs of Solomon 7:11",
                    "scripture": "Come, my beloved, let us go forth into the field; let us lodge in the villages."
                },
                "songs7.12": {
                    "id": 12,
                    "short": "Songs 7:12",
                    "name": "Songs of Solomon 7:12",
                    "scripture": "Let us get up early to the vineyards; let us see if the vine flourish, whether the tender grape appear, and the pomegranates bud forth: there will I give thee my loves."
                },
                "songs7.13": {
                    "id": 13,
                    "short": "Songs 7:13",
                    "name": "Songs of Solomon 7:13",
                    "scripture": "The mandrakes give a smell, and at our gates are all manner of pleasant fruits, new and old, which I have laid up for thee, O my beloved."
                }
            }
        },
        "songs8": {
            "id": 8,
            "short": "Songs 8",
            "name": "Songs of Solomon 8",
            "verses": {
                "songs8.1": {
                    "id": 1,
                    "short": "Songs 8:1",
                    "name": "Songs of Solomon 8:1",
                    "scripture": "O that thou wert as my brother, that sucked the breasts of my mother! when I should find thee without, I would kiss thee; yea, I should not be despised."
                },
                "songs8.2": {
                    "id": 2,
                    "short": "Songs 8:2",
                    "name": "Songs of Solomon 8:2",
                    "scripture": "I would lead thee, and bring thee into my mother's house, who would instruct me: I would cause thee to drink of spiced wine of the juice of my pomegranate."
                },
                "songs8.3": {
                    "id": 3,
                    "short": "Songs 8:3",
                    "name": "Songs of Solomon 8:3",
                    "scripture": "His left hand should be under my head, and his right hand should embrace me."
                },
                "songs8.4": {
                    "id": 4,
                    "short": "Songs 8:4",
                    "name": "Songs of Solomon 8:4",
                    "scripture": "I charge you, O daughters of Jerusalem, that ye stir not up, nor awake my love, until he please."
                },
                "songs8.5": {
                    "id": 5,
                    "short": "Songs 8:5",
                    "name": "Songs of Solomon 8:5",
                    "scripture": "Who is this that cometh up from the wilderness, leaning upon her beloved? I raised thee up under the apple tree: there thy mother brought thee forth: there she brought thee forth that bare thee."
                },
                "songs8.6": {
                    "id": 6,
                    "short": "Songs 8:6",
                    "name": "Songs of Solomon 8:6",
                    "scripture": "Set me as a seal upon thine heart, as a seal upon thine arm: for love is strong as death; jealousy is cruel as the grave: the coals thereof are coals of fire, which hath a most vehement flame."
                },
                "songs8.7": {
                    "id": 7,
                    "short": "Songs 8:7",
                    "name": "Songs of Solomon 8:7",
                    "scripture": "Many waters cannot quench love, neither can the floods drown it: if a man would give all the substance of his house for love, it would utterly be contemned."
                },
                "songs8.8": {
                    "id": 8,
                    "short": "Songs 8:8",
                    "name": "Songs of Solomon 8:8",
                    "scripture": "We have a little sister, and she hath no breasts: what shall we do for our sister in the day when she shall be spoken for?"
                },
                "songs8.9": {
                    "id": 9,
                    "short": "Songs 8:9",
                    "name": "Songs of Solomon 8:9",
                    "scripture": "If she be a wall, we will build upon her a palace of silver: and if she be a door, we will inclose her with boards of cedar."
                },
                "songs8.10": {
                    "id": 10,
                    "short": "Songs 8:10",
                    "name": "Songs of Solomon 8:10",
                    "scripture": "I am a wall, and my breasts like towers: then was I in his eyes as one that found favour."
                },
                "songs8.11": {
                    "id": 11,
                    "short": "Songs 8:11",
                    "name": "Songs of Solomon 8:11",
                    "scripture": "Solomon had a vineyard at Baalâ€“hamon; he let out the vineyard unto keepers; every one for the fruit thereof was to bring a thousand pieces of silver."
                },
                "songs8.12": {
                    "id": 12,
                    "short": "Songs 8:12",
                    "name": "Songs of Solomon 8:12",
                    "scripture": "My vineyard, which is mine, is before me: thou, O Solomon, must have a thousand, and those that keep the fruit thereof two hundred."
                },
                "songs8.13": {
                    "id": 13,
                    "short": "Songs 8:13",
                    "name": "Songs of Solomon 8:13",
                    "scripture": "Thou that dwellest in the gardens, the companions hearken to thy voice: cause me to hear it."
                },
                "songs8.14": {
                    "id": 14,
                    "short": "Songs 8:14",
                    "name": "Songs of Solomon 8:14",
                    "scripture": "Make haste, my beloved, and be thou like to a roe or to a young hart upon the mountains of spices."
                }
            }
        }
    
    }
},
"isa": {
    "short": "Isa",
    "name": "Isaiah",
    "chapters": {
        "isa1": {
            "id": 1,
            "short": "Isa 1",
            "name": "Isaiah 1",
            "verses": {
                "isa1.1": {
                    "id": 1,
                    "short": "Isa 1:1",
                    "name": "Isaiah 1:1",
                    "scripture": "The vision of Isaiah the son of Amoz, which he saw concerning Judah and Jerusalem in the days of Uzziah, Jotham, Ahaz, and Hezekiah, kings of Judah."
                },
                "isa1.2": {
                    "id": 2,
                    "short": "Isa 1:2",
                    "name": "Isaiah 1:2",
                    "scripture": "Hear, O heavens, and give ear, O earth: for the Lord hath spoken, I have nourished and brought up children, and they have rebelled against me."
                },
                "isa1.3": {
                    "id": 3,
                    "short": "Isa 1:3",
                    "name": "Isaiah 1:3",
                    "scripture": "The ox knoweth his owner, and the ass his master's crib: but Israel doth not know, my people doth not consider."
                },
                "isa1.4": {
                    "id": 4,
                    "short": "Isa 1:4",
                    "name": "Isaiah 1:4",
                    "scripture": "Ah sinful nation, a people laden with iniquity, a seed of evildoers, children that are corrupters: they have forsaken the Lord, they have provoked the Holy One of Israel unto anger, they are gone away backward."
                },
                "isa1.5": {
                    "id": 5,
                    "short": "Isa 1:5",
                    "name": "Isaiah 1:5",
                    "scripture": "Why should ye be stricken any more? ye will revolt more and more: the whole head is sick, and the whole heart faint."
                },
                "isa1.6": {
                    "id": 6,
                    "short": "Isa 1:6",
                    "name": "Isaiah 1:6",
                    "scripture": "From the sole of the foot even unto the head there is no soundness in it; but wounds, and bruises, and putrifying sores: they have not been closed, neither bound up, neither mollified with ointment."
                },
                "isa1.7": {
                    "id": 7,
                    "short": "Isa 1:7",
                    "name": "Isaiah 1:7",
                    "scripture": "Your country is desolate, your cities are burned with fire: your land, strangers devour it in your presence, and it is desolate, as overthrown by strangers."
                },
                "isa1.8": {
                    "id": 8,
                    "short": "Isa 1:8",
                    "name": "Isaiah 1:8",
                    "scripture": "And the daughter of Zion is left as a cottage in a vineyard, as a lodge in a garden of cucumbers, as a besieged city."
                },
                "isa1.9": {
                    "id": 9,
                    "short": "Isa 1:9",
                    "name": "Isaiah 1:9",
                    "scripture": "Except the Lord of hosts had left unto us a very small remnant, we should have been as Sodom, and we should have been like unto Gomorrah."
                },
                "isa1.10": {
                    "id": 10,
                    "short": "Isa 1:10",
                    "name": "Isaiah 1:10",
                    "scripture": "Hear the word of the Lord, ye rulers of Sodom; give ear unto the law of our God, ye people of Gomorrah."
                },
                "isa1.11": {
                    "id": 11,
                    "short": "Isa 1:11",
                    "name": "Isaiah 1:11",
                    "scripture": "To what purpose is the multitude of your sacrifices unto me? saith the Lord : I am full of the burnt offerings of rams, and the fat of fed beasts; and I delight not in the blood of bullocks, or of lambs, or of he goats."
                },
                "isa1.12": {
                    "id": 12,
                    "short": "Isa 1:12",
                    "name": "Isaiah 1:12",
                    "scripture": "When ye come to appear before me, who hath required this at your hand, to tread my courts?"
                },
                "isa1.13": {
                    "id": 13,
                    "short": "Isa 1:13",
                    "name": "Isaiah 1:13",
                    "scripture": "Bring no more vain oblations; incense is an abomination unto me; the new moons and sabbaths, the calling of assemblies, I cannot away with; it is iniquity, even the solemn meeting."
                },
                "isa1.14": {
                    "id": 14,
                    "short": "Isa 1:14",
                    "name": "Isaiah 1:14",
                    "scripture": "Your new moons and your appointed feasts my soul hateth: they are a trouble unto me; I am weary to bear them."
                },
                "isa1.15": {
                    "id": 15,
                    "short": "Isa 1:15",
                    "name": "Isaiah 1:15",
                    "scripture": "And when ye spread forth your hands, I will hide mine eyes from you: yea, when ye make many prayers, I will not hear: your hands are full of blood."
                },
                "isa1.16": {
                    "id": 16,
                    "short": "Isa 1:16",
                    "name": "Isaiah 1:16",
                    "scripture": "Wash you, make you clean; put away the evil of your doings from before mine eyes; cease to do evil;"
                },
                "isa1.17": {
                    "id": 17,
                    "short": "Isa 1:17",
                    "name": "Isaiah 1:17",
                    "scripture": "Learn to do well; seek judgment, relieve the oppressed, judge the fatherless, plead for the widow."
                },
                "isa1.18": {
                    "id": 18,
                    "short": "Isa 1:18",
                    "name": "Isaiah 1:18",
                    "scripture": "Come now, and let us reason together, saith the Lord : though your sins be as scarlet, they shall be as white as snow; though they be red like crimson, they shall be as wool."
                },
                "isa1.19": {
                    "id": 19,
                    "short": "Isa 1:19",
                    "name": "Isaiah 1:19",
                    "scripture": "If ye be willing and obedient, ye shall eat the good of the land:"
                },
                "isa1.20": {
                    "id": 20,
                    "short": "Isa 1:20",
                    "name": "Isaiah 1:20",
                    "scripture": "But if ye refuse and rebel, ye shall be devoured with the sword: for the mouth of the Lord hath spoken it."
                },
                "isa1.21": {
                    "id": 21,
                    "short": "Isa 1:21",
                    "name": "Isaiah 1:21",
                    "scripture": "How is the faithful city become an harlot! it was full of judgment; righteousness lodged in it; but now murderers."
                },
                "isa1.22": {
                    "id": 22,
                    "short": "Isa 1:22",
                    "name": "Isaiah 1:22",
                    "scripture": "Thy silver is become dross, thy wine mixed with water:"
                },
                "isa1.23": {
                    "id": 23,
                    "short": "Isa 1:23",
                    "name": "Isaiah 1:23",
                    "scripture": "Thy princes are rebellious, and companions of thieves: every one loveth gifts, and followeth after rewards: they judge not the fatherless, neither doth the cause of the widow come unto them."
                },
                "isa1.24": {
                    "id": 24,
                    "short": "Isa 1:24",
                    "name": "Isaiah 1:24",
                    "scripture": "Therefore saith the Lord, the Lord of hosts, the mighty One of Israel, Ah, I will ease me of mine adversaries, and avenge me of mine enemies:"
                },
                "isa1.25": {
                    "id": 25,
                    "short": "Isa 1:25",
                    "name": "Isaiah 1:25",
                    "scripture": "And I will turn my hand upon thee, and purely purge away thy dross, and take away all thy tin:"
                },
                "isa1.26": {
                    "id": 26,
                    "short": "Isa 1:26",
                    "name": "Isaiah 1:26",
                    "scripture": "And I will restore thy judges as at the first, and thy counsellors as at the beginning: afterward thou shalt be called, The city of righteousness, the faithful city."
                },
                "isa1.27": {
                    "id": 27,
                    "short": "Isa 1:27",
                    "name": "Isaiah 1:27",
                    "scripture": "Zion shall be redeemed with judgment, and her converts with righteousness."
                },
                "isa1.28": {
                    "id": 28,
                    "short": "Isa 1:28",
                    "name": "Isaiah 1:28",
                    "scripture": "And the destruction of the transgressors and of the sinners shall be together, and they that forsake the Lord shall be consumed."
                },
                "isa1.29": {
                    "id": 29,
                    "short": "Isa 1:29",
                    "name": "Isaiah 1:29",
                    "scripture": "For they shall be ashamed of the oaks which ye have desired, and ye shall be confounded for the gardens that ye have chosen."
                },
                "isa1.30": {
                    "id": 30,
                    "short": "Isa 1:30",
                    "name": "Isaiah 1:30",
                    "scripture": "For ye shall be as an oak whose leaf fadeth, and as a garden that hath no water."
                },
                "isa1.31": {
                    "id": 31,
                    "short": "Isa 1:31",
                    "name": "Isaiah 1:31",
                    "scripture": "And the strong shall be as tow, and the maker of it as a spark, and they shall both burn together, and none shall quench them."
                }
            }
        },
        "isa2": {
            "id": 2,
            "short": "Isa 2",
            "name": "Isaiah 2",
            "verses": {
                "isa2.1": {
                    "id": 1,
                    "short": "Isa 2:1",
                    "name": "Isaiah 2:1",
                    "scripture": "The word that Isaiah the son of Amoz saw concerning Judah and Jerusalem."
                },
                "isa2.2": {
                    "id": 2,
                    "short": "Isa 2:2",
                    "name": "Isaiah 2:2",
                    "scripture": "And it shall come to pass in the last days, that the mountain of the Lord's house shall be established in the top of the mountains, and shall be exalted above the hills; and all nations shall flow unto it."
                },
                "isa2.3": {
                    "id": 3,
                    "short": "Isa 2:3",
                    "name": "Isaiah 2:3",
                    "scripture": "And many people shall go and say, Come ye, and let us go up to the mountain of the Lord, to the house of the God of Jacob; and he will teach us of his ways, and we will walk in his paths: for out of Zion shall go forth the law, and the word of the Lord from Jerusalem."
                },
                "isa2.4": {
                    "id": 4,
                    "short": "Isa 2:4",
                    "name": "Isaiah 2:4",
                    "scripture": "And he shall judge among the nations, and shall rebuke many people: and they shall beat their swords into plowshares, and their spears into pruninghooks: nation shall not lift up sword against nation, neither shall they learn war any more."
                },
                "isa2.5": {
                    "id": 5,
                    "short": "Isa 2:5",
                    "name": "Isaiah 2:5",
                    "scripture": "O house of Jacob, come ye, and let us walk in the light of the Lord ."
                },
                "isa2.6": {
                    "id": 6,
                    "short": "Isa 2:6",
                    "name": "Isaiah 2:6",
                    "scripture": "Therefore thou hast forsaken thy people the house of Jacob, because they be replenished from the east, and are soothsayers like the Philistines, and they please themselves in the children of strangers."
                },
                "isa2.7": {
                    "id": 7,
                    "short": "Isa 2:7",
                    "name": "Isaiah 2:7",
                    "scripture": "Their land also is full of silver and gold, neither is there any end of their treasures; their land is also full of horses, neither is there any end of their chariots:"
                },
                "isa2.8": {
                    "id": 8,
                    "short": "Isa 2:8",
                    "name": "Isaiah 2:8",
                    "scripture": "Their land also is full of idols; they worship the work of their own hands, that which their own fingers have made:"
                },
                "isa2.9": {
                    "id": 9,
                    "short": "Isa 2:9",
                    "name": "Isaiah 2:9",
                    "scripture": "And the mean man boweth down, and the great man humbleth himself: therefore forgive them not."
                },
                "isa2.10": {
                    "id": 10,
                    "short": "Isa 2:10",
                    "name": "Isaiah 2:10",
                    "scripture": "Enter into the rock, and hide thee in the dust, for fear of the Lord, and for the glory of his majesty."
                },
                "isa2.11": {
                    "id": 11,
                    "short": "Isa 2:11",
                    "name": "Isaiah 2:11",
                    "scripture": "The lofty looks of man shall be humbled, and the haughtiness of men shall be bowed down, and the Lord alone shall be exalted in that day."
                },
                "isa2.12": {
                    "id": 12,
                    "short": "Isa 2:12",
                    "name": "Isaiah 2:12",
                    "scripture": "For the day of the Lord of hosts shall be upon every one that is proud and lofty, and upon every one that is lifted up; and he shall be brought low:"
                },
                "isa2.13": {
                    "id": 13,
                    "short": "Isa 2:13",
                    "name": "Isaiah 2:13",
                    "scripture": "And upon all the cedars of Lebanon, that are high and lifted up, and upon all the oaks of Bashan,"
                },
                "isa2.14": {
                    "id": 14,
                    "short": "Isa 2:14",
                    "name": "Isaiah 2:14",
                    "scripture": "And upon all the high mountains, and upon all the hills that are lifted up,"
                },
                "isa2.15": {
                    "id": 15,
                    "short": "Isa 2:15",
                    "name": "Isaiah 2:15",
                    "scripture": "And upon every high tower, and upon every fenced wall,"
                },
                "isa2.16": {
                    "id": 16,
                    "short": "Isa 2:16",
                    "name": "Isaiah 2:16",
                    "scripture": "And upon all the ships of Tarshish, and upon all pleasant pictures."
                },
                "isa2.17": {
                    "id": 17,
                    "short": "Isa 2:17",
                    "name": "Isaiah 2:17",
                    "scripture": "And the loftiness of man shall be bowed down, and the haughtiness of men shall be made low: and the Lord alone shall be exalted in that day."
                },
                "isa2.18": {
                    "id": 18,
                    "short": "Isa 2:18",
                    "name": "Isaiah 2:18",
                    "scripture": "And the idols he shall utterly abolish."
                },
                "isa2.19": {
                    "id": 19,
                    "short": "Isa 2:19",
                    "name": "Isaiah 2:19",
                    "scripture": "And they shall go into the holes of the rocks, and into the caves of the earth, for fear of the Lord, and for the glory of his majesty, when he ariseth to shake terribly the earth."
                },
                "isa2.20": {
                    "id": 20,
                    "short": "Isa 2:20",
                    "name": "Isaiah 2:20",
                    "scripture": "In that day a man shall cast his idols of silver, and his idols of gold, which they made each one for himself to worship, to the moles and to the bats;"
                },
                "isa2.21": {
                    "id": 21,
                    "short": "Isa 2:21",
                    "name": "Isaiah 2:21",
                    "scripture": "To go into the clefts of the rocks, and into the tops of the ragged rocks, for fear of the Lord, and for the glory of his majesty, when he ariseth to shake terribly the earth."
                },
                "isa2.22": {
                    "id": 22,
                    "short": "Isa 2:22",
                    "name": "Isaiah 2:22",
                    "scripture": "Cease ye from man, whose breath is in his nostrils: for wherein is he to be accounted of?"
                }
            }
        },
        "isa3": {
            "id": 3,
            "short": "Isa 3",
            "name": "Isaiah 3",
            "verses": {
                "isa3.1": {
                    "id": 1,
                    "short": "Isa 3:1",
                    "name": "Isaiah 3:1",
                    "scripture": "For, behold, the Lord, the Lord of hosts, doth take away from Jerusalem and from Judah the stay and the staff, the whole stay of bread, and the whole stay of water,"
                },
                "isa3.2": {
                    "id": 2,
                    "short": "Isa 3:2",
                    "name": "Isaiah 3:2",
                    "scripture": "The mighty man, and the man of war, the judge, and the prophet, and the prudent, and the ancient,"
                },
                "isa3.3": {
                    "id": 3,
                    "short": "Isa 3:3",
                    "name": "Isaiah 3:3",
                    "scripture": "The captain of fifty, and the honourable man, and the counsellor, and the cunning artificer, and the eloquent orator."
                },
                "isa3.4": {
                    "id": 4,
                    "short": "Isa 3:4",
                    "name": "Isaiah 3:4",
                    "scripture": "And I will give children to be their princes, and babes shall rule over them."
                },
                "isa3.5": {
                    "id": 5,
                    "short": "Isa 3:5",
                    "name": "Isaiah 3:5",
                    "scripture": "And the people shall be oppressed, every one by another, and every one by his neighbour: the child shall behave himself proudly against the ancient, and the base against the honourable."
                },
                "isa3.6": {
                    "id": 6,
                    "short": "Isa 3:6",
                    "name": "Isaiah 3:6",
                    "scripture": "When a man shall take hold of his brother of the house of his father, saying, Thou hast clothing, be thou our ruler, and let this ruin be under thy hand:"
                },
                "isa3.7": {
                    "id": 7,
                    "short": "Isa 3:7",
                    "name": "Isaiah 3:7",
                    "scripture": "In that day shall he swear, saying, I will not be an healer; for in my house is neither bread nor clothing: make me not a ruler of the people."
                },
                "isa3.8": {
                    "id": 8,
                    "short": "Isa 3:8",
                    "name": "Isaiah 3:8",
                    "scripture": "For Jerusalem is ruined, and Judah is fallen: because their tongue and their doings are against the Lord, to provoke the eyes of his glory."
                },
                "isa3.9": {
                    "id": 9,
                    "short": "Isa 3:9",
                    "name": "Isaiah 3:9",
                    "scripture": "The shew of their countenance doth witness against them; and they declare their sin as Sodom, they hide it not. Woe unto their soul! for they have rewarded evil unto themselves."
                },
                "isa3.10": {
                    "id": 10,
                    "short": "Isa 3:10",
                    "name": "Isaiah 3:10",
                    "scripture": "Say ye to the righteous, that it shall be well with him: for they shall eat the fruit of their doings."
                },
                "isa3.11": {
                    "id": 11,
                    "short": "Isa 3:11",
                    "name": "Isaiah 3:11",
                    "scripture": "Woe unto the wicked! it shall be ill with him: for the reward of his hands shall be given him."
                },
                "isa3.12": {
                    "id": 12,
                    "short": "Isa 3:12",
                    "name": "Isaiah 3:12",
                    "scripture": "As for my people, children are their oppressors, and women rule over them. O my people, they which lead thee cause thee to err, and destroy the way of thy paths."
                },
                "isa3.13": {
                    "id": 13,
                    "short": "Isa 3:13",
                    "name": "Isaiah 3:13",
                    "scripture": "The Lord standeth up to plead, and standeth to judge the people."
                },
                "isa3.14": {
                    "id": 14,
                    "short": "Isa 3:14",
                    "name": "Isaiah 3:14",
                    "scripture": "The Lord will enter into judgment with the ancients of his people, and the princes thereof: for ye have eaten up the vineyard; the spoil of the poor is in your houses."
                },
                "isa3.15": {
                    "id": 15,
                    "short": "Isa 3:15",
                    "name": "Isaiah 3:15",
                    "scripture": "What mean ye that ye beat my people to pieces, and grind the faces of the poor? saith the Lord God of hosts."
                },
                "isa3.16": {
                    "id": 16,
                    "short": "Isa 3:16",
                    "name": "Isaiah 3:16",
                    "scripture": "Moreover the Lord saith, Because the daughters of Zion are haughty, and walk with stretched forth necks and wanton eyes, walking and mincing as they go, and making a tinkling with their feet:"
                },
                "isa3.17": {
                    "id": 17,
                    "short": "Isa 3:17",
                    "name": "Isaiah 3:17",
                    "scripture": "Therefore the Lord will smite with a scab the crown of the head of the daughters of Zion, and the Lord will discover their secret parts."
                },
                "isa3.18": {
                    "id": 18,
                    "short": "Isa 3:18",
                    "name": "Isaiah 3:18",
                    "scripture": "In that day the Lord will take away the bravery of their tinkling ornaments about their feet, and their cauls, and their round tires like the moon,"
                },
                "isa3.19": {
                    "id": 19,
                    "short": "Isa 3:19",
                    "name": "Isaiah 3:19",
                    "scripture": "The chains, and the bracelets, and the mufflers,"
                },
                "isa3.20": {
                    "id": 20,
                    "short": "Isa 3:20",
                    "name": "Isaiah 3:20",
                    "scripture": "The bonnets, and the ornaments of the legs, and the headbands, and the tablets, and the earrings,"
                },
                "isa3.21": {
                    "id": 21,
                    "short": "Isa 3:21",
                    "name": "Isaiah 3:21",
                    "scripture": "The rings, and nose jewels,"
                },
                "isa3.22": {
                    "id": 22,
                    "short": "Isa 3:22",
                    "name": "Isaiah 3:22",
                    "scripture": "The changeable suits of apparel, and the mantles, and the wimples, and the crisping pins,"
                },
                "isa3.23": {
                    "id": 23,
                    "short": "Isa 3:23",
                    "name": "Isaiah 3:23",
                    "scripture": "The glasses, and the fine linen, and the hoods, and the veils."
                },
                "isa3.24": {
                    "id": 24,
                    "short": "Isa 3:24",
                    "name": "Isaiah 3:24",
                    "scripture": "And it shall come to pass, that instead of sweet smell there shall be stink; and instead of a girdle a rent; and instead of well set hair baldness; and instead of a stomacher a girding of sackcloth; and burning instead of beauty."
                },
                "isa3.25": {
                    "id": 25,
                    "short": "Isa 3:25",
                    "name": "Isaiah 3:25",
                    "scripture": "Thy men shall fall by the sword, and thy mighty in the war."
                },
                "isa3.26": {
                    "id": 26,
                    "short": "Isa 3:26",
                    "name": "Isaiah 3:26",
                    "scripture": "And her gates shall lament and mourn; and she being desolate shall sit upon the ground."
                }
            }
        },
        "isa4": {
            "id": 4,
            "short": "Isa 4",
            "name": "Isaiah 4",
            "verses": {
                "isa4.1": {
                    "id": 1,
                    "short": "Isa 4:1",
                    "name": "Isaiah 4:1",
                    "scripture": "And in that day seven women shall take hold of one man, saying, We will eat our own bread, and wear our own apparel: only let us be called by thy name, to take away our reproach."
                },
                "isa4.2": {
                    "id": 2,
                    "short": "Isa 4:2",
                    "name": "Isaiah 4:2",
                    "scripture": "In that day shall the branch of the Lord be beautiful and glorious, and the fruit of the earth shall be excellent and comely for them that are escaped of Israel."
                },
                "isa4.3": {
                    "id": 3,
                    "short": "Isa 4:3",
                    "name": "Isaiah 4:3",
                    "scripture": "And it shall come to pass, that he that is left in Zion, and he that remaineth in Jerusalem, shall be called holy, even every one that is written among the living in Jerusalem:"
                },
                "isa4.4": {
                    "id": 4,
                    "short": "Isa 4:4",
                    "name": "Isaiah 4:4",
                    "scripture": "When the Lord shall have washed away the filth of the daughters of Zion, and shall have purged the blood of Jerusalem from the midst thereof by the spirit of judgment, and by the spirit of burning."
                },
                "isa4.5": {
                    "id": 5,
                    "short": "Isa 4:5",
                    "name": "Isaiah 4:5",
                    "scripture": "And the Lord will create upon every dwelling place of mount Zion, and upon her assemblies, a cloud and smoke by day, and the shining of a flaming fire by night: for upon all the glory shall be a defence."
                },
                "isa4.6": {
                    "id": 6,
                    "short": "Isa 4:6",
                    "name": "Isaiah 4:6",
                    "scripture": "And there shall be a tabernacle for a shadow in the daytime from the heat, and for a place of refuge, and for a covert from storm and from rain."
                }
            }
        },
        "isa5": {
            "id": 5,
            "short": "Isa 5",
            "name": "Isaiah 5",
            "verses": {
                "isa5.1": {
                    "id": 1,
                    "short": "Isa 5:1",
                    "name": "Isaiah 5:1",
                    "scripture": "Now will I sing to my wellbeloved a song of my beloved touching his vineyard. My wellbeloved hath a vineyard in a very fruitful hill:"
                },
                "isa5.2": {
                    "id": 2,
                    "short": "Isa 5:2",
                    "name": "Isaiah 5:2",
                    "scripture": "And he fenced it, and gathered out the stones thereof, and planted it with the choicest vine, and built a tower in the midst of it, and also made a winepress therein: and he looked that it should bring forth grapes, and it brought forth wild grapes."
                },
                "isa5.3": {
                    "id": 3,
                    "short": "Isa 5:3",
                    "name": "Isaiah 5:3",
                    "scripture": "And now, O inhabitants of Jerusalem, and men of Judah, judge, I pray you, betwixt me and my vineyard."
                },
                "isa5.4": {
                    "id": 4,
                    "short": "Isa 5:4",
                    "name": "Isaiah 5:4",
                    "scripture": "What could have been done more to my vineyard, that I have not done in it? wherefore, when I looked that it should bring forth grapes, brought it forth wild grapes?"
                },
                "isa5.5": {
                    "id": 5,
                    "short": "Isa 5:5",
                    "name": "Isaiah 5:5",
                    "scripture": "And now go to; I will tell you what I will do to my vineyard: I will take away the hedge thereof, and it shall be eaten up; and break down the wall thereof, and it shall be trodden down:"
                },
                "isa5.6": {
                    "id": 6,
                    "short": "Isa 5:6",
                    "name": "Isaiah 5:6",
                    "scripture": "And I will lay it waste: it shall not be pruned, nor digged; but there shall come up briers and thorns: I will also command the clouds that they rain no rain upon it."
                },
                "isa5.7": {
                    "id": 7,
                    "short": "Isa 5:7",
                    "name": "Isaiah 5:7",
                    "scripture": "For the vineyard of the Lord of hosts is the house of Israel, and the men of Judah his pleasant plant: and he looked for judgment, but behold oppression; for righteousness, but behold a cry."
                },
                "isa5.8": {
                    "id": 8,
                    "short": "Isa 5:8",
                    "name": "Isaiah 5:8",
                    "scripture": "Woe unto them that join house to house, that lay field to field, till there be no place, that they may be placed alone in the midst of the earth!"
                },
                "isa5.9": {
                    "id": 9,
                    "short": "Isa 5:9",
                    "name": "Isaiah 5:9",
                    "scripture": "In mine ears said the Lord of hosts, Of a truth many houses shall be desolate, even great and fair, without inhabitant."
                },
                "isa5.10": {
                    "id": 10,
                    "short": "Isa 5:10",
                    "name": "Isaiah 5:10",
                    "scripture": "Yea, ten acres of vineyard shall yield one bath, and the seed of an homer shall yield an ephah."
                },
                "isa5.11": {
                    "id": 11,
                    "short": "Isa 5:11",
                    "name": "Isaiah 5:11",
                    "scripture": "Woe unto them that rise up early in the morning, that they may follow strong drink; that continue until night, till wine inflame them!"
                },
                "isa5.12": {
                    "id": 12,
                    "short": "Isa 5:12",
                    "name": "Isaiah 5:12",
                    "scripture": "And the harp, and the viol, the tabret, and pipe, and wine, are in their feasts: but they regard not the work of the Lord, neither consider the operation of his hands."
                },
                "isa5.13": {
                    "id": 13,
                    "short": "Isa 5:13",
                    "name": "Isaiah 5:13",
                    "scripture": "Therefore my people are gone into captivity, because they have no knowledge: and their honourable men are famished, and their multitude dried up with thirst."
                },
                "isa5.14": {
                    "id": 14,
                    "short": "Isa 5:14",
                    "name": "Isaiah 5:14",
                    "scripture": "Therefore hell hath enlarged herself, and opened her mouth without measure: and their glory, and their multitude, and their pomp, and he that rejoiceth, shall descend into it."
                },
                "isa5.15": {
                    "id": 15,
                    "short": "Isa 5:15",
                    "name": "Isaiah 5:15",
                    "scripture": "And the mean man shall be brought down, and the mighty man shall be humbled, and the eyes of the lofty shall be humbled:"
                },
                "isa5.16": {
                    "id": 16,
                    "short": "Isa 5:16",
                    "name": "Isaiah 5:16",
                    "scripture": "But the Lord of hosts shall be exalted in judgment, and God that is holy shall be sanctified in righteousness."
                },
                "isa5.17": {
                    "id": 17,
                    "short": "Isa 5:17",
                    "name": "Isaiah 5:17",
                    "scripture": "Then shall the lambs feed after their manner, and the waste places of the fat ones shall strangers eat."
                },
                "isa5.18": {
                    "id": 18,
                    "short": "Isa 5:18",
                    "name": "Isaiah 5:18",
                    "scripture": "Woe unto them that draw iniquity with cords of vanity, and sin as it were with a cart rope:"
                },
                "isa5.19": {
                    "id": 19,
                    "short": "Isa 5:19",
                    "name": "Isaiah 5:19",
                    "scripture": "That say, Let him make speed, and hasten his work, that we may see it: and let the counsel of the Holy One of Israel draw nigh and come, that we may know it!"
                },
                "isa5.20": {
                    "id": 20,
                    "short": "Isa 5:20",
                    "name": "Isaiah 5:20",
                    "scripture": "Woe unto them that call evil good, and good evil; that put darkness for light, and light for darkness; that put bitter for sweet, and sweet for bitter!"
                },
                "isa5.21": {
                    "id": 21,
                    "short": "Isa 5:21",
                    "name": "Isaiah 5:21",
                    "scripture": "Woe unto them that are wise in their own eyes, and prudent in their own sight!"
                },
                "isa5.22": {
                    "id": 22,
                    "short": "Isa 5:22",
                    "name": "Isaiah 5:22",
                    "scripture": "Woe unto them that are mighty to drink wine, and men of strength to mingle strong drink:"
                },
                "isa5.23": {
                    "id": 23,
                    "short": "Isa 5:23",
                    "name": "Isaiah 5:23",
                    "scripture": "Which justify the wicked for reward, and take away the righteousness of the righteous from him!"
                },
                "isa5.24": {
                    "id": 24,
                    "short": "Isa 5:24",
                    "name": "Isaiah 5:24",
                    "scripture": "Therefore as the fire devoureth the stubble, and the flame consumeth the chaff, so their root shall be as rottenness, and their blossom shall go up as dust: because they have cast away the law of the Lord of hosts, and despised the word of the Holy One of Israel."
                },
                "isa5.25": {
                    "id": 25,
                    "short": "Isa 5:25",
                    "name": "Isaiah 5:25",
                    "scripture": "Therefore is the anger of the Lord kindled against his people, and he hath stretched forth his hand against them, and hath smitten them: and the hills did tremble, and their carcases were torn in the midst of the streets. For all this his anger is not turned away, but his hand is stretched out still."
                },
                "isa5.26": {
                    "id": 26,
                    "short": "Isa 5:26",
                    "name": "Isaiah 5:26",
                    "scripture": "And he will lift up an ensign to the nations from far, and will hiss unto them from the end of the earth: and, behold, they shall come with speed swiftly:"
                },
                "isa5.27": {
                    "id": 27,
                    "short": "Isa 5:27",
                    "name": "Isaiah 5:27",
                    "scripture": "None shall be weary nor stumble among them; none shall slumber nor sleep; neither shall the girdle of their loins be loosed, nor the latchet of their shoes be broken:"
                },
                "isa5.28": {
                    "id": 28,
                    "short": "Isa 5:28",
                    "name": "Isaiah 5:28",
                    "scripture": "Whose arrows are sharp, and all their bows bent, their horses' hoofs shall be counted like flint, and their wheels like a whirlwind:"
                },
                "isa5.29": {
                    "id": 29,
                    "short": "Isa 5:29",
                    "name": "Isaiah 5:29",
                    "scripture": "Their roaring shall be like a lion, they shall roar like young lions: yea, they shall roar, and lay hold of the prey, and shall carry it away safe, and none shall deliver it."
                },
                "isa5.30": {
                    "id": 30,
                    "short": "Isa 5:30",
                    "name": "Isaiah 5:30",
                    "scripture": "And in that day they shall roar against them like the roaring of the sea: and if one look unto the land, behold darkness and sorrow, and the light is darkened in the heavens thereof."
                }
            }
        },
        "isa6": {
            "id": 6,
            "short": "Isa 6",
            "name": "Isaiah 6",
            "verses": {
                "isa6.1": {
                    "id": 1,
                    "short": "Isa 6:1",
                    "name": "Isaiah 6:1",
                    "scripture": "In the year that king Uzziah died I saw also the Lord sitting upon a throne, high and lifted up, and his train filled the temple."
                },
                "isa6.2": {
                    "id": 2,
                    "short": "Isa 6:2",
                    "name": "Isaiah 6:2",
                    "scripture": "Above it stood the seraphims: each one had six wings; with twain he covered his face, and with twain he covered his feet, and with twain he did fly."
                },
                "isa6.3": {
                    "id": 3,
                    "short": "Isa 6:3",
                    "name": "Isaiah 6:3",
                    "scripture": "And one cried unto another, and said, Holy, holy, holy, is the Lord of hosts: the whole earth is full of his glory."
                },
                "isa6.4": {
                    "id": 4,
                    "short": "Isa 6:4",
                    "name": "Isaiah 6:4",
                    "scripture": "And the posts of the door moved at the voice of him that cried, and the house was filled with smoke."
                },
                "isa6.5": {
                    "id": 5,
                    "short": "Isa 6:5",
                    "name": "Isaiah 6:5",
                    "scripture": "Then said I, Woe is me! for I am undone; because I am a man of unclean lips, and I dwell in the midst of a people of unclean lips: for mine eyes have seen the King, the Lord of hosts."
                },
                "isa6.6": {
                    "id": 6,
                    "short": "Isa 6:6",
                    "name": "Isaiah 6:6",
                    "scripture": "Then flew one of the seraphims unto me, having a live coal in his hand, which he had taken with the tongs from off the altar:"
                },
                "isa6.7": {
                    "id": 7,
                    "short": "Isa 6:7",
                    "name": "Isaiah 6:7",
                    "scripture": "And he laid it upon my mouth, and said, Lo, this hath touched thy lips; and thine iniquity is taken away, and thy sin purged."
                },
                "isa6.8": {
                    "id": 8,
                    "short": "Isa 6:8",
                    "name": "Isaiah 6:8",
                    "scripture": "Also I heard the voice of the Lord, saying, Whom shall I send, and who will go for us? Then said I, Here am I; send me."
                },
                "isa6.9": {
                    "id": 9,
                    "short": "Isa 6:9",
                    "name": "Isaiah 6:9",
                    "scripture": "And he said, Go, and tell this people, Hear ye indeed, but understand not; and see ye indeed, but perceive not."
                },
                "isa6.10": {
                    "id": 10,
                    "short": "Isa 6:10",
                    "name": "Isaiah 6:10",
                    "scripture": "Make the heart of this people fat, and make their ears heavy, and shut their eyes; lest they see with their eyes, and hear with their ears, and understand with their heart, and convert, and be healed."
                },
                "isa6.11": {
                    "id": 11,
                    "short": "Isa 6:11",
                    "name": "Isaiah 6:11",
                    "scripture": "Then said I, Lord, how long? And he answered, Until the cities be wasted without inhabitant, and the houses without man, and the land be utterly desolate,"
                },
                "isa6.12": {
                    "id": 12,
                    "short": "Isa 6:12",
                    "name": "Isaiah 6:12",
                    "scripture": "And the Lord have removed men far away, and there be a great forsaking in the midst of the land."
                },
                "isa6.13": {
                    "id": 13,
                    "short": "Isa 6:13",
                    "name": "Isaiah 6:13",
                    "scripture": "But yet in it shall be a tenth, and it shall return, and shall be eaten: as a teil tree, and as an oak, whose substance is in them, when they cast their leaves: so the holy seed shall be the substance thereof."
                }
            }
        },
        "isa7": {
            "id": 7,
            "short": "Isa 7",
            "name": "Isaiah 7",
            "verses": {
                "isa7.1": {
                    "id": 1,
                    "short": "Isa 7:1",
                    "name": "Isaiah 7:1",
                    "scripture": "And it came to pass in the days of Ahaz the son of Jotham, the son of Uzziah, king of Judah, that Rezin the king of Syria, and Pekah the son of Remaliah, king of Israel, went up toward Jerusalem to war against it, but could not prevail against it."
                },
                "isa7.2": {
                    "id": 2,
                    "short": "Isa 7:2",
                    "name": "Isaiah 7:2",
                    "scripture": "And it was told the house of David, saying, Syria is confederate with Ephraim. And his heart was moved, and the heart of his people, as the trees of the wood are moved with the wind."
                },
                "isa7.3": {
                    "id": 3,
                    "short": "Isa 7:3",
                    "name": "Isaiah 7:3",
                    "scripture": "Then said the Lord unto Isaiah, Go forth now to meet Ahaz, thou, and Shearâ€“jashub thy son, at the end of the conduit of the upper pool in the highway of the fuller's field;"
                },
                "isa7.4": {
                    "id": 4,
                    "short": "Isa 7:4",
                    "name": "Isaiah 7:4",
                    "scripture": "And say unto him, Take heed, and be quiet; fear not, neither be fainthearted for the two tails of these smoking firebrands, for the fierce anger of Rezin with Syria, and of the son of Remaliah."
                },
                "isa7.5": {
                    "id": 5,
                    "short": "Isa 7:5",
                    "name": "Isaiah 7:5",
                    "scripture": "Because Syria, Ephraim, and the son of Remaliah, have taken evil counsel against thee, saying,"
                },
                "isa7.6": {
                    "id": 6,
                    "short": "Isa 7:6",
                    "name": "Isaiah 7:6",
                    "scripture": "Let us go up against Judah, and vex it, and let us make a breach therein for us, and set a king in the midst of it, even the son of Tabeal:"
                },
                "isa7.7": {
                    "id": 7,
                    "short": "Isa 7:7",
                    "name": "Isaiah 7:7",
                    "scripture": "Thus saith the Lord God, It shall not stand, neither shall it come to pass."
                },
                "isa7.8": {
                    "id": 8,
                    "short": "Isa 7:8",
                    "name": "Isaiah 7:8",
                    "scripture": "For the head of Syria is Damascus, and the head of Damascus is Rezin; and within threescore and five years shall Ephraim be broken, that it be not a people."
                },
                "isa7.9": {
                    "id": 9,
                    "short": "Isa 7:9",
                    "name": "Isaiah 7:9",
                    "scripture": "And the head of Ephraim is Samaria, and the head of Samaria is Remaliah's son. If ye will not believe, surely ye shall not be established."
                },
                "isa7.10": {
                    "id": 10,
                    "short": "Isa 7:10",
                    "name": "Isaiah 7:10",
                    "scripture": "Moreover the Lord spake again unto Ahaz, saying,"
                },
                "isa7.11": {
                    "id": 11,
                    "short": "Isa 7:11",
                    "name": "Isaiah 7:11",
                    "scripture": "Ask thee a sign of the Lord thy God; ask it either in the depth, or in the height above."
                },
                "isa7.12": {
                    "id": 12,
                    "short": "Isa 7:12",
                    "name": "Isaiah 7:12",
                    "scripture": "But Ahaz said, I will not ask, neither will I tempt the Lord ."
                },
                "isa7.13": {
                    "id": 13,
                    "short": "Isa 7:13",
                    "name": "Isaiah 7:13",
                    "scripture": "And he said, Hear ye now, O house of David; Is it a small thing for you to weary men, but will ye weary my God also?"
                },
                "isa7.14": {
                    "id": 14,
                    "short": "Isa 7:14",
                    "name": "Isaiah 7:14",
                    "scripture": "Therefore the Lord himself shall give you a sign; Behold, a virgin shall conceive, and bear a son, and shall call his name Immanuel."
                },
                "isa7.15": {
                    "id": 15,
                    "short": "Isa 7:15",
                    "name": "Isaiah 7:15",
                    "scripture": "Butter and honey shall he eat, that he may know to refuse the evil, and choose the good."
                },
                "isa7.16": {
                    "id": 16,
                    "short": "Isa 7:16",
                    "name": "Isaiah 7:16",
                    "scripture": "For before the child shall know to refuse the evil, and choose the good, the land that thou abhorrest shall be forsaken of both her kings."
                },
                "isa7.17": {
                    "id": 17,
                    "short": "Isa 7:17",
                    "name": "Isaiah 7:17",
                    "scripture": "The Lord shall bring upon thee, and upon thy people, and upon thy father's house, days that have not come, from the day that Ephraim departed from Judah; even the king of Assyria."
                },
                "isa7.18": {
                    "id": 18,
                    "short": "Isa 7:18",
                    "name": "Isaiah 7:18",
                    "scripture": "And it shall come to pass in that day, that the Lord shall hiss for the fly that is in the uttermost part of the rivers of Egypt, and for the bee that is in the land of Assyria."
                },
                "isa7.19": {
                    "id": 19,
                    "short": "Isa 7:19",
                    "name": "Isaiah 7:19",
                    "scripture": "And they shall come, and shall rest all of them in the desolate valleys, and in the holes of the rocks, and upon all thorns, and upon all bushes."
                },
                "isa7.20": {
                    "id": 20,
                    "short": "Isa 7:20",
                    "name": "Isaiah 7:20",
                    "scripture": "In the same day shall the Lord shave with a razor that is hired, namely, by them beyond the river, by the king of Assyria, the head, and the hair of the feet: and it shall also consume the beard."
                },
                "isa7.21": {
                    "id": 21,
                    "short": "Isa 7:21",
                    "name": "Isaiah 7:21",
                    "scripture": "And it shall come to pass in that day, that a man shall nourish a young cow, and two sheep;"
                },
                "isa7.22": {
                    "id": 22,
                    "short": "Isa 7:22",
                    "name": "Isaiah 7:22",
                    "scripture": "And it shall come to pass, for the abundance of milk that they shall give he shall eat butter: for butter and honey shall every one eat that is left in the land."
                },
                "isa7.23": {
                    "id": 23,
                    "short": "Isa 7:23",
                    "name": "Isaiah 7:23",
                    "scripture": "And it shall come to pass in that day, that every place shall be, where there were a thousand vines at a thousand silverlings, it shall even be for briers and thorns."
                },
                "isa7.24": {
                    "id": 24,
                    "short": "Isa 7:24",
                    "name": "Isaiah 7:24",
                    "scripture": "With arrows and with bows shall men come thither; because all the land shall become briers and thorns."
                },
                "isa7.25": {
                    "id": 25,
                    "short": "Isa 7:25",
                    "name": "Isaiah 7:25",
                    "scripture": "And on all hills that shall be digged with the mattock, there shall not come thither the fear of briers and thorns: but it shall be for the sending forth of oxen, and for the treading of lesser cattle."
                }
            }
        },
        "isa8": {
            "id": 8,
            "short": "Isa 8",
            "name": "Isaiah 8",
            "verses": {
                "isa8.1": {
                    "id": 1,
                    "short": "Isa 8:1",
                    "name": "Isaiah 8:1",
                    "scripture": "Moreover the Lord said unto me, Take thee a great roll, and write in it with a man's pen concerning Maherâ€“shalalâ€“hashâ€“baz."
                },
                "isa8.2": {
                    "id": 2,
                    "short": "Isa 8:2",
                    "name": "Isaiah 8:2",
                    "scripture": "And I took unto me faithful witnesses to record, Uriah the priest, and Zechariah the son of Jeberechiah."
                },
                "isa8.3": {
                    "id": 3,
                    "short": "Isa 8:3",
                    "name": "Isaiah 8:3",
                    "scripture": "And I went unto the prophetess; and she conceived, and bare a son. Then said the Lord to me, Call his name Maherâ€“shalalâ€“hashâ€“baz."
                },
                "isa8.4": {
                    "id": 4,
                    "short": "Isa 8:4",
                    "name": "Isaiah 8:4",
                    "scripture": "For before the child shall have knowledge to cry, My father, and my mother, the riches of Damascus and the spoil of Samaria shall be taken away before the king of Assyria."
                },
                "isa8.5": {
                    "id": 5,
                    "short": "Isa 8:5",
                    "name": "Isaiah 8:5",
                    "scripture": "The Lord spake also unto me again, saying,"
                },
                "isa8.6": {
                    "id": 6,
                    "short": "Isa 8:6",
                    "name": "Isaiah 8:6",
                    "scripture": "Forasmuch as this people refuseth the waters of Shiloah that go softly, and rejoice in Rezin and Remaliah's son;"
                },
                "isa8.7": {
                    "id": 7,
                    "short": "Isa 8:7",
                    "name": "Isaiah 8:7",
                    "scripture": "Now therefore, behold, the Lord bringeth up upon them the waters of the river, strong and many, even the king of Assyria, and all his glory: and he shall come up over all his channels, and go over all his banks:"
                },
                "isa8.8": {
                    "id": 8,
                    "short": "Isa 8:8",
                    "name": "Isaiah 8:8",
                    "scripture": "And he shall pass through Judah; he shall overflow and go over, he shall reach even to the neck; and the stretching out of his wings shall fill the breadth of thy land, O Immanuel."
                },
                "isa8.9": {
                    "id": 9,
                    "short": "Isa 8:9",
                    "name": "Isaiah 8:9",
                    "scripture": "Associate yourselves, O ye people, and ye shall be broken in pieces; and give ear, all ye of far countries: gird yourselves, and ye shall be broken in pieces; gird yourselves, and ye shall be broken in pieces."
                },
                "isa8.10": {
                    "id": 10,
                    "short": "Isa 8:10",
                    "name": "Isaiah 8:10",
                    "scripture": "Take counsel together, and it shall come to nought; speak the word, and it shall not stand: for God is with us."
                },
                "isa8.11": {
                    "id": 11,
                    "short": "Isa 8:11",
                    "name": "Isaiah 8:11",
                    "scripture": "For the Lord spake thus to me with a strong hand, and instructed me that I should not walk in the way of this people, saying,"
                },
                "isa8.12": {
                    "id": 12,
                    "short": "Isa 8:12",
                    "name": "Isaiah 8:12",
                    "scripture": "Say ye not, A confederacy, to all them to whom this people shall say, A confederacy; neither fear ye their fear, nor be afraid."
                },
                "isa8.13": {
                    "id": 13,
                    "short": "Isa 8:13",
                    "name": "Isaiah 8:13",
                    "scripture": "Sanctify the Lord of hosts himself; and let him be your fear, and let him be your dread."
                },
                "isa8.14": {
                    "id": 14,
                    "short": "Isa 8:14",
                    "name": "Isaiah 8:14",
                    "scripture": "And he shall be for a sanctuary; but for a stone of stumbling and for a rock of offence to both the houses of Israel, for a gin and for a snare to the inhabitants of Jerusalem."
                },
                "isa8.15": {
                    "id": 15,
                    "short": "Isa 8:15",
                    "name": "Isaiah 8:15",
                    "scripture": "And many among them shall stumble, and fall, and be broken, and be snared, and be taken."
                },
                "isa8.16": {
                    "id": 16,
                    "short": "Isa 8:16",
                    "name": "Isaiah 8:16",
                    "scripture": "Bind up the testimony, seal the law among my disciples."
                },
                "isa8.17": {
                    "id": 17,
                    "short": "Isa 8:17",
                    "name": "Isaiah 8:17",
                    "scripture": "And I will wait upon the Lord, that hideth his face from the house of Jacob, and I will look for him."
                },
                "isa8.18": {
                    "id": 18,
                    "short": "Isa 8:18",
                    "name": "Isaiah 8:18",
                    "scripture": "Behold, I and the children whom the Lord hath given me are for signs and for wonders in Israel from the Lord of hosts, which dwelleth in mount Zion."
                },
                "isa8.19": {
                    "id": 19,
                    "short": "Isa 8:19",
                    "name": "Isaiah 8:19",
                    "scripture": "And when they shall say unto you, Seek unto them that have familiar spirits, and unto wizards that peep, and that mutter: should not a people seek unto their God? for the living to the dead?"
                },
                "isa8.20": {
                    "id": 20,
                    "short": "Isa 8:20",
                    "name": "Isaiah 8:20",
                    "scripture": "To the law and to the testimony: if they speak not according to this word, it is because there is no light in them."
                },
                "isa8.21": {
                    "id": 21,
                    "short": "Isa 8:21",
                    "name": "Isaiah 8:21",
                    "scripture": "And they shall pass through it, hardly bestead and hungry: and it shall come to pass, that when they shall be hungry, they shall fret themselves, and curse their king and their God, and look upward."
                },
                "isa8.22": {
                    "id": 22,
                    "short": "Isa 8:22",
                    "name": "Isaiah 8:22",
                    "scripture": "And they shall look unto the earth; and behold trouble and darkness, dimness of anguish; and they shall be driven to darkness."
                }
            }
        },
        "isa9": {
            "id": 9,
            "short": "Isa 9",
            "name": "Isaiah 9",
            "verses": {
                "isa9.1": {
                    "id": 1,
                    "short": "Isa 9:1",
                    "name": "Isaiah 9:1",
                    "scripture": "Nevertheless the dimness shall not be such as was in her vexation, when at the first he lightly afflicted the land of Zebulun and the land of Naphtali, and afterward did more grievously afflict her by the way of the sea, beyond Jordan, in Galilee of the nations."
                },
                "isa9.2": {
                    "id": 2,
                    "short": "Isa 9:2",
                    "name": "Isaiah 9:2",
                    "scripture": "The people that walked in darkness have seen a great light: they that dwell in the land of the shadow of death, upon them hath the light shined."
                },
                "isa9.3": {
                    "id": 3,
                    "short": "Isa 9:3",
                    "name": "Isaiah 9:3",
                    "scripture": "Thou hast multiplied the nation, and not increased the joy: they joy before thee according to the joy in harvest, and as men rejoice when they divide the spoil."
                },
                "isa9.4": {
                    "id": 4,
                    "short": "Isa 9:4",
                    "name": "Isaiah 9:4",
                    "scripture": "For thou hast broken the yoke of his burden, and the staff of his shoulder, the rod of his oppressor, as in the day of Midian."
                },
                "isa9.5": {
                    "id": 5,
                    "short": "Isa 9:5",
                    "name": "Isaiah 9:5",
                    "scripture": "For every battle of the warrior is with confused noise, and garments rolled in blood; but this shall be with burning and fuel of fire."
                },
                "isa9.6": {
                    "id": 6,
                    "short": "Isa 9:6",
                    "name": "Isaiah 9:6",
                    "scripture": "For unto us a child is born, unto us a son is given: and the government shall be upon his shoulder: and his name shall be called Wonderful, Counsellor, The mighty God, The everlasting Father, The Prince of Peace."
                },
                "isa9.7": {
                    "id": 7,
                    "short": "Isa 9:7",
                    "name": "Isaiah 9:7",
                    "scripture": "Of the increase of his government and peace there shall be no end, upon the throne of David, and upon his kingdom, to order it, and to establish it with judgment and with justice from henceforth even for ever. The zeal of the Lord of hosts will perform this."
                },
                "isa9.8": {
                    "id": 8,
                    "short": "Isa 9:8",
                    "name": "Isaiah 9:8",
                    "scripture": "The Lord sent a word into Jacob, and it hath lighted upon Israel."
                },
                "isa9.9": {
                    "id": 9,
                    "short": "Isa 9:9",
                    "name": "Isaiah 9:9",
                    "scripture": "And all the people shall know, even Ephraim and the inhabitant of Samaria, that say in the pride and stoutness of heart,"
                },
                "isa9.10": {
                    "id": 10,
                    "short": "Isa 9:10",
                    "name": "Isaiah 9:10",
                    "scripture": "The bricks are fallen down, but we will build with hewn stones: the sycomores are cut down, but we will change them into cedars."
                },
                "isa9.11": {
                    "id": 11,
                    "short": "Isa 9:11",
                    "name": "Isaiah 9:11",
                    "scripture": "Therefore the Lord shall set up the adversaries of Rezin against him, and join his enemies together;"
                },
                "isa9.12": {
                    "id": 12,
                    "short": "Isa 9:12",
                    "name": "Isaiah 9:12",
                    "scripture": "The Syrians before, and the Philistines behind; and they shall devour Israel with open mouth. For all this his anger is not turned away, but his hand is stretched out still."
                },
                "isa9.13": {
                    "id": 13,
                    "short": "Isa 9:13",
                    "name": "Isaiah 9:13",
                    "scripture": "For the people turneth not unto him that smiteth them, neither do they seek the Lord of hosts."
                },
                "isa9.14": {
                    "id": 14,
                    "short": "Isa 9:14",
                    "name": "Isaiah 9:14",
                    "scripture": "Therefore the Lord will cut off from Israel head and tail, branch and rush, in one day."
                },
                "isa9.15": {
                    "id": 15,
                    "short": "Isa 9:15",
                    "name": "Isaiah 9:15",
                    "scripture": "The ancient and honourable, he is the head; and the prophet that teacheth lies, he is the tail."
                },
                "isa9.16": {
                    "id": 16,
                    "short": "Isa 9:16",
                    "name": "Isaiah 9:16",
                    "scripture": "For the leaders of this people cause them to err; and they that are led of them are destroyed."
                },
                "isa9.17": {
                    "id": 17,
                    "short": "Isa 9:17",
                    "name": "Isaiah 9:17",
                    "scripture": "Therefore the Lord shall have no joy in their young men, neither shall have mercy on their fatherless and widows: for every one is an hypocrite and an evildoer, and every mouth speaketh folly. For all this his anger is not turned away, but his hand is stretched out still."
                },
                "isa9.18": {
                    "id": 18,
                    "short": "Isa 9:18",
                    "name": "Isaiah 9:18",
                    "scripture": "For wickedness burneth as the fire: it shall devour the briers and thorns, and shall kindle in the thickets of the forest, and they shall mount up like the lifting up of smoke."
                },
                "isa9.19": {
                    "id": 19,
                    "short": "Isa 9:19",
                    "name": "Isaiah 9:19",
                    "scripture": "Through the wrath of the Lord of hosts is the land darkened, and the people shall be as the fuel of the fire: no man shall spare his brother."
                },
                "isa9.20": {
                    "id": 20,
                    "short": "Isa 9:20",
                    "name": "Isaiah 9:20",
                    "scripture": "And he shall snatch on the right hand, and be hungry; and he shall eat on the left hand, and they shall not be satisfied: they shall eat every man the flesh of his own arm:"
                },
                "isa9.21": {
                    "id": 21,
                    "short": "Isa 9:21",
                    "name": "Isaiah 9:21",
                    "scripture": "Manasseh, Ephraim; and Ephraim, Manasseh: and they together shall be against Judah. For all this his anger is not turned away, but his hand is stretched out still."
                }
            }
        },
        "isa10": {
            "id": 10,
            "short": "Isa 10",
            "name": "Isaiah 10",
            "verses": {
                "isa10.1": {
                    "id": 1,
                    "short": "Isa 10:1",
                    "name": "Isaiah 10:1",
                    "scripture": "Woe unto them that decree unrighteous decrees, and that write grievousness which they have prescribed;"
                },
                "isa10.2": {
                    "id": 2,
                    "short": "Isa 10:2",
                    "name": "Isaiah 10:2",
                    "scripture": "To turn aside the needy from judgment, and to take away the right from the poor of my people, that widows may be their prey, and that they may rob the fatherless!"
                },
                "isa10.3": {
                    "id": 3,
                    "short": "Isa 10:3",
                    "name": "Isaiah 10:3",
                    "scripture": "And what will ye do in the day of visitation, and in the desolation which shall come from far? to whom will ye flee for help? and where will ye leave your glory?"
                },
                "isa10.4": {
                    "id": 4,
                    "short": "Isa 10:4",
                    "name": "Isaiah 10:4",
                    "scripture": "Without me they shall bow down under the prisoners, and they shall fall under the slain. For all this his anger is not turned away, but his hand is stretched out still."
                },
                "isa10.5": {
                    "id": 5,
                    "short": "Isa 10:5",
                    "name": "Isaiah 10:5",
                    "scripture": "O Assyrian, the rod of mine anger, and the staff in their hand is mine indignation."
                },
                "isa10.6": {
                    "id": 6,
                    "short": "Isa 10:6",
                    "name": "Isaiah 10:6",
                    "scripture": "I will send him against an hypocritical nation, and against the people of my wrath will I give him a charge, to take the spoil, and to take the prey, and to tread them down like the mire of the streets."
                },
                "isa10.7": {
                    "id": 7,
                    "short": "Isa 10:7",
                    "name": "Isaiah 10:7",
                    "scripture": "Howbeit he meaneth not so, neither doth his heart think so; but it is in his heart to destroy and cut off nations not a few."
                },
                "isa10.8": {
                    "id": 8,
                    "short": "Isa 10:8",
                    "name": "Isaiah 10:8",
                    "scripture": "For he saith, Are not my princes altogether kings?"
                },
                "isa10.9": {
                    "id": 9,
                    "short": "Isa 10:9",
                    "name": "Isaiah 10:9",
                    "scripture": "Is not Calno as Carchemish? is not Hamath as Arpad? is not Samaria as Damascus?"
                },
                "isa10.10": {
                    "id": 10,
                    "short": "Isa 10:10",
                    "name": "Isaiah 10:10",
                    "scripture": "As my hand hath found the kingdoms of the idols, and whose graven images did excel them of Jerusalem and of Samaria;"
                },
                "isa10.11": {
                    "id": 11,
                    "short": "Isa 10:11",
                    "name": "Isaiah 10:11",
                    "scripture": "Shall I not, as I have done unto Samaria and her idols, so do to Jerusalem and her idols?"
                },
                "isa10.12": {
                    "id": 12,
                    "short": "Isa 10:12",
                    "name": "Isaiah 10:12",
                    "scripture": "Wherefore it shall come to pass, that when the Lord hath performed his whole work upon mount Zion and on Jerusalem, I will punish the fruit of the stout heart of the king of Assyria, and the glory of his high looks."
                },
                "isa10.13": {
                    "id": 13,
                    "short": "Isa 10:13",
                    "name": "Isaiah 10:13",
                    "scripture": "For he saith, By the strength of my hand I have done it, and by my wisdom; for I am prudent: and I have removed the bounds of the people, and have robbed their treasures, and I have put down the inhabitants like a valiant man:"
                },
                "isa10.14": {
                    "id": 14,
                    "short": "Isa 10:14",
                    "name": "Isaiah 10:14",
                    "scripture": "And my hand hath found as a nest the riches of the people: and as one gathereth eggs that are left, have I gathered all the earth; and there was none that moved the wing, or opened the mouth, or peeped."
                },
                "isa10.15": {
                    "id": 15,
                    "short": "Isa 10:15",
                    "name": "Isaiah 10:15",
                    "scripture": "Shall the axe boast itself against him that heweth therewith? or shall the saw magnify itself against him that shaketh it? as if the rod should shake itself against them that lift it up, or as if the staff should lift up itself, as if it were no wood."
                },
                "isa10.16": {
                    "id": 16,
                    "short": "Isa 10:16",
                    "name": "Isaiah 10:16",
                    "scripture": "Therefore shall the Lord, the Lord of hosts, send among his fat ones leanness; and under his glory he shall kindle a burning like the burning of a fire."
                },
                "isa10.17": {
                    "id": 17,
                    "short": "Isa 10:17",
                    "name": "Isaiah 10:17",
                    "scripture": "And the light of Israel shall be for a fire, and his Holy One for a flame: and it shall burn and devour his thorns and his briers in one day;"
                },
                "isa10.18": {
                    "id": 18,
                    "short": "Isa 10:18",
                    "name": "Isaiah 10:18",
                    "scripture": "And shall consume the glory of his forest, and of his fruitful field, both soul and body: and they shall be as when a standardbearer fainteth."
                },
                "isa10.19": {
                    "id": 19,
                    "short": "Isa 10:19",
                    "name": "Isaiah 10:19",
                    "scripture": "And the rest of the trees of his forest shall be few, that a child may write them."
                },
                "isa10.20": {
                    "id": 20,
                    "short": "Isa 10:20",
                    "name": "Isaiah 10:20",
                    "scripture": "And it shall come to pass in that day, that the remnant of Israel, and such as are escaped of the house of Jacob, shall no more again stay upon him that smote them; but shall stay upon the Lord, the Holy One of Israel, in truth."
                },
                "isa10.21": {
                    "id": 21,
                    "short": "Isa 10:21",
                    "name": "Isaiah 10:21",
                    "scripture": "The remnant shall return, even the remnant of Jacob, unto the mighty God."
                },
                "isa10.22": {
                    "id": 22,
                    "short": "Isa 10:22",
                    "name": "Isaiah 10:22",
                    "scripture": "For though thy people Israel be as the sand of the sea, yet a remnant of them shall return: the consumption decreed shall overflow with righteousness."
                },
                "isa10.23": {
                    "id": 23,
                    "short": "Isa 10:23",
                    "name": "Isaiah 10:23",
                    "scripture": "For the Lord God of hosts shall make a consumption, even determined, in the midst of all the land."
                },
                "isa10.24": {
                    "id": 24,
                    "short": "Isa 10:24",
                    "name": "Isaiah 10:24",
                    "scripture": "Therefore thus saith the Lord God of hosts, O my people that dwellest in Zion, be not afraid of the Assyrian: he shall smite thee with a rod, and shall lift up his staff against thee, after the manner of Egypt."
                },
                "isa10.25": {
                    "id": 25,
                    "short": "Isa 10:25",
                    "name": "Isaiah 10:25",
                    "scripture": "For yet a very little while, and the indignation shall cease, and mine anger in their destruction."
                },
                "isa10.26": {
                    "id": 26,
                    "short": "Isa 10:26",
                    "name": "Isaiah 10:26",
                    "scripture": "And the Lord of hosts shall stir up a scourge for him according to the slaughter of Midian at the rock of Oreb: and as his rod was upon the sea, so shall he lift it up after the manner of Egypt."
                },
                "isa10.27": {
                    "id": 27,
                    "short": "Isa 10:27",
                    "name": "Isaiah 10:27",
                    "scripture": "And it shall come to pass in that day, that his burden shall be taken away from off thy shoulder, and his yoke from off thy neck, and the yoke shall be destroyed because of the anointing."
                },
                "isa10.28": {
                    "id": 28,
                    "short": "Isa 10:28",
                    "name": "Isaiah 10:28",
                    "scripture": "He is come to Aiath, he is passed to Migron; at Michmash he hath laid up his carriages:"
                },
                "isa10.29": {
                    "id": 29,
                    "short": "Isa 10:29",
                    "name": "Isaiah 10:29",
                    "scripture": "They are gone over the passage: they have taken up their lodging at Geba; Ramah is afraid; Gibeah of Saul is fled."
                },
                "isa10.30": {
                    "id": 30,
                    "short": "Isa 10:30",
                    "name": "Isaiah 10:30",
                    "scripture": "Lift up thy voice, O daughter of Gallim: cause it to be heard unto Laish, O poor Anathoth."
                },
                "isa10.31": {
                    "id": 31,
                    "short": "Isa 10:31",
                    "name": "Isaiah 10:31",
                    "scripture": "Madmenah is removed; the inhabitants of Gebim gather themselves to flee."
                },
                "isa10.32": {
                    "id": 32,
                    "short": "Isa 10:32",
                    "name": "Isaiah 10:32",
                    "scripture": "As yet shall he remain at Nob that day: he shall shake his hand against the mount of the daughter of Zion, the hill of Jerusalem."
                },
                "isa10.33": {
                    "id": 33,
                    "short": "Isa 10:33",
                    "name": "Isaiah 10:33",
                    "scripture": "Behold, the Lord, the Lord of hosts, shall lop the bough with terror: and the high ones of stature shall be hewn down, and the haughty shall be humbled."
                },
                "isa10.34": {
                    "id": 34,
                    "short": "Isa 10:34",
                    "name": "Isaiah 10:34",
                    "scripture": "And he shall cut down the thickets of the forest with iron, and Lebanon shall fall by a mighty one."
                }
            }
        },
        "isa11": {
            "id": 11,
            "short": "Isa 11",
            "name": "Isaiah 11",
            "verses": {
                "isa11.1": {
                    "id": 1,
                    "short": "Isa 11:1",
                    "name": "Isaiah 11:1",
                    "scripture": "And there shall come forth a rod out of the stem of Jesse, and a Branch shall grow out of his roots:"
                },
                "isa11.2": {
                    "id": 2,
                    "short": "Isa 11:2",
                    "name": "Isaiah 11:2",
                    "scripture": "And the spirit of the Lord shall rest upon him, the spirit of wisdom and understanding, the spirit of counsel and might, the spirit of knowledge and of the fear of the Lord;"
                },
                "isa11.3": {
                    "id": 3,
                    "short": "Isa 11:3",
                    "name": "Isaiah 11:3",
                    "scripture": "And shall make him of quick understanding in the fear of the Lord : and he shall not judge after the sight of his eyes, neither reprove after the hearing of his ears:"
                },
                "isa11.4": {
                    "id": 4,
                    "short": "Isa 11:4",
                    "name": "Isaiah 11:4",
                    "scripture": "But with righteousness shall he judge the poor, and reprove with equity for the meek of the earth: and he shall smite the earth with the rod of his mouth, and with the breath of his lips shall he slay the wicked."
                },
                "isa11.5": {
                    "id": 5,
                    "short": "Isa 11:5",
                    "name": "Isaiah 11:5",
                    "scripture": "And righteousness shall be the girdle of his loins, and faithfulness the girdle of his reins."
                },
                "isa11.6": {
                    "id": 6,
                    "short": "Isa 11:6",
                    "name": "Isaiah 11:6",
                    "scripture": "The wolf also shall dwell with the lamb, and the leopard shall lie down with the kid; and the calf and the young lion and the fatling together; and a little child shall lead them."
                },
                "isa11.7": {
                    "id": 7,
                    "short": "Isa 11:7",
                    "name": "Isaiah 11:7",
                    "scripture": "And the cow and the bear shall feed; their young ones shall lie down together: and the lion shall eat straw like the ox."
                },
                "isa11.8": {
                    "id": 8,
                    "short": "Isa 11:8",
                    "name": "Isaiah 11:8",
                    "scripture": "And the sucking child shall play on the hole of the asp, and the weaned child shall put his hand on the cockatrice' den."
                },
                "isa11.9": {
                    "id": 9,
                    "short": "Isa 11:9",
                    "name": "Isaiah 11:9",
                    "scripture": "They shall not hurt nor destroy in all my holy mountain: for the earth shall be full of the knowledge of the Lord, as the waters cover the sea."
                },
                "isa11.10": {
                    "id": 10,
                    "short": "Isa 11:10",
                    "name": "Isaiah 11:10",
                    "scripture": "And in that day there shall be a root of Jesse, which shall stand for an ensign of the people; to it shall the Gentiles seek: and his rest shall be glorious."
                },
                "isa11.11": {
                    "id": 11,
                    "short": "Isa 11:11",
                    "name": "Isaiah 11:11",
                    "scripture": "And it shall come to pass in that day, that the Lord shall set his hand again the second time to recover the remnant of his people, which shall be left, from Assyria, and from Egypt, and from Pathros, and from Cush, and from Elam, and from Shinar, and from Hamath, and from the islands of the sea."
                },
                "isa11.12": {
                    "id": 12,
                    "short": "Isa 11:12",
                    "name": "Isaiah 11:12",
                    "scripture": "And he shall set up an ensign for the nations, and shall assemble the outcasts of Israel, and gather together the dispersed of Judah from the four corners of the earth."
                },
                "isa11.13": {
                    "id": 13,
                    "short": "Isa 11:13",
                    "name": "Isaiah 11:13",
                    "scripture": "The envy also of Ephraim shall depart, and the adversaries of Judah shall be cut off: Ephraim shall not envy Judah, and Judah shall not vex Ephraim."
                },
                "isa11.14": {
                    "id": 14,
                    "short": "Isa 11:14",
                    "name": "Isaiah 11:14",
                    "scripture": "But they shall fly upon the shoulders of the Philistines toward the west; they shall spoil them of the east together: they shall lay their hand upon Edom and Moab; and the children of Ammon shall obey them."
                },
                "isa11.15": {
                    "id": 15,
                    "short": "Isa 11:15",
                    "name": "Isaiah 11:15",
                    "scripture": "And the Lord shall utterly destroy the tongue of the Egyptian sea; and with his mighty wind shall he shake his hand over the river, and shall smite it in the seven streams, and make men go over dryshod."
                },
                "isa11.16": {
                    "id": 16,
                    "short": "Isa 11:16",
                    "name": "Isaiah 11:16",
                    "scripture": "And there shall be an highway for the remnant of his people, which shall be left, from Assyria; like as it was to Israel in the day that he came up out of the land of Egypt."
                }
            }
        },
        "isa12": {
            "id": 12,
            "short": "Isa 12",
            "name": "Isaiah 12",
            "verses": {
                "isa12.1": {
                    "id": 1,
                    "short": "Isa 12:1",
                    "name": "Isaiah 12:1",
                    "scripture": "And in that day thou shalt say, O Lord, I will praise thee: though thou wast angry with me, thine anger is turned away, and thou comfortedst me."
                },
                "isa12.2": {
                    "id": 2,
                    "short": "Isa 12:2",
                    "name": "Isaiah 12:2",
                    "scripture": "Behold, God is my salvation; I will trust, and not be afraid: for the Lord Jehovah is my strength and my song; he also is become my salvation."
                },
                "isa12.3": {
                    "id": 3,
                    "short": "Isa 12:3",
                    "name": "Isaiah 12:3",
                    "scripture": "Therefore with joy shall ye draw water out of the wells of salvation."
                },
                "isa12.4": {
                    "id": 4,
                    "short": "Isa 12:4",
                    "name": "Isaiah 12:4",
                    "scripture": "And in that day shall ye say, Praise the Lord, call upon his name, declare his doings among the people, make mention that his name is exalted."
                },
                "isa12.5": {
                    "id": 5,
                    "short": "Isa 12:5",
                    "name": "Isaiah 12:5",
                    "scripture": "Sing unto the Lord; for he hath done excellent things: this is known in all the earth."
                },
                "isa12.6": {
                    "id": 6,
                    "short": "Isa 12:6",
                    "name": "Isaiah 12:6",
                    "scripture": "Cry out and shout, thou inhabitant of Zion: for great is the Holy One of Israel in the midst of thee."
                }
            }
        },
        "isa13": {
            "id": 13,
            "short": "Isa 13",
            "name": "Isaiah 13",
            "verses": {
                "isa13.1": {
                    "id": 1,
                    "short": "Isa 13:1",
                    "name": "Isaiah 13:1",
                    "scripture": "The burden of Babylon, which Isaiah the son of Amoz did see."
                },
                "isa13.2": {
                    "id": 2,
                    "short": "Isa 13:2",
                    "name": "Isaiah 13:2",
                    "scripture": "Lift ye up a banner upon the high mountain, exalt the voice unto them, shake the hand, that they may go into the gates of the nobles."
                },
                "isa13.3": {
                    "id": 3,
                    "short": "Isa 13:3",
                    "name": "Isaiah 13:3",
                    "scripture": "I have commanded my sanctified ones, I have also called my mighty ones for mine anger, even them that rejoice in my highness."
                },
                "isa13.4": {
                    "id": 4,
                    "short": "Isa 13:4",
                    "name": "Isaiah 13:4",
                    "scripture": "The noise of a multitude in the mountains, like as of a great people; a tumultuous noise of the kingdoms of nations gathered together: the Lord of hosts mustereth the host of the battle."
                },
                "isa13.5": {
                    "id": 5,
                    "short": "Isa 13:5",
                    "name": "Isaiah 13:5",
                    "scripture": "They come from a far country, from the end of heaven, even the Lord, and the weapons of his indignation, to destroy the whole land."
                },
                "isa13.6": {
                    "id": 6,
                    "short": "Isa 13:6",
                    "name": "Isaiah 13:6",
                    "scripture": "Howl ye; for the day of the Lord is at hand; it shall come as a destruction from the Almighty."
                },
                "isa13.7": {
                    "id": 7,
                    "short": "Isa 13:7",
                    "name": "Isaiah 13:7",
                    "scripture": "Therefore shall all hands be faint, and every man's heart shall melt:"
                },
                "isa13.8": {
                    "id": 8,
                    "short": "Isa 13:8",
                    "name": "Isaiah 13:8",
                    "scripture": "And they shall be afraid: pangs and sorrows shall take hold of them; they shall be in pain as a woman that travaileth: they shall be amazed one at another; their faces shall be as flames."
                },
                "isa13.9": {
                    "id": 9,
                    "short": "Isa 13:9",
                    "name": "Isaiah 13:9",
                    "scripture": "Behold, the day of the Lord cometh, cruel both with wrath and fierce anger, to lay the land desolate: and he shall destroy the sinners thereof out of it."
                },
                "isa13.10": {
                    "id": 10,
                    "short": "Isa 13:10",
                    "name": "Isaiah 13:10",
                    "scripture": "For the stars of heaven and the constellations thereof shall not give their light: the sun shall be darkened in his going forth, and the moon shall not cause her light to shine."
                },
                "isa13.11": {
                    "id": 11,
                    "short": "Isa 13:11",
                    "name": "Isaiah 13:11",
                    "scripture": "And I will punish the world for their evil, and the wicked for their iniquity; and I will cause the arrogancy of the proud to cease, and will lay low the haughtiness of the terrible."
                },
                "isa13.12": {
                    "id": 12,
                    "short": "Isa 13:12",
                    "name": "Isaiah 13:12",
                    "scripture": "I will make a man more precious than fine gold; even a man than the golden wedge of Ophir."
                },
                "isa13.13": {
                    "id": 13,
                    "short": "Isa 13:13",
                    "name": "Isaiah 13:13",
                    "scripture": "Therefore I will shake the heavens, and the earth shall remove out of her place, in the wrath of the Lord of hosts, and in the day of his fierce anger."
                },
                "isa13.14": {
                    "id": 14,
                    "short": "Isa 13:14",
                    "name": "Isaiah 13:14",
                    "scripture": "And it shall be as the chased roe, and as a sheep that no man taketh up: they shall every man turn to his own people, and flee every one into his own land."
                },
                "isa13.15": {
                    "id": 15,
                    "short": "Isa 13:15",
                    "name": "Isaiah 13:15",
                    "scripture": "Every one that is found shall be thrust through; and every one that is joined unto them shall fall by the sword."
                },
                "isa13.16": {
                    "id": 16,
                    "short": "Isa 13:16",
                    "name": "Isaiah 13:16",
                    "scripture": "Their children also shall be dashed to pieces before their eyes; their houses shall be spoiled, and their wives ravished."
                },
                "isa13.17": {
                    "id": 17,
                    "short": "Isa 13:17",
                    "name": "Isaiah 13:17",
                    "scripture": "Behold, I will stir up the Medes against them, which shall not regard silver; and as for gold, they shall not delight in it."
                },
                "isa13.18": {
                    "id": 18,
                    "short": "Isa 13:18",
                    "name": "Isaiah 13:18",
                    "scripture": "Their bows also shall dash the young men to pieces; and they shall have no pity on the fruit of the womb; their eye shall not spare children."
                },
                "isa13.19": {
                    "id": 19,
                    "short": "Isa 13:19",
                    "name": "Isaiah 13:19",
                    "scripture": "And Babylon, the glory of kingdoms, the beauty of the Chaldeans' excellency, shall be as when God overthrew Sodom and Gomorrah."
                },
                "isa13.20": {
                    "id": 20,
                    "short": "Isa 13:20",
                    "name": "Isaiah 13:20",
                    "scripture": "It shall never be inhabited, neither shall it be dwelt in from generation to generation: neither shall the Arabian pitch tent there; neither shall the shepherds make their fold there."
                },
                "isa13.21": {
                    "id": 21,
                    "short": "Isa 13:21",
                    "name": "Isaiah 13:21",
                    "scripture": "But wild beasts of the desert shall lie there; and their houses shall be full of doleful creatures; and owls shall dwell there, and satyrs shall dance there."
                },
                "isa13.22": {
                    "id": 22,
                    "short": "Isa 13:22",
                    "name": "Isaiah 13:22",
                    "scripture": "And the wild beasts of the islands shall cry in their desolate houses, and dragons in their pleasant palaces: and her time is near to come, and her days shall not be prolonged."
                }
            }
        },
        "isa14": {
            "id": 14,
            "short": "Isa 14",
            "name": "Isaiah 14",
            "verses": {
                "isa14.1": {
                    "id": 1,
                    "short": "Isa 14:1",
                    "name": "Isaiah 14:1",
                    "scripture": "For the Lord will have mercy on Jacob, and will yet choose Israel, and set them in their own land: and the strangers shall be joined with them, and they shall cleave to the house of Jacob."
                },
                "isa14.2": {
                    "id": 2,
                    "short": "Isa 14:2",
                    "name": "Isaiah 14:2",
                    "scripture": "And the people shall take them, and bring them to their place: and the house of Israel shall possess them in the land of the Lord for servants and handmaids: and they shall take them captives, whose captives they were; and they shall rule over their oppressors."
                },
                "isa14.3": {
                    "id": 3,
                    "short": "Isa 14:3",
                    "name": "Isaiah 14:3",
                    "scripture": "And it shall come to pass in the day that the Lord shall give thee rest from thy sorrow, and from thy fear, and from the hard bondage wherein thou wast made to serve,"
                },
                "isa14.4": {
                    "id": 4,
                    "short": "Isa 14:4",
                    "name": "Isaiah 14:4",
                    "scripture": "That thou shalt take up this proverb against the king of Babylon, and say, How hath the oppressor ceased! the golden city ceased!"
                },
                "isa14.5": {
                    "id": 5,
                    "short": "Isa 14:5",
                    "name": "Isaiah 14:5",
                    "scripture": "The Lord hath broken the staff of the wicked, and the sceptre of the rulers."
                },
                "isa14.6": {
                    "id": 6,
                    "short": "Isa 14:6",
                    "name": "Isaiah 14:6",
                    "scripture": "He who smote the people in wrath with a continual stroke, he that ruled the nations in anger, is persecuted, and none hindereth."
                },
                "isa14.7": {
                    "id": 7,
                    "short": "Isa 14:7",
                    "name": "Isaiah 14:7",
                    "scripture": "The whole earth is at rest, and is quiet: they break forth into singing."
                },
                "isa14.8": {
                    "id": 8,
                    "short": "Isa 14:8",
                    "name": "Isaiah 14:8",
                    "scripture": "Yea, the fir trees rejoice at thee, and the cedars of Lebanon, saying, Since thou art laid down, no feller is come up against us."
                },
                "isa14.9": {
                    "id": 9,
                    "short": "Isa 14:9",
                    "name": "Isaiah 14:9",
                    "scripture": "Hell from beneath is moved for thee to meet thee at thy coming: it stirreth up the dead for thee, even all the chief ones of the earth; it hath raised up from their thrones all the kings of the nations."
                },
                "isa14.10": {
                    "id": 10,
                    "short": "Isa 14:10",
                    "name": "Isaiah 14:10",
                    "scripture": "All they shall speak and say unto thee, Art thou also become weak as we? art thou become like unto us?"
                },
                "isa14.11": {
                    "id": 11,
                    "short": "Isa 14:11",
                    "name": "Isaiah 14:11",
                    "scripture": "Thy pomp is brought down to the grave, and the noise of thy viols: the worm is spread under thee, and the worms cover thee."
                },
                "isa14.12": {
                    "id": 12,
                    "short": "Isa 14:12",
                    "name": "Isaiah 14:12",
                    "scripture": "How art thou fallen from heaven, O Lucifer, son of the morning! how art thou cut down to the ground, which didst weaken the nations!"
                },
                "isa14.13": {
                    "id": 13,
                    "short": "Isa 14:13",
                    "name": "Isaiah 14:13",
                    "scripture": "For thou hast said in thine heart, I will ascend into heaven, I will exalt my throne above the stars of God: I will sit also upon the mount of the congregation, in the sides of the north:"
                },
                "isa14.14": {
                    "id": 14,
                    "short": "Isa 14:14",
                    "name": "Isaiah 14:14",
                    "scripture": "I will ascend above the heights of the clouds; I will be like the most High."
                },
                "isa14.15": {
                    "id": 15,
                    "short": "Isa 14:15",
                    "name": "Isaiah 14:15",
                    "scripture": "Yet thou shalt be brought down to hell, to the sides of the pit."
                },
                "isa14.16": {
                    "id": 16,
                    "short": "Isa 14:16",
                    "name": "Isaiah 14:16",
                    "scripture": "They that see thee shall narrowly look upon thee, and consider thee, saying, Is this the man that made the earth to tremble, that did shake kingdoms;"
                },
                "isa14.17": {
                    "id": 17,
                    "short": "Isa 14:17",
                    "name": "Isaiah 14:17",
                    "scripture": "That made the world as a wilderness, and destroyed the cities thereof; that opened not the house of his prisoners?"
                },
                "isa14.18": {
                    "id": 18,
                    "short": "Isa 14:18",
                    "name": "Isaiah 14:18",
                    "scripture": "All the kings of the nations, even all of them, lie in glory, every one in his own house."
                },
                "isa14.19": {
                    "id": 19,
                    "short": "Isa 14:19",
                    "name": "Isaiah 14:19",
                    "scripture": "But thou art cast out of thy grave like an abominable branch, and as the raiment of those that are slain, thrust through with a sword, that go down to the stones of the pit; as a carcase trodden under feet."
                },
                "isa14.20": {
                    "id": 20,
                    "short": "Isa 14:20",
                    "name": "Isaiah 14:20",
                    "scripture": "Thou shalt not be joined with them in burial, because thou hast destroyed thy land, and slain thy people: the seed of evildoers shall never be renowned."
                },
                "isa14.21": {
                    "id": 21,
                    "short": "Isa 14:21",
                    "name": "Isaiah 14:21",
                    "scripture": "Prepare slaughter for his children for the iniquity of their fathers; that they do not rise, nor possess the land, nor fill the face of the world with cities."
                },
                "isa14.22": {
                    "id": 22,
                    "short": "Isa 14:22",
                    "name": "Isaiah 14:22",
                    "scripture": "For I will rise up against them, saith the Lord of hosts, and cut off from Babylon the name, and remnant, and son, and nephew, saith the Lord ."
                },
                "isa14.23": {
                    "id": 23,
                    "short": "Isa 14:23",
                    "name": "Isaiah 14:23",
                    "scripture": "I will also make it a possession for the bittern, and pools of water: and I will sweep it with the besom of destruction, saith the Lord of hosts."
                },
                "isa14.24": {
                    "id": 24,
                    "short": "Isa 14:24",
                    "name": "Isaiah 14:24",
                    "scripture": "The Lord of hosts hath sworn, saying, Surely as I have thought, so shall it come to pass; and as I have purposed, so shall it stand:"
                },
                "isa14.25": {
                    "id": 25,
                    "short": "Isa 14:25",
                    "name": "Isaiah 14:25",
                    "scripture": "That I will break the Assyrian in my land, and upon my mountains tread him under foot: then shall his yoke depart from off them, and his burden depart from off their shoulders."
                },
                "isa14.26": {
                    "id": 26,
                    "short": "Isa 14:26",
                    "name": "Isaiah 14:26",
                    "scripture": "This is the purpose that is purposed upon the whole earth: and this is the hand that is stretched out upon all the nations."
                },
                "isa14.27": {
                    "id": 27,
                    "short": "Isa 14:27",
                    "name": "Isaiah 14:27",
                    "scripture": "For the Lord of hosts hath purposed, and who shall disannul it? and his hand is stretched out, and who shall turn it back?"
                },
                "isa14.28": {
                    "id": 28,
                    "short": "Isa 14:28",
                    "name": "Isaiah 14:28",
                    "scripture": "In the year that king Ahaz died was this burden."
                },
                "isa14.29": {
                    "id": 29,
                    "short": "Isa 14:29",
                    "name": "Isaiah 14:29",
                    "scripture": "Rejoice not thou, whole Philistia, because the rod of him that smote thee is broken: for out of the serpent's root shall come forth a cockatrice, and his fruit shall be a fiery flying serpent."
                },
                "isa14.30": {
                    "id": 30,
                    "short": "Isa 14:30",
                    "name": "Isaiah 14:30",
                    "scripture": "And the firstborn of the poor shall feed, and the needy shall lie down in safety: and I will kill thy root with famine, and he shall slay thy remnant."
                },
                "isa14.31": {
                    "id": 31,
                    "short": "Isa 14:31",
                    "name": "Isaiah 14:31",
                    "scripture": "Howl, O gate; cry, O city; thou, whole Philistia, art dissolved: for there shall come from the north a smoke, and none shall be alone in his appointed times."
                },
                "isa14.32": {
                    "id": 32,
                    "short": "Isa 14:32",
                    "name": "Isaiah 14:32",
                    "scripture": "What shall one then answer the messengers of the nation? That the Lord hath founded Zion, and the poor of his people shall trust in it."
                }
            }
        },
        "isa15": {
            "id": 15,
            "short": "Isa 15",
            "name": "Isaiah 15",
            "verses": {
                "isa15.1": {
                    "id": 1,
                    "short": "Isa 15:1",
                    "name": "Isaiah 15:1",
                    "scripture": "The burden of Moab. Because in the night Ar of Moab is laid waste, and brought to silence; because in the night Kir of Moab is laid waste, and brought to silence;"
                },
                "isa15.2": {
                    "id": 2,
                    "short": "Isa 15:2",
                    "name": "Isaiah 15:2",
                    "scripture": "He is gone up to Bajith, and to Dibon, the high places, to weep: Moab shall howl over Nebo, and over Medeba: on all their heads shall be baldness, and every beard cut off."
                },
                "isa15.3": {
                    "id": 3,
                    "short": "Isa 15:3",
                    "name": "Isaiah 15:3",
                    "scripture": "In their streets they shall gird themselves with sackcloth: on the tops of their houses, and in their streets, every one shall howl, weeping abundantly."
                },
                "isa15.4": {
                    "id": 4,
                    "short": "Isa 15:4",
                    "name": "Isaiah 15:4",
                    "scripture": "And Heshbon shall cry, and Elealeh: their voice shall be heard even unto Jahaz: therefore the armed soldiers of Moab shall cry out; his life shall be grievous unto him."
                },
                "isa15.5": {
                    "id": 5,
                    "short": "Isa 15:5",
                    "name": "Isaiah 15:5",
                    "scripture": "My heart shall cry out for Moab; his fugitives shall flee unto Zoar, an heifer of three years old: for by the mounting up of Luhith with weeping shall they go it up; for in the way of Horonaim they shall raise up a cry of destruction."
                },
                "isa15.6": {
                    "id": 6,
                    "short": "Isa 15:6",
                    "name": "Isaiah 15:6",
                    "scripture": "For the waters of Nimrim shall be desolate: for the hay is withered away, the grass faileth, there is no green thing."
                },
                "isa15.7": {
                    "id": 7,
                    "short": "Isa 15:7",
                    "name": "Isaiah 15:7",
                    "scripture": "Therefore the abundance they have gotten, and that which they have laid up, shall they carry away to the brook of the willows."
                },
                "isa15.8": {
                    "id": 8,
                    "short": "Isa 15:8",
                    "name": "Isaiah 15:8",
                    "scripture": "For the cry is gone round about the borders of Moab; the howling thereof unto Eglaim, and the howling thereof unto Beerâ€“elim."
                },
                "isa15.9": {
                    "id": 9,
                    "short": "Isa 15:9",
                    "name": "Isaiah 15:9",
                    "scripture": "For the waters of Dimon shall be full of blood: for I will bring more upon Dimon, lions upon him that escapeth of Moab, and upon the remnant of the land."
                }
            }
        },
        "isa16": {
            "id": 16,
            "short": "Isa 16",
            "name": "Isaiah 16",
            "verses": {
                "isa16.1": {
                    "id": 1,
                    "short": "Isa 16:1",
                    "name": "Isaiah 16:1",
                    "scripture": "Send ye the lamb to the ruler of the land from Sela to the wilderness, unto the mount of the daughter of Zion."
                },
                "isa16.2": {
                    "id": 2,
                    "short": "Isa 16:2",
                    "name": "Isaiah 16:2",
                    "scripture": "For it shall be, that, as a wandering bird cast out of the nest, so the daughters of Moab shall be at the fords of Arnon."
                },
                "isa16.3": {
                    "id": 3,
                    "short": "Isa 16:3",
                    "name": "Isaiah 16:3",
                    "scripture": "Take counsel, execute judgment; make thy shadow as the night in the midst of the noonday; hide the outcasts; bewray not him that wandereth."
                },
                "isa16.4": {
                    "id": 4,
                    "short": "Isa 16:4",
                    "name": "Isaiah 16:4",
                    "scripture": "Let mine outcasts dwell with thee, Moab; be thou a covert to them from the face of the spoiler: for the extortioner is at an end, the spoiler ceaseth, the oppressors are consumed out of the land."
                },
                "isa16.5": {
                    "id": 5,
                    "short": "Isa 16:5",
                    "name": "Isaiah 16:5",
                    "scripture": "And in mercy shall the throne be established: and he shall sit upon it in truth in the tabernacle of David, judging, and seeking judgment, and hasting righteousness."
                },
                "isa16.6": {
                    "id": 6,
                    "short": "Isa 16:6",
                    "name": "Isaiah 16:6",
                    "scripture": "We have heard of the pride of Moab; he is very proud: even of his haughtiness, and his pride, and his wrath: but his lies shall not be so."
                },
                "isa16.7": {
                    "id": 7,
                    "short": "Isa 16:7",
                    "name": "Isaiah 16:7",
                    "scripture": "Therefore shall Moab howl for Moab, every one shall howl: for the foundations of Kirâ€“hareseth shall ye mourn; surely they are stricken."
                },
                "isa16.8": {
                    "id": 8,
                    "short": "Isa 16:8",
                    "name": "Isaiah 16:8",
                    "scripture": "For the fields of Heshbon languish, and the vine of Sibmah: the lords of the heathen have broken down the principal plants thereof, they are come even unto Jazer, they wandered through the wilderness: her branches are stretched out, they are gone over the sea."
                },
                "isa16.9": {
                    "id": 9,
                    "short": "Isa 16:9",
                    "name": "Isaiah 16:9",
                    "scripture": "Therefore I will bewail with the weeping of Jazer the vine of Sibmah: I will water thee with my tears, O Heshbon, and Elealeh: for the shouting for thy summer fruits and for thy harvest is fallen."
                },
                "isa16.10": {
                    "id": 10,
                    "short": "Isa 16:10",
                    "name": "Isaiah 16:10",
                    "scripture": "And gladness is taken away, and joy out of the plentiful field; and in the vineyards there shall be no singing, neither shall there be shouting: the treaders shall tread out no wine in their presses; I have made their vintage shouting to cease."
                },
                "isa16.11": {
                    "id": 11,
                    "short": "Isa 16:11",
                    "name": "Isaiah 16:11",
                    "scripture": "Wherefore my bowels shall sound like an harp for Moab, and mine inward parts for Kirâ€“heres."
                },
                "isa16.12": {
                    "id": 12,
                    "short": "Isa 16:12",
                    "name": "Isaiah 16:12",
                    "scripture": "And it shall come to pass, when it is seen that Moab is weary on the high place, that he shall come to his sanctuary to pray; but he shall not prevail."
                },
                "isa16.13": {
                    "id": 13,
                    "short": "Isa 16:13",
                    "name": "Isaiah 16:13",
                    "scripture": "This is the word that the Lord hath spoken concerning Moab since that time."
                },
                "isa16.14": {
                    "id": 14,
                    "short": "Isa 16:14",
                    "name": "Isaiah 16:14",
                    "scripture": "But now the Lord hath spoken, saying, Within three years, as the years of an hireling, and the glory of Moab shall be contemned, with all that great multitude; and the remnant shall be very small and feeble."
                }
            }
        },
        "isa17": {
            "id": 17,
            "short": "Isa 17",
            "name": "Isaiah 17",
            "verses": {
                "isa17.1": {
                    "id": 1,
                    "short": "Isa 17:1",
                    "name": "Isaiah 17:1",
                    "scripture": "The burden of Damascus. Behold, Damascus is taken away from being a city, and it shall be a ruinous heap."
                },
                "isa17.2": {
                    "id": 2,
                    "short": "Isa 17:2",
                    "name": "Isaiah 17:2",
                    "scripture": "The cities of Aroer are forsaken: they shall be for flocks, which shall lie down, and none shall make them afraid."
                },
                "isa17.3": {
                    "id": 3,
                    "short": "Isa 17:3",
                    "name": "Isaiah 17:3",
                    "scripture": "The fortress also shall cease from Ephraim, and the kingdom from Damascus, and the remnant of Syria: they shall be as the glory of the children of Israel, saith the Lord of hosts."
                },
                "isa17.4": {
                    "id": 4,
                    "short": "Isa 17:4",
                    "name": "Isaiah 17:4",
                    "scripture": "And in that day it shall come to pass, that the glory of Jacob shall be made thin, and the fatness of his flesh shall wax lean."
                },
                "isa17.5": {
                    "id": 5,
                    "short": "Isa 17:5",
                    "name": "Isaiah 17:5",
                    "scripture": "And it shall be as when the harvestman gathereth the corn, and reapeth the ears with his arm; and it shall be as he that gathereth ears in the valley of Rephaim."
                },
                "isa17.6": {
                    "id": 6,
                    "short": "Isa 17:6",
                    "name": "Isaiah 17:6",
                    "scripture": "Yet gleaning grapes shall be left in it, as the shaking of an olive tree, two or three berries in the top of the uppermost bough, four or five in the outmost fruitful branches thereof, saith the Lord God of Israel."
                },
                "isa17.7": {
                    "id": 7,
                    "short": "Isa 17:7",
                    "name": "Isaiah 17:7",
                    "scripture": "At that day shall a man look to his Maker, and his eyes shall have respect to the Holy One of Israel."
                },
                "isa17.8": {
                    "id": 8,
                    "short": "Isa 17:8",
                    "name": "Isaiah 17:8",
                    "scripture": "And he shall not look to the altars, the work of his hands, neither shall respect that which his fingers have made, either the groves, or the images."
                },
                "isa17.9": {
                    "id": 9,
                    "short": "Isa 17:9",
                    "name": "Isaiah 17:9",
                    "scripture": "In that day shall his strong cities be as a forsaken bough, and an uppermost branch, which they left because of the children of Israel: and there shall be desolation."
                },
                "isa17.10": {
                    "id": 10,
                    "short": "Isa 17:10",
                    "name": "Isaiah 17:10",
                    "scripture": "Because thou hast forgotten the God of thy salvation, and hast not been mindful of the rock of thy strength, therefore shalt thou plant pleasant plants, and shalt set it with strange slips:"
                },
                "isa17.11": {
                    "id": 11,
                    "short": "Isa 17:11",
                    "name": "Isaiah 17:11",
                    "scripture": "In the day shalt thou make thy plant to grow, and in the morning shalt thou make thy seed to flourish: but the harvest shall be a heap in the day of grief and of desperate sorrow."
                },
                "isa17.12": {
                    "id": 12,
                    "short": "Isa 17:12",
                    "name": "Isaiah 17:12",
                    "scripture": "Woe to the multitude of many people, which make a noise like the noise of the seas; and to the rushing of nations, that make a rushing like the rushing of mighty waters!"
                },
                "isa17.13": {
                    "id": 13,
                    "short": "Isa 17:13",
                    "name": "Isaiah 17:13",
                    "scripture": "The nations shall rush like the rushing of many waters: but God shall rebuke them, and they shall flee far off, and shall be chased as the chaff of the mountains before the wind, and like a rolling thing before the whirlwind."
                },
                "isa17.14": {
                    "id": 14,
                    "short": "Isa 17:14",
                    "name": "Isaiah 17:14",
                    "scripture": "And behold at eveningtide trouble; and before the morning he is not. This is the portion of them that spoil us, and the lot of them that rob us."
                }
            }
        },
        "isa18": {
            "id": 18,
            "short": "Isa 18",
            "name": "Isaiah 18",
            "verses": {
                "isa18.1": {
                    "id": 1,
                    "short": "Isa 18:1",
                    "name": "Isaiah 18:1",
                    "scripture": "Woe to the land shadowing with wings, which is beyond the rivers of Ethiopia:"
                },
                "isa18.2": {
                    "id": 2,
                    "short": "Isa 18:2",
                    "name": "Isaiah 18:2",
                    "scripture": "That sendeth ambassadors by the sea, even in vessels of bulrushes upon the waters, saying, Go, ye swift messengers, to a nation scattered and peeled, to a people terrible from their beginning hitherto; a nation meted out and trodden down, whose land the rivers have spoiled!"
                },
                "isa18.3": {
                    "id": 3,
                    "short": "Isa 18:3",
                    "name": "Isaiah 18:3",
                    "scripture": "All ye inhabitants of the world, and dwellers on the earth, see ye, when he lifteth up an ensign on the mountains; and when he bloweth a trumpet, hear ye."
                },
                "isa18.4": {
                    "id": 4,
                    "short": "Isa 18:4",
                    "name": "Isaiah 18:4",
                    "scripture": "For so the Lord said unto me, I will take my rest, and I will consider in my dwelling place like a clear heat upon herbs, and like a cloud of dew in the heat of harvest."
                },
                "isa18.5": {
                    "id": 5,
                    "short": "Isa 18:5",
                    "name": "Isaiah 18:5",
                    "scripture": "For afore the harvest, when the bud is perfect, and the sour grape is ripening in the flower, he shall both cut off the sprigs with pruning hooks, and take away and cut down the branches."
                },
                "isa18.6": {
                    "id": 6,
                    "short": "Isa 18:6",
                    "name": "Isaiah 18:6",
                    "scripture": "They shall be left together unto the fowls of the mountains, and to the beasts of the earth: and the fowls shall summer upon them, and all the beasts of the earth shall winter upon them."
                },
                "isa18.7": {
                    "id": 7,
                    "short": "Isa 18:7",
                    "name": "Isaiah 18:7",
                    "scripture": "In that time shall the present be brought unto the Lord of hosts of a people scattered and peeled, and from a people terrible from their beginning hitherto; a nation meted out and trodden under foot, whose land the rivers have spoiled, to the place of the name of the Lord of hosts, the mount Zion."
                }
            }
        },
        "isa19": {
            "id": 19,
            "short": "Isa 19",
            "name": "Isaiah 19",
            "verses": {
                "isa19.1": {
                    "id": 1,
                    "short": "Isa 19:1",
                    "name": "Isaiah 19:1",
                    "scripture": "The burden of Egypt. Behold, the Lord rideth upon a swift cloud, and shall come into Egypt: and the idols of Egypt shall be moved at his presence, and the heart of Egypt shall melt in the midst of it."
                },
                "isa19.2": {
                    "id": 2,
                    "short": "Isa 19:2",
                    "name": "Isaiah 19:2",
                    "scripture": "And I will set the Egyptians against the Egyptians: and they shall fight every one against his brother, and every one against his neighbour; city against city, and kingdom against kingdom."
                },
                "isa19.3": {
                    "id": 3,
                    "short": "Isa 19:3",
                    "name": "Isaiah 19:3",
                    "scripture": "And the spirit of Egypt shall fail in the midst thereof; and I will destroy the counsel thereof: and they shall seek to the idols, and to the charmers, and to them that have familiar spirits, and to the wizards."
                },
                "isa19.4": {
                    "id": 4,
                    "short": "Isa 19:4",
                    "name": "Isaiah 19:4",
                    "scripture": "And the Egyptians will I give over into the hand of a cruel lord; and a fierce king shall rule over them, saith the Lord, the Lord of hosts."
                },
                "isa19.5": {
                    "id": 5,
                    "short": "Isa 19:5",
                    "name": "Isaiah 19:5",
                    "scripture": "And the waters shall fail from the sea, and the river shall be wasted and dried up."
                },
                "isa19.6": {
                    "id": 6,
                    "short": "Isa 19:6",
                    "name": "Isaiah 19:6",
                    "scripture": "And they shall turn the rivers far away; and the brooks of defence shall be emptied and dried up: the reeds and flags shall wither."
                },
                "isa19.7": {
                    "id": 7,
                    "short": "Isa 19:7",
                    "name": "Isaiah 19:7",
                    "scripture": "The paper reeds by the brooks, by the mouth of the brooks, and every thing sown by the brooks, shall wither, be driven away, and be no more."
                },
                "isa19.8": {
                    "id": 8,
                    "short": "Isa 19:8",
                    "name": "Isaiah 19:8",
                    "scripture": "The fishers also shall mourn, and all they that cast angle into the brooks shall lament, and they that spread nets upon the waters shall languish."
                },
                "isa19.9": {
                    "id": 9,
                    "short": "Isa 19:9",
                    "name": "Isaiah 19:9",
                    "scripture": "Moreover they that work in fine flax, and they that weave networks, shall be confounded."
                },
                "isa19.10": {
                    "id": 10,
                    "short": "Isa 19:10",
                    "name": "Isaiah 19:10",
                    "scripture": "And they shall be broken in the purposes thereof, all that make sluices and ponds for fish."
                },
                "isa19.11": {
                    "id": 11,
                    "short": "Isa 19:11",
                    "name": "Isaiah 19:11",
                    "scripture": "Surely the princes of Zoan are fools, the counsel of the wise counsellors of Pharaoh is become brutish: how say ye unto Pharaoh, I am the son of the wise, the son of ancient kings?"
                },
                "isa19.12": {
                    "id": 12,
                    "short": "Isa 19:12",
                    "name": "Isaiah 19:12",
                    "scripture": "Where are they? where are thy wise men? and let them tell thee now, and let them know what the Lord of hosts hath purposed upon Egypt."
                },
                "isa19.13": {
                    "id": 13,
                    "short": "Isa 19:13",
                    "name": "Isaiah 19:13",
                    "scripture": "The princes of Zoan are become fools, the princes of Memphis are deceived; they have also seduced Egypt, even they that are the stay of the tribes thereof."
                },
                "isa19.14": {
                    "id": 14,
                    "short": "Isa 19:14",
                    "name": "Isaiah 19:14",
                    "scripture": "The Lord hath mingled a perverse spirit in the midst thereof: and they have caused Egypt to err in every work thereof, as a drunken man staggereth in his vomit."
                },
                "isa19.15": {
                    "id": 15,
                    "short": "Isa 19:15",
                    "name": "Isaiah 19:15",
                    "scripture": "Neither shall there be any work for Egypt, which the head or tail, branch or rush, may do."
                },
                "isa19.16": {
                    "id": 16,
                    "short": "Isa 19:16",
                    "name": "Isaiah 19:16",
                    "scripture": "In that day shall Egypt be like unto women: and it shall be afraid and fear because of the shaking of the hand of the Lord of hosts, which he shaketh over it."
                },
                "isa19.17": {
                    "id": 17,
                    "short": "Isa 19:17",
                    "name": "Isaiah 19:17",
                    "scripture": "And the land of Judah shall be a terror unto Egypt, every one that maketh mention thereof shall be afraid in himself, because of the counsel of the Lord of hosts, which he hath determined against it."
                },
                "isa19.18": {
                    "id": 18,
                    "short": "Isa 19:18",
                    "name": "Isaiah 19:18",
                    "scripture": "In that day shall five cities in the land of Egypt speak the language of Canaan, and swear to the Lord of hosts; one shall be called, The city of destruction."
                },
                "isa19.19": {
                    "id": 19,
                    "short": "Isa 19:19",
                    "name": "Isaiah 19:19",
                    "scripture": "In that day shall there be an altar to the Lord in the midst of the land of Egypt, and a pillar at the border thereof to the Lord ."
                },
                "isa19.20": {
                    "id": 20,
                    "short": "Isa 19:20",
                    "name": "Isaiah 19:20",
                    "scripture": "And it shall be for a sign and for a witness unto the Lord of hosts in the land of Egypt: for they shall cry unto the Lord because of the oppressors, and he shall send them a saviour, and a great one, and he shall deliver them."
                },
                "isa19.21": {
                    "id": 21,
                    "short": "Isa 19:21",
                    "name": "Isaiah 19:21",
                    "scripture": "And the Lord shall be known to Egypt, and the Egyptians shall know the Lord in that day, and shall do sacrifice and oblation; yea, they shall vow a vow unto the Lord, and perform it."
                },
                "isa19.22": {
                    "id": 22,
                    "short": "Isa 19:22",
                    "name": "Isaiah 19:22",
                    "scripture": "And the Lord shall smite Egypt: he shall smite and heal it: and they shall return even to the Lord, and he shall be entreated of them, and shall heal them."
                },
                "isa19.23": {
                    "id": 23,
                    "short": "Isa 19:23",
                    "name": "Isaiah 19:23",
                    "scripture": "In that day shall there be a highway out of Egypt to Assyria, and the Assyrian shall come into Egypt, and the Egyptian into Assyria, and the Egyptians shall serve with the Assyrians."
                },
                "isa19.24": {
                    "id": 24,
                    "short": "Isa 19:24",
                    "name": "Isaiah 19:24",
                    "scripture": "In that day shall Israel be the third with Egypt and with Assyria, even a blessing in the midst of the land:"
                },
                "isa19.25": {
                    "id": 25,
                    "short": "Isa 19:25",
                    "name": "Isaiah 19:25",
                    "scripture": "Whom the Lord of hosts shall bless, saying, Blessed be Egypt my people, and Assyria the work of my hands, and Israel mine inheritance."
                }
            }
        },
        "isa20": {
            "id": 20,
            "short": "Isa 20",
            "name": "Isaiah 20",
            "verses": {
                "isa20.1": {
                    "id": 1,
                    "short": "Isa 20:1",
                    "name": "Isaiah 20:1",
                    "scripture": "In the year that Tartan came unto Ashdod, (when Sargon the king of Assyria sent him,) and fought against Ashdod, and took it;"
                },
                "isa20.2": {
                    "id": 2,
                    "short": "Isa 20:2",
                    "name": "Isaiah 20:2",
                    "scripture": "At the same time spake the Lord by Isaiah the son of Amoz, saying, Go and loose the sackcloth from off thy loins, and put off thy shoe from thy foot. And he did so, walking naked and barefoot."
                },
                "isa20.3": {
                    "id": 3,
                    "short": "Isa 20:3",
                    "name": "Isaiah 20:3",
                    "scripture": "And the Lord said, Like as my servant Isaiah hath walked naked and barefoot three years for a sign and wonder upon Egypt and upon Ethiopia;"
                },
                "isa20.4": {
                    "id": 4,
                    "short": "Isa 20:4",
                    "name": "Isaiah 20:4",
                    "scripture": "So shall the king of Assyria lead away the Egyptians prisoners, and the Ethiopians captives, young and old, naked and barefoot, even with their buttocks uncovered, to the shame of Egypt."
                },
                "isa20.5": {
                    "id": 5,
                    "short": "Isa 20:5",
                    "name": "Isaiah 20:5",
                    "scripture": "And they shall be afraid and ashamed of Ethiopia their expectation, and of Egypt their glory."
                },
                "isa20.6": {
                    "id": 6,
                    "short": "Isa 20:6",
                    "name": "Isaiah 20:6",
                    "scripture": "And the inhabitant of this isle shall say in that day, Behold, such is our expectation, whither we flee for help to be delivered from the king of Assyria: and how shall we escape?"
                }
            }
        },
        "isa21": {
            "id": 21,
            "short": "Isa 21",
            "name": "Isaiah 21",
            "verses": {
                "isa21.1": {
                    "id": 1,
                    "short": "Isa 21:1",
                    "name": "Isaiah 21:1",
                    "scripture": "The burden of the desert of the sea. As whirlwinds in the south pass through; so it cometh from the desert, from a terrible land."
                },
                "isa21.2": {
                    "id": 2,
                    "short": "Isa 21:2",
                    "name": "Isaiah 21:2",
                    "scripture": "A grievous vision is declared unto me; the treacherous dealer dealeth treacherously, and the spoiler spoileth. Go up, O Elam: besiege, O Media; all the sighing thereof have I made to cease."
                },
                "isa21.3": {
                    "id": 3,
                    "short": "Isa 21:3",
                    "name": "Isaiah 21:3",
                    "scripture": "Therefore are my loins filled with pain: pangs have taken hold upon me, as the pangs of a woman that travaileth: I was bowed down at the hearing of it; I was dismayed at the seeing of it."
                },
                "isa21.4": {
                    "id": 4,
                    "short": "Isa 21:4",
                    "name": "Isaiah 21:4",
                    "scripture": "My heart panted, fearfulness affrighted me: the night of my pleasure hath he turned into fear unto me."
                },
                "isa21.5": {
                    "id": 5,
                    "short": "Isa 21:5",
                    "name": "Isaiah 21:5",
                    "scripture": "Prepare the table, watch in the watchtower, eat, drink: arise, ye princes, and anoint the shield."
                },
                "isa21.6": {
                    "id": 6,
                    "short": "Isa 21:6",
                    "name": "Isaiah 21:6",
                    "scripture": "For thus hath the Lord said unto me, Go, set a watchman, let him declare what he seeth."
                },
                "isa21.7": {
                    "id": 7,
                    "short": "Isa 21:7",
                    "name": "Isaiah 21:7",
                    "scripture": "And he saw a chariot with a couple of horsemen, a chariot of asses, and a chariot of camels; and he hearkened diligently with much heed:"
                },
                "isa21.8": {
                    "id": 8,
                    "short": "Isa 21:8",
                    "name": "Isaiah 21:8",
                    "scripture": "And he cried, A lion: My lord, I stand continually upon the watchtower in the daytime, and I am set in my ward whole nights:"
                },
                "isa21.9": {
                    "id": 9,
                    "short": "Isa 21:9",
                    "name": "Isaiah 21:9",
                    "scripture": "And, behold, here cometh a chariot of men, with a couple of horsemen. And he answered and said, Babylon is fallen, is fallen; and all the graven images of her gods he hath broken unto the ground."
                },
                "isa21.10": {
                    "id": 10,
                    "short": "Isa 21:10",
                    "name": "Isaiah 21:10",
                    "scripture": "O my threshing, and the corn of my floor: that which I have heard of the Lord of hosts, the God of Israel, have I declared unto you."
                },
                "isa21.11": {
                    "id": 11,
                    "short": "Isa 21:11",
                    "name": "Isaiah 21:11",
                    "scripture": "The burden of Dumah. He calleth to me out of Seir, Watchman, what of the night? Watchman, what of the night?"
                },
                "isa21.12": {
                    "id": 12,
                    "short": "Isa 21:12",
                    "name": "Isaiah 21:12",
                    "scripture": "The watchman said, The morning cometh, and also the night: if ye will enquire, enquire ye: return, come."
                },
                "isa21.13": {
                    "id": 13,
                    "short": "Isa 21:13",
                    "name": "Isaiah 21:13",
                    "scripture": "The burden upon Arabia. In the forest in Arabia shall ye lodge, O ye travelling companies of Dedanim."
                },
                "isa21.14": {
                    "id": 14,
                    "short": "Isa 21:14",
                    "name": "Isaiah 21:14",
                    "scripture": "The inhabitants of the land of Tema brought water to him that was thirsty, they prevented with their bread him that fled."
                },
                "isa21.15": {
                    "id": 15,
                    "short": "Isa 21:15",
                    "name": "Isaiah 21:15",
                    "scripture": "For they fled from the swords, from the drawn sword, and from the bent bow, and from the grievousness of war."
                },
                "isa21.16": {
                    "id": 16,
                    "short": "Isa 21:16",
                    "name": "Isaiah 21:16",
                    "scripture": "For thus hath the Lord said unto me, Within a year, according to the years of an hireling, and all the glory of Kedar shall fail:"
                },
                "isa21.17": {
                    "id": 17,
                    "short": "Isa 21:17",
                    "name": "Isaiah 21:17",
                    "scripture": "And the residue of the number of archers, the mighty men of the children of Kedar, shall be diminished: for the Lord God of Israel hath spoken it."
                }
            }
        },
        "isa22": {
            "id": 22,
            "short": "Isa 22",
            "name": "Isaiah 22",
            "verses": {
                "isa22.1": {
                    "id": 1,
                    "short": "Isa 22:1",
                    "name": "Isaiah 22:1",
                    "scripture": "The burden of the valley of vision. What aileth thee now, that thou art wholly gone up to the housetops?"
                },
                "isa22.2": {
                    "id": 2,
                    "short": "Isa 22:2",
                    "name": "Isaiah 22:2",
                    "scripture": "Thou that art full of stirs, a tumultuous city, a joyous city: thy slain men are not slain with the sword, nor dead in battle."
                },
                "isa22.3": {
                    "id": 3,
                    "short": "Isa 22:3",
                    "name": "Isaiah 22:3",
                    "scripture": "All thy rulers are fled together, they are bound by the archers: all that are found in thee are bound together, which have fled from far."
                },
                "isa22.4": {
                    "id": 4,
                    "short": "Isa 22:4",
                    "name": "Isaiah 22:4",
                    "scripture": "Therefore said I, Look away from me; I will weep bitterly, labour not to comfort me, because of the spoiling of the daughter of my people."
                },
                "isa22.5": {
                    "id": 5,
                    "short": "Isa 22:5",
                    "name": "Isaiah 22:5",
                    "scripture": "For it is a day of trouble, and of treading down, and of perplexity by the Lord God of hosts in the valley of vision, breaking down the walls, and of crying to the mountains."
                },
                "isa22.6": {
                    "id": 6,
                    "short": "Isa 22:6",
                    "name": "Isaiah 22:6",
                    "scripture": "And Elam bare the quiver with chariots of men and horsemen, and Kir uncovered the shield."
                },
                "isa22.7": {
                    "id": 7,
                    "short": "Isa 22:7",
                    "name": "Isaiah 22:7",
                    "scripture": "And it shall come to pass, that thy choicest valleys shall be full of chariots, and the horsemen shall set themselves in array at the gate."
                },
                "isa22.8": {
                    "id": 8,
                    "short": "Isa 22:8",
                    "name": "Isaiah 22:8",
                    "scripture": "And he discovered the covering of Judah, and thou didst look in that day to the armour of the house of the forest."
                },
                "isa22.9": {
                    "id": 9,
                    "short": "Isa 22:9",
                    "name": "Isaiah 22:9",
                    "scripture": "Ye have seen also the breaches of the city of David, that they are many: and ye gathered together the waters of the lower pool."
                },
                "isa22.10": {
                    "id": 10,
                    "short": "Isa 22:10",
                    "name": "Isaiah 22:10",
                    "scripture": "And ye have numbered the houses of Jerusalem, and the houses have ye broken down to fortify the wall."
                },
                "isa22.11": {
                    "id": 11,
                    "short": "Isa 22:11",
                    "name": "Isaiah 22:11",
                    "scripture": "Ye made also a ditch between the two walls for the water of the old pool: but ye have not looked unto the maker thereof, neither had respect unto him that fashioned it long ago."
                },
                "isa22.12": {
                    "id": 12,
                    "short": "Isa 22:12",
                    "name": "Isaiah 22:12",
                    "scripture": "And in that day did the Lord God of hosts call to weeping, and to mourning, and to baldness, and to girding with sackcloth:"
                },
                "isa22.13": {
                    "id": 13,
                    "short": "Isa 22:13",
                    "name": "Isaiah 22:13",
                    "scripture": "And behold joy and gladness, slaying oxen, and killing sheep, eating flesh, and drinking wine: let us eat and drink; for to morrow we shall die."
                },
                "isa22.14": {
                    "id": 14,
                    "short": "Isa 22:14",
                    "name": "Isaiah 22:14",
                    "scripture": "And it was revealed in mine ears by the Lord of hosts, Surely this iniquity shall not be purged from you till ye die, saith the Lord God of hosts."
                },
                "isa22.15": {
                    "id": 15,
                    "short": "Isa 22:15",
                    "name": "Isaiah 22:15",
                    "scripture": "Thus saith the Lord God of hosts, Go, get thee unto this treasurer, even unto Shebna, which is over the house, and say,"
                },
                "isa22.16": {
                    "id": 16,
                    "short": "Isa 22:16",
                    "name": "Isaiah 22:16",
                    "scripture": "What hast thou here? and whom hast thou here, that thou hast hewed thee out a sepulchre here, as he that heweth him out a sepulchre on high, and that graveth an habitation for himself in a rock?"
                },
                "isa22.17": {
                    "id": 17,
                    "short": "Isa 22:17",
                    "name": "Isaiah 22:17",
                    "scripture": "Behold, the Lord will carry thee away with a mighty captivity, and will surely cover thee."
                },
                "isa22.18": {
                    "id": 18,
                    "short": "Isa 22:18",
                    "name": "Isaiah 22:18",
                    "scripture": "He will surely violently turn and toss thee like a ball into a large country: there shalt thou die, and there the chariots of thy glory shall be the shame of thy lord's house."
                },
                "isa22.19": {
                    "id": 19,
                    "short": "Isa 22:19",
                    "name": "Isaiah 22:19",
                    "scripture": "And I will drive thee from thy station, and from thy state shall he pull thee down."
                },
                "isa22.20": {
                    "id": 20,
                    "short": "Isa 22:20",
                    "name": "Isaiah 22:20",
                    "scripture": "And it shall come to pass in that day, that I will call my servant Eliakim the son of Hilkiah:"
                },
                "isa22.21": {
                    "id": 21,
                    "short": "Isa 22:21",
                    "name": "Isaiah 22:21",
                    "scripture": "And I will clothe him with thy robe, and strengthen him with thy girdle, and I will commit thy government into his hand: and he shall be a father to the inhabitants of Jerusalem, and to the house of Judah."
                },
                "isa22.22": {
                    "id": 22,
                    "short": "Isa 22:22",
                    "name": "Isaiah 22:22",
                    "scripture": "And the key of the house of David will I lay upon his shoulder; so he shall open, and none shall shut; and he shall shut, and none shall open."
                },
                "isa22.23": {
                    "id": 23,
                    "short": "Isa 22:23",
                    "name": "Isaiah 22:23",
                    "scripture": "And I will fasten him as a nail in a sure place; and he shall be for a glorious throne to his father's house."
                },
                "isa22.24": {
                    "id": 24,
                    "short": "Isa 22:24",
                    "name": "Isaiah 22:24",
                    "scripture": "And they shall hang upon him all the glory of his father's house, the offspring and the issue, all vessels of small quantity, from the vessels of cups, even to all the vessels of flagons."
                },
                "isa22.25": {
                    "id": 25,
                    "short": "Isa 22:25",
                    "name": "Isaiah 22:25",
                    "scripture": "In that day, saith the Lord of hosts, shall the nail that is fastened in the sure place be removed, and be cut down, and fall; and the burden that was upon it shall be cut off: for the Lord hath spoken it."
                }
            }
        },
        "isa23": {
            "id": 23,
            "short": "Isa 23",
            "name": "Isaiah 23",
            "verses": {
                "isa23.1": {
                    "id": 1,
                    "short": "Isa 23:1",
                    "name": "Isaiah 23:1",
                    "scripture": "The burden of Tyre. Howl, ye ships of Tarshish; for it is laid waste, so that there is no house, no entering in: from the land of Kittim it is revealed to them."
                },
                "isa23.2": {
                    "id": 2,
                    "short": "Isa 23:2",
                    "name": "Isaiah 23:2",
                    "scripture": "Be still, ye inhabitants of the isle; thou whom the merchants of Zidon, that pass over the sea, have replenished."
                },
                "isa23.3": {
                    "id": 3,
                    "short": "Isa 23:3",
                    "name": "Isaiah 23:3",
                    "scripture": "And by great waters the seed of Sihor, the harvest of the river, is her revenue; and she is a mart of nations."
                },
                "isa23.4": {
                    "id": 4,
                    "short": "Isa 23:4",
                    "name": "Isaiah 23:4",
                    "scripture": "Be thou ashamed, O Zidon: for the sea hath spoken, even the strength of the sea, saying, I travail not, nor bring forth children, neither do I nourish up young men, nor bring up virgins."
                },
                "isa23.5": {
                    "id": 5,
                    "short": "Isa 23:5",
                    "name": "Isaiah 23:5",
                    "scripture": "As at the report concerning Egypt, so shall they be sorely pained at the report of Tyre."
                },
                "isa23.6": {
                    "id": 6,
                    "short": "Isa 23:6",
                    "name": "Isaiah 23:6",
                    "scripture": "Pass ye over to Tarshish; howl, ye inhabitants of the isle."
                },
                "isa23.7": {
                    "id": 7,
                    "short": "Isa 23:7",
                    "name": "Isaiah 23:7",
                    "scripture": "Is this your joyous city, whose antiquity is of ancient days? her own feet shall carry her afar off to sojourn."
                },
                "isa23.8": {
                    "id": 8,
                    "short": "Isa 23:8",
                    "name": "Isaiah 23:8",
                    "scripture": "Who hath taken this counsel against Tyre, the crowning city, whose merchants are princes, whose traffickers are the honourable of the earth?"
                },
                "isa23.9": {
                    "id": 9,
                    "short": "Isa 23:9",
                    "name": "Isaiah 23:9",
                    "scripture": "The Lord of hosts hath purposed it, to stain the pride of all glory, and to bring into contempt all the honourable of the earth."
                },
                "isa23.10": {
                    "id": 10,
                    "short": "Isa 23:10",
                    "name": "Isaiah 23:10",
                    "scripture": "Pass through thy land as a river, O daughter of Tarshish: there is no more strength."
                },
                "isa23.11": {
                    "id": 11,
                    "short": "Isa 23:11",
                    "name": "Isaiah 23:11",
                    "scripture": "He stretched out his hand over the sea, he shook the kingdoms: the Lord hath given a commandment against the merchant city, to destroy the strong holds thereof."
                },
                "isa23.12": {
                    "id": 12,
                    "short": "Isa 23:12",
                    "name": "Isaiah 23:12",
                    "scripture": "And he said, Thou shalt no more rejoice, O thou oppressed virgin, daughter of Zidon: arise, pass over to Kittim; there also shalt thou have no rest."
                },
                "isa23.13": {
                    "id": 13,
                    "short": "Isa 23:13",
                    "name": "Isaiah 23:13",
                    "scripture": "Behold the land of the Chaldeans; this people was not, till the Assyrian founded it for them that dwell in the wilderness: they set up the towers thereof, they raised up the palaces thereof; and he brought it to ruin."
                },
                "isa23.14": {
                    "id": 14,
                    "short": "Isa 23:14",
                    "name": "Isaiah 23:14",
                    "scripture": "Howl, ye ships of Tarshish: for your strength is laid waste."
                },
                "isa23.15": {
                    "id": 15,
                    "short": "Isa 23:15",
                    "name": "Isaiah 23:15",
                    "scripture": "And it shall come to pass in that day, that Tyre shall be forgotten seventy years, according to the days of one king: after the end of seventy years shall Tyre sing as an harlot."
                },
                "isa23.16": {
                    "id": 16,
                    "short": "Isa 23:16",
                    "name": "Isaiah 23:16",
                    "scripture": "Take an harp, go about the city, thou harlot that hast been forgotten; make sweet melody, sing many songs, that thou mayest be remembered."
                },
                "isa23.17": {
                    "id": 17,
                    "short": "Isa 23:17",
                    "name": "Isaiah 23:17",
                    "scripture": "And it shall come to pass after the end of seventy years, that the Lord will visit Tyre, and she shall turn to her hire, and shall commit fornication with all the kingdoms of the world upon the face of the earth."
                },
                "isa23.18": {
                    "id": 18,
                    "short": "Isa 23:18",
                    "name": "Isaiah 23:18",
                    "scripture": "And her merchandise and her hire shall be holiness to the Lord : it shall not be treasured nor laid up; for her merchandise shall be for them that dwell before the Lord, to eat sufficiently, and for durable clothing."
                }
            }
        },
        "isa24": {
            "id": 24,
            "short": "Isa 24",
            "name": "Isaiah 24",
            "verses": {
                "isa24.1": {
                    "id": 1,
                    "short": "Isa 24:1",
                    "name": "Isaiah 24:1",
                    "scripture": "Behold, the Lord maketh the earth empty, and maketh it waste, and turneth it upside down, and scattereth abroad the inhabitants thereof."
                },
                "isa24.2": {
                    "id": 2,
                    "short": "Isa 24:2",
                    "name": "Isaiah 24:2",
                    "scripture": "And it shall be, as with the people, so with the priest; as with the servant, so with his master; as with the maid, so with her mistress; as with the buyer, so with the seller; as with the lender, so with the borrower; as with the taker of usury, so with the giver of usury to him."
                },
                "isa24.3": {
                    "id": 3,
                    "short": "Isa 24:3",
                    "name": "Isaiah 24:3",
                    "scripture": "The land shall be utterly emptied, and utterly spoiled: for the Lord hath spoken this word."
                },
                "isa24.4": {
                    "id": 4,
                    "short": "Isa 24:4",
                    "name": "Isaiah 24:4",
                    "scripture": "The earth mourneth and fadeth away, the world languisheth and fadeth away, the haughty people of the earth do languish."
                },
                "isa24.5": {
                    "id": 5,
                    "short": "Isa 24:5",
                    "name": "Isaiah 24:5",
                    "scripture": "The earth also is defiled under the inhabitants thereof; because they have transgressed the laws, changed the ordinance, broken the everlasting covenant."
                },
                "isa24.6": {
                    "id": 6,
                    "short": "Isa 24:6",
                    "name": "Isaiah 24:6",
                    "scripture": "Therefore hath the curse devoured the earth, and they that dwell therein are desolate: therefore the inhabitants of the earth are burned, and few men left."
                },
                "isa24.7": {
                    "id": 7,
                    "short": "Isa 24:7",
                    "name": "Isaiah 24:7",
                    "scripture": "The new wine mourneth, the vine languisheth, all the merryhearted do sigh."
                },
                "isa24.8": {
                    "id": 8,
                    "short": "Isa 24:8",
                    "name": "Isaiah 24:8",
                    "scripture": "The mirth of tabrets ceaseth, the noise of them that rejoice endeth, the joy of the harp ceaseth."
                },
                "isa24.9": {
                    "id": 9,
                    "short": "Isa 24:9",
                    "name": "Isaiah 24:9",
                    "scripture": "They shall not drink wine with a song; strong drink shall be bitter to them that drink it."
                },
                "isa24.10": {
                    "id": 10,
                    "short": "Isa 24:10",
                    "name": "Isaiah 24:10",
                    "scripture": "The city of confusion is broken down: every house is shut up, that no man may come in."
                },
                "isa24.11": {
                    "id": 11,
                    "short": "Isa 24:11",
                    "name": "Isaiah 24:11",
                    "scripture": "There is a crying for wine in the streets; all joy is darkened, the mirth of the land is gone."
                },
                "isa24.12": {
                    "id": 12,
                    "short": "Isa 24:12",
                    "name": "Isaiah 24:12",
                    "scripture": "In the city is left desolation, and the gate is smitten with destruction."
                },
                "isa24.13": {
                    "id": 13,
                    "short": "Isa 24:13",
                    "name": "Isaiah 24:13",
                    "scripture": "When thus it shall be in the midst of the land among the people, there shall be as the shaking of an olive tree, and as the gleaning grapes when the vintage is done."
                },
                "isa24.14": {
                    "id": 14,
                    "short": "Isa 24:14",
                    "name": "Isaiah 24:14",
                    "scripture": "They shall lift up their voice, they shall sing for the majesty of the Lord, they shall cry aloud from the sea."
                },
                "isa24.15": {
                    "id": 15,
                    "short": "Isa 24:15",
                    "name": "Isaiah 24:15",
                    "scripture": "Wherefore glorify ye the Lord in the fires, even the name of the Lord God of Israel in the isles of the sea."
                },
                "isa24.16": {
                    "id": 16,
                    "short": "Isa 24:16",
                    "name": "Isaiah 24:16",
                    "scripture": "From the uttermost part of the earth have we heard songs, even glory to the righteous. But I said, My leanness, my leanness, woe unto me! the treacherous dealers have dealt treacherously; yea, the treacherous dealers have dealt very treacherously."
                },
                "isa24.17": {
                    "id": 17,
                    "short": "Isa 24:17",
                    "name": "Isaiah 24:17",
                    "scripture": "Fear, and the pit, and the snare, are upon thee, O inhabitant of the earth."
                },
                "isa24.18": {
                    "id": 18,
                    "short": "Isa 24:18",
                    "name": "Isaiah 24:18",
                    "scripture": "And it shall come to pass, that he who fleeth from the noise of the fear shall fall into the pit; and he that cometh up out of the midst of the pit shall be taken in the snare: for the windows from on high are open, and the foundations of the earth do shake."
                },
                "isa24.19": {
                    "id": 19,
                    "short": "Isa 24:19",
                    "name": "Isaiah 24:19",
                    "scripture": "The earth is utterly broken down, the earth is clean dissolved, the earth is moved exceedingly."
                },
                "isa24.20": {
                    "id": 20,
                    "short": "Isa 24:20",
                    "name": "Isaiah 24:20",
                    "scripture": "The earth shall reel to and fro like a drunkard, and shall be removed like a cottage; and the transgression thereof shall be heavy upon it; and it shall fall, and not rise again."
                },
                "isa24.21": {
                    "id": 21,
                    "short": "Isa 24:21",
                    "name": "Isaiah 24:21",
                    "scripture": "And it shall come to pass in that day, that the Lord shall punish the host of the high ones that are on high, and the kings of the earth upon the earth."
                },
                "isa24.22": {
                    "id": 22,
                    "short": "Isa 24:22",
                    "name": "Isaiah 24:22",
                    "scripture": "And they shall be gathered together, as prisoners are gathered in the pit, and shall be shut up in the prison, and after many days shall they be visited."
                },
                "isa24.23": {
                    "id": 23,
                    "short": "Isa 24:23",
                    "name": "Isaiah 24:23",
                    "scripture": "Then the moon shall be confounded, and the sun ashamed, when the Lord of hosts shall reign in mount Zion, and in Jerusalem, and before his ancients gloriously."
                }
            }
        },
        "isa25": {
            "id": 25,
            "short": "Isa 25",
            "name": "Isaiah 25",
            "verses": {
                "isa25.1": {
                    "id": 1,
                    "short": "Isa 25:1",
                    "name": "Isaiah 25:1",
                    "scripture": "O Lord, thou art my God; I will exalt thee, I will praise thy name; for thou hast done wonderful things; thy counsels of old are faithfulness and truth."
                },
                "isa25.2": {
                    "id": 2,
                    "short": "Isa 25:2",
                    "name": "Isaiah 25:2",
                    "scripture": "For thou hast made of a city an heap; of a defenced city a ruin: a palace of strangers to be no city; it shall never be built."
                },
                "isa25.3": {
                    "id": 3,
                    "short": "Isa 25:3",
                    "name": "Isaiah 25:3",
                    "scripture": "Therefore shall the strong people glorify thee, the city of the terrible nations shall fear thee."
                },
                "isa25.4": {
                    "id": 4,
                    "short": "Isa 25:4",
                    "name": "Isaiah 25:4",
                    "scripture": "For thou hast been a strength to the poor, a strength to the needy in his distress, a refuge from the storm, a shadow from the heat, when the blast of the terrible ones is as a storm against the wall."
                },
                "isa25.5": {
                    "id": 5,
                    "short": "Isa 25:5",
                    "name": "Isaiah 25:5",
                    "scripture": "Thou shalt bring down the noise of strangers, as the heat in a dry place; even the heat with the shadow of a cloud: the branch of the terrible ones shall be brought low."
                },
                "isa25.6": {
                    "id": 6,
                    "short": "Isa 25:6",
                    "name": "Isaiah 25:6",
                    "scripture": "And in this mountain shall the Lord of hosts make unto all people a feast of fat things, a feast of wines on the lees, of fat things full of marrow, of wines on the lees well refined."
                },
                "isa25.7": {
                    "id": 7,
                    "short": "Isa 25:7",
                    "name": "Isaiah 25:7",
                    "scripture": "And he will destroy in this mountain the face of the covering cast over all people, and the veil that is spread over all nations."
                },
                "isa25.8": {
                    "id": 8,
                    "short": "Isa 25:8",
                    "name": "Isaiah 25:8",
                    "scripture": "He will swallow up death in victory; and the Lord God will wipe away tears from off all faces; and the rebuke of his people shall he take away from off all the earth: for the Lord hath spoken it."
                },
                "isa25.9": {
                    "id": 9,
                    "short": "Isa 25:9",
                    "name": "Isaiah 25:9",
                    "scripture": "And it shall be said in that day, Lo, this is our God; we have waited for him, and he will save us: this is the Lord; we have waited for him, we will be glad and rejoice in his salvation."
                },
                "isa25.10": {
                    "id": 10,
                    "short": "Isa 25:10",
                    "name": "Isaiah 25:10",
                    "scripture": "For in this mountain shall the hand of the Lord rest, and Moab shall be trodden down under him, even as straw is trodden down for the dunghill."
                },
                "isa25.11": {
                    "id": 11,
                    "short": "Isa 25:11",
                    "name": "Isaiah 25:11",
                    "scripture": "And he shall spread forth his hands in the midst of them, as he that swimmeth spreadeth forth his hands to swim: and he shall bring down their pride together with the spoils of their hands."
                },
                "isa25.12": {
                    "id": 12,
                    "short": "Isa 25:12",
                    "name": "Isaiah 25:12",
                    "scripture": "And the fortress of the high fort of thy walls shall he bring down, lay low, and bring to the ground, even to the dust."
                }
            }
        },
        "isa26": {
            "id": 26,
            "short": "Isa 26",
            "name": "Isaiah 26",
            "verses": {
                "isa26.1": {
                    "id": 1,
                    "short": "Isa 26:1",
                    "name": "Isaiah 26:1",
                    "scripture": "In that day shall this song be sung in the land of Judah; We have a strong city; salvation will God appoint for walls and bulwarks."
                },
                "isa26.2": {
                    "id": 2,
                    "short": "Isa 26:2",
                    "name": "Isaiah 26:2",
                    "scripture": "Open ye the gates, that the righteous nation which keepeth the truth may enter in."
                },
                "isa26.3": {
                    "id": 3,
                    "short": "Isa 26:3",
                    "name": "Isaiah 26:3",
                    "scripture": "Thou wilt keep him in perfect peace, whose mind is stayed on thee: because he trusteth in thee."
                },
                "isa26.4": {
                    "id": 4,
                    "short": "Isa 26:4",
                    "name": "Isaiah 26:4",
                    "scripture": "Trust ye in the Lord for ever: for in the Lord Jehovah is everlasting strength:"
                },
                "isa26.5": {
                    "id": 5,
                    "short": "Isa 26:5",
                    "name": "Isaiah 26:5",
                    "scripture": "For he bringeth down them that dwell on high; the lofty city, he layeth it low; he layeth it low, even to the ground; he bringeth it even to the dust."
                },
                "isa26.6": {
                    "id": 6,
                    "short": "Isa 26:6",
                    "name": "Isaiah 26:6",
                    "scripture": "The foot shall tread it down, even the feet of the poor, and the steps of the needy."
                },
                "isa26.7": {
                    "id": 7,
                    "short": "Isa 26:7",
                    "name": "Isaiah 26:7",
                    "scripture": "The way of the just is uprightness: thou, most upright, dost weigh the path of the just."
                },
                "isa26.8": {
                    "id": 8,
                    "short": "Isa 26:8",
                    "name": "Isaiah 26:8",
                    "scripture": "Yea, in the way of thy judgments, O Lord, have we waited for thee; the desire of our soul is to thy name, and to the remembrance of thee."
                },
                "isa26.9": {
                    "id": 9,
                    "short": "Isa 26:9",
                    "name": "Isaiah 26:9",
                    "scripture": "With my soul have I desired thee in the night; yea, with my spirit within me will I seek thee early: for when thy judgments are in the earth, the inhabitants of the world will learn righteousness."
                },
                "isa26.10": {
                    "id": 10,
                    "short": "Isa 26:10",
                    "name": "Isaiah 26:10",
                    "scripture": "Let favour be shewed to the wicked, yet will he not learn righteousness: in the land of uprightness will he deal unjustly, and will not behold the majesty of the Lord ."
                },
                "isa26.11": {
                    "id": 11,
                    "short": "Isa 26:11",
                    "name": "Isaiah 26:11",
                    "scripture": "Lord, when thy hand is lifted up, they will not see: but they shall see, and be ashamed for their envy at the people; yea, the fire of thine enemies shall devour them."
                },
                "isa26.12": {
                    "id": 12,
                    "short": "Isa 26:12",
                    "name": "Isaiah 26:12",
                    "scripture": "Lord, thou wilt ordain peace for us: for thou also hast wrought all our works in us."
                },
                "isa26.13": {
                    "id": 13,
                    "short": "Isa 26:13",
                    "name": "Isaiah 26:13",
                    "scripture": "O Lord our God, other lords beside thee have had dominion over us: but by thee only will we make mention of thy name."
                },
                "isa26.14": {
                    "id": 14,
                    "short": "Isa 26:14",
                    "name": "Isaiah 26:14",
                    "scripture": "They are dead, they shall not live; they are deceased, they shall not rise: therefore hast thou visited and destroyed them, and made all their memory to perish."
                },
                "isa26.15": {
                    "id": 15,
                    "short": "Isa 26:15",
                    "name": "Isaiah 26:15",
                    "scripture": "Thou hast increased the nation, O Lord, thou hast increased the nation: thou art glorified: thou hadst removed it far unto all the ends of the earth."
                },
                "isa26.16": {
                    "id": 16,
                    "short": "Isa 26:16",
                    "name": "Isaiah 26:16",
                    "scripture": "Lord, in trouble have they visited thee, they poured out a prayer when thy chastening was upon them."
                },
                "isa26.17": {
                    "id": 17,
                    "short": "Isa 26:17",
                    "name": "Isaiah 26:17",
                    "scripture": "Like as a woman with child, that draweth near the time of her delivery, is in pain, and crieth out in her pangs; so have we been in thy sight, O Lord ."
                },
                "isa26.18": {
                    "id": 18,
                    "short": "Isa 26:18",
                    "name": "Isaiah 26:18",
                    "scripture": "We have been with child, we have been in pain, we have as it were brought forth wind; we have not wrought any deliverance in the earth; neither have the inhabitants of the world fallen."
                },
                "isa26.19": {
                    "id": 19,
                    "short": "Isa 26:19",
                    "name": "Isaiah 26:19",
                    "scripture": "Thy dead men shall live, together with my dead body shall they arise. Awake and sing, ye that dwell in dust: for thy dew is as the dew of herbs, and the earth shall cast out the dead."
                },
                "isa26.20": {
                    "id": 20,
                    "short": "Isa 26:20",
                    "name": "Isaiah 26:20",
                    "scripture": "Come, my people, enter thou into thy chambers, and shut thy doors about thee: hide thyself as it were for a little moment, until the indignation be overpast."
                },
                "isa26.21": {
                    "id": 21,
                    "short": "Isa 26:21",
                    "name": "Isaiah 26:21",
                    "scripture": "For, behold, the Lord cometh out of his place to punish the inhabitants of the earth for their iniquity: the earth also shall disclose her blood, and shall no more cover her slain."
                }
            }
        },
        "isa27": {
            "id": 27,
            "short": "Isa 27",
            "name": "Isaiah 27",
            "verses": {
                "isa27.1": {
                    "id": 1,
                    "short": "Isa 27:1",
                    "name": "Isaiah 27:1",
                    "scripture": "In that day the Lord with his sore and great and strong sword shall punish leviathan the piercing serpent, even leviathan that crooked serpent; and he shall slay the dragon that is in the sea."
                },
                "isa27.2": {
                    "id": 2,
                    "short": "Isa 27:2",
                    "name": "Isaiah 27:2",
                    "scripture": "In that day sing ye unto her, A vineyard of red wine."
                },
                "isa27.3": {
                    "id": 3,
                    "short": "Isa 27:3",
                    "name": "Isaiah 27:3",
                    "scripture": "I the Lord do keep it; I will water it every moment: lest any hurt it, I will keep it night and day."
                },
                "isa27.4": {
                    "id": 4,
                    "short": "Isa 27:4",
                    "name": "Isaiah 27:4",
                    "scripture": "Fury is not in me: who would set the briers and thorns against me in battle? I would go through them, I would burn them together."
                },
                "isa27.5": {
                    "id": 5,
                    "short": "Isa 27:5",
                    "name": "Isaiah 27:5",
                    "scripture": "Or let him take hold of my strength, that he may make peace with me; and he shall make peace with me."
                },
                "isa27.6": {
                    "id": 6,
                    "short": "Isa 27:6",
                    "name": "Isaiah 27:6",
                    "scripture": "He shall cause them that come of Jacob to take root: Israel shall blossom and bud, and fill the face of the world with fruit."
                },
                "isa27.7": {
                    "id": 7,
                    "short": "Isa 27:7",
                    "name": "Isaiah 27:7",
                    "scripture": "Hath he smitten him, as he smote those that smote him? or is he slain according to the slaughter of them that are slain by him?"
                },
                "isa27.8": {
                    "id": 8,
                    "short": "Isa 27:8",
                    "name": "Isaiah 27:8",
                    "scripture": "In measure, when it shooteth forth, thou wilt debate with it: he stayeth his rough wind in the day of the east wind."
                },
                "isa27.9": {
                    "id": 9,
                    "short": "Isa 27:9",
                    "name": "Isaiah 27:9",
                    "scripture": "By this therefore shall the iniquity of Jacob be purged; and this is all the fruit to take away his sin; when he maketh all the stones of the altar as chalkstones that are beaten in sunder, the groves and images shall not stand up."
                },
                "isa27.10": {
                    "id": 10,
                    "short": "Isa 27:10",
                    "name": "Isaiah 27:10",
                    "scripture": "Yet the defenced city shall be desolate, and the habitation forsaken, and left like a wilderness: there shall the calf feed, and there shall he lie down, and consume the branches thereof."
                },
                "isa27.11": {
                    "id": 11,
                    "short": "Isa 27:11",
                    "name": "Isaiah 27:11",
                    "scripture": "When the boughs thereof are withered, they shall be broken off: the women come, and set them on fire: for it is a people of no understanding: therefore he that made them will not have mercy on them, and he that formed them will shew them no favour."
                },
                "isa27.12": {
                    "id": 12,
                    "short": "Isa 27:12",
                    "name": "Isaiah 27:12",
                    "scripture": "And it shall come to pass in that day, that the Lord shall beat off from the channel of the river unto the stream of Egypt, and ye shall be gathered one by one, O ye children of Israel."
                },
                "isa27.13": {
                    "id": 13,
                    "short": "Isa 27:13",
                    "name": "Isaiah 27:13",
                    "scripture": "And it shall come to pass in that day, that the great trumpet shall be blown, and they shall come which were ready to perish in the land of Assyria, and the outcasts in the land of Egypt, and shall worship the Lord in the holy mount at Jerusalem."
                }
            }
        },
        "isa28": {
            "id": 28,
            "short": "Isa 28",
            "name": "Isaiah 28",
            "verses": {
                "isa28.1": {
                    "id": 1,
                    "short": "Isa 28:1",
                    "name": "Isaiah 28:1",
                    "scripture": "Woe to the crown of pride, to the drunkards of Ephraim, whose glorious beauty is a fading flower, which are on the head of the fat valleys of them that are overcome with wine!"
                },
                "isa28.2": {
                    "id": 2,
                    "short": "Isa 28:2",
                    "name": "Isaiah 28:2",
                    "scripture": "Behold, the Lord hath a mighty and strong one, which as a tempest of hail and a destroying storm, as a flood of mighty waters overflowing, shall cast down to the earth with the hand."
                },
                "isa28.3": {
                    "id": 3,
                    "short": "Isa 28:3",
                    "name": "Isaiah 28:3",
                    "scripture": "The crown of pride, the drunkards of Ephraim, shall be trodden under feet:"
                },
                "isa28.4": {
                    "id": 4,
                    "short": "Isa 28:4",
                    "name": "Isaiah 28:4",
                    "scripture": "And the glorious beauty, which is on the head of the fat valley, shall be a fading flower, and as the hasty fruit before the summer; which when he that looketh upon it seeth, while it is yet in his hand he eateth it up."
                },
                "isa28.5": {
                    "id": 5,
                    "short": "Isa 28:5",
                    "name": "Isaiah 28:5",
                    "scripture": "In that day shall the Lord of hosts be for a crown of glory, and for a diadem of beauty, unto the residue of his people,"
                },
                "isa28.6": {
                    "id": 6,
                    "short": "Isa 28:6",
                    "name": "Isaiah 28:6",
                    "scripture": "And for a spirit of judgment to him that sitteth in judgment, and for strength to them that turn the battle to the gate."
                },
                "isa28.7": {
                    "id": 7,
                    "short": "Isa 28:7",
                    "name": "Isaiah 28:7",
                    "scripture": "But they also have erred through wine, and through strong drink are out of the way; the priest and the prophet have erred through strong drink, they are swallowed up of wine, they are out of the way through strong drink; they err in vision, they stumble in judgment."
                },
                "isa28.8": {
                    "id": 8,
                    "short": "Isa 28:8",
                    "name": "Isaiah 28:8",
                    "scripture": "For all tables are full of vomit and filthiness, so that there is no place clean."
                },
                "isa28.9": {
                    "id": 9,
                    "short": "Isa 28:9",
                    "name": "Isaiah 28:9",
                    "scripture": "Whom shall he teach knowledge? and whom shall he make to understand doctrine? them that are weaned from the milk, and drawn from the breasts."
                },
                "isa28.10": {
                    "id": 10,
                    "short": "Isa 28:10",
                    "name": "Isaiah 28:10",
                    "scripture": "For precept must be upon precept, precept upon precept; line upon line, line upon line; here a little, and there a little:"
                },
                "isa28.11": {
                    "id": 11,
                    "short": "Isa 28:11",
                    "name": "Isaiah 28:11",
                    "scripture": "For with stammering lips and another tongue will he speak to this people."
                },
                "isa28.12": {
                    "id": 12,
                    "short": "Isa 28:12",
                    "name": "Isaiah 28:12",
                    "scripture": "To whom he said, This is the rest wherewith ye may cause the weary to rest; and this is the refreshing: yet they would not hear."
                },
                "isa28.13": {
                    "id": 13,
                    "short": "Isa 28:13",
                    "name": "Isaiah 28:13",
                    "scripture": "But the word of the Lord was unto them precept upon precept, precept upon precept; line upon line, line upon line; here a little, and there a little; that they might go, and fall backward, and be broken, and snared, and taken."
                },
                "isa28.14": {
                    "id": 14,
                    "short": "Isa 28:14",
                    "name": "Isaiah 28:14",
                    "scripture": "Wherefore hear the word of the Lord, ye scornful men, that rule this people which is in Jerusalem."
                },
                "isa28.15": {
                    "id": 15,
                    "short": "Isa 28:15",
                    "name": "Isaiah 28:15",
                    "scripture": "Because ye have said, We have made a covenant with death, and with hell are we at agreement; when the overflowing scourge shall pass through, it shall not come unto us: for we have made lies our refuge, and under falsehood have we hid ourselves:"
                },
                "isa28.16": {
                    "id": 16,
                    "short": "Isa 28:16",
                    "name": "Isaiah 28:16",
                    "scripture": "Therefore thus saith the Lord God, Behold, I lay in Zion for a foundation a stone, a tried stone, a precious corner stone, a sure foundation: he that believeth shall not make haste."
                },
                "isa28.17": {
                    "id": 17,
                    "short": "Isa 28:17",
                    "name": "Isaiah 28:17",
                    "scripture": "Judgment also will I lay to the line, and righteousness to the plummet: and the hail shall sweep away the refuge of lies, and the waters shall overflow the hiding place."
                },
                "isa28.18": {
                    "id": 18,
                    "short": "Isa 28:18",
                    "name": "Isaiah 28:18",
                    "scripture": "And your covenant with death shall be disannulled, and your agreement with hell shall not stand; when the overflowing scourge shall pass through, then ye shall be trodden down by it."
                },
                "isa28.19": {
                    "id": 19,
                    "short": "Isa 28:19",
                    "name": "Isaiah 28:19",
                    "scripture": "From the time that it goeth forth it shall take you: for morning by morning shall it pass over, by day and by night: and it shall be a vexation only to understand the report."
                },
                "isa28.20": {
                    "id": 20,
                    "short": "Isa 28:20",
                    "name": "Isaiah 28:20",
                    "scripture": "For the bed is shorter than that a man can stretch himself on it: and the covering narrower than that he can wrap himself in it."
                },
                "isa28.21": {
                    "id": 21,
                    "short": "Isa 28:21",
                    "name": "Isaiah 28:21",
                    "scripture": "For the Lord shall rise up as in mount Perazim, he shall be wroth as in the valley of Gibeon, that he may do his work, his strange work; and bring to pass his act, his strange act."
                },
                "isa28.22": {
                    "id": 22,
                    "short": "Isa 28:22",
                    "name": "Isaiah 28:22",
                    "scripture": "Now therefore be ye not mockers, lest your bands be made strong: for I have heard from the Lord God of hosts a consumption, even determined upon the whole earth."
                },
                "isa28.23": {
                    "id": 23,
                    "short": "Isa 28:23",
                    "name": "Isaiah 28:23",
                    "scripture": "Give ye ear, and hear my voice; hearken, and hear my speech."
                },
                "isa28.24": {
                    "id": 24,
                    "short": "Isa 28:24",
                    "name": "Isaiah 28:24",
                    "scripture": "Doth the plowman plow all day to sow? doth he open and break the clods of his ground?"
                },
                "isa28.25": {
                    "id": 25,
                    "short": "Isa 28:25",
                    "name": "Isaiah 28:25",
                    "scripture": "When he hath made plain the face thereof, doth he not cast abroad the fitches, and scatter the cummin, and cast in the principal wheat and the appointed barley and the rie in their place?"
                },
                "isa28.26": {
                    "id": 26,
                    "short": "Isa 28:26",
                    "name": "Isaiah 28:26",
                    "scripture": "For his God doth instruct him to discretion, and doth teach him."
                },
                "isa28.27": {
                    "id": 27,
                    "short": "Isa 28:27",
                    "name": "Isaiah 28:27",
                    "scripture": "For the fitches are not threshed with a threshing instrument, neither is a cart wheel turned about upon the cummin; but the fitches are beaten out with a staff, and the cummin with a rod."
                },
                "isa28.28": {
                    "id": 28,
                    "short": "Isa 28:28",
                    "name": "Isaiah 28:28",
                    "scripture": "Bread corn is bruised; because he will not ever be threshing it, nor break it with the wheel of his cart, nor bruise it with his horsemen."
                },
                "isa28.29": {
                    "id": 29,
                    "short": "Isa 28:29",
                    "name": "Isaiah 28:29",
                    "scripture": "This also cometh forth from the Lord of hosts, which is wonderful in counsel, and excellent in working."
                }
            }
        },
        "isa29": {
            "id": 29,
            "short": "Isa 29",
            "name": "Isaiah 29",
            "verses": {
                "isa29.1": {
                    "id": 1,
                    "short": "Isa 29:1",
                    "name": "Isaiah 29:1",
                    "scripture": "Woe to Ariel, to Ariel, the city where David dwelt! add ye year to year; let them kill sacrifices."
                },
                "isa29.2": {
                    "id": 2,
                    "short": "Isa 29:2",
                    "name": "Isaiah 29:2",
                    "scripture": "Yet I will distress Ariel, and there shall be heaviness and sorrow: and it shall be unto me as Ariel."
                },
                "isa29.3": {
                    "id": 3,
                    "short": "Isa 29:3",
                    "name": "Isaiah 29:3",
                    "scripture": "And I will camp against thee round about, and will lay siege against thee with a mount, and I will raise forts against thee."
                },
                "isa29.4": {
                    "id": 4,
                    "short": "Isa 29:4",
                    "name": "Isaiah 29:4",
                    "scripture": "And thou shalt be brought down, and shalt speak out of the ground, and thy speech shall be low out of the dust, and thy voice shall be, as of one that hath a familiar spirit, out of the ground, and thy speech shall whisper out of the dust."
                },
                "isa29.5": {
                    "id": 5,
                    "short": "Isa 29:5",
                    "name": "Isaiah 29:5",
                    "scripture": "Moreover the multitude of thy strangers shall be like small dust, and the multitude of the terrible ones shall be as chaff that passeth away: yea, it shall be at an instant suddenly."
                },
                "isa29.6": {
                    "id": 6,
                    "short": "Isa 29:6",
                    "name": "Isaiah 29:6",
                    "scripture": "Thou shalt be visited of the Lord of hosts with thunder, and with earthquake, and great noise, with storm and tempest, and the flame of devouring fire."
                },
                "isa29.7": {
                    "id": 7,
                    "short": "Isa 29:7",
                    "name": "Isaiah 29:7",
                    "scripture": "And the multitude of all the nations that fight against Ariel, even all that fight against her and her munition, and that distress her, shall be as a dream of a night vision."
                },
                "isa29.8": {
                    "id": 8,
                    "short": "Isa 29:8",
                    "name": "Isaiah 29:8",
                    "scripture": "It shall even be as when an hungry man dreameth, and, behold, he eateth; but he awaketh, and his soul is empty: or as when a thirsty man dreameth, and, behold, he drinketh; but he awaketh, and, behold, he is faint, and his soul hath appetite: so shall the multitude of all the nations be, that fight against mount Zion."
                },
                "isa29.9": {
                    "id": 9,
                    "short": "Isa 29:9",
                    "name": "Isaiah 29:9",
                    "scripture": "Stay yourselves, and wonder; cry ye out, and cry: they are drunken, but not with wine; they stagger, but not with strong drink."
                },
                "isa29.10": {
                    "id": 10,
                    "short": "Isa 29:10",
                    "name": "Isaiah 29:10",
                    "scripture": "For the Lord hath poured out upon you the spirit of deep sleep, and hath closed your eyes: the prophets and your rulers, the seers hath he covered."
                },
                "isa29.11": {
                    "id": 11,
                    "short": "Isa 29:11",
                    "name": "Isaiah 29:11",
                    "scripture": "And the vision of all is become unto you as the words of a book that is sealed, which men deliver to one that is learned, saying, Read this, I pray thee: and he saith, I cannot; for it is sealed:"
                },
                "isa29.12": {
                    "id": 12,
                    "short": "Isa 29:12",
                    "name": "Isaiah 29:12",
                    "scripture": "And the book is delivered to him that is not learned, saying, Read this, I pray thee: and he saith, I am not learned."
                },
                "isa29.13": {
                    "id": 13,
                    "short": "Isa 29:13",
                    "name": "Isaiah 29:13",
                    "scripture": "Wherefore the Lord said, Forasmuch as this people draw near me with their mouth, and with their lips do honour me, but have removed their heart far from me, and their fear toward me is taught by the precept of men:"
                },
                "isa29.14": {
                    "id": 14,
                    "short": "Isa 29:14",
                    "name": "Isaiah 29:14",
                    "scripture": "Therefore, behold, I will proceed to do a marvellous work among this people, even a marvellous work and a wonder: for the wisdom of their wise men shall perish, and the understanding of their prudent men shall be hid."
                },
                "isa29.15": {
                    "id": 15,
                    "short": "Isa 29:15",
                    "name": "Isaiah 29:15",
                    "scripture": "Woe unto them that seek deep to hide their counsel from the Lord, and their works are in the dark, and they say, Who seeth us? and who knoweth us?"
                },
                "isa29.16": {
                    "id": 16,
                    "short": "Isa 29:16",
                    "name": "Isaiah 29:16",
                    "scripture": "Surely your turning of things upside down shall be esteemed as the potter's clay: for shall the work say of him that made it, He made me not? or shall the thing framed say of him that framed it, He had no understanding?"
                },
                "isa29.17": {
                    "id": 17,
                    "short": "Isa 29:17",
                    "name": "Isaiah 29:17",
                    "scripture": "Is it not yet a very little while, and Lebanon shall be turned into a fruitful field, and the fruitful field shall be esteemed as a forest?"
                },
                "isa29.18": {
                    "id": 18,
                    "short": "Isa 29:18",
                    "name": "Isaiah 29:18",
                    "scripture": "And in that day shall the deaf hear the words of the book, and the eyes of the blind shall see out of obscurity, and out of darkness."
                },
                "isa29.19": {
                    "id": 19,
                    "short": "Isa 29:19",
                    "name": "Isaiah 29:19",
                    "scripture": "The meek also shall increase their joy in the Lord, and the poor among men shall rejoice in the Holy One of Israel."
                },
                "isa29.20": {
                    "id": 20,
                    "short": "Isa 29:20",
                    "name": "Isaiah 29:20",
                    "scripture": "For the terrible one is brought to nought, and the scorner is consumed, and all that watch for iniquity are cut off:"
                },
                "isa29.21": {
                    "id": 21,
                    "short": "Isa 29:21",
                    "name": "Isaiah 29:21",
                    "scripture": "That make a man an offender for a word, and lay a snare for him that reproveth in the gate, and turn aside the just for a thing of nought."
                },
                "isa29.22": {
                    "id": 22,
                    "short": "Isa 29:22",
                    "name": "Isaiah 29:22",
                    "scripture": "Therefore thus saith the Lord, who redeemed Abraham, concerning the house of Jacob, Jacob shall not now be ashamed, neither shall his face now wax pale."
                },
                "isa29.23": {
                    "id": 23,
                    "short": "Isa 29:23",
                    "name": "Isaiah 29:23",
                    "scripture": "But when he seeth his children, the work of mine hands, in the midst of him, they shall sanctify my name, and sanctify the Holy One of Jacob, and shall fear the God of Israel."
                },
                "isa29.24": {
                    "id": 24,
                    "short": "Isa 29:24",
                    "name": "Isaiah 29:24",
                    "scripture": "They also that erred in spirit shall come to understanding, and they that murmured shall learn doctrine."
                }
            }
        },
        "isa30": {
            "id": 30,
            "short": "Isa 30",
            "name": "Isaiah 30",
            "verses": {
                "isa30.1": {
                    "id": 1,
                    "short": "Isa 30:1",
                    "name": "Isaiah 30:1",
                    "scripture": "Woe to the rebellious children, saith the Lord, that take counsel, but not of me; and that cover with a covering, but not of my spirit, that they may add sin to sin:"
                },
                "isa30.2": {
                    "id": 2,
                    "short": "Isa 30:2",
                    "name": "Isaiah 30:2",
                    "scripture": "That walk to go down into Egypt, and have not asked at my mouth; to strengthen themselves in the strength of Pharaoh, and to trust in the shadow of Egypt!"
                },
                "isa30.3": {
                    "id": 3,
                    "short": "Isa 30:3",
                    "name": "Isaiah 30:3",
                    "scripture": "Therefore shall the strength of Pharaoh be your shame, and the trust in the shadow of Egypt your confusion."
                },
                "isa30.4": {
                    "id": 4,
                    "short": "Isa 30:4",
                    "name": "Isaiah 30:4",
                    "scripture": "For his princes were at Zoan, and his ambassadors came to Hanes."
                },
                "isa30.5": {
                    "id": 5,
                    "short": "Isa 30:5",
                    "name": "Isaiah 30:5",
                    "scripture": "They were all ashamed of a people that could not profit them, nor be an help nor profit, but a shame, and also a reproach."
                },
                "isa30.6": {
                    "id": 6,
                    "short": "Isa 30:6",
                    "name": "Isaiah 30:6",
                    "scripture": "The burden of the beasts of the south: into the land of trouble and anguish, from whence come the young and old lion, the viper and fiery flying serpent, they will carry their riches upon the shoulders of young asses, and their treasures upon the bunches of camels, to a people that shall not profit them."
                },
                "isa30.7": {
                    "id": 7,
                    "short": "Isa 30:7",
                    "name": "Isaiah 30:7",
                    "scripture": "For the Egyptians shall help in vain, and to no purpose: therefore have I cried concerning this, Their strength is to sit still."
                },
                "isa30.8": {
                    "id": 8,
                    "short": "Isa 30:8",
                    "name": "Isaiah 30:8",
                    "scripture": "Now go, write it before them in a table, and note it in a book, that it may be for the time to come for ever and ever:"
                },
                "isa30.9": {
                    "id": 9,
                    "short": "Isa 30:9",
                    "name": "Isaiah 30:9",
                    "scripture": "That this is a rebellious people, lying children, children that will not hear the law of the Lord :"
                },
                "isa30.10": {
                    "id": 10,
                    "short": "Isa 30:10",
                    "name": "Isaiah 30:10",
                    "scripture": "Which say to the seers, See not; and to the prophets, Prophesy not unto us right things, speak unto us smooth things, prophesy deceits:"
                },
                "isa30.11": {
                    "id": 11,
                    "short": "Isa 30:11",
                    "name": "Isaiah 30:11",
                    "scripture": "Get you out of the way, turn aside out of the path, cause the Holy One of Israel to cease from before us."
                },
                "isa30.12": {
                    "id": 12,
                    "short": "Isa 30:12",
                    "name": "Isaiah 30:12",
                    "scripture": "Wherefore thus saith the Holy One of Israel, Because ye despise this word, and trust in oppression and perverseness, and stay thereon:"
                },
                "isa30.13": {
                    "id": 13,
                    "short": "Isa 30:13",
                    "name": "Isaiah 30:13",
                    "scripture": "Therefore this iniquity shall be to you as a breach ready to fall, swelling out in a high wall, whose breaking cometh suddenly at an instant."
                },
                "isa30.14": {
                    "id": 14,
                    "short": "Isa 30:14",
                    "name": "Isaiah 30:14",
                    "scripture": "And he shall break it as the breaking of the potters' vessel that is broken in pieces; he shall not spare: so that there shall not be found in the bursting of it a sherd to take fire from the hearth, or to take water withal out of the pit."
                },
                "isa30.15": {
                    "id": 15,
                    "short": "Isa 30:15",
                    "name": "Isaiah 30:15",
                    "scripture": "For thus saith the Lord God, the Holy One of Israel; In returning and rest shall ye be saved; in quietness and in confidence shall be your strength: and ye would not."
                },
                "isa30.16": {
                    "id": 16,
                    "short": "Isa 30:16",
                    "name": "Isaiah 30:16",
                    "scripture": "But ye said, No; for we will flee upon horses; therefore shall ye flee: and, We will ride upon the swift; therefore shall they that pursue you be swift."
                },
                "isa30.17": {
                    "id": 17,
                    "short": "Isa 30:17",
                    "name": "Isaiah 30:17",
                    "scripture": "One thousand shall flee at the rebuke of one; at the rebuke of five shall ye flee: till ye be left as a beacon upon the top of a mountain, and as an ensign on an hill."
                },
                "isa30.18": {
                    "id": 18,
                    "short": "Isa 30:18",
                    "name": "Isaiah 30:18",
                    "scripture": "And therefore will the Lord wait, that he may be gracious unto you, and therefore will he be exalted, that he may have mercy upon you: for the Lord is a God of judgment: blessed are all they that wait for him."
                },
                "isa30.19": {
                    "id": 19,
                    "short": "Isa 30:19",
                    "name": "Isaiah 30:19",
                    "scripture": "For the people shall dwell in Zion at Jerusalem: thou shalt weep no more: he will be very gracious unto thee at the voice of thy cry; when he shall hear it, he will answer thee."
                },
                "isa30.20": {
                    "id": 20,
                    "short": "Isa 30:20",
                    "name": "Isaiah 30:20",
                    "scripture": "And though the Lord give you the bread of adversity, and the water of affliction, yet shall not thy teachers be removed into a corner any more, but thine eyes shall see thy teachers:"
                },
                "isa30.21": {
                    "id": 21,
                    "short": "Isa 30:21",
                    "name": "Isaiah 30:21",
                    "scripture": "And thine ears shall hear a word behind thee, saying, This is the way, walk ye in it, when ye turn to the right hand, and when ye turn to the left."
                },
                "isa30.22": {
                    "id": 22,
                    "short": "Isa 30:22",
                    "name": "Isaiah 30:22",
                    "scripture": "Ye shall defile also the covering of thy graven images of silver, and the ornament of thy molten images of gold: thou shalt cast them away as a menstruous cloth; thou shalt say unto it, Get thee hence."
                },
                "isa30.23": {
                    "id": 23,
                    "short": "Isa 30:23",
                    "name": "Isaiah 30:23",
                    "scripture": "Then shall he give the rain of thy seed, that thou shalt sow the ground withal; and bread of the increase of the earth, and it shall be fat and plenteous: in that day shall thy cattle feed in large pastures."
                },
                "isa30.24": {
                    "id": 24,
                    "short": "Isa 30:24",
                    "name": "Isaiah 30:24",
                    "scripture": "The oxen likewise and the young asses that ear the ground shall eat clean provender, which hath been winnowed with the shovel and with the fan."
                },
                "isa30.25": {
                    "id": 25,
                    "short": "Isa 30:25",
                    "name": "Isaiah 30:25",
                    "scripture": "And there shall be upon every high mountain, and upon every high hill, rivers and streams of waters in the day of the great slaughter, when the towers fall."
                },
                "isa30.26": {
                    "id": 26,
                    "short": "Isa 30:26",
                    "name": "Isaiah 30:26",
                    "scripture": "Moreover the light of the moon shall be as the light of the sun, and the light of the sun shall be sevenfold, as the light of seven days, in the day that the Lord bindeth up the breach of his people, and healeth the stroke of their wound."
                },
                "isa30.27": {
                    "id": 27,
                    "short": "Isa 30:27",
                    "name": "Isaiah 30:27",
                    "scripture": "Behold, the name of the Lord cometh from far, burning with his anger, and the burden thereof is heavy: his lips are full of indignation, and his tongue as a devouring fire:"
                },
                "isa30.28": {
                    "id": 28,
                    "short": "Isa 30:28",
                    "name": "Isaiah 30:28",
                    "scripture": "And his breath, as an overflowing stream, shall reach to the midst of the neck, to sift the nations with the sieve of vanity: and there shall be a bridle in the jaws of the people, causing them to err."
                },
                "isa30.29": {
                    "id": 29,
                    "short": "Isa 30:29",
                    "name": "Isaiah 30:29",
                    "scripture": "Ye shall have a song, as in the night when a holy solemnity is kept; and gladness of heart, as when one goeth with a pipe to come into the mountain of the Lord, to the mighty One of Israel."
                },
                "isa30.30": {
                    "id": 30,
                    "short": "Isa 30:30",
                    "name": "Isaiah 30:30",
                    "scripture": "And the Lord shall cause his glorious voice to be heard, and shall shew the lighting down of his arm, with the indignation of his anger, and with the flame of a devouring fire, with scattering, and tempest, and hailstones."
                },
                "isa30.31": {
                    "id": 31,
                    "short": "Isa 30:31",
                    "name": "Isaiah 30:31",
                    "scripture": "For through the voice of the Lord shall the Assyrian be beaten down, which smote with a rod."
                },
                "isa30.32": {
                    "id": 32,
                    "short": "Isa 30:32",
                    "name": "Isaiah 30:32",
                    "scripture": "And in every place where the grounded staff shall pass, which the Lord shall lay upon him, it shall be with tabrets and harps: and in battles of shaking will he fight with it."
                },
                "isa30.33": {
                    "id": 33,
                    "short": "Isa 30:33",
                    "name": "Isaiah 30:33",
                    "scripture": "For Tophet is ordained of old; yea, for the king it is prepared; he hath made it deep and large: the pile thereof is fire and much wood; the breath of the Lord, like a stream of brimstone, doth kindle it."
                }
            }
        },
        "isa31": {
            "id": 31,
            "short": "Isa 31",
            "name": "Isaiah 31",
            "verses": {
                "isa31.1": {
                    "id": 1,
                    "short": "Isa 31:1",
                    "name": "Isaiah 31:1",
                    "scripture": "Woe to them that go down to Egypt for help; and stay on horses, and trust in chariots, because they are many; and in horsemen, because they are very strong; but they look not unto the Holy One of Israel, neither seek the Lord !"
                },
                "isa31.2": {
                    "id": 2,
                    "short": "Isa 31:2",
                    "name": "Isaiah 31:2",
                    "scripture": "Yet he also is wise, and will bring evil, and will not call back his words: but will arise against the house of the evildoers, and against the help of them that work iniquity."
                },
                "isa31.3": {
                    "id": 3,
                    "short": "Isa 31:3",
                    "name": "Isaiah 31:3",
                    "scripture": "Now the Egyptians are men, and not God; and their horses flesh, and not spirit. When the Lord shall stretch out his hand, both he that helpeth shall fall, and he that is holpen shall fall down, and they all shall fail together."
                },
                "isa31.4": {
                    "id": 4,
                    "short": "Isa 31:4",
                    "name": "Isaiah 31:4",
                    "scripture": "For thus hath the Lord spoken unto me, Like as the lion and the young lion roaring on his prey, when a multitude of shepherds is called forth against him, he will not be afraid of their voice, nor abase himself for the noise of them: so shall the Lord of hosts come down to fight for mount Zion, and for the hill thereof."
                },
                "isa31.5": {
                    "id": 5,
                    "short": "Isa 31:5",
                    "name": "Isaiah 31:5",
                    "scripture": "As birds flying, so will the Lord of hosts defend Jerusalem; defending also he will deliver it; and passing over he will preserve it."
                },
                "isa31.6": {
                    "id": 6,
                    "short": "Isa 31:6",
                    "name": "Isaiah 31:6",
                    "scripture": "Turn ye unto him from whom the children of Israel have deeply revolted."
                },
                "isa31.7": {
                    "id": 7,
                    "short": "Isa 31:7",
                    "name": "Isaiah 31:7",
                    "scripture": "For in that day every man shall cast away his idols of silver, and his idols of gold, which your own hands have made unto you for a sin."
                },
                "isa31.8": {
                    "id": 8,
                    "short": "Isa 31:8",
                    "name": "Isaiah 31:8",
                    "scripture": "Then shall the Assyrian fall with the sword, not of a mighty man; and the sword, not of a mean man, shall devour him: but he shall flee from the sword, and his young men shall be discomfited."
                },
                "isa31.9": {
                    "id": 9,
                    "short": "Isa 31:9",
                    "name": "Isaiah 31:9",
                    "scripture": "And he shall pass over to his strong hold for fear, and his princes shall be afraid of the ensign, saith the Lord, whose fire is in Zion, and his furnace in Jerusalem."
                }
            }
        },
        "isa32": {
            "id": 32,
            "short": "Isa 32",
            "name": "Isaiah 32",
            "verses": {
                "isa32.1": {
                    "id": 1,
                    "short": "Isa 32:1",
                    "name": "Isaiah 32:1",
                    "scripture": "Behold, a king shall reign in righteousness, and princes shall rule in judgment."
                },
                "isa32.2": {
                    "id": 2,
                    "short": "Isa 32:2",
                    "name": "Isaiah 32:2",
                    "scripture": "And a man shall be as an hiding place from the wind, and a covert from the tempest; as rivers of water in a dry place, as the shadow of a great rock in a weary land."
                },
                "isa32.3": {
                    "id": 3,
                    "short": "Isa 32:3",
                    "name": "Isaiah 32:3",
                    "scripture": "And the eyes of them that see shall not be dim, and the ears of them that hear shall hearken."
                },
                "isa32.4": {
                    "id": 4,
                    "short": "Isa 32:4",
                    "name": "Isaiah 32:4",
                    "scripture": "The heart also of the rash shall understand knowledge, and the tongue of the stammerers shall be ready to speak plainly."
                },
                "isa32.5": {
                    "id": 5,
                    "short": "Isa 32:5",
                    "name": "Isaiah 32:5",
                    "scripture": "The vile person shall be no more called liberal, nor the churl said to be bountiful."
                },
                "isa32.6": {
                    "id": 6,
                    "short": "Isa 32:6",
                    "name": "Isaiah 32:6",
                    "scripture": "For the vile person will speak villany, and his heart will work iniquity, to practise hypocrisy, and to utter error against the Lord, to make empty the soul of the hungry, and he will cause the drink of the thirsty to fail."
                },
                "isa32.7": {
                    "id": 7,
                    "short": "Isa 32:7",
                    "name": "Isaiah 32:7",
                    "scripture": "The instruments also of the churl are evil: he deviseth wicked devices to destroy the poor with lying words, even when the needy speaketh right."
                },
                "isa32.8": {
                    "id": 8,
                    "short": "Isa 32:8",
                    "name": "Isaiah 32:8",
                    "scripture": "But the liberal deviseth liberal things; and by liberal things shall he stand."
                },
                "isa32.9": {
                    "id": 9,
                    "short": "Isa 32:9",
                    "name": "Isaiah 32:9",
                    "scripture": "Rise up, ye women that are at ease; hear my voice, ye careless daughters; give ear unto my speech."
                },
                "isa32.10": {
                    "id": 10,
                    "short": "Isa 32:10",
                    "name": "Isaiah 32:10",
                    "scripture": "Many days and years shall ye be troubled, ye careless women: for the vintage shall fail, the gathering shall not come."
                },
                "isa32.11": {
                    "id": 11,
                    "short": "Isa 32:11",
                    "name": "Isaiah 32:11",
                    "scripture": "Tremble, ye women that are at ease; be troubled, ye careless ones: strip you, and make you bare, and gird sackcloth upon your loins."
                },
                "isa32.12": {
                    "id": 12,
                    "short": "Isa 32:12",
                    "name": "Isaiah 32:12",
                    "scripture": "They shall lament for the teats, for the pleasant fields, for the fruitful vine."
                },
                "isa32.13": {
                    "id": 13,
                    "short": "Isa 32:13",
                    "name": "Isaiah 32:13",
                    "scripture": "Upon the land of my people shall come up thorns and briers; yea, upon all the houses of joy in the joyous city:"
                },
                "isa32.14": {
                    "id": 14,
                    "short": "Isa 32:14",
                    "name": "Isaiah 32:14",
                    "scripture": "Because the palaces shall be forsaken; the multitude of the city shall be left; the forts and towers shall be for dens for ever, a joy of wild asses, a pasture of flocks;"
                },
                "isa32.15": {
                    "id": 15,
                    "short": "Isa 32:15",
                    "name": "Isaiah 32:15",
                    "scripture": "Until the spirit be poured upon us from on high, and the wilderness be a fruitful field, and the fruitful field be counted for a forest."
                },
                "isa32.16": {
                    "id": 16,
                    "short": "Isa 32:16",
                    "name": "Isaiah 32:16",
                    "scripture": "Then judgment shall dwell in the wilderness, and righteousness remain in the fruitful field."
                },
                "isa32.17": {
                    "id": 17,
                    "short": "Isa 32:17",
                    "name": "Isaiah 32:17",
                    "scripture": "And the work of righteousness shall be peace; and the effect of righteousness quietness and assurance for ever."
                },
                "isa32.18": {
                    "id": 18,
                    "short": "Isa 32:18",
                    "name": "Isaiah 32:18",
                    "scripture": "And my people shall dwell in a peaceable habitation, and in sure dwellings, and in quiet resting places;"
                },
                "isa32.19": {
                    "id": 19,
                    "short": "Isa 32:19",
                    "name": "Isaiah 32:19",
                    "scripture": "When it shall hail, coming down on the forest; and the city shall be low in a low place."
                },
                "isa32.20": {
                    "id": 20,
                    "short": "Isa 32:20",
                    "name": "Isaiah 32:20",
                    "scripture": "Blessed are ye that sow beside all waters, that send forth thither the feet of the ox and the ass."
                }
            }
        },
        "isa33": {
            "id": 33,
            "short": "Isa 33",
            "name": "Isaiah 33",
            "verses": {
                "isa33.1": {
                    "id": 1,
                    "short": "Isa 33:1",
                    "name": "Isaiah 33:1",
                    "scripture": "Woe to thee that spoilest, and thou wast not spoiled; and dealest treacherously, and they dealt not treacherously with thee! when thou shalt cease to spoil, thou shalt be spoiled; and when thou shalt make an end to deal treacherously, they shall deal treacherously with thee."
                },
                "isa33.2": {
                    "id": 2,
                    "short": "Isa 33:2",
                    "name": "Isaiah 33:2",
                    "scripture": "O Lord, be gracious unto us; we have waited for thee: be thou their arm every morning, our salvation also in the time of trouble."
                },
                "isa33.3": {
                    "id": 3,
                    "short": "Isa 33:3",
                    "name": "Isaiah 33:3",
                    "scripture": "At the noise of the tumult the people fled; at the lifting up of thyself the nations were scattered."
                },
                "isa33.4": {
                    "id": 4,
                    "short": "Isa 33:4",
                    "name": "Isaiah 33:4",
                    "scripture": "And your spoil shall be gathered like the gathering of the caterpiller: as the running to and fro of locusts shall he run upon them."
                },
                "isa33.5": {
                    "id": 5,
                    "short": "Isa 33:5",
                    "name": "Isaiah 33:5",
                    "scripture": "The Lord is exalted; for he dwelleth on high: he hath filled Zion with judgment and righteousness."
                },
                "isa33.6": {
                    "id": 6,
                    "short": "Isa 33:6",
                    "name": "Isaiah 33:6",
                    "scripture": "And wisdom and knowledge shall be the stability of thy times, and strength of salvation: the fear of the Lord is his treasure."
                },
                "isa33.7": {
                    "id": 7,
                    "short": "Isa 33:7",
                    "name": "Isaiah 33:7",
                    "scripture": "Behold, their valiant ones shall cry without: the ambassadors of peace shall weep bitterly."
                },
                "isa33.8": {
                    "id": 8,
                    "short": "Isa 33:8",
                    "name": "Isaiah 33:8",
                    "scripture": "The highways lie waste, the wayfaring man ceaseth: he hath broken the covenant, he hath despised the cities, he regardeth no man."
                },
                "isa33.9": {
                    "id": 9,
                    "short": "Isa 33:9",
                    "name": "Isaiah 33:9",
                    "scripture": "The earth mourneth and languisheth: Lebanon is ashamed and hewn down: Sharon is like a wilderness; and Bashan and Carmel shake off their fruits."
                },
                "isa33.10": {
                    "id": 10,
                    "short": "Isa 33:10",
                    "name": "Isaiah 33:10",
                    "scripture": "Now will I rise, saith the Lord; now will I be exalted; now will I lift up myself."
                },
                "isa33.11": {
                    "id": 11,
                    "short": "Isa 33:11",
                    "name": "Isaiah 33:11",
                    "scripture": "Ye shall conceive chaff, ye shall bring forth stubble: your breath, as fire, shall devour you."
                },
                "isa33.12": {
                    "id": 12,
                    "short": "Isa 33:12",
                    "name": "Isaiah 33:12",
                    "scripture": "And the people shall be as the burnings of lime: as thorns cut up shall they be burned in the fire."
                },
                "isa33.13": {
                    "id": 13,
                    "short": "Isa 33:13",
                    "name": "Isaiah 33:13",
                    "scripture": "Hear, ye that are far off, what I have done; and, ye that are near, acknowledge my might."
                },
                "isa33.14": {
                    "id": 14,
                    "short": "Isa 33:14",
                    "name": "Isaiah 33:14",
                    "scripture": "The sinners in Zion are afraid; fearfulness hath surprised the hypocrites. Who among us shall dwell with the devouring fire? who among us shall dwell with everlasting burnings?"
                },
                "isa33.15": {
                    "id": 15,
                    "short": "Isa 33:15",
                    "name": "Isaiah 33:15",
                    "scripture": "He that walketh righteously, and speaketh uprightly; he that despiseth the gain of oppressions, that shaketh his hands from holding of bribes, that stoppeth his ears from hearing of blood, and shutteth his eyes from seeing evil;"
                },
                "isa33.16": {
                    "id": 16,
                    "short": "Isa 33:16",
                    "name": "Isaiah 33:16",
                    "scripture": "He shall dwell on high: his place of defence shall be the munitions of rocks: bread shall be given him; his waters shall be sure."
                },
                "isa33.17": {
                    "id": 17,
                    "short": "Isa 33:17",
                    "name": "Isaiah 33:17",
                    "scripture": "Thine eyes shall see the king in his beauty: they shall behold the land that is very far off."
                },
                "isa33.18": {
                    "id": 18,
                    "short": "Isa 33:18",
                    "name": "Isaiah 33:18",
                    "scripture": "Thine heart shall meditate terror. Where is the scribe? where is the receiver? where is he that counted the towers?"
                },
                "isa33.19": {
                    "id": 19,
                    "short": "Isa 33:19",
                    "name": "Isaiah 33:19",
                    "scripture": "Thou shalt not see a fierce people, a people of a deeper speech than thou canst perceive; of a stammering tongue, that thou canst not understand."
                },
                "isa33.20": {
                    "id": 20,
                    "short": "Isa 33:20",
                    "name": "Isaiah 33:20",
                    "scripture": "Look upon Zion, the city of our solemnities: thine eyes shall see Jerusalem a quiet habitation, a tabernacle that shall not be taken down; not one of the stakes thereof shall ever be removed, neither shall any of the cords thereof be broken."
                },
                "isa33.21": {
                    "id": 21,
                    "short": "Isa 33:21",
                    "name": "Isaiah 33:21",
                    "scripture": "But there the glorious Lord will be unto us a place of broad rivers and streams; wherein shall go no galley with oars, neither shall gallant ship pass thereby."
                },
                "isa33.22": {
                    "id": 22,
                    "short": "Isa 33:22",
                    "name": "Isaiah 33:22",
                    "scripture": "For the Lord is our judge, the Lord is our lawgiver, the Lord is our king; he will save us."
                },
                "isa33.23": {
                    "id": 23,
                    "short": "Isa 33:23",
                    "name": "Isaiah 33:23",
                    "scripture": "Thy tacklings are loosed; they could not well strengthen their mast, they could not spread the sail: then is the prey of a great spoil divided; the lame take the prey."
                },
                "isa33.24": {
                    "id": 24,
                    "short": "Isa 33:24",
                    "name": "Isaiah 33:24",
                    "scripture": "And the inhabitant shall not say, I am sick: the people that dwell therein shall be forgiven their iniquity."
                }
            }
        },
        "isa34": {
            "id": 34,
            "short": "Isa 34",
            "name": "Isaiah 34",
            "verses": {
                "isa34.1": {
                    "id": 1,
                    "short": "Isa 34:1",
                    "name": "Isaiah 34:1",
                    "scripture": "Come near, ye nations, to hear; and hearken, ye people: let the earth hear, and all that is therein; the world, and all things that come forth of it."
                },
                "isa34.2": {
                    "id": 2,
                    "short": "Isa 34:2",
                    "name": "Isaiah 34:2",
                    "scripture": "For the indignation of the Lord is upon all nations, and his fury upon all their armies: he hath utterly destroyed them, he hath delivered them to the slaughter."
                },
                "isa34.3": {
                    "id": 3,
                    "short": "Isa 34:3",
                    "name": "Isaiah 34:3",
                    "scripture": "Their slain also shall be cast out, and their stink shall come up out of their carcases, and the mountains shall be melted with their blood."
                },
                "isa34.4": {
                    "id": 4,
                    "short": "Isa 34:4",
                    "name": "Isaiah 34:4",
                    "scripture": "And all the host of heaven shall be dissolved, and the heavens shall be rolled together as a scroll: and all their host shall fall down, as the leaf falleth off from the vine, and as a falling fig from the fig tree."
                },
                "isa34.5": {
                    "id": 5,
                    "short": "Isa 34:5",
                    "name": "Isaiah 34:5",
                    "scripture": "For my sword shall be bathed in heaven: behold, it shall come down upon Edom, and upon the people of my curse, to judgment."
                },
                "isa34.6": {
                    "id": 6,
                    "short": "Isa 34:6",
                    "name": "Isaiah 34:6",
                    "scripture": "The sword of the Lord is filled with blood, it is made fat with fatness, and with the blood of lambs and goats, with the fat of the kidneys of rams: for the Lord hath a sacrifice in Bozrah, and a great slaughter in the land of Edom."
                },
                "isa34.7": {
                    "id": 7,
                    "short": "Isa 34:7",
                    "name": "Isaiah 34:7",
                    "scripture": "And the unicorns shall come down with them, and the bullocks with the bulls; and their land shall be soaked with blood, and their dust made fat with fatness."
                },
                "isa34.8": {
                    "id": 8,
                    "short": "Isa 34:8",
                    "name": "Isaiah 34:8",
                    "scripture": "For it is the day of the Lord's vengeance, and the year of recompences for the controversy of Zion."
                },
                "isa34.9": {
                    "id": 9,
                    "short": "Isa 34:9",
                    "name": "Isaiah 34:9",
                    "scripture": "And the streams thereof shall be turned into pitch, and the dust thereof into brimstone, and the land thereof shall become burning pitch."
                },
                "isa34.10": {
                    "id": 10,
                    "short": "Isa 34:10",
                    "name": "Isaiah 34:10",
                    "scripture": "It shall not be quenched night nor day; the smoke thereof shall go up for ever: from generation to generation it shall lie waste; none shall pass through it for ever and ever."
                },
                "isa34.11": {
                    "id": 11,
                    "short": "Isa 34:11",
                    "name": "Isaiah 34:11",
                    "scripture": "But the cormorant and the bittern shall possess it; the owl also and the raven shall dwell in it: and he shall stretch out upon it the line of confusion, and the stones of emptiness."
                },
                "isa34.12": {
                    "id": 12,
                    "short": "Isa 34:12",
                    "name": "Isaiah 34:12",
                    "scripture": "They shall call the nobles thereof to the kingdom, but none shall be there, and all her princes shall be nothing."
                },
                "isa34.13": {
                    "id": 13,
                    "short": "Isa 34:13",
                    "name": "Isaiah 34:13",
                    "scripture": "And thorns shall come up in her palaces, nettles and brambles in the fortresses thereof: and it shall be an habitation of dragons, and a court for owls."
                },
                "isa34.14": {
                    "id": 14,
                    "short": "Isa 34:14",
                    "name": "Isaiah 34:14",
                    "scripture": "The wild beasts of the desert shall also meet with the wild beasts of the island, and the satyr shall cry to his fellow; the screech owl also shall rest there, and find for herself a place of rest."
                },
                "isa34.15": {
                    "id": 15,
                    "short": "Isa 34:15",
                    "name": "Isaiah 34:15",
                    "scripture": "There shall the great owl make her nest, and lay, and hatch, and gather under her shadow: there shall the vultures also be gathered, every one with her mate."
                },
                "isa34.16": {
                    "id": 16,
                    "short": "Isa 34:16",
                    "name": "Isaiah 34:16",
                    "scripture": "Seek ye out of the book of the Lord, and read: no one of these shall fail, none shall want her mate: for my mouth it hath commanded, and his spirit it hath gathered them."
                },
                "isa34.17": {
                    "id": 17,
                    "short": "Isa 34:17",
                    "name": "Isaiah 34:17",
                    "scripture": "And he hath cast the lot for them, and his hand hath divided it unto them by line: they shall possess it for ever, from generation to generation shall they dwell therein."
                }
            }
        },
        "isa35": {
            "id": 35,
            "short": "Isa 35",
            "name": "Isaiah 35",
            "verses": {
                "isa35.1": {
                    "id": 1,
                    "short": "Isa 35:1",
                    "name": "Isaiah 35:1",
                    "scripture": "The wilderness and the solitary place shall be glad for them; and the desert shall rejoice, and blossom as the rose."
                },
                "isa35.2": {
                    "id": 2,
                    "short": "Isa 35:2",
                    "name": "Isaiah 35:2",
                    "scripture": "It shall blossom abundantly, and rejoice even with joy and singing: the glory of Lebanon shall be given unto it, the excellency of Carmel and Sharon, they shall see the glory of the Lord, and the excellency of our God."
                },
                "isa35.3": {
                    "id": 3,
                    "short": "Isa 35:3",
                    "name": "Isaiah 35:3",
                    "scripture": "Strengthen ye the weak hands, and confirm the feeble knees."
                },
                "isa35.4": {
                    "id": 4,
                    "short": "Isa 35:4",
                    "name": "Isaiah 35:4",
                    "scripture": "Say to them that are of a fearful heart, Be strong, fear not: behold, your God will come with vengeance, even God with a recompence; he will come and save you."
                },
                "isa35.5": {
                    "id": 5,
                    "short": "Isa 35:5",
                    "name": "Isaiah 35:5",
                    "scripture": "Then the eyes of the blind shall be opened, and the ears of the deaf shall be unstopped."
                },
                "isa35.6": {
                    "id": 6,
                    "short": "Isa 35:6",
                    "name": "Isaiah 35:6",
                    "scripture": "Then shall the lame man leap as an hart, and the tongue of the dumb sing: for in the wilderness shall waters break out, and streams in the desert."
                },
                "isa35.7": {
                    "id": 7,
                    "short": "Isa 35:7",
                    "name": "Isaiah 35:7",
                    "scripture": "And the parched ground shall become a pool, and the thirsty land springs of water: in the habitation of dragons, where each lay, shall be grass with reeds and rushes."
                },
                "isa35.8": {
                    "id": 8,
                    "short": "Isa 35:8",
                    "name": "Isaiah 35:8",
                    "scripture": "And an highway shall be there, and a way, and it shall be called The way of holiness; the unclean shall not pass over it; but it shall be for those: the wayfaring men, though fools, shall not err therein."
                },
                "isa35.9": {
                    "id": 9,
                    "short": "Isa 35:9",
                    "name": "Isaiah 35:9",
                    "scripture": "No lion shall be there, nor any ravenous beast shall go up thereon, it shall not be found there; but the redeemed shall walk there:"
                },
                "isa35.10": {
                    "id": 10,
                    "short": "Isa 35:10",
                    "name": "Isaiah 35:10",
                    "scripture": "And the ransomed of the Lord shall return, and come to Zion with songs and everlasting joy upon their heads: they shall obtain joy and gladness, and sorrow and sighing shall flee away."
                }
            }
        },
        "isa36": {
            "id": 36,
            "short": "Isa 36",
            "name": "Isaiah 36",
            "verses": {
                "isa36.1": {
                    "id": 1,
                    "short": "Isa 36:1",
                    "name": "Isaiah 36:1",
                    "scripture": "Now it came to pass in the fourteenth year of king Hezekiah, that Sennacherib king of Assyria came up against all the defenced cities of Judah, and took them."
                },
                "isa36.2": {
                    "id": 2,
                    "short": "Isa 36:2",
                    "name": "Isaiah 36:2",
                    "scripture": "And the king of Assyria sent Rabshakeh from Lachish to Jerusalem unto king Hezekiah with a great army. And he stood by the conduit of the upper pool in the highway of the fuller's field."
                },
                "isa36.3": {
                    "id": 3,
                    "short": "Isa 36:3",
                    "name": "Isaiah 36:3",
                    "scripture": "Then came forth unto him Eliakim, Hilkiah's son, which was over the house, and Shebna the scribe, and Joah, Asaph's son, the recorder."
                },
                "isa36.4": {
                    "id": 4,
                    "short": "Isa 36:4",
                    "name": "Isaiah 36:4",
                    "scripture": "And Rabshakeh said unto them, Say ye now to Hezekiah, Thus saith the great king, the king of Assyria, What confidence is this wherein thou trustest?"
                },
                "isa36.5": {
                    "id": 5,
                    "short": "Isa 36:5",
                    "name": "Isaiah 36:5",
                    "scripture": "I say, sayest thou, (but they are but vain words) I have counsel and strength for war: now on whom dost thou trust, that thou rebellest against me?"
                },
                "isa36.6": {
                    "id": 6,
                    "short": "Isa 36:6",
                    "name": "Isaiah 36:6",
                    "scripture": "Lo, thou trustest in the staff of this broken reed, on Egypt; whereon if a man lean, it will go into his hand, and pierce it: so is Pharaoh king of Egypt to all that trust in him."
                },
                "isa36.7": {
                    "id": 7,
                    "short": "Isa 36:7",
                    "name": "Isaiah 36:7",
                    "scripture": "But if thou say to me, We trust in the Lord our God: is it not he, whose high places and whose altars Hezekiah hath taken away, and said to Judah and to Jerusalem, Ye shall worship before this altar?"
                },
                "isa36.8": {
                    "id": 8,
                    "short": "Isa 36:8",
                    "name": "Isaiah 36:8",
                    "scripture": "Now therefore give pledges, I pray thee, to my master the king of Assyria, and I will give thee two thousand horses, if thou be able on thy part to set riders upon them."
                },
                "isa36.9": {
                    "id": 9,
                    "short": "Isa 36:9",
                    "name": "Isaiah 36:9",
                    "scripture": "How then wilt thou turn away the face of one captain of the least of my master's servants, and put thy trust on Egypt for chariots and for horsemen?"
                },
                "isa36.10": {
                    "id": 10,
                    "short": "Isa 36:10",
                    "name": "Isaiah 36:10",
                    "scripture": "And am I now come up without the Lord against this land to destroy it? the Lord said unto me, Go up against this land, and destroy it."
                },
                "isa36.11": {
                    "id": 11,
                    "short": "Isa 36:11",
                    "name": "Isaiah 36:11",
                    "scripture": "Then said Eliakim and Shebna and Joah unto Rabshakeh, Speak, I pray thee, unto thy servants in the Syrian language; for we understand it: and speak not to us in the Jews' language, in the ears of the people that are on the wall."
                },
                "isa36.12": {
                    "id": 12,
                    "short": "Isa 36:12",
                    "name": "Isaiah 36:12",
                    "scripture": "But Rabshakeh said, Hath my master sent me to thy master and to thee to speak these words? hath he not sent me to the men that sit upon the wall, that they may eat their own dung, and drink their own piss with you?"
                },
                "isa36.13": {
                    "id": 13,
                    "short": "Isa 36:13",
                    "name": "Isaiah 36:13",
                    "scripture": "Then Rabshakeh stood, and cried with a loud voice in the Jews' language, and said, Hear ye the words of the great king, the king of Assyria."
                },
                "isa36.14": {
                    "id": 14,
                    "short": "Isa 36:14",
                    "name": "Isaiah 36:14",
                    "scripture": "Thus saith the king, Let not Hezekiah deceive you: for he shall not be able to deliver you."
                },
                "isa36.15": {
                    "id": 15,
                    "short": "Isa 36:15",
                    "name": "Isaiah 36:15",
                    "scripture": "Neither let Hezekiah make you trust in the Lord, saying, The Lord will surely deliver us: this city shall not be delivered into the hand of the king of Assyria."
                },
                "isa36.16": {
                    "id": 16,
                    "short": "Isa 36:16",
                    "name": "Isaiah 36:16",
                    "scripture": "Hearken not to Hezekiah: for thus saith the king of Assyria, Make an agreement with me by a present, and come out to me: and eat ye every one of his vine, and every one of his fig tree, and drink ye every one the waters of his own cistern;"
                },
                "isa36.17": {
                    "id": 17,
                    "short": "Isa 36:17",
                    "name": "Isaiah 36:17",
                    "scripture": "Until I come and take you away to a land like your own land, a land of corn and wine, a land of bread and vineyards."
                },
                "isa36.18": {
                    "id": 18,
                    "short": "Isa 36:18",
                    "name": "Isaiah 36:18",
                    "scripture": "Beware lest Hezekiah persuade you, saying, The Lord will deliver us. Hath any of the gods of the nations delivered his land out of the hand of the king of Assyria?"
                },
                "isa36.19": {
                    "id": 19,
                    "short": "Isa 36:19",
                    "name": "Isaiah 36:19",
                    "scripture": "Where are the gods of Hamath and Arpad? where are the gods of Sepharvaim? and have they delivered Samaria out of my hand?"
                },
                "isa36.20": {
                    "id": 20,
                    "short": "Isa 36:20",
                    "name": "Isaiah 36:20",
                    "scripture": "Who are they among all the gods of these lands, that have delivered their land out of my hand, that the Lord should deliver Jerusalem out of my hand?"
                },
                "isa36.21": {
                    "id": 21,
                    "short": "Isa 36:21",
                    "name": "Isaiah 36:21",
                    "scripture": "But they held their peace, and answered him not a word: for the king's commandment was, saying, Answer him not."
                },
                "isa36.22": {
                    "id": 22,
                    "short": "Isa 36:22",
                    "name": "Isaiah 36:22",
                    "scripture": "Then came Eliakim, the son of Hilkiah, that was over the household, and Shebna the scribe, and Joah, the son of Asaph, the recorder, to Hezekiah with their clothes rent, and told him the words of Rabshakeh."
                }
            }
        },
        "isa37": {
            "id": 37,
            "short": "Isa 37",
            "name": "Isaiah 37",
            "verses": {
                "isa37.1": {
                    "id": 1,
                    "short": "Isa 37:1",
                    "name": "Isaiah 37:1",
                    "scripture": "And it came to pass, when king Hezekiah heard it, that he rent his clothes, and covered himself with sackcloth, and went into the house of the Lord ."
                },
                "isa37.2": {
                    "id": 2,
                    "short": "Isa 37:2",
                    "name": "Isaiah 37:2",
                    "scripture": "And he sent Eliakim, who was over the household, and Shebna the scribe, and the elders of the priests covered with sackcloth, unto Isaiah the prophet the son of Amoz."
                },
                "isa37.3": {
                    "id": 3,
                    "short": "Isa 37:3",
                    "name": "Isaiah 37:3",
                    "scripture": "And they said unto him, Thus saith Hezekiah, This day is a day of trouble, and of rebuke, and of blasphemy: for the children are come to the birth, and there is not strength to bring forth."
                },
                "isa37.4": {
                    "id": 4,
                    "short": "Isa 37:4",
                    "name": "Isaiah 37:4",
                    "scripture": "It may be the Lord thy God will hear the words of Rabshakeh, whom the king of Assyria his master hath sent to reproach the living God, and will reprove the words which the Lord thy God hath heard: wherefore lift up thy prayer for the remnant that is left."
                },
                "isa37.5": {
                    "id": 5,
                    "short": "Isa 37:5",
                    "name": "Isaiah 37:5",
                    "scripture": "So the servants of king Hezekiah came to Isaiah."
                },
                "isa37.6": {
                    "id": 6,
                    "short": "Isa 37:6",
                    "name": "Isaiah 37:6",
                    "scripture": "And Isaiah said unto them, Thus shall ye say unto your master, Thus saith the Lord, Be not afraid of the words that thou hast heard, wherewith the servants of the king of Assyria have blasphemed me."
                },
                "isa37.7": {
                    "id": 7,
                    "short": "Isa 37:7",
                    "name": "Isaiah 37:7",
                    "scripture": "Behold, I will send a blast upon him, and he shall hear a rumour, and return to his own land; and I will cause him to fall by the sword in his own land."
                },
                "isa37.8": {
                    "id": 8,
                    "short": "Isa 37:8",
                    "name": "Isaiah 37:8",
                    "scripture": "So Rabshakeh returned, and found the king of Assyria warring against Libnah: for he had heard that he was departed from Lachish."
                },
                "isa37.9": {
                    "id": 9,
                    "short": "Isa 37:9",
                    "name": "Isaiah 37:9",
                    "scripture": "And he heard say concerning Tirhakah king of Ethiopia, He is come forth to make war with thee. And when he heard it, he sent messengers to Hezekiah, saying,"
                },
                "isa37.10": {
                    "id": 10,
                    "short": "Isa 37:10",
                    "name": "Isaiah 37:10",
                    "scripture": "Thus shall ye speak to Hezekiah king of Judah, saying, Let not thy God, in whom thou trustest, deceive thee, saying, Jerusalem shall not be given into the hand of the king of Assyria."
                },
                "isa37.11": {
                    "id": 11,
                    "short": "Isa 37:11",
                    "name": "Isaiah 37:11",
                    "scripture": "Behold, thou hast heard what the kings of Assyria have done to all lands by destroying them utterly; and shalt thou be delivered?"
                },
                "isa37.12": {
                    "id": 12,
                    "short": "Isa 37:12",
                    "name": "Isaiah 37:12",
                    "scripture": "Have the gods of the nations delivered them which my fathers have destroyed, as Gozan, and Haran, and Rezeph, and the children of Eden which were in Telassar?"
                },
                "isa37.13": {
                    "id": 13,
                    "short": "Isa 37:13",
                    "name": "Isaiah 37:13",
                    "scripture": "Where is the king of Hamath, and the king of Arpad, and the king of the city of Sepharvaim, Hena, and Ivah?"
                },
                "isa37.14": {
                    "id": 14,
                    "short": "Isa 37:14",
                    "name": "Isaiah 37:14",
                    "scripture": "And Hezekiah received the letter from the hand of the messengers, and read it: and Hezekiah went up unto the house of the Lord, and spread it before the Lord ."
                },
                "isa37.15": {
                    "id": 15,
                    "short": "Isa 37:15",
                    "name": "Isaiah 37:15",
                    "scripture": "And Hezekiah prayed unto the Lord, saying,"
                },
                "isa37.16": {
                    "id": 16,
                    "short": "Isa 37:16",
                    "name": "Isaiah 37:16",
                    "scripture": "O Lord of hosts, God of Israel, that dwellest between the cherubims, thou art the God, even thou alone, of all the kingdoms of the earth: thou hast made heaven and earth."
                },
                "isa37.17": {
                    "id": 17,
                    "short": "Isa 37:17",
                    "name": "Isaiah 37:17",
                    "scripture": "Incline thine ear, O Lord, and hear; open thine eyes, O Lord, and see: and hear all the words of Sennacherib, which hath sent to reproach the living God."
                },
                "isa37.18": {
                    "id": 18,
                    "short": "Isa 37:18",
                    "name": "Isaiah 37:18",
                    "scripture": "Of a truth, Lord, the kings of Assyria have laid waste all the nations, and their countries,"
                },
                "isa37.19": {
                    "id": 19,
                    "short": "Isa 37:19",
                    "name": "Isaiah 37:19",
                    "scripture": "And have cast their gods into the fire: for they were no gods, but the work of men's hands, wood and stone: therefore they have destroyed them."
                },
                "isa37.20": {
                    "id": 20,
                    "short": "Isa 37:20",
                    "name": "Isaiah 37:20",
                    "scripture": "Now therefore, O Lord our God, save us from his hand, that all the kingdoms of the earth may know that thou art the Lord, even thou only."
                },
                "isa37.21": {
                    "id": 21,
                    "short": "Isa 37:21",
                    "name": "Isaiah 37:21",
                    "scripture": "Then Isaiah the son of Amoz sent unto Hezekiah, saying, Thus saith the Lord God of Israel, Whereas thou hast prayed to me against Sennacherib king of Assyria:"
                },
                "isa37.22": {
                    "id": 22,
                    "short": "Isa 37:22",
                    "name": "Isaiah 37:22",
                    "scripture": "This is the word which the Lord hath spoken concerning him; The virgin, the daughter of Zion, hath despised thee, and laughed thee to scorn; the daughter of Jerusalem hath shaken her head at thee."
                },
                "isa37.23": {
                    "id": 23,
                    "short": "Isa 37:23",
                    "name": "Isaiah 37:23",
                    "scripture": "Whom hast thou reproached and blasphemed? and against whom hast thou exalted thy voice, and lifted up thine eyes on high? even against the Holy One of Israel."
                },
                "isa37.24": {
                    "id": 24,
                    "short": "Isa 37:24",
                    "name": "Isaiah 37:24",
                    "scripture": "By thy servants hast thou reproached the Lord, and hast said, By the multitude of my chariots am I come up to the height of the mountains, to the sides of Lebanon; and I will cut down the tall cedars thereof, and the choice fir trees thereof: and I will enter into the height of his border, and the forest of his Carmel."
                },
                "isa37.25": {
                    "id": 25,
                    "short": "Isa 37:25",
                    "name": "Isaiah 37:25",
                    "scripture": "I have digged, and drunk water; and with the sole of my feet have I dried up all the rivers of the besieged places."
                },
                "isa37.26": {
                    "id": 26,
                    "short": "Isa 37:26",
                    "name": "Isaiah 37:26",
                    "scripture": "Hast thou not heard long ago, how I have done it; and of ancient times, that I have formed it? now have I brought it to pass, that thou shouldest be to lay waste defenced cities into ruinous heaps."
                },
                "isa37.27": {
                    "id": 27,
                    "short": "Isa 37:27",
                    "name": "Isaiah 37:27",
                    "scripture": "Therefore their inhabitants were of small power, they were dismayed and confounded: they were as the grass of the field, and as the green herb, as the grass on the housetops, and as corn blasted before it be grown up."
                },
                "isa37.28": {
                    "id": 28,
                    "short": "Isa 37:28",
                    "name": "Isaiah 37:28",
                    "scripture": "But I know thy abode, and thy going out, and thy coming in, and thy rage against me."
                },
                "isa37.29": {
                    "id": 29,
                    "short": "Isa 37:29",
                    "name": "Isaiah 37:29",
                    "scripture": "Because thy rage against me, and thy tumult, is come up into mine ears, therefore will I put my hook in thy nose, and my bridle in thy lips, and I will turn thee back by the way by which thou camest."
                },
                "isa37.30": {
                    "id": 30,
                    "short": "Isa 37:30",
                    "name": "Isaiah 37:30",
                    "scripture": "And this shall be a sign unto thee, Ye shall eat this year such as groweth of itself; and the second year that which springeth of the same: and in the third year sow ye, and reap, and plant vineyards, and eat the fruit thereof."
                },
                "isa37.31": {
                    "id": 31,
                    "short": "Isa 37:31",
                    "name": "Isaiah 37:31",
                    "scripture": "And the remnant that is escaped of the house of Judah shall again take root downward, and bear fruit upward:"
                },
                "isa37.32": {
                    "id": 32,
                    "short": "Isa 37:32",
                    "name": "Isaiah 37:32",
                    "scripture": "For out of Jerusalem shall go forth a remnant, and they that escape out of mount Zion: the zeal of the Lord of hosts shall do this."
                },
                "isa37.33": {
                    "id": 33,
                    "short": "Isa 37:33",
                    "name": "Isaiah 37:33",
                    "scripture": "Therefore thus saith the Lord concerning the king of Assyria, He shall not come into this city, nor shoot an arrow there, nor come before it with shields, nor cast a bank against it."
                },
                "isa37.34": {
                    "id": 34,
                    "short": "Isa 37:34",
                    "name": "Isaiah 37:34",
                    "scripture": "By the way that he came, by the same shall he return, and shall not come into this city, saith the Lord ."
                },
                "isa37.35": {
                    "id": 35,
                    "short": "Isa 37:35",
                    "name": "Isaiah 37:35",
                    "scripture": "For I will defend this city to save it for mine own sake, and for my servant David's sake."
                },
                "isa37.36": {
                    "id": 36,
                    "short": "Isa 37:36",
                    "name": "Isaiah 37:36",
                    "scripture": "Then the angel of the Lord went forth, and smote in the camp of the Assyrians a hundred and fourscore and five thousand: and when they arose early in the morning, behold, they were all dead corpses."
                },
                "isa37.37": {
                    "id": 37,
                    "short": "Isa 37:37",
                    "name": "Isaiah 37:37",
                    "scripture": "So Sennacherib king of Assyria departed, and went and returned, and dwelt at Nineveh."
                },
                "isa37.38": {
                    "id": 38,
                    "short": "Isa 37:38",
                    "name": "Isaiah 37:38",
                    "scripture": "And it came to pass, as he was worshipping in the house of Nisroch his god, that Adrammelech and Sharezer his sons smote him with the sword; and they escaped into the land of Armenia: and Esarâ€“haddon his son reigned in his stead."
                }
            }
        },
        "isa38": {
            "id": 38,
            "short": "Isa 38",
            "name": "Isaiah 38",
            "verses": {
                "isa38.1": {
                    "id": 1,
                    "short": "Isa 38:1",
                    "name": "Isaiah 38:1",
                    "scripture": "In those days was Hezekiah sick unto death. And Isaiah the prophet the son of Amoz came unto him, and said unto him, Thus saith the Lord, Set thine house in order: for thou shalt die, and not live."
                },
                "isa38.2": {
                    "id": 2,
                    "short": "Isa 38:2",
                    "name": "Isaiah 38:2",
                    "scripture": "Then Hezekiah turned his face toward the wall, and prayed unto the Lord,"
                },
                "isa38.3": {
                    "id": 3,
                    "short": "Isa 38:3",
                    "name": "Isaiah 38:3",
                    "scripture": "And said, Remember now, O Lord, I beseech thee, how I have walked before thee in truth and with a perfect heart, and have done that which is good in thy sight. And Hezekiah wept sore."
                },
                "isa38.4": {
                    "id": 4,
                    "short": "Isa 38:4",
                    "name": "Isaiah 38:4",
                    "scripture": "Then came the word of the Lord to Isaiah, saying,"
                },
                "isa38.5": {
                    "id": 5,
                    "short": "Isa 38:5",
                    "name": "Isaiah 38:5",
                    "scripture": "Go, and say to Hezekiah, Thus saith the Lord, the God of David thy father, I have heard thy prayer, I have seen thy tears: behold, I will add unto thy days fifteen years."
                },
                "isa38.6": {
                    "id": 6,
                    "short": "Isa 38:6",
                    "name": "Isaiah 38:6",
                    "scripture": "And I will deliver thee and this city out of the hand of the king of Assyria: and I will defend this city."
                },
                "isa38.7": {
                    "id": 7,
                    "short": "Isa 38:7",
                    "name": "Isaiah 38:7",
                    "scripture": "And this shall be a sign unto thee from the Lord, that the Lord will do this thing that he hath spoken;"
                },
                "isa38.8": {
                    "id": 8,
                    "short": "Isa 38:8",
                    "name": "Isaiah 38:8",
                    "scripture": "Behold, I will bring again the shadow of the degrees, which is gone down in the sun dial of Ahaz, ten degrees backward. So the sun returned ten degrees, by which degrees it was gone down."
                },
                "isa38.9": {
                    "id": 9,
                    "short": "Isa 38:9",
                    "name": "Isaiah 38:9",
                    "scripture": "The writing of Hezekiah king of Judah, when he had been sick, and was recovered of his sickness:"
                },
                "isa38.10": {
                    "id": 10,
                    "short": "Isa 38:10",
                    "name": "Isaiah 38:10",
                    "scripture": "I said in the cutting off of my days, I shall go to the gates of the grave: I am deprived of the residue of my years."
                },
                "isa38.11": {
                    "id": 11,
                    "short": "Isa 38:11",
                    "name": "Isaiah 38:11",
                    "scripture": "I said, I shall not see the Lord, even the Lord, in the land of the living: I shall behold man no more with the inhabitants of the world."
                },
                "isa38.12": {
                    "id": 12,
                    "short": "Isa 38:12",
                    "name": "Isaiah 38:12",
                    "scripture": "Mine age is departed, and is removed from me as a shepherd's tent: I have cut off like a weaver my life: he will cut me off with pining sickness: from day even to night wilt thou make an end of me."
                },
                "isa38.13": {
                    "id": 13,
                    "short": "Isa 38:13",
                    "name": "Isaiah 38:13",
                    "scripture": "I reckoned till morning, that, as a lion, so will he break all my bones: from day even to night wilt thou make an end of me."
                },
                "isa38.14": {
                    "id": 14,
                    "short": "Isa 38:14",
                    "name": "Isaiah 38:14",
                    "scripture": "Like a crane or a swallow, so did I chatter: I did mourn as a dove: mine eyes fail with looking upward: O Lord, I am oppressed; undertake for me."
                },
                "isa38.15": {
                    "id": 15,
                    "short": "Isa 38:15",
                    "name": "Isaiah 38:15",
                    "scripture": "What shall I say? he hath both spoken unto me, and himself hath done it: I shall go softly all my years in the bitterness of my soul."
                },
                "isa38.16": {
                    "id": 16,
                    "short": "Isa 38:16",
                    "name": "Isaiah 38:16",
                    "scripture": "O Lord, by these things men live, and in all these things is the life of my spirit: so wilt thou recover me, and make me to live."
                },
                "isa38.17": {
                    "id": 17,
                    "short": "Isa 38:17",
                    "name": "Isaiah 38:17",
                    "scripture": "Behold, for peace I had great bitterness: but thou hast in love to my soul delivered it from the pit of corruption: for thou hast cast all my sins behind thy back."
                },
                "isa38.18": {
                    "id": 18,
                    "short": "Isa 38:18",
                    "name": "Isaiah 38:18",
                    "scripture": "For the grave cannot praise thee, death can not celebrate thee: they that go down into the pit cannot hope for thy truth."
                },
                "isa38.19": {
                    "id": 19,
                    "short": "Isa 38:19",
                    "name": "Isaiah 38:19",
                    "scripture": "The living, the living, he shall praise thee, as I do this day: the father to the children shall make known thy truth."
                },
                "isa38.20": {
                    "id": 20,
                    "short": "Isa 38:20",
                    "name": "Isaiah 38:20",
                    "scripture": "The Lord was ready to save me: therefore we will sing my songs to the stringed instruments all the days of our life in the house of the Lord ."
                },
                "isa38.21": {
                    "id": 21,
                    "short": "Isa 38:21",
                    "name": "Isaiah 38:21",
                    "scripture": "For Isaiah had said, Let them take a lump of figs, and lay it for a plaster upon the boil, and he shall recover."
                },
                "isa38.22": {
                    "id": 22,
                    "short": "Isa 38:22",
                    "name": "Isaiah 38:22",
                    "scripture": "Hezekiah also had said, What is the sign that I shall go up to the house of the Lord ?"
                }
            }
        },
        "isa39": {
            "id": 39,
            "short": "Isa 39",
            "name": "Isaiah 39",
            "verses": {
                "isa39.1": {
                    "id": 1,
                    "short": "Isa 39:1",
                    "name": "Isaiah 39:1",
                    "scripture": "At that time Merodachâ€“baladan, the son of Baladan, king of Babylon, sent letters and a present to Hezekiah: for he had heard that he had been sick, and was recovered."
                },
                "isa39.2": {
                    "id": 2,
                    "short": "Isa 39:2",
                    "name": "Isaiah 39:2",
                    "scripture": "And Hezekiah was glad of them, and shewed them the house of his precious things, the silver, and the gold, and the spices, and the precious ointment, and all the house of his armour, and all that was found in his treasures: there was nothing in his house, nor in all his dominion, that Hezekiah shewed them not."
                },
                "isa39.3": {
                    "id": 3,
                    "short": "Isa 39:3",
                    "name": "Isaiah 39:3",
                    "scripture": "Then came Isaiah the prophet unto king Hezekiah, and said unto him, What said these men? and from whence came they unto thee? And Hezekiah said, They are come from a far country unto me, even from Babylon."
                },
                "isa39.4": {
                    "id": 4,
                    "short": "Isa 39:4",
                    "name": "Isaiah 39:4",
                    "scripture": "Then said he, What have they seen in thine house? And Hezekiah answered, All that is in mine house have they seen: there is nothing among my treasures that I have not shewed them."
                },
                "isa39.5": {
                    "id": 5,
                    "short": "Isa 39:5",
                    "name": "Isaiah 39:5",
                    "scripture": "Then said Isaiah to Hezekiah, Hear the word of the Lord of hosts:"
                },
                "isa39.6": {
                    "id": 6,
                    "short": "Isa 39:6",
                    "name": "Isaiah 39:6",
                    "scripture": "Behold, the days come, that all that is in thine house, and that which thy fathers have laid up in store until this day, shall be carried to Babylon: nothing shall be left, saith the Lord ."
                },
                "isa39.7": {
                    "id": 7,
                    "short": "Isa 39:7",
                    "name": "Isaiah 39:7",
                    "scripture": "And of thy sons that shall issue from thee, which thou shalt beget, shall they take away; and they shall be eunuchs in the palace of the king of Babylon."
                },
                "isa39.8": {
                    "id": 8,
                    "short": "Isa 39:8",
                    "name": "Isaiah 39:8",
                    "scripture": "Then said Hezekiah to Isaiah, Good is the word of the Lord which thou hast spoken. He said moreover, For there shall be peace and truth in my days."
                }
            }
        },
        "isa40": {
            "id": 40,
            "short": "Isa 40",
            "name": "Isaiah 40",
            "verses": {
                "isa40.1": {
                    "id": 1,
                    "short": "Isa 40:1",
                    "name": "Isaiah 40:1",
                    "scripture": "Comfort ye, comfort ye my people, saith your God."
                },
                "isa40.2": {
                    "id": 2,
                    "short": "Isa 40:2",
                    "name": "Isaiah 40:2",
                    "scripture": "Speak ye comfortably to Jerusalem, and cry unto her, that her warfare is accomplished, that her iniquity is pardoned: for she hath received of the Lord's hand double for all her sins."
                },
                "isa40.3": {
                    "id": 3,
                    "short": "Isa 40:3",
                    "name": "Isaiah 40:3",
                    "scripture": "The voice of him that crieth in the wilderness, Prepare ye the way of the Lord, make straight in the desert a highway for our God."
                },
                "isa40.4": {
                    "id": 4,
                    "short": "Isa 40:4",
                    "name": "Isaiah 40:4",
                    "scripture": "Every valley shall be exalted, and every mountain and hill shall be made low: and the crooked shall be made straight, and the rough places plain:"
                },
                "isa40.5": {
                    "id": 5,
                    "short": "Isa 40:5",
                    "name": "Isaiah 40:5",
                    "scripture": "And the glory of the Lord shall be revealed, and all flesh shall see it together: for the mouth of the Lord hath spoken it."
                },
                "isa40.6": {
                    "id": 6,
                    "short": "Isa 40:6",
                    "name": "Isaiah 40:6",
                    "scripture": "The voice said, Cry. And he said, What shall I cry? All flesh is grass, and all the goodliness thereof is as the flower of the field:"
                },
                "isa40.7": {
                    "id": 7,
                    "short": "Isa 40:7",
                    "name": "Isaiah 40:7",
                    "scripture": "The grass withereth, the flower fadeth: because the spirit of the Lord bloweth upon it: surely the people is grass."
                },
                "isa40.8": {
                    "id": 8,
                    "short": "Isa 40:8",
                    "name": "Isaiah 40:8",
                    "scripture": "The grass withereth, the flower fadeth: but the word of our God shall stand for ever."
                },
                "isa40.9": {
                    "id": 9,
                    "short": "Isa 40:9",
                    "name": "Isaiah 40:9",
                    "scripture": "O Zion, that bringest good tidings, get thee up into the high mountain; O Jerusalem, that bringest good tidings, lift up thy voice with strength; lift it up, be not afraid; say unto the cities of Judah, Behold your God!"
                },
                "isa40.10": {
                    "id": 10,
                    "short": "Isa 40:10",
                    "name": "Isaiah 40:10",
                    "scripture": "Behold, the Lord God will come with strong hand, and his arm shall rule for him: behold, his reward is with him, and his work before him."
                },
                "isa40.11": {
                    "id": 11,
                    "short": "Isa 40:11",
                    "name": "Isaiah 40:11",
                    "scripture": "He shall feed his flock like a shepherd: he shall gather the lambs with his arm, and carry them in his bosom, and shall gently lead those that are with young."
                },
                "isa40.12": {
                    "id": 12,
                    "short": "Isa 40:12",
                    "name": "Isaiah 40:12",
                    "scripture": "Who hath measured the waters in the hollow of his hand, and meted out heaven with the span, and comprehended the dust of the earth in a measure, and weighed the mountains in scales, and the hills in a balance?"
                },
                "isa40.13": {
                    "id": 13,
                    "short": "Isa 40:13",
                    "name": "Isaiah 40:13",
                    "scripture": "Who hath directed the Spirit of the Lord, or being his counsellor hath taught him?"
                },
                "isa40.14": {
                    "id": 14,
                    "short": "Isa 40:14",
                    "name": "Isaiah 40:14",
                    "scripture": "With whom took he counsel, and who instructed him, and taught him in the path of judgment, and taught him knowledge, and shewed to him the way of understanding?"
                },
                "isa40.15": {
                    "id": 15,
                    "short": "Isa 40:15",
                    "name": "Isaiah 40:15",
                    "scripture": "Behold, the nations are as a drop of a bucket, and are counted as the small dust of the balance: behold, he taketh up the isles as a very little thing."
                },
                "isa40.16": {
                    "id": 16,
                    "short": "Isa 40:16",
                    "name": "Isaiah 40:16",
                    "scripture": "And Lebanon is not sufficient to burn, nor the beasts thereof sufficient for a burnt offering."
                },
                "isa40.17": {
                    "id": 17,
                    "short": "Isa 40:17",
                    "name": "Isaiah 40:17",
                    "scripture": "All nations before him are as nothing; and they are counted to him less than nothing, and vanity."
                },
                "isa40.18": {
                    "id": 18,
                    "short": "Isa 40:18",
                    "name": "Isaiah 40:18",
                    "scripture": "To whom then will ye liken God? or what likeness will ye compare unto him?"
                },
                "isa40.19": {
                    "id": 19,
                    "short": "Isa 40:19",
                    "name": "Isaiah 40:19",
                    "scripture": "The workman melteth a graven image, and the goldsmith spreadeth it over with gold, and casteth silver chains."
                },
                "isa40.20": {
                    "id": 20,
                    "short": "Isa 40:20",
                    "name": "Isaiah 40:20",
                    "scripture": "He that is so impoverished that he hath no oblation chooseth a tree that will not rot; he seeketh unto him a cunning workman to prepare a graven image, that shall not be moved."
                },
                "isa40.21": {
                    "id": 21,
                    "short": "Isa 40:21",
                    "name": "Isaiah 40:21",
                    "scripture": "Have ye not known? have ye not heard? hath it not been told you from the beginning? have ye not understood from the foundations of the earth?"
                },
                "isa40.22": {
                    "id": 22,
                    "short": "Isa 40:22",
                    "name": "Isaiah 40:22",
                    "scripture": "It is he that sitteth upon the circle of the earth, and the inhabitants thereof are as grasshoppers; that stretcheth out the heavens as a curtain, and spreadeth them out as a tent to dwell in:"
                },
                "isa40.23": {
                    "id": 23,
                    "short": "Isa 40:23",
                    "name": "Isaiah 40:23",
                    "scripture": "That bringeth the princes to nothing; he maketh the judges of the earth as vanity."
                },
                "isa40.24": {
                    "id": 24,
                    "short": "Isa 40:24",
                    "name": "Isaiah 40:24",
                    "scripture": "Yea, they shall not be planted; yea, they shall not be sown: yea, their stock shall not take root in the earth: and he shall also blow upon them, and they shall wither, and the whirlwind shall take them away as stubble."
                },
                "isa40.25": {
                    "id": 25,
                    "short": "Isa 40:25",
                    "name": "Isaiah 40:25",
                    "scripture": "To whom then will ye liken me, or shall I be equal? saith the Holy One."
                },
                "isa40.26": {
                    "id": 26,
                    "short": "Isa 40:26",
                    "name": "Isaiah 40:26",
                    "scripture": "Lift up your eyes on high, and behold who hath created these things, that bringeth out their host by number: he calleth them all by names by the greatness of his might, for that he is strong in power; not one faileth."
                },
                "isa40.27": {
                    "id": 27,
                    "short": "Isa 40:27",
                    "name": "Isaiah 40:27",
                    "scripture": "Why sayest thou, O Jacob, and speakest, O Israel, My way is hid from the Lord, and my judgment is passed over from my God?"
                },
                "isa40.28": {
                    "id": 28,
                    "short": "Isa 40:28",
                    "name": "Isaiah 40:28",
                    "scripture": "Hast thou not known? hast thou not heard, that the everlasting God, the Lord, the Creator of the ends of the earth, fainteth not, neither is weary? there is no searching of his understanding."
                },
                "isa40.29": {
                    "id": 29,
                    "short": "Isa 40:29",
                    "name": "Isaiah 40:29",
                    "scripture": "He giveth power to the faint; and to them that have no might he increaseth strength."
                },
                "isa40.30": {
                    "id": 30,
                    "short": "Isa 40:30",
                    "name": "Isaiah 40:30",
                    "scripture": "Even the youths shall faint and be weary, and the young men shall utterly fall:"
                },
                "isa40.31": {
                    "id": 31,
                    "short": "Isa 40:31",
                    "name": "Isaiah 40:31",
                    "scripture": "But they that wait upon the Lord shall renew their strength; they shall mount up with wings as eagles; they shall run, and not be weary; and they shall walk, and not faint."
                }
            }
        },
        "isa41": {
            "id": 41,
            "short": "Isa 41",
            "name": "Isaiah 41",
            "verses": {
                "isa41.1": {
                    "id": 1,
                    "short": "Isa 41:1",
                    "name": "Isaiah 41:1",
                    "scripture": "Keep silence before me, O islands; and let the people renew their strength: let them come near; then let them speak: let us come near together to judgment."
                },
                "isa41.2": {
                    "id": 2,
                    "short": "Isa 41:2",
                    "name": "Isaiah 41:2",
                    "scripture": "Who raised up the righteous man from the east, called him to his foot, gave the nations before him, and made him rule over kings? he gave them as the dust to his sword, and as driven stubble to his bow."
                },
                "isa41.3": {
                    "id": 3,
                    "short": "Isa 41:3",
                    "name": "Isaiah 41:3",
                    "scripture": "He pursued them, and passed safely; even by the way that he had not gone with his feet."
                },
                "isa41.4": {
                    "id": 4,
                    "short": "Isa 41:4",
                    "name": "Isaiah 41:4",
                    "scripture": "Who hath wrought and done it, calling the generations from the beginning? I the Lord, the first, and with the last; I am he."
                },
                "isa41.5": {
                    "id": 5,
                    "short": "Isa 41:5",
                    "name": "Isaiah 41:5",
                    "scripture": "The isles saw it, and feared; the ends of the earth were afraid, drew near, and came."
                },
                "isa41.6": {
                    "id": 6,
                    "short": "Isa 41:6",
                    "name": "Isaiah 41:6",
                    "scripture": "They helped every one his neighbour; and every one said to his brother, Be of good courage."
                },
                "isa41.7": {
                    "id": 7,
                    "short": "Isa 41:7",
                    "name": "Isaiah 41:7",
                    "scripture": "So the carpenter encouraged the goldsmith, and he that smootheth with the hammer him that smote the anvil, saying, It is ready for the sodering: and he fastened it with nails, that it should not be moved."
                },
                "isa41.8": {
                    "id": 8,
                    "short": "Isa 41:8",
                    "name": "Isaiah 41:8",
                    "scripture": "But thou, Israel, art my servant, Jacob whom I have chosen, the seed of Abraham my friend."
                },
                "isa41.9": {
                    "id": 9,
                    "short": "Isa 41:9",
                    "name": "Isaiah 41:9",
                    "scripture": "Thou whom I have taken from the ends of the earth, and called thee from the chief men thereof, and said unto thee, Thou art my servant; I have chosen thee, and not cast thee away."
                },
                "isa41.10": {
                    "id": 10,
                    "short": "Isa 41:10",
                    "name": "Isaiah 41:10",
                    "scripture": "Fear thou not; for I am with thee: be not dismayed; for I am thy God: I will strengthen thee; yea, I will help thee; yea, I will uphold thee with the right hand of my righteousness."
                },
                "isa41.11": {
                    "id": 11,
                    "short": "Isa 41:11",
                    "name": "Isaiah 41:11",
                    "scripture": "Behold, all they that were incensed against thee shall be ashamed and confounded: they shall be as nothing; and they that strive with thee shall perish."
                },
                "isa41.12": {
                    "id": 12,
                    "short": "Isa 41:12",
                    "name": "Isaiah 41:12",
                    "scripture": "Thou shalt seek them, and shalt not find them, even them that contended with thee: they that war against thee shall be as nothing, and as a thing of nought."
                },
                "isa41.13": {
                    "id": 13,
                    "short": "Isa 41:13",
                    "name": "Isaiah 41:13",
                    "scripture": "For I the Lord thy God will hold thy right hand, saying unto thee, Fear not; I will help thee."
                },
                "isa41.14": {
                    "id": 14,
                    "short": "Isa 41:14",
                    "name": "Isaiah 41:14",
                    "scripture": "Fear not, thou worm Jacob, and ye men of Israel; I will help thee, saith the Lord, and thy redeemer, the Holy One of Israel."
                },
                "isa41.15": {
                    "id": 15,
                    "short": "Isa 41:15",
                    "name": "Isaiah 41:15",
                    "scripture": "Behold, I will make thee a new sharp threshing instrument having teeth: thou shalt thresh the mountains, and beat them small, and shalt make the hills as chaff."
                },
                "isa41.16": {
                    "id": 16,
                    "short": "Isa 41:16",
                    "name": "Isaiah 41:16",
                    "scripture": "Thou shalt fan them, and the wind shall carry them away, and the whirlwind shall scatter them: and thou shalt rejoice in the Lord, and shalt glory in the Holy One of Israel."
                },
                "isa41.17": {
                    "id": 17,
                    "short": "Isa 41:17",
                    "name": "Isaiah 41:17",
                    "scripture": "When the poor and needy seek water, and there is none, and their tongue faileth for thirst, I the Lord will hear them, I the God of Israel will not forsake them."
                },
                "isa41.18": {
                    "id": 18,
                    "short": "Isa 41:18",
                    "name": "Isaiah 41:18",
                    "scripture": "I will open rivers in high places, and fountains in the midst of the valleys: I will make the wilderness a pool of water, and the dry land springs of water."
                },
                "isa41.19": {
                    "id": 19,
                    "short": "Isa 41:19",
                    "name": "Isaiah 41:19",
                    "scripture": "I will plant in the wilderness the cedar, the shittah tree, and the myrtle, and the oil tree; I will set in the desert the fir tree, and the pine, and the box tree together:"
                },
                "isa41.20": {
                    "id": 20,
                    "short": "Isa 41:20",
                    "name": "Isaiah 41:20",
                    "scripture": "That they may see, and know, and consider, and understand together, that the hand of the Lord hath done this, and the Holy One of Israel hath created it."
                },
                "isa41.21": {
                    "id": 21,
                    "short": "Isa 41:21",
                    "name": "Isaiah 41:21",
                    "scripture": "Produce your cause, saith the Lord; bring forth your strong reasons, saith the King of Jacob."
                },
                "isa41.22": {
                    "id": 22,
                    "short": "Isa 41:22",
                    "name": "Isaiah 41:22",
                    "scripture": "Let them bring them forth, and shew us what shall happen: let them shew the former things, what they be, that we may consider them, and know the latter end of them; or declare us things for to come."
                },
                "isa41.23": {
                    "id": 23,
                    "short": "Isa 41:23",
                    "name": "Isaiah 41:23",
                    "scripture": "Shew the things that are to come hereafter, that we may know that ye are gods: yea, do good, or do evil, that we may be dismayed, and behold it together."
                },
                "isa41.24": {
                    "id": 24,
                    "short": "Isa 41:24",
                    "name": "Isaiah 41:24",
                    "scripture": "Behold, ye are of nothing, and your work of nought: an abomination is he that chooseth you."
                },
                "isa41.25": {
                    "id": 25,
                    "short": "Isa 41:25",
                    "name": "Isaiah 41:25",
                    "scripture": "I have raised up one from the north, and he shall come: from the rising of the sun shall he call upon my name: and he shall come upon princes as upon mortar, and as the potter treadeth clay."
                },
                "isa41.26": {
                    "id": 26,
                    "short": "Isa 41:26",
                    "name": "Isaiah 41:26",
                    "scripture": "Who hath declared from the beginning, that we may know? and beforetime, that we may say, He is righteous? yea, there is none that sheweth, yea, there is none that declareth, yea, there is none that heareth your words."
                },
                "isa41.27": {
                    "id": 27,
                    "short": "Isa 41:27",
                    "name": "Isaiah 41:27",
                    "scripture": "The first shall say to Zion, Behold, behold them: and I will give to Jerusalem one that bringeth good tidings."
                },
                "isa41.28": {
                    "id": 28,
                    "short": "Isa 41:28",
                    "name": "Isaiah 41:28",
                    "scripture": "For I beheld, and there was no man; even among them, and there was no counsellor, that, when I asked of them, could answer a word."
                },
                "isa41.29": {
                    "id": 29,
                    "short": "Isa 41:29",
                    "name": "Isaiah 41:29",
                    "scripture": "Behold, they are all vanity; their works are nothing: their molten images are wind and confusion."
                }
            }
        },
        "isa42": {
            "id": 42,
            "short": "Isa 42",
            "name": "Isaiah 42",
            "verses": {
                "isa42.1": {
                    "id": 1,
                    "short": "Isa 42:1",
                    "name": "Isaiah 42:1",
                    "scripture": "Behold my servant, whom I uphold; mine elect, in whom my soul delighteth; I have put my spirit upon him: he shall bring forth judgment to the Gentiles."
                },
                "isa42.2": {
                    "id": 2,
                    "short": "Isa 42:2",
                    "name": "Isaiah 42:2",
                    "scripture": "He shall not cry, nor lift up, nor cause his voice to be heard in the street."
                },
                "isa42.3": {
                    "id": 3,
                    "short": "Isa 42:3",
                    "name": "Isaiah 42:3",
                    "scripture": "A bruised reed shall he not break, and the smoking flax shall he not quench: he shall bring forth judgment unto truth."
                },
                "isa42.4": {
                    "id": 4,
                    "short": "Isa 42:4",
                    "name": "Isaiah 42:4",
                    "scripture": "He shall not fail nor be discouraged, till he have set judgment in the earth: and the isles shall wait for his law."
                },
                "isa42.5": {
                    "id": 5,
                    "short": "Isa 42:5",
                    "name": "Isaiah 42:5",
                    "scripture": "Thus saith God the Lord, he that created the heavens, and stretched them out; he that spread forth the earth, and that which cometh out of it; he that giveth breath unto the people upon it, and spirit to them that walk therein:"
                },
                "isa42.6": {
                    "id": 6,
                    "short": "Isa 42:6",
                    "name": "Isaiah 42:6",
                    "scripture": "I the Lord have called thee in righteousness, and will hold thine hand, and will keep thee, and give thee for a covenant of the people, for a light of the Gentiles;"
                },
                "isa42.7": {
                    "id": 7,
                    "short": "Isa 42:7",
                    "name": "Isaiah 42:7",
                    "scripture": "To open the blind eyes, to bring out the prisoners from the prison, and them that sit in darkness out of the prison house."
                },
                "isa42.8": {
                    "id": 8,
                    "short": "Isa 42:8",
                    "name": "Isaiah 42:8",
                    "scripture": "I am the Lord : that is my name: and my glory will I not give to another, neither my praise to graven images."
                },
                "isa42.9": {
                    "id": 9,
                    "short": "Isa 42:9",
                    "name": "Isaiah 42:9",
                    "scripture": "Behold, the former things are come to pass, and new things do I declare: before they spring forth I tell you of them."
                },
                "isa42.10": {
                    "id": 10,
                    "short": "Isa 42:10",
                    "name": "Isaiah 42:10",
                    "scripture": "Sing unto the Lord a new song, and his praise from the end of the earth, ye that go down to the sea, and all that is therein; the isles, and the inhabitants thereof."
                },
                "isa42.11": {
                    "id": 11,
                    "short": "Isa 42:11",
                    "name": "Isaiah 42:11",
                    "scripture": "Let the wilderness and the cities thereof lift up their voice, the villages that Kedar doth inhabit: let the inhabitants of the rock sing, let them shout from the top of the mountains."
                },
                "isa42.12": {
                    "id": 12,
                    "short": "Isa 42:12",
                    "name": "Isaiah 42:12",
                    "scripture": "Let them give glory unto the Lord, and declare his praise in the islands."
                },
                "isa42.13": {
                    "id": 13,
                    "short": "Isa 42:13",
                    "name": "Isaiah 42:13",
                    "scripture": "The Lord shall go forth as a mighty man, he shall stir up jealousy like a man of war: he shall cry, yea, roar; he shall prevail against his enemies."
                },
                "isa42.14": {
                    "id": 14,
                    "short": "Isa 42:14",
                    "name": "Isaiah 42:14",
                    "scripture": "I have long time holden my peace; I have been still, and refrained myself: now will I cry like a travailing woman; I will destroy and devour at once."
                },
                "isa42.15": {
                    "id": 15,
                    "short": "Isa 42:15",
                    "name": "Isaiah 42:15",
                    "scripture": "I will make waste mountains and hills, and dry up all their herbs; and I will make the rivers islands, and I will dry up the pools."
                },
                "isa42.16": {
                    "id": 16,
                    "short": "Isa 42:16",
                    "name": "Isaiah 42:16",
                    "scripture": "And I will bring the blind by a way that they knew not; I will lead them in paths that they have not known: I will make darkness light before them, and crooked things straight. These things will I do unto them, and not forsake them."
                },
                "isa42.17": {
                    "id": 17,
                    "short": "Isa 42:17",
                    "name": "Isaiah 42:17",
                    "scripture": "They shall be turned back, they shall be greatly ashamed, that trust in graven images, that say to the molten images, Ye are our gods."
                },
                "isa42.18": {
                    "id": 18,
                    "short": "Isa 42:18",
                    "name": "Isaiah 42:18",
                    "scripture": "Hear, ye deaf; and look, ye blind, that ye may see."
                },
                "isa42.19": {
                    "id": 19,
                    "short": "Isa 42:19",
                    "name": "Isaiah 42:19",
                    "scripture": "Who is blind, but my servant? or deaf, as my messenger that I sent? who is blind as he that is perfect, and blind as the Lord's servant?"
                },
                "isa42.20": {
                    "id": 20,
                    "short": "Isa 42:20",
                    "name": "Isaiah 42:20",
                    "scripture": "Seeing many things, but thou observest not; opening the ears, but he heareth not."
                },
                "isa42.21": {
                    "id": 21,
                    "short": "Isa 42:21",
                    "name": "Isaiah 42:21",
                    "scripture": "The Lord is well pleased for his righteousness' sake; he will magnify the law, and make it honourable."
                },
                "isa42.22": {
                    "id": 22,
                    "short": "Isa 42:22",
                    "name": "Isaiah 42:22",
                    "scripture": "But this is a people robbed and spoiled; they are all of them snared in holes, and they are hid in prison houses: they are for a prey, and none delivereth; for a spoil, and none saith, Restore."
                },
                "isa42.23": {
                    "id": 23,
                    "short": "Isa 42:23",
                    "name": "Isaiah 42:23",
                    "scripture": "Who among you will give ear to this? who will hearken and hear for the time to come?"
                },
                "isa42.24": {
                    "id": 24,
                    "short": "Isa 42:24",
                    "name": "Isaiah 42:24",
                    "scripture": "Who gave Jacob for a spoil, and Israel to the robbers? did not the Lord, he against whom we have sinned? for they would not walk in his ways, neither were they obedient unto his law."
                },
                "isa42.25": {
                    "id": 25,
                    "short": "Isa 42:25",
                    "name": "Isaiah 42:25",
                    "scripture": "Therefore he hath poured upon him the fury of his anger, and the strength of battle: and it hath set him on fire round about, yet he knew not; and it burned him, yet he laid it not to heart."
                }
            }
        },
        "isa43": {
            "id": 43,
            "short": "Isa 43",
            "name": "Isaiah 43",
            "verses": {
                "isa43.1": {
                    "id": 1,
                    "short": "Isa 43:1",
                    "name": "Isaiah 43:1",
                    "scripture": "But now thus saith the Lord that created thee, O Jacob, and he that formed thee, O Israel, Fear not: for I have redeemed thee, I have called thee by thy name; thou art mine."
                },
                "isa43.2": {
                    "id": 2,
                    "short": "Isa 43:2",
                    "name": "Isaiah 43:2",
                    "scripture": "When thou passest through the waters, I will be with thee; and through the rivers, they shall not overflow thee: when thou walkest through the fire, thou shalt not be burned; neither shall the flame kindle upon thee."
                },
                "isa43.3": {
                    "id": 3,
                    "short": "Isa 43:3",
                    "name": "Isaiah 43:3",
                    "scripture": "For I am the Lord thy God, the Holy One of Israel, thy Saviour: I gave Egypt for thy ransom, Ethiopia and Seba for thee."
                },
                "isa43.4": {
                    "id": 4,
                    "short": "Isa 43:4",
                    "name": "Isaiah 43:4",
                    "scripture": "Since thou wast precious in my sight, thou hast been honourable, and I have loved thee: therefore will I give men for thee, and people for thy life."
                },
                "isa43.5": {
                    "id": 5,
                    "short": "Isa 43:5",
                    "name": "Isaiah 43:5",
                    "scripture": "Fear not: for I am with thee: I will bring thy seed from the east, and gather thee from the west;"
                },
                "isa43.6": {
                    "id": 6,
                    "short": "Isa 43:6",
                    "name": "Isaiah 43:6",
                    "scripture": "I will say to the north, Give up; and to the south, Keep not back: bring my sons from far, and my daughters from the ends of the earth;"
                },
                "isa43.7": {
                    "id": 7,
                    "short": "Isa 43:7",
                    "name": "Isaiah 43:7",
                    "scripture": "Even every one that is called by my name: for I have created him for my glory, I have formed him; yea, I have made him."
                },
                "isa43.8": {
                    "id": 8,
                    "short": "Isa 43:8",
                    "name": "Isaiah 43:8",
                    "scripture": "Bring forth the blind people that have eyes, and the deaf that have ears."
                },
                "isa43.9": {
                    "id": 9,
                    "short": "Isa 43:9",
                    "name": "Isaiah 43:9",
                    "scripture": "Let all the nations be gathered together, and let the people be assembled: who among them can declare this, and shew us former things? let them bring forth their witnesses, that they may be justified: or let them hear, and say, It is truth."
                },
                "isa43.10": {
                    "id": 10,
                    "short": "Isa 43:10",
                    "name": "Isaiah 43:10",
                    "scripture": "Ye are my witnesses, saith the Lord, and my servant whom I have chosen: that ye may know and believe me, and understand that I am he: before me there was no God formed, neither shall there be after me."
                },
                "isa43.11": {
                    "id": 11,
                    "short": "Isa 43:11",
                    "name": "Isaiah 43:11",
                    "scripture": "I, even I, am the Lord; and beside me there is no saviour."
                },
                "isa43.12": {
                    "id": 12,
                    "short": "Isa 43:12",
                    "name": "Isaiah 43:12",
                    "scripture": "I have declared, and have saved, and I have shewed, when there was no strange god among you: therefore ye are my witnesses, saith the Lord, that I am God."
                },
                "isa43.13": {
                    "id": 13,
                    "short": "Isa 43:13",
                    "name": "Isaiah 43:13",
                    "scripture": "Yea, before the day was I am he; and there is none that can deliver out of my hand: I will work, and who shall let it?"
                },
                "isa43.14": {
                    "id": 14,
                    "short": "Isa 43:14",
                    "name": "Isaiah 43:14",
                    "scripture": "Thus saith the Lord, your redeemer, the Holy One of Israel; For your sake I have sent to Babylon, and have brought down all their nobles, and the Chaldeans, whose cry is in the ships."
                },
                "isa43.15": {
                    "id": 15,
                    "short": "Isa 43:15",
                    "name": "Isaiah 43:15",
                    "scripture": "I am the Lord, your Holy One, the creator of Israel, your King."
                },
                "isa43.16": {
                    "id": 16,
                    "short": "Isa 43:16",
                    "name": "Isaiah 43:16",
                    "scripture": "Thus saith the Lord, which maketh a way in the sea, and a path in the mighty waters;"
                },
                "isa43.17": {
                    "id": 17,
                    "short": "Isa 43:17",
                    "name": "Isaiah 43:17",
                    "scripture": "Which bringeth forth the chariot and horse, the army and the power; they shall lie down together, they shall not rise: they are extinct, they are quenched as tow."
                },
                "isa43.18": {
                    "id": 18,
                    "short": "Isa 43:18",
                    "name": "Isaiah 43:18",
                    "scripture": "Remember ye not the former things, neither consider the things of old."
                },
                "isa43.19": {
                    "id": 19,
                    "short": "Isa 43:19",
                    "name": "Isaiah 43:19",
                    "scripture": "Behold, I will do a new thing; now it shall spring forth; shall ye not know it? I will even make a way in the wilderness, and rivers in the desert."
                },
                "isa43.20": {
                    "id": 20,
                    "short": "Isa 43:20",
                    "name": "Isaiah 43:20",
                    "scripture": "The beast of the field shall honour me, the dragons and the owls: because I give waters in the wilderness, and rivers in the desert, to give drink to my people, my chosen."
                },
                "isa43.21": {
                    "id": 21,
                    "short": "Isa 43:21",
                    "name": "Isaiah 43:21",
                    "scripture": "This people have I formed for myself; they shall shew forth my praise."
                },
                "isa43.22": {
                    "id": 22,
                    "short": "Isa 43:22",
                    "name": "Isaiah 43:22",
                    "scripture": "But thou hast not called upon me, O Jacob; but thou hast been weary of me, O Israel."
                },
                "isa43.23": {
                    "id": 23,
                    "short": "Isa 43:23",
                    "name": "Isaiah 43:23",
                    "scripture": "Thou hast not brought me the small cattle of thy burnt offerings; neither hast thou honoured me with thy sacrifices. I have not caused thee to serve with an offering, nor wearied thee with incense."
                },
                "isa43.24": {
                    "id": 24,
                    "short": "Isa 43:24",
                    "name": "Isaiah 43:24",
                    "scripture": "Thou hast bought me no sweet cane with money, neither hast thou filled me with the fat of thy sacrifices: but thou hast made me to serve with thy sins, thou hast wearied me with thine iniquities."
                },
                "isa43.25": {
                    "id": 25,
                    "short": "Isa 43:25",
                    "name": "Isaiah 43:25",
                    "scripture": "I, even I, am he that blotteth out thy transgressions for mine own sake, and will not remember thy sins."
                },
                "isa43.26": {
                    "id": 26,
                    "short": "Isa 43:26",
                    "name": "Isaiah 43:26",
                    "scripture": "Put me in remembrance: let us plead together: declare thou, that thou mayest be justified."
                },
                "isa43.27": {
                    "id": 27,
                    "short": "Isa 43:27",
                    "name": "Isaiah 43:27",
                    "scripture": "Thy first father hath sinned, and thy teachers have transgressed against me."
                },
                "isa43.28": {
                    "id": 28,
                    "short": "Isa 43:28",
                    "name": "Isaiah 43:28",
                    "scripture": "Therefore I have profaned the princes of the sanctuary, and have given Jacob to the curse, and Israel to reproaches."
                }
            }
        },
        "isa44": {
            "id": 44,
            "short": "Isa 44",
            "name": "Isaiah 44",
            "verses": {
                "isa44.1": {
                    "id": 1,
                    "short": "Isa 44:1",
                    "name": "Isaiah 44:1",
                    "scripture": "Yet now hear, O Jacob my servant; and Israel, whom I have chosen:"
                },
                "isa44.2": {
                    "id": 2,
                    "short": "Isa 44:2",
                    "name": "Isaiah 44:2",
                    "scripture": "Thus saith the Lord that made thee, and formed thee from the womb, which will help thee; Fear not, O Jacob, my servant; and thou, Jeshurun, whom I have chosen."
                },
                "isa44.3": {
                    "id": 3,
                    "short": "Isa 44:3",
                    "name": "Isaiah 44:3",
                    "scripture": "For I will pour water upon him that is thirsty, and floods upon the dry ground: I will pour my spirit upon thy seed, and my blessing upon thine offspring:"
                },
                "isa44.4": {
                    "id": 4,
                    "short": "Isa 44:4",
                    "name": "Isaiah 44:4",
                    "scripture": "And they shall spring up as among the grass, as willows by the water courses."
                },
                "isa44.5": {
                    "id": 5,
                    "short": "Isa 44:5",
                    "name": "Isaiah 44:5",
                    "scripture": "One shall say, I am the Lord's; and another shall call himself by the name of Jacob; and another shall subscribe with his hand unto the Lord, and surname himself by the name of Israel."
                },
                "isa44.6": {
                    "id": 6,
                    "short": "Isa 44:6",
                    "name": "Isaiah 44:6",
                    "scripture": "Thus saith the Lord the King of Israel, and his redeemer the Lord of hosts; I am the first, and I am the last; and beside me there is no God."
                },
                "isa44.7": {
                    "id": 7,
                    "short": "Isa 44:7",
                    "name": "Isaiah 44:7",
                    "scripture": "And who, as I, shall call, and shall declare it, and set it in order for me, since I appointed the ancient people? and the things that are coming, and shall come, let them shew unto them."
                },
                "isa44.8": {
                    "id": 8,
                    "short": "Isa 44:8",
                    "name": "Isaiah 44:8",
                    "scripture": "Fear ye not, neither be afraid: have not I told thee from that time, and have declared it? ye are even my witnesses. Is there a God beside me? yea, there is no God; I know not any."
                },
                "isa44.9": {
                    "id": 9,
                    "short": "Isa 44:9",
                    "name": "Isaiah 44:9",
                    "scripture": "They that make a graven image are all of them vanity; and their delectable things shall not profit; and they are their own witnesses; they see not, nor know; that they may be ashamed."
                },
                "isa44.10": {
                    "id": 10,
                    "short": "Isa 44:10",
                    "name": "Isaiah 44:10",
                    "scripture": "Who hath formed a god, or molten a graven image that is profitable for nothing?"
                },
                "isa44.11": {
                    "id": 11,
                    "short": "Isa 44:11",
                    "name": "Isaiah 44:11",
                    "scripture": "Behold, all his fellows shall be ashamed: and the workmen, they are of men: let them all be gathered together, let them stand up; yet they shall fear, and they shall be ashamed together."
                },
                "isa44.12": {
                    "id": 12,
                    "short": "Isa 44:12",
                    "name": "Isaiah 44:12",
                    "scripture": "The smith with the tongs both worketh in the coals, and fashioneth it with hammers, and worketh it with the strength of his arms: yea, he is hungry, and his strength faileth: he drinketh no water, and is faint."
                },
                "isa44.13": {
                    "id": 13,
                    "short": "Isa 44:13",
                    "name": "Isaiah 44:13",
                    "scripture": "The carpenter stretcheth out his rule; he marketh it out with a line; he fitteth it with planes, and he marketh it out with the compass, and maketh it after the figure of a man, according to the beauty of a man; that it may remain in the house."
                },
                "isa44.14": {
                    "id": 14,
                    "short": "Isa 44:14",
                    "name": "Isaiah 44:14",
                    "scripture": "He heweth him down cedars, and taketh the cypress and the oak, which he strengtheneth for himself among the trees of the forest: he planteth an ash, and the rain doth nourish it."
                },
                "isa44.15": {
                    "id": 15,
                    "short": "Isa 44:15",
                    "name": "Isaiah 44:15",
                    "scripture": "Then shall it be for a man to burn: for he will take thereof, and warm himself; yea, he kindleth it, and baketh bread; yea, he maketh a god, and worshippeth it; he maketh it a graven image, and falleth down thereto."
                },
                "isa44.16": {
                    "id": 16,
                    "short": "Isa 44:16",
                    "name": "Isaiah 44:16",
                    "scripture": "He burneth part thereof in the fire; with part thereof he eateth flesh; he roasteth roast, and is satisfied: yea, he warmeth himself, and saith, Aha, I am warm, I have seen the fire:"
                },
                "isa44.17": {
                    "id": 17,
                    "short": "Isa 44:17",
                    "name": "Isaiah 44:17",
                    "scripture": "And the residue thereof he maketh a god, even his graven image: he falleth down unto it, and worshippeth it, and prayeth unto it, and saith, Deliver me; for thou art my god."
                },
                "isa44.18": {
                    "id": 18,
                    "short": "Isa 44:18",
                    "name": "Isaiah 44:18",
                    "scripture": "They have not known nor understood: for he hath shut their eyes, that they cannot see; and their hearts, that they cannot understand."
                },
                "isa44.19": {
                    "id": 19,
                    "short": "Isa 44:19",
                    "name": "Isaiah 44:19",
                    "scripture": "And none considereth in his heart, neither is there knowledge nor understanding to say, I have burned part of it in the fire; yea, also I have baked bread upon the coals thereof; I have roasted flesh, and eaten it: and shall I make the residue thereof an abomination? shall I fall down to the stock of a tree?"
                },
                "isa44.20": {
                    "id": 20,
                    "short": "Isa 44:20",
                    "name": "Isaiah 44:20",
                    "scripture": "He feedeth on ashes: a deceived heart hath turned him aside, that he cannot deliver his soul, nor say, Is there not a lie in my right hand?"
                },
                "isa44.21": {
                    "id": 21,
                    "short": "Isa 44:21",
                    "name": "Isaiah 44:21",
                    "scripture": "Remember these, O Jacob and Israel; for thou art my servant: I have formed thee; thou art my servant: O Israel, thou shalt not be forgotten of me."
                },
                "isa44.22": {
                    "id": 22,
                    "short": "Isa 44:22",
                    "name": "Isaiah 44:22",
                    "scripture": "I have blotted out, as a thick cloud, thy transgressions, and, as a cloud, thy sins: return unto me; for I have redeemed thee."
                },
                "isa44.23": {
                    "id": 23,
                    "short": "Isa 44:23",
                    "name": "Isaiah 44:23",
                    "scripture": "Sing, O ye heavens; for the Lord hath done it: shout, ye lower parts of the earth: break forth into singing, ye mountains, O forest, and every tree therein: for the Lord hath redeemed Jacob, and glorified himself in Israel."
                },
                "isa44.24": {
                    "id": 24,
                    "short": "Isa 44:24",
                    "name": "Isaiah 44:24",
                    "scripture": "Thus saith the Lord, thy redeemer, and he that formed thee from the womb, I am the Lord that maketh all things; that stretcheth forth the heavens alone; that spreadeth abroad the earth by myself;"
                },
                "isa44.25": {
                    "id": 25,
                    "short": "Isa 44:25",
                    "name": "Isaiah 44:25",
                    "scripture": "That frustrateth the tokens of the liars, and maketh diviners mad; that turneth wise men backward, and maketh their knowledge foolish;"
                },
                "isa44.26": {
                    "id": 26,
                    "short": "Isa 44:26",
                    "name": "Isaiah 44:26",
                    "scripture": "That confirmeth the word of his servant, and performeth the counsel of his messengers; that saith to Jerusalem, Thou shalt be inhabited; and to the cities of Judah, Ye shall be built, and I will raise up the decayed places thereof:"
                },
                "isa44.27": {
                    "id": 27,
                    "short": "Isa 44:27",
                    "name": "Isaiah 44:27",
                    "scripture": "That saith to the deep, Be dry, and I will dry up thy rivers:"
                },
                "isa44.28": {
                    "id": 28,
                    "short": "Isa 44:28",
                    "name": "Isaiah 44:28",
                    "scripture": "That saith of Cyrus, He is my shepherd, and shall perform all my pleasure: even saying to Jerusalem, Thou shalt be built; and to the temple, Thy foundation shall be laid."
                }
            }
        },
        "isa45": {
            "id": 45,
            "short": "Isa 45",
            "name": "Isaiah 45",
            "verses": {
                "isa45.1": {
                    "id": 1,
                    "short": "Isa 45:1",
                    "name": "Isaiah 45:1",
                    "scripture": "Thus saith the Lord to his anointed, to Cyrus, whose right hand I have holden, to subdue nations before him; and I will loose the loins of kings, to open before him the two leaved gates; and the gates shall not be shut;"
                },
                "isa45.2": {
                    "id": 2,
                    "short": "Isa 45:2",
                    "name": "Isaiah 45:2",
                    "scripture": "I will go before thee, and make the crooked places straight: I will break in pieces the gates of brass, and cut in sunder the bars of iron:"
                },
                "isa45.3": {
                    "id": 3,
                    "short": "Isa 45:3",
                    "name": "Isaiah 45:3",
                    "scripture": "And I will give thee the treasures of darkness, and hidden riches of secret places, that thou mayest know that I, the Lord, which call thee by thy name, am the God of Israel."
                },
                "isa45.4": {
                    "id": 4,
                    "short": "Isa 45:4",
                    "name": "Isaiah 45:4",
                    "scripture": "For Jacob my servant's sake, and Israel mine elect, I have even called thee by thy name: I have surnamed thee, though thou hast not known me."
                },
                "isa45.5": {
                    "id": 5,
                    "short": "Isa 45:5",
                    "name": "Isaiah 45:5",
                    "scripture": "I am the Lord, and there is none else, there is no God beside me: I girded thee, though thou hast not known me:"
                },
                "isa45.6": {
                    "id": 6,
                    "short": "Isa 45:6",
                    "name": "Isaiah 45:6",
                    "scripture": "That they may know from the rising of the sun, and from the west, that there is none beside me. I am the Lord, and there is none else."
                },
                "isa45.7": {
                    "id": 7,
                    "short": "Isa 45:7",
                    "name": "Isaiah 45:7",
                    "scripture": "I form the light, and create darkness: I make peace, and create evil: I the Lord do all these things."
                },
                "isa45.8": {
                    "id": 8,
                    "short": "Isa 45:8",
                    "name": "Isaiah 45:8",
                    "scripture": "Drop down, ye heavens, from above, and let the skies pour down righteousness: let the earth open, and let them bring forth salvation, and let righteousness spring up together; I the Lord have created it."
                },
                "isa45.9": {
                    "id": 9,
                    "short": "Isa 45:9",
                    "name": "Isaiah 45:9",
                    "scripture": "Woe unto him that striveth with his Maker! Let the potsherd strive with the potsherds of the earth. Shall the clay say to him that fashioneth it, What makest thou? or thy work, He hath no hands?"
                },
                "isa45.10": {
                    "id": 10,
                    "short": "Isa 45:10",
                    "name": "Isaiah 45:10",
                    "scripture": "Woe unto him that saith unto his father, What begettest thou? or to the woman, What hast thou brought forth?"
                },
                "isa45.11": {
                    "id": 11,
                    "short": "Isa 45:11",
                    "name": "Isaiah 45:11",
                    "scripture": "Thus saith the Lord, the Holy One of Israel, and his Maker, Ask me of things to come concerning my sons, and concerning the work of my hands command ye me."
                },
                "isa45.12": {
                    "id": 12,
                    "short": "Isa 45:12",
                    "name": "Isaiah 45:12",
                    "scripture": "I have made the earth, and created man upon it: I, even my hands, have stretched out the heavens, and all their host have I commanded."
                },
                "isa45.13": {
                    "id": 13,
                    "short": "Isa 45:13",
                    "name": "Isaiah 45:13",
                    "scripture": "I have raised him up in righteousness, and I will direct all his ways: he shall build my city, and he shall let go my captives, not for price nor reward, saith the Lord of hosts."
                },
                "isa45.14": {
                    "id": 14,
                    "short": "Isa 45:14",
                    "name": "Isaiah 45:14",
                    "scripture": "Thus saith the Lord, The labour of Egypt, and merchandise of Ethiopia and of the Sabeans, men of stature, shall come over unto thee, and they shall be thine: they shall come after thee; in chains they shall come over, and they shall fall down unto thee, they shall make supplication unto thee, saying, Surely God is in thee; and there is none else, there is no God."
                },
                "isa45.15": {
                    "id": 15,
                    "short": "Isa 45:15",
                    "name": "Isaiah 45:15",
                    "scripture": "Verily thou art a God that hidest thyself, O God of Israel, the Saviour."
                },
                "isa45.16": {
                    "id": 16,
                    "short": "Isa 45:16",
                    "name": "Isaiah 45:16",
                    "scripture": "They shall be ashamed, and also confounded, all of them: they shall go to confusion together that are makers of idols."
                },
                "isa45.17": {
                    "id": 17,
                    "short": "Isa 45:17",
                    "name": "Isaiah 45:17",
                    "scripture": "But Israel shall be saved in the Lord with an everlasting salvation: ye shall not be ashamed nor confounded world without end."
                },
                "isa45.18": {
                    "id": 18,
                    "short": "Isa 45:18",
                    "name": "Isaiah 45:18",
                    "scripture": "For thus saith the Lord that created the heavens; God himself that formed the earth and made it; he hath established it, he created it not in vain, he formed it to be inhabited: I am the Lord; and there is none else."
                },
                "isa45.19": {
                    "id": 19,
                    "short": "Isa 45:19",
                    "name": "Isaiah 45:19",
                    "scripture": "I have not spoken in secret, in a dark place of the earth: I said not unto the seed of Jacob, Seek ye me in vain: I the Lord speak righteousness, I declare things that are right."
                },
                "isa45.20": {
                    "id": 20,
                    "short": "Isa 45:20",
                    "name": "Isaiah 45:20",
                    "scripture": "Assemble yourselves and come; draw near together, ye that are escaped of the nations: they have no knowledge that set up the wood of their graven image, and pray unto a god that cannot save."
                },
                "isa45.21": {
                    "id": 21,
                    "short": "Isa 45:21",
                    "name": "Isaiah 45:21",
                    "scripture": "Tell ye, and bring them near; yea, let them take counsel together: who hath declared this from ancient time? who hath told it from that time? have not I the Lord ? and there is no God else beside me; a just God and a Saviour; there is none beside me."
                },
                "isa45.22": {
                    "id": 22,
                    "short": "Isa 45:22",
                    "name": "Isaiah 45:22",
                    "scripture": "Look unto me, and be ye saved, all the ends of the earth: for I am God, and there is none else."
                },
                "isa45.23": {
                    "id": 23,
                    "short": "Isa 45:23",
                    "name": "Isaiah 45:23",
                    "scripture": "I have sworn by myself, the word is gone out of my mouth in righteousness, and shall not return, That unto me every knee shall bow, every tongue shall swear."
                },
                "isa45.24": {
                    "id": 24,
                    "short": "Isa 45:24",
                    "name": "Isaiah 45:24",
                    "scripture": "Surely, shall one say, in the Lord have I righteousness and strength: even to him shall men come; and all that are incensed against him shall be ashamed."
                },
                "isa45.25": {
                    "id": 25,
                    "short": "Isa 45:25",
                    "name": "Isaiah 45:25",
                    "scripture": "In the Lord shall all the seed of Israel be justified, and shall glory."
                }
            }
        },
        "isa46": {
            "id": 46,
            "short": "Isa 46",
            "name": "Isaiah 46",
            "verses": {
                "isa46.1": {
                    "id": 1,
                    "short": "Isa 46:1",
                    "name": "Isaiah 46:1",
                    "scripture": "Bel boweth down, Nebo stoopeth, their idols were upon the beasts, and upon the cattle: your carriages were heavy loaden; they are a burden to the weary beast."
                },
                "isa46.2": {
                    "id": 2,
                    "short": "Isa 46:2",
                    "name": "Isaiah 46:2",
                    "scripture": "They stoop, they bow down together; they could not deliver the burden, but themselves are gone into captivity."
                },
                "isa46.3": {
                    "id": 3,
                    "short": "Isa 46:3",
                    "name": "Isaiah 46:3",
                    "scripture": "Hearken unto me, O house of Jacob, and all the remnant of the house of Israel, which are borne by me from the belly, which are carried from the womb:"
                },
                "isa46.4": {
                    "id": 4,
                    "short": "Isa 46:4",
                    "name": "Isaiah 46:4",
                    "scripture": "And even to your old age I am he; and even to hoar hairs will I carry you: I have made, and I will bear; even I will carry, and will deliver you."
                },
                "isa46.5": {
                    "id": 5,
                    "short": "Isa 46:5",
                    "name": "Isaiah 46:5",
                    "scripture": "To whom will ye liken me, and make me equal, and compare me, that we may be like?"
                },
                "isa46.6": {
                    "id": 6,
                    "short": "Isa 46:6",
                    "name": "Isaiah 46:6",
                    "scripture": "They lavish gold out of the bag, and weigh silver in the balance, and hire a goldsmith; and he maketh it a god: they fall down, yea, they worship."
                },
                "isa46.7": {
                    "id": 7,
                    "short": "Isa 46:7",
                    "name": "Isaiah 46:7",
                    "scripture": "They bear him upon the shoulder, they carry him, and set him in his place, and he standeth; from his place shall he not remove: yea, one shall cry unto him, yet can he not answer, nor save him out of his trouble."
                },
                "isa46.8": {
                    "id": 8,
                    "short": "Isa 46:8",
                    "name": "Isaiah 46:8",
                    "scripture": "Remember this, and shew yourselves men: bring it again to mind, O ye transgressors."
                },
                "isa46.9": {
                    "id": 9,
                    "short": "Isa 46:9",
                    "name": "Isaiah 46:9",
                    "scripture": "Remember the former things of old: for I am God, and there is none else; I am God, and there is none like me,"
                },
                "isa46.10": {
                    "id": 10,
                    "short": "Isa 46:10",
                    "name": "Isaiah 46:10",
                    "scripture": "Declaring the end from the beginning, and from ancient times the things that are not yet done, saying, My counsel shall stand, and I will do all my pleasure:"
                },
                "isa46.11": {
                    "id": 11,
                    "short": "Isa 46:11",
                    "name": "Isaiah 46:11",
                    "scripture": "Calling a ravenous bird from the east, the man that executeth my counsel from a far country: yea, I have spoken it, I will also bring it to pass; I have purposed it, I will also do it."
                },
                "isa46.12": {
                    "id": 12,
                    "short": "Isa 46:12",
                    "name": "Isaiah 46:12",
                    "scripture": "Hearken unto me, ye stouthearted, that are far from righteousness:"
                },
                "isa46.13": {
                    "id": 13,
                    "short": "Isa 46:13",
                    "name": "Isaiah 46:13",
                    "scripture": "I bring near my righteousness; it shall not be far off, and my salvation shall not tarry: and I will place salvation in Zion for Israel my glory."
                }
            }
        },
        "isa47": {
            "id": 47,
            "short": "Isa 47",
            "name": "Isaiah 47",
            "verses": {
                "isa47.1": {
                    "id": 1,
                    "short": "Isa 47:1",
                    "name": "Isaiah 47:1",
                    "scripture": "Come down, and sit in the dust, O virgin daughter of Babylon, sit on the ground: there is no throne, O daughter of the Chaldeans: for thou shalt no more be called tender and delicate."
                },
                "isa47.2": {
                    "id": 2,
                    "short": "Isa 47:2",
                    "name": "Isaiah 47:2",
                    "scripture": "Take the millstones, and grind meal: uncover thy locks, make bare the leg, uncover the thigh, pass over the rivers."
                },
                "isa47.3": {
                    "id": 3,
                    "short": "Isa 47:3",
                    "name": "Isaiah 47:3",
                    "scripture": "Thy nakedness shall be uncovered, yea, thy shame shall be seen: I will take vengeance, and I will not meet thee as a man."
                },
                "isa47.4": {
                    "id": 4,
                    "short": "Isa 47:4",
                    "name": "Isaiah 47:4",
                    "scripture": "As for our redeemer, the Lord of hosts is his name, the Holy One of Israel."
                },
                "isa47.5": {
                    "id": 5,
                    "short": "Isa 47:5",
                    "name": "Isaiah 47:5",
                    "scripture": "Sit thou silent, and get thee into darkness, O daughter of the Chaldeans: for thou shalt no more be called, The lady of kingdoms."
                },
                "isa47.6": {
                    "id": 6,
                    "short": "Isa 47:6",
                    "name": "Isaiah 47:6",
                    "scripture": "I was wroth with my people, I have polluted mine inheritance, and given them into thine hand: thou didst shew them no mercy; upon the ancient hast thou very heavily laid thy yoke."
                },
                "isa47.7": {
                    "id": 7,
                    "short": "Isa 47:7",
                    "name": "Isaiah 47:7",
                    "scripture": "And thou saidst, I shall be a lady for ever: so that thou didst not lay these things to thy heart, neither didst remember the latter end of it."
                },
                "isa47.8": {
                    "id": 8,
                    "short": "Isa 47:8",
                    "name": "Isaiah 47:8",
                    "scripture": "Therefore hear now this, thou that art given to pleasures, that dwellest carelessly, that sayest in thine heart, I am, and none else beside me; I shall not sit as a widow, neither shall I know the loss of children:"
                },
                "isa47.9": {
                    "id": 9,
                    "short": "Isa 47:9",
                    "name": "Isaiah 47:9",
                    "scripture": "But these two things shall come to thee in a moment in one day, the loss of children, and widowhood: they shall come upon thee in their perfection for the multitude of thy sorceries, and for the great abundance of thine enchantments."
                },
                "isa47.10": {
                    "id": 10,
                    "short": "Isa 47:10",
                    "name": "Isaiah 47:10",
                    "scripture": "For thou hast trusted in thy wickedness: thou hast said, None seeth me. Thy wisdom and thy knowledge, it hath perverted thee; and thou hast said in thine heart, I am, and none else beside me."
                },
                "isa47.11": {
                    "id": 11,
                    "short": "Isa 47:11",
                    "name": "Isaiah 47:11",
                    "scripture": "Therefore shall evil come upon thee; thou shalt not know from whence it riseth: and mischief shall fall upon thee; thou shalt not be able to put it off: and desolation shall come upon thee suddenly, which thou shalt not know."
                },
                "isa47.12": {
                    "id": 12,
                    "short": "Isa 47:12",
                    "name": "Isaiah 47:12",
                    "scripture": "Stand now with thine enchantments, and with the multitude of thy sorceries, wherein thou hast laboured from thy youth; if so be thou shalt be able to profit, if so be thou mayest prevail."
                },
                "isa47.13": {
                    "id": 13,
                    "short": "Isa 47:13",
                    "name": "Isaiah 47:13",
                    "scripture": "Thou art wearied in the multitude of thy counsels. Let now the astrologers, the stargazers, the monthly prognosticators, stand up, and save thee from these things that shall come upon thee."
                },
                "isa47.14": {
                    "id": 14,
                    "short": "Isa 47:14",
                    "name": "Isaiah 47:14",
                    "scripture": "Behold, they shall be as stubble; the fire shall burn them; they shall not deliver themselves from the power of the flame: there shall not be a coal to warm at, nor fire to sit before it."
                },
                "isa47.15": {
                    "id": 15,
                    "short": "Isa 47:15",
                    "name": "Isaiah 47:15",
                    "scripture": "Thus shall they be unto thee with whom thou hast laboured, even thy merchants, from thy youth: they shall wander every one to his quarter; none shall save thee."
                }
            }
        },
        "isa48": {
            "id": 48,
            "short": "Isa 48",
            "name": "Isaiah 48",
            "verses": {
                "isa48.1": {
                    "id": 1,
                    "short": "Isa 48:1",
                    "name": "Isaiah 48:1",
                    "scripture": "Hear ye this, O house of Jacob, which are called by the name of Israel, and are come forth out of the waters of Judah, which swear by the name of the Lord, and make mention of the God of Israel, but not in truth, nor in righteousness."
                },
                "isa48.2": {
                    "id": 2,
                    "short": "Isa 48:2",
                    "name": "Isaiah 48:2",
                    "scripture": "For they call themselves of the holy city, and stay themselves upon the God of Israel; The Lord of hosts is his name."
                },
                "isa48.3": {
                    "id": 3,
                    "short": "Isa 48:3",
                    "name": "Isaiah 48:3",
                    "scripture": "I have declared the former things from the beginning; and they went forth out of my mouth, and I shewed them; I did them suddenly, and they came to pass."
                },
                "isa48.4": {
                    "id": 4,
                    "short": "Isa 48:4",
                    "name": "Isaiah 48:4",
                    "scripture": "Because I knew that thou art obstinate, and thy neck is an iron sinew, and thy brow brass;"
                },
                "isa48.5": {
                    "id": 5,
                    "short": "Isa 48:5",
                    "name": "Isaiah 48:5",
                    "scripture": "I have even from the beginning declared it to thee; before it came to pass I shewed it thee: lest thou shouldest say, Mine idol hath done them, and my graven image, and my molten image, hath commanded them."
                },
                "isa48.6": {
                    "id": 6,
                    "short": "Isa 48:6",
                    "name": "Isaiah 48:6",
                    "scripture": "Thou hast heard, see all this; and will not ye declare it? I have shewed thee new things from this time, even hidden things, and thou didst not know them."
                },
                "isa48.7": {
                    "id": 7,
                    "short": "Isa 48:7",
                    "name": "Isaiah 48:7",
                    "scripture": "They are created now, and not from the beginning; even before the day when thou heardest them not; lest thou shouldest say, Behold, I knew them."
                },
                "isa48.8": {
                    "id": 8,
                    "short": "Isa 48:8",
                    "name": "Isaiah 48:8",
                    "scripture": "Yea, thou heardest not; yea, thou knewest not; yea, from that time that thine ear was not opened: for I knew that thou wouldest deal very treacherously, and wast called a transgressor from the womb."
                },
                "isa48.9": {
                    "id": 9,
                    "short": "Isa 48:9",
                    "name": "Isaiah 48:9",
                    "scripture": "For my name's sake will I defer mine anger, and for my praise will I refrain for thee, that I cut thee not off."
                },
                "isa48.10": {
                    "id": 10,
                    "short": "Isa 48:10",
                    "name": "Isaiah 48:10",
                    "scripture": "Behold, I have refined thee, but not with silver; I have chosen thee in the furnace of affliction."
                },
                "isa48.11": {
                    "id": 11,
                    "short": "Isa 48:11",
                    "name": "Isaiah 48:11",
                    "scripture": "For mine own sake, even for mine own sake, will I do it: for how should my name be polluted? and I will not give my glory unto another."
                },
                "isa48.12": {
                    "id": 12,
                    "short": "Isa 48:12",
                    "name": "Isaiah 48:12",
                    "scripture": "Hearken unto me, O Jacob and Israel, my called; I am he; I am the first, I also am the last."
                },
                "isa48.13": {
                    "id": 13,
                    "short": "Isa 48:13",
                    "name": "Isaiah 48:13",
                    "scripture": "Mine hand also hath laid the foundation of the earth, and my right hand hath spanned the heavens: when I call unto them, they stand up together."
                },
                "isa48.14": {
                    "id": 14,
                    "short": "Isa 48:14",
                    "name": "Isaiah 48:14",
                    "scripture": "All ye, assemble yourselves, and hear; which among them hath declared these things? The Lord hath loved him: he will do his pleasure on Babylon, and his arm shall be on the Chaldeans."
                },
                "isa48.15": {
                    "id": 15,
                    "short": "Isa 48:15",
                    "name": "Isaiah 48:15",
                    "scripture": "I, even I, have spoken; yea, I have called him: I have brought him, and he shall make his way prosperous."
                },
                "isa48.16": {
                    "id": 16,
                    "short": "Isa 48:16",
                    "name": "Isaiah 48:16",
                    "scripture": "Come ye near unto me, hear ye this; I have not spoken in secret from the beginning; from the time that it was, there am I: and now the Lord God, and his Spirit, hath sent me."
                },
                "isa48.17": {
                    "id": 17,
                    "short": "Isa 48:17",
                    "name": "Isaiah 48:17",
                    "scripture": "Thus saith the Lord, thy Redeemer, the Holy One of Israel; I am the Lord thy God which teacheth thee to profit, which leadeth thee by the way that thou shouldest go."
                },
                "isa48.18": {
                    "id": 18,
                    "short": "Isa 48:18",
                    "name": "Isaiah 48:18",
                    "scripture": "O that thou hadst hearkened to my commandments! then had thy peace been as a river, and thy righteousness as the waves of the sea:"
                },
                "isa48.19": {
                    "id": 19,
                    "short": "Isa 48:19",
                    "name": "Isaiah 48:19",
                    "scripture": "Thy seed also had been as the sand, and the offspring of thy bowels like the gravel thereof; his name should not have been cut off nor destroyed from before me."
                },
                "isa48.20": {
                    "id": 20,
                    "short": "Isa 48:20",
                    "name": "Isaiah 48:20",
                    "scripture": "Go ye forth of Babylon, flee ye from the Chaldeans, with a voice of singing declare ye, tell this, utter it even to the end of the earth; say ye, The Lord hath redeemed his servant Jacob."
                },
                "isa48.21": {
                    "id": 21,
                    "short": "Isa 48:21",
                    "name": "Isaiah 48:21",
                    "scripture": "And they thirsted not when he led them through the deserts: he caused the waters to flow out of the rock for them: he clave the rock also, and the waters gushed out."
                },
                "isa48.22": {
                    "id": 22,
                    "short": "Isa 48:22",
                    "name": "Isaiah 48:22",
                    "scripture": "There is no peace, saith the Lord, unto the wicked."
                }
            }
        },
        "isa49": {
            "id": 49,
            "short": "Isa 49",
            "name": "Isaiah 49",
            "verses": {
                "isa49.1": {
                    "id": 1,
                    "short": "Isa 49:1",
                    "name": "Isaiah 49:1",
                    "scripture": "Listen, O isles, unto me; and hearken, ye people, from far; The Lord hath called me from the womb; from the bowels of my mother hath he made mention of my name."
                },
                "isa49.2": {
                    "id": 2,
                    "short": "Isa 49:2",
                    "name": "Isaiah 49:2",
                    "scripture": "And he hath made my mouth like a sharp sword; in the shadow of his hand hath he hid me, and made me a polished shaft; in his quiver hath he hid me;"
                },
                "isa49.3": {
                    "id": 3,
                    "short": "Isa 49:3",
                    "name": "Isaiah 49:3",
                    "scripture": "And said unto me, Thou art my servant, O Israel, in whom I will be glorified."
                },
                "isa49.4": {
                    "id": 4,
                    "short": "Isa 49:4",
                    "name": "Isaiah 49:4",
                    "scripture": "Then I said, I have laboured in vain, I have spent my strength for nought, and in vain: yet surely my judgment is with the Lord, and my work with my God."
                },
                "isa49.5": {
                    "id": 5,
                    "short": "Isa 49:5",
                    "name": "Isaiah 49:5",
                    "scripture": "And now, saith the Lord that formed me from the womb to be his servant, to bring Jacob again to him, Though Israel be not gathered, yet shall I be glorious in the eyes of the Lord, and my God shall be my strength."
                },
                "isa49.6": {
                    "id": 6,
                    "short": "Isa 49:6",
                    "name": "Isaiah 49:6",
                    "scripture": "And he said, It is a light thing that thou shouldest be my servant to raise up the tribes of Jacob, and to restore the preserved of Israel: I will also give thee for a light to the Gentiles, that thou mayest be my salvation unto the end of the earth."
                },
                "isa49.7": {
                    "id": 7,
                    "short": "Isa 49:7",
                    "name": "Isaiah 49:7",
                    "scripture": "Thus saith the Lord, the Redeemer of Israel, and his Holy One, to him whom man despiseth, to him whom the nation abhorreth, to a servant of rulers, Kings shall see and arise, princes also shall worship, because of the Lord that is faithful, and the Holy One of Israel, and he shall choose thee."
                },
                "isa49.8": {
                    "id": 8,
                    "short": "Isa 49:8",
                    "name": "Isaiah 49:8",
                    "scripture": "Thus saith the Lord, In an acceptable time have I heard thee, and in a day of salvation have I helped thee: and I will preserve thee, and give thee for a covenant of the people, to establish the earth, to cause to inherit the desolate heritages;"
                },
                "isa49.9": {
                    "id": 9,
                    "short": "Isa 49:9",
                    "name": "Isaiah 49:9",
                    "scripture": "That thou mayest say to the prisoners, Go forth; to them that are in darkness, Shew yourselves. They shall feed in the ways, and their pastures shall be in all high places."
                },
                "isa49.10": {
                    "id": 10,
                    "short": "Isa 49:10",
                    "name": "Isaiah 49:10",
                    "scripture": "They shall not hunger nor thirst; neither shall the heat nor sun smite them: for he that hath mercy on them shall lead them, even by the springs of water shall he guide them."
                },
                "isa49.11": {
                    "id": 11,
                    "short": "Isa 49:11",
                    "name": "Isaiah 49:11",
                    "scripture": "And I will make all my mountains a way, and my highways shall be exalted."
                },
                "isa49.12": {
                    "id": 12,
                    "short": "Isa 49:12",
                    "name": "Isaiah 49:12",
                    "scripture": "Behold, these shall come from far: and, lo, these from the north and from the west; and these from the land of Sinim."
                },
                "isa49.13": {
                    "id": 13,
                    "short": "Isa 49:13",
                    "name": "Isaiah 49:13",
                    "scripture": "Sing, O heavens; and be joyful, O earth; and break forth into singing, O mountains: for the Lord hath comforted his people, and will have mercy upon his afflicted."
                },
                "isa49.14": {
                    "id": 14,
                    "short": "Isa 49:14",
                    "name": "Isaiah 49:14",
                    "scripture": "But Zion said, The Lord hath forsaken me, and my Lord hath forgotten me."
                },
                "isa49.15": {
                    "id": 15,
                    "short": "Isa 49:15",
                    "name": "Isaiah 49:15",
                    "scripture": "Can a woman forget her sucking child, that she should not have compassion on the son of her womb? yea, they may forget, yet will I not forget thee."
                },
                "isa49.16": {
                    "id": 16,
                    "short": "Isa 49:16",
                    "name": "Isaiah 49:16",
                    "scripture": "Behold, I have graven thee upon the palms of my hands; thy walls are continually before me."
                },
                "isa49.17": {
                    "id": 17,
                    "short": "Isa 49:17",
                    "name": "Isaiah 49:17",
                    "scripture": "Thy children shall make haste; thy destroyers and they that made thee waste shall go forth of thee."
                },
                "isa49.18": {
                    "id": 18,
                    "short": "Isa 49:18",
                    "name": "Isaiah 49:18",
                    "scripture": "Lift up thine eyes round about, and behold: all these gather themselves together, and come to thee. As I live, saith the Lord, thou shalt surely clothe thee with them all, as with an ornament, and bind them on thee, as a bride doeth."
                },
                "isa49.19": {
                    "id": 19,
                    "short": "Isa 49:19",
                    "name": "Isaiah 49:19",
                    "scripture": "For thy waste and thy desolate places, and the land of thy destruction, shall even now be too narrow by reason of the inhabitants, and they that swallowed thee up shall be far away."
                },
                "isa49.20": {
                    "id": 20,
                    "short": "Isa 49:20",
                    "name": "Isaiah 49:20",
                    "scripture": "The children which thou shalt have, after thou hast lost the other, shall say again in thine ears, The place is too strait for me: give place to me that I may dwell."
                },
                "isa49.21": {
                    "id": 21,
                    "short": "Isa 49:21",
                    "name": "Isaiah 49:21",
                    "scripture": "Then shalt thou say in thine heart, Who hath begotten me these, seeing I have lost my children, and am desolate, a captive, and removing to and fro? and who hath brought up these? Behold, I was left alone; these, where had they been?"
                },
                "isa49.22": {
                    "id": 22,
                    "short": "Isa 49:22",
                    "name": "Isaiah 49:22",
                    "scripture": "Thus saith the Lord God, Behold, I will lift up mine hand to the Gentiles, and set up my standard to the people: and they shall bring thy sons in their arms, and thy daughters shall be carried upon their shoulders."
                },
                "isa49.23": {
                    "id": 23,
                    "short": "Isa 49:23",
                    "name": "Isaiah 49:23",
                    "scripture": "And kings shall be thy nursing fathers, and their queens thy nursing mothers: they shall bow down to thee with their face toward the earth, and lick up the dust of thy feet; and thou shalt know that I am the Lord : for they shall not be ashamed that wait for me."
                },
                "isa49.24": {
                    "id": 24,
                    "short": "Isa 49:24",
                    "name": "Isaiah 49:24",
                    "scripture": "Shall the prey be taken from the mighty, or the lawful captive delivered?"
                },
                "isa49.25": {
                    "id": 25,
                    "short": "Isa 49:25",
                    "name": "Isaiah 49:25",
                    "scripture": "But thus saith the Lord, Even the captives of the mighty shall be taken away, and the prey of the terrible shall be delivered: for I will contend with him that contendeth with thee, and I will save thy children."
                },
                "isa49.26": {
                    "id": 26,
                    "short": "Isa 49:26",
                    "name": "Isaiah 49:26",
                    "scripture": "And I will feed them that oppress thee with their own flesh; and they shall be drunken with their own blood, as with sweet wine: and all flesh shall know that I the Lord am thy Saviour and thy Redeemer, the mighty One of Jacob."
                }
            }
        },
        "isa50": {
            "id": 50,
            "short": "Isa 50",
            "name": "Isaiah 50",
            "verses": {
                "isa50.1": {
                    "id": 1,
                    "short": "Isa 50:1",
                    "name": "Isaiah 50:1",
                    "scripture": "Thus saith the Lord, Where is the bill of your mother's divorcement, whom I have put away? or which of my creditors is it to whom I have sold you? Behold, for your iniquities have ye sold yourselves, and for your transgressions is your mother put away."
                },
                "isa50.2": {
                    "id": 2,
                    "short": "Isa 50:2",
                    "name": "Isaiah 50:2",
                    "scripture": "Wherefore, when I came, was there no man? when I called, was there none to answer? Is my hand shortened at all, that it cannot redeem? or have I no power to deliver? behold, at my rebuke I dry up the sea, I make the rivers a wilderness: their fish stinketh, because there is no water, and dieth for thirst."
                },
                "isa50.3": {
                    "id": 3,
                    "short": "Isa 50:3",
                    "name": "Isaiah 50:3",
                    "scripture": "I clothe the heavens with blackness, and I make sackcloth their covering."
                },
                "isa50.4": {
                    "id": 4,
                    "short": "Isa 50:4",
                    "name": "Isaiah 50:4",
                    "scripture": "The Lord God hath given me the tongue of the learned, that I should know how to speak a word in season to him that is weary: he wakeneth morning by morning, he wakeneth mine ear to hear as the learned."
                },
                "isa50.5": {
                    "id": 5,
                    "short": "Isa 50:5",
                    "name": "Isaiah 50:5",
                    "scripture": "The Lord God hath opened mine ear, and I was not rebellious, neither turned away back."
                },
                "isa50.6": {
                    "id": 6,
                    "short": "Isa 50:6",
                    "name": "Isaiah 50:6",
                    "scripture": "I gave my back to the smiters, and my cheeks to them that plucked off the hair: I hid not my face from shame and spitting."
                },
                "isa50.7": {
                    "id": 7,
                    "short": "Isa 50:7",
                    "name": "Isaiah 50:7",
                    "scripture": "For the Lord God will help me; therefore shall I not be confounded: therefore have I set my face like a flint, and I know that I shall not be ashamed."
                },
                "isa50.8": {
                    "id": 8,
                    "short": "Isa 50:8",
                    "name": "Isaiah 50:8",
                    "scripture": "He is near that justifieth me; who will contend with me? let us stand together: who is mine adversary? let him come near to me."
                },
                "isa50.9": {
                    "id": 9,
                    "short": "Isa 50:9",
                    "name": "Isaiah 50:9",
                    "scripture": "Behold, the Lord God will help me; who is he that shall condemn me? lo, they all shall wax old as a garment; the moth shall eat them up."
                },
                "isa50.10": {
                    "id": 10,
                    "short": "Isa 50:10",
                    "name": "Isaiah 50:10",
                    "scripture": "Who is among you that feareth the Lord, that obeyeth the voice of his servant, that walketh in darkness, and hath no light? let him trust in the name of the Lord, and stay upon his God."
                },
                "isa50.11": {
                    "id": 11,
                    "short": "Isa 50:11",
                    "name": "Isaiah 50:11",
                    "scripture": "Behold, all ye that kindle a fire, that compass yourselves about with sparks: walk in the light of your fire, and in the sparks that ye have kindled. This shall ye have of mine hand; ye shall lie down in sorrow."
                }
            }
        },
        "isa51": {
            "id": 51,
            "short": "Isa 51",
            "name": "Isaiah 51",
            "verses": {
                "isa51.1": {
                    "id": 1,
                    "short": "Isa 51:1",
                    "name": "Isaiah 51:1",
                    "scripture": "Hearken to me, ye that follow after righteousness, ye that seek the Lord : look unto the rock whence ye are hewn, and to the hole of the pit whence ye are digged."
                },
                "isa51.2": {
                    "id": 2,
                    "short": "Isa 51:2",
                    "name": "Isaiah 51:2",
                    "scripture": "Look unto Abraham your father, and unto Sarah that bare you: for I called him alone, and blessed him, and increased him."
                },
                "isa51.3": {
                    "id": 3,
                    "short": "Isa 51:3",
                    "name": "Isaiah 51:3",
                    "scripture": "For the Lord shall comfort Zion: he will comfort all her waste places; and he will make her wilderness like Eden, and her desert like the garden of the Lord; joy and gladness shall be found therein, thanksgiving, and the voice of melody."
                },
                "isa51.4": {
                    "id": 4,
                    "short": "Isa 51:4",
                    "name": "Isaiah 51:4",
                    "scripture": "Hearken unto me, my people; and give ear unto me, O my nation: for a law shall proceed from me, and I will make my judgment to rest for a light of the people."
                },
                "isa51.5": {
                    "id": 5,
                    "short": "Isa 51:5",
                    "name": "Isaiah 51:5",
                    "scripture": "My righteousness is near; my salvation is gone forth, and mine arms shall judge the people; the isles shall wait upon me, and on mine arm shall they trust."
                },
                "isa51.6": {
                    "id": 6,
                    "short": "Isa 51:6",
                    "name": "Isaiah 51:6",
                    "scripture": "Lift up your eyes to the heavens, and look upon the earth beneath: for the heavens shall vanish away like smoke, and the earth shall wax old like a garment, and they that dwell therein shall die in like manner: but my salvation shall be for ever, and my righteousness shall not be abolished."
                },
                "isa51.7": {
                    "id": 7,
                    "short": "Isa 51:7",
                    "name": "Isaiah 51:7",
                    "scripture": "Hearken unto me, ye that know righteousness, the people in whose heart is my law; fear ye not the reproach of men, neither be ye afraid of their revilings."
                },
                "isa51.8": {
                    "id": 8,
                    "short": "Isa 51:8",
                    "name": "Isaiah 51:8",
                    "scripture": "For the moth shall eat them up like a garment, and the worm shall eat them like wool: but my righteousness shall be for ever, and my salvation from generation to generation."
                },
                "isa51.9": {
                    "id": 9,
                    "short": "Isa 51:9",
                    "name": "Isaiah 51:9",
                    "scripture": "Awake, awake, put on strength, O arm of the Lord; awake, as in the ancient days, in the generations of old. Art thou not it that hath cut Rahab, and wounded the dragon?"
                },
                "isa51.10": {
                    "id": 10,
                    "short": "Isa 51:10",
                    "name": "Isaiah 51:10",
                    "scripture": "Art thou not it which hath dried the sea, the waters of the great deep; that hath made the depths of the sea a way for the ransomed to pass over?"
                },
                "isa51.11": {
                    "id": 11,
                    "short": "Isa 51:11",
                    "name": "Isaiah 51:11",
                    "scripture": "Therefore the redeemed of the Lord shall return, and come with singing unto Zion; and everlasting joy shall be upon their head: they shall obtain gladness and joy; and sorrow and mourning shall flee away."
                },
                "isa51.12": {
                    "id": 12,
                    "short": "Isa 51:12",
                    "name": "Isaiah 51:12",
                    "scripture": "I, even I, am he that comforteth you: who art thou, that thou shouldest be afraid of a man that shall die, and of the son of man which shall be made as grass;"
                },
                "isa51.13": {
                    "id": 13,
                    "short": "Isa 51:13",
                    "name": "Isaiah 51:13",
                    "scripture": "And forgettest the Lord thy maker, that hath stretched forth the heavens, and laid the foundations of the earth; and hast feared continually every day because of the fury of the oppressor, as if he were ready to destroy? and where is the fury of the oppressor?"
                },
                "isa51.14": {
                    "id": 14,
                    "short": "Isa 51:14",
                    "name": "Isaiah 51:14",
                    "scripture": "The captive exile hasteneth that he may be loosed, and that he should not die in the pit, nor that his bread should fail."
                },
                "isa51.15": {
                    "id": 15,
                    "short": "Isa 51:15",
                    "name": "Isaiah 51:15",
                    "scripture": "But I am the Lord thy God, that divided the sea, whose waves roared: The Lord of hosts is his name."
                },
                "isa51.16": {
                    "id": 16,
                    "short": "Isa 51:16",
                    "name": "Isaiah 51:16",
                    "scripture": "And I have put my words in thy mouth, and I have covered thee in the shadow of mine hand, that I may plant the heavens, and lay the foundations of the earth, and say unto Zion, Thou art my people."
                },
                "isa51.17": {
                    "id": 17,
                    "short": "Isa 51:17",
                    "name": "Isaiah 51:17",
                    "scripture": "Awake, awake, stand up, O Jerusalem, which hast drunk at the hand of the Lord the cup of his fury; thou hast drunken the dregs of the cup of trembling, and wrung them out."
                },
                "isa51.18": {
                    "id": 18,
                    "short": "Isa 51:18",
                    "name": "Isaiah 51:18",
                    "scripture": "There is none to guide her among all the sons whom she hath brought forth; neither is there any that taketh her by the hand of all the sons that she hath brought up."
                },
                "isa51.19": {
                    "id": 19,
                    "short": "Isa 51:19",
                    "name": "Isaiah 51:19",
                    "scripture": "These two things are come unto thee; who shall be sorry for thee? desolation, and destruction, and the famine, and the sword: by whom shall I comfort thee?"
                },
                "isa51.20": {
                    "id": 20,
                    "short": "Isa 51:20",
                    "name": "Isaiah 51:20",
                    "scripture": "Thy sons have fainted, they lie at the head of all the streets, as a wild bull in a net: they are full of the fury of the Lord, the rebuke of thy God."
                },
                "isa51.21": {
                    "id": 21,
                    "short": "Isa 51:21",
                    "name": "Isaiah 51:21",
                    "scripture": "Therefore hear now this, thou afflicted, and drunken, but not with wine:"
                },
                "isa51.22": {
                    "id": 22,
                    "short": "Isa 51:22",
                    "name": "Isaiah 51:22",
                    "scripture": "Thus saith thy Lord the Lord, and thy God that pleadeth the cause of his people, Behold, I have taken out of thine hand the cup of trembling, even the dregs of the cup of my fury; thou shalt no more drink it again:"
                },
                "isa51.23": {
                    "id": 23,
                    "short": "Isa 51:23",
                    "name": "Isaiah 51:23",
                    "scripture": "But I will put it into the hand of them that afflict thee; which have said to thy soul, Bow down, that we may go over: and thou hast laid thy body as the ground, and as the street, to them that went over."
                }
            }
        },
        "isa52": {
            "id": 52,
            "short": "Isa 52",
            "name": "Isaiah 52",
            "verses": {
                "isa52.1": {
                    "id": 1,
                    "short": "Isa 52:1",
                    "name": "Isaiah 52:1",
                    "scripture": "Awake, awake; put on thy strength, O Zion; put on thy beautiful garments, O Jerusalem, the holy city: for henceforth there shall no more come into thee the uncircumcised and the unclean."
                },
                "isa52.2": {
                    "id": 2,
                    "short": "Isa 52:2",
                    "name": "Isaiah 52:2",
                    "scripture": "Shake thyself from the dust; arise, and sit down, O Jerusalem: loose thyself from the bands of thy neck, O captive daughter of Zion."
                },
                "isa52.3": {
                    "id": 3,
                    "short": "Isa 52:3",
                    "name": "Isaiah 52:3",
                    "scripture": "For thus saith the Lord, Ye have sold yourselves for nought; and ye shall be redeemed without money."
                },
                "isa52.4": {
                    "id": 4,
                    "short": "Isa 52:4",
                    "name": "Isaiah 52:4",
                    "scripture": "For thus saith the Lord God, My people went down aforetime into Egypt to sojourn there; and the Assyrian oppressed them without cause."
                },
                "isa52.5": {
                    "id": 5,
                    "short": "Isa 52:5",
                    "name": "Isaiah 52:5",
                    "scripture": "Now therefore, what have I here, saith the Lord, that my people is taken away for nought? they that rule over them make them to howl, saith the Lord; and my name continually every day is blasphemed."
                },
                "isa52.6": {
                    "id": 6,
                    "short": "Isa 52:6",
                    "name": "Isaiah 52:6",
                    "scripture": "Therefore my people shall know my name: therefore they shall know in that day that I am he that doth speak: behold, it is I."
                },
                "isa52.7": {
                    "id": 7,
                    "short": "Isa 52:7",
                    "name": "Isaiah 52:7",
                    "scripture": "How beautiful upon the mountains are the feet of him that bringeth good tidings, that publisheth peace; that bringeth good tidings of good, that publisheth salvation; that saith unto Zion, Thy God reigneth!"
                },
                "isa52.8": {
                    "id": 8,
                    "short": "Isa 52:8",
                    "name": "Isaiah 52:8",
                    "scripture": "Thy watchmen shall lift up the voice; with the voice together shall they sing: for they shall see eye to eye, when the Lord shall bring again Zion."
                },
                "isa52.9": {
                    "id": 9,
                    "short": "Isa 52:9",
                    "name": "Isaiah 52:9",
                    "scripture": "Break forth into joy, sing together, ye waste places of Jerusalem: for the Lord hath comforted his people, he hath redeemed Jerusalem."
                },
                "isa52.10": {
                    "id": 10,
                    "short": "Isa 52:10",
                    "name": "Isaiah 52:10",
                    "scripture": "The Lord hath made bare his holy arm in the eyes of all the nations; and all the ends of the earth shall see the salvation of our God."
                },
                "isa52.11": {
                    "id": 11,
                    "short": "Isa 52:11",
                    "name": "Isaiah 52:11",
                    "scripture": "Depart ye, depart ye, go ye out from thence, touch no unclean thing; go ye out of the midst of her; be ye clean, that bear the vessels of the Lord ."
                },
                "isa52.12": {
                    "id": 12,
                    "short": "Isa 52:12",
                    "name": "Isaiah 52:12",
                    "scripture": "For ye shall not go out with haste, nor go by flight: for the Lord will go before you; and the God of Israel will be your rearward."
                },
                "isa52.13": {
                    "id": 13,
                    "short": "Isa 52:13",
                    "name": "Isaiah 52:13",
                    "scripture": "Behold, my servant shall deal prudently, he shall be exalted and extolled, and be very high."
                },
                "isa52.14": {
                    "id": 14,
                    "short": "Isa 52:14",
                    "name": "Isaiah 52:14",
                    "scripture": "As many were astonished at thee; his visage was so marred more than any man, and his form more than the sons of men:"
                },
                "isa52.15": {
                    "id": 15,
                    "short": "Isa 52:15",
                    "name": "Isaiah 52:15",
                    "scripture": "So shall he sprinkle many nations; the kings shall shut their mouths at him: for that which had not been told them shall they see; and that which they had not heard shall they consider."
                }
            }
        },
        "isa53": {
            "id": 53,
            "short": "Isa 53",
            "name": "Isaiah 53",
            "verses": {
                "isa53.1": {
                    "id": 1,
                    "short": "Isa 53:1",
                    "name": "Isaiah 53:1",
                    "scripture": "Who hath believed our report? and to whom is the arm of the Lord revealed?"
                },
                "isa53.2": {
                    "id": 2,
                    "short": "Isa 53:2",
                    "name": "Isaiah 53:2",
                    "scripture": "For he shall grow up before him as a tender plant, and as a root out of a dry ground: he hath no form nor comeliness; and when we shall see him, there is no beauty that we should desire him."
                },
                "isa53.3": {
                    "id": 3,
                    "short": "Isa 53:3",
                    "name": "Isaiah 53:3",
                    "scripture": "He is despised and rejected of men; a man of sorrows, and acquainted with grief: and we hid as it were our faces from him; he was despised, and we esteemed him not."
                },
                "isa53.4": {
                    "id": 4,
                    "short": "Isa 53:4",
                    "name": "Isaiah 53:4",
                    "scripture": "Surely he hath borne our griefs, and carried our sorrows: yet we did esteem him stricken, smitten of God, and afflicted."
                },
                "isa53.5": {
                    "id": 5,
                    "short": "Isa 53:5",
                    "name": "Isaiah 53:5",
                    "scripture": "But he was wounded for our transgressions, he was bruised for our iniquities: the chastisement of our peace was upon him; and with his stripes we are healed."
                },
                "isa53.6": {
                    "id": 6,
                    "short": "Isa 53:6",
                    "name": "Isaiah 53:6",
                    "scripture": "All we like sheep have gone astray; we have turned every one to his own way; and the Lord hath laid on him the iniquity of us all."
                },
                "isa53.7": {
                    "id": 7,
                    "short": "Isa 53:7",
                    "name": "Isaiah 53:7",
                    "scripture": "He was oppressed, and he was afflicted, yet he opened not his mouth: he is brought as a lamb to the slaughter, and as a sheep before her shearers is dumb, so he openeth not his mouth."
                },
                "isa53.8": {
                    "id": 8,
                    "short": "Isa 53:8",
                    "name": "Isaiah 53:8",
                    "scripture": "He was taken from prison and from judgment: and who shall declare his generation? for he was cut off out of the land of the living: for the transgression of my people was he stricken."
                },
                "isa53.9": {
                    "id": 9,
                    "short": "Isa 53:9",
                    "name": "Isaiah 53:9",
                    "scripture": "And he made his grave with the wicked, and with the rich in his death; because he had done no violence, neither was any deceit in his mouth."
                },
                "isa53.10": {
                    "id": 10,
                    "short": "Isa 53:10",
                    "name": "Isaiah 53:10",
                    "scripture": "Yet it pleased the Lord to bruise him; he hath put him to grief: when thou shalt make his soul an offering for sin, he shall see his seed, he shall prolong his days, and the pleasure of the Lord shall prosper in his hand."
                },
                "isa53.11": {
                    "id": 11,
                    "short": "Isa 53:11",
                    "name": "Isaiah 53:11",
                    "scripture": "He shall see of the travail of his soul, and shall be satisfied: by his knowledge shall my righteous servant justify many; for he shall bear their iniquities."
                },
                "isa53.12": {
                    "id": 12,
                    "short": "Isa 53:12",
                    "name": "Isaiah 53:12",
                    "scripture": "Therefore will I divide him a portion with the great, and he shall divide the spoil with the strong; because he hath poured out his soul unto death: and he was numbered with the transgressors; and he bare the sin of many, and made intercession for the transgressors."
                }
            }
        },
        "isa54": {
            "id": 54,
            "short": "Isa 54",
            "name": "Isaiah 54",
            "verses": {
                "isa54.1": {
                    "id": 1,
                    "short": "Isa 54:1",
                    "name": "Isaiah 54:1",
                    "scripture": "Sing, O barren, thou that didst not bear; break forth into singing, and cry aloud, thou that didst not travail with child: for more are the children of the desolate than the children of the married wife, saith the Lord ."
                },
                "isa54.2": {
                    "id": 2,
                    "short": "Isa 54:2",
                    "name": "Isaiah 54:2",
                    "scripture": "Enlarge the place of thy tent, and let them stretch forth the curtains of thine habitations: spare not, lengthen thy cords, and strengthen thy stakes;"
                },
                "isa54.3": {
                    "id": 3,
                    "short": "Isa 54:3",
                    "name": "Isaiah 54:3",
                    "scripture": "For thou shalt break forth on the right hand and on the left; and thy seed shall inherit the Gentiles, and make the desolate cities to be inhabited."
                },
                "isa54.4": {
                    "id": 4,
                    "short": "Isa 54:4",
                    "name": "Isaiah 54:4",
                    "scripture": "Fear not; for thou shalt not be ashamed: neither be thou confounded; for thou shalt not be put to shame: for thou shalt forget the shame of thy youth, and shalt not remember the reproach of thy widowhood any more."
                },
                "isa54.5": {
                    "id": 5,
                    "short": "Isa 54:5",
                    "name": "Isaiah 54:5",
                    "scripture": "For thy Maker is thine husband; the Lord of hosts is his name; and thy Redeemer the Holy One of Israel; The God of the whole earth shall he be called."
                },
                "isa54.6": {
                    "id": 6,
                    "short": "Isa 54:6",
                    "name": "Isaiah 54:6",
                    "scripture": "For the Lord hath called thee as a woman forsaken and grieved in spirit, and a wife of youth, when thou wast refused, saith thy God."
                },
                "isa54.7": {
                    "id": 7,
                    "short": "Isa 54:7",
                    "name": "Isaiah 54:7",
                    "scripture": "For a small moment have I forsaken thee; but with great mercies will I gather thee."
                },
                "isa54.8": {
                    "id": 8,
                    "short": "Isa 54:8",
                    "name": "Isaiah 54:8",
                    "scripture": "In a little wrath I hid my face from thee for a moment; but with everlasting kindness will I have mercy on thee, saith the Lord thy Redeemer."
                },
                "isa54.9": {
                    "id": 9,
                    "short": "Isa 54:9",
                    "name": "Isaiah 54:9",
                    "scripture": "For this is as the waters of Noah unto me: for as I have sworn that the waters of Noah should no more go over the earth; so have I sworn that I would not be wroth with thee, nor rebuke thee."
                },
                "isa54.10": {
                    "id": 10,
                    "short": "Isa 54:10",
                    "name": "Isaiah 54:10",
                    "scripture": "For the mountains shall depart, and the hills be removed; but my kindness shall not depart from thee, neither shall the covenant of my peace be removed, saith the Lord that hath mercy on thee."
                },
                "isa54.11": {
                    "id": 11,
                    "short": "Isa 54:11",
                    "name": "Isaiah 54:11",
                    "scripture": "O thou afflicted, tossed with tempest, and not comforted, behold, I will lay thy stones with fair colours, and lay thy foundations with sapphires."
                },
                "isa54.12": {
                    "id": 12,
                    "short": "Isa 54:12",
                    "name": "Isaiah 54:12",
                    "scripture": "And I will make thy windows of agates, and thy gates of carbuncles, and all thy borders of pleasant stones."
                },
                "isa54.13": {
                    "id": 13,
                    "short": "Isa 54:13",
                    "name": "Isaiah 54:13",
                    "scripture": "And all thy children shall be taught of the Lord; and great shall be the peace of thy children."
                },
                "isa54.14": {
                    "id": 14,
                    "short": "Isa 54:14",
                    "name": "Isaiah 54:14",
                    "scripture": "In righteousness shalt thou be established: thou shalt be far from oppression; for thou shalt not fear: and from terror; for it shall not come near thee."
                },
                "isa54.15": {
                    "id": 15,
                    "short": "Isa 54:15",
                    "name": "Isaiah 54:15",
                    "scripture": "Behold, they shall surely gather together, but not by me: whosoever shall gather together against thee shall fall for thy sake."
                },
                "isa54.16": {
                    "id": 16,
                    "short": "Isa 54:16",
                    "name": "Isaiah 54:16",
                    "scripture": "Behold, I have created the smith that bloweth the coals in the fire, and that bringeth forth an instrument for his work; and I have created the waster to destroy."
                },
                "isa54.17": {
                    "id": 17,
                    "short": "Isa 54:17",
                    "name": "Isaiah 54:17",
                    "scripture": "No weapon that is formed against thee shall prosper; and every tongue that shall rise against thee in judgment thou shalt condemn. This is the heritage of the servants of the Lord, and their righteousness is of me, saith the Lord ."
                }
            }
        },
        "isa55": {
            "id": 55,
            "short": "Isa 55",
            "name": "Isaiah 55",
            "verses": {
                "isa55.1": {
                    "id": 1,
                    "short": "Isa 55:1",
                    "name": "Isaiah 55:1",
                    "scripture": "Ho, every one that thirsteth, come ye to the waters, and he that hath no money; come ye, buy, and eat; yea, come, buy wine and milk without money and without price."
                },
                "isa55.2": {
                    "id": 2,
                    "short": "Isa 55:2",
                    "name": "Isaiah 55:2",
                    "scripture": "Wherefore do ye spend money for that which is not bread? and your labour for that which satisfieth not? hearken diligently unto me, and eat ye that which is good, and let your soul delight itself in fatness."
                },
                "isa55.3": {
                    "id": 3,
                    "short": "Isa 55:3",
                    "name": "Isaiah 55:3",
                    "scripture": "Incline your ear, and come unto me: hear, and your soul shall live; and I will make an everlasting covenant with you, even the sure mercies of David."
                },
                "isa55.4": {
                    "id": 4,
                    "short": "Isa 55:4",
                    "name": "Isaiah 55:4",
                    "scripture": "Behold, I have given him for a witness to the people, a leader and commander to the people."
                },
                "isa55.5": {
                    "id": 5,
                    "short": "Isa 55:5",
                    "name": "Isaiah 55:5",
                    "scripture": "Behold, thou shalt call a nation that thou knowest not, and nations that knew not thee shall run unto thee because of the Lord thy God, and for the Holy One of Israel; for he hath glorified thee."
                },
                "isa55.6": {
                    "id": 6,
                    "short": "Isa 55:6",
                    "name": "Isaiah 55:6",
                    "scripture": "Seek ye the Lord while he may be found, call ye upon him while he is near:"
                },
                "isa55.7": {
                    "id": 7,
                    "short": "Isa 55:7",
                    "name": "Isaiah 55:7",
                    "scripture": "Let the wicked forsake his way, and the unrighteous man his thoughts: and let him return unto the Lord, and he will have mercy upon him; and to our God, for he will abundantly pardon."
                },
                "isa55.8": {
                    "id": 8,
                    "short": "Isa 55:8",
                    "name": "Isaiah 55:8",
                    "scripture": "For my thoughts are not your thoughts, neither are your ways my ways, saith the Lord ."
                },
                "isa55.9": {
                    "id": 9,
                    "short": "Isa 55:9",
                    "name": "Isaiah 55:9",
                    "scripture": "For as the heavens are higher than the earth, so are my ways higher than your ways, and my thoughts than your thoughts."
                },
                "isa55.10": {
                    "id": 10,
                    "short": "Isa 55:10",
                    "name": "Isaiah 55:10",
                    "scripture": "For as the rain cometh down, and the snow from heaven, and returneth not thither, but watereth the earth, and maketh it bring forth and bud, that it may give seed to the sower, and bread to the eater:"
                },
                "isa55.11": {
                    "id": 11,
                    "short": "Isa 55:11",
                    "name": "Isaiah 55:11",
                    "scripture": "So shall my word be that goeth forth out of my mouth: it shall not return unto me void, but it shall accomplish that which I please, and it shall prosper in the thing whereto I sent it."
                },
                "isa55.12": {
                    "id": 12,
                    "short": "Isa 55:12",
                    "name": "Isaiah 55:12",
                    "scripture": "For ye shall go out with joy, and be led forth with peace: the mountains and the hills shall break forth before you into singing, and all the trees of the field shall clap their hands."
                },
                "isa55.13": {
                    "id": 13,
                    "short": "Isa 55:13",
                    "name": "Isaiah 55:13",
                    "scripture": "Instead of the thorn shall come up the fir tree, and instead of the brier shall come up the myrtle tree: and it shall be to the Lord for a name, for an everlasting sign that shall not be cut off."
                }
            }
        },
        "isa56": {
            "id": 56,
            "short": "Isa 56",
            "name": "Isaiah 56",
            "verses": {
                "isa56.1": {
                    "id": 1,
                    "short": "Isa 56:1",
                    "name": "Isaiah 56:1",
                    "scripture": "Thus saith the Lord, Keep ye judgment, and do justice: for my salvation is near to come, and my righteousness to be revealed."
                },
                "isa56.2": {
                    "id": 2,
                    "short": "Isa 56:2",
                    "name": "Isaiah 56:2",
                    "scripture": "Blessed is the man that doeth this, and the son of man that layeth hold on it; that keepeth the sabbath from polluting it, and keepeth his hand from doing any evil."
                },
                "isa56.3": {
                    "id": 3,
                    "short": "Isa 56:3",
                    "name": "Isaiah 56:3",
                    "scripture": "Neither let the son of the stranger, that hath joined himself to the Lord, speak, saying, The Lord hath utterly separated me from his people: neither let the eunuch say, Behold, I am a dry tree."
                },
                "isa56.4": {
                    "id": 4,
                    "short": "Isa 56:4",
                    "name": "Isaiah 56:4",
                    "scripture": "For thus saith the Lord unto the eunuchs that keep my sabbaths, and choose the things that please me, and take hold of my covenant;"
                },
                "isa56.5": {
                    "id": 5,
                    "short": "Isa 56:5",
                    "name": "Isaiah 56:5",
                    "scripture": "Even unto them will I give in mine house and within my walls a place and a name better than of sons and of daughters: I will give them an everlasting name, that shall not be cut off."
                },
                "isa56.6": {
                    "id": 6,
                    "short": "Isa 56:6",
                    "name": "Isaiah 56:6",
                    "scripture": "Also the sons of the stranger, that join themselves to the Lord, to serve him, and to love the name of the Lord, to be his servants, every one that keepeth the sabbath from polluting it, and taketh hold of my covenant;"
                },
                "isa56.7": {
                    "id": 7,
                    "short": "Isa 56:7",
                    "name": "Isaiah 56:7",
                    "scripture": "Even them will I bring to my holy mountain, and make them joyful in my house of prayer: their burnt offerings and their sacrifices shall be accepted upon mine altar; for mine house shall be called an house of prayer for all people."
                },
                "isa56.8": {
                    "id": 8,
                    "short": "Isa 56:8",
                    "name": "Isaiah 56:8",
                    "scripture": "The Lord God which gathereth the outcasts of Israel saith, Yet will I gather others to him, beside those that are gathered unto him."
                },
                "isa56.9": {
                    "id": 9,
                    "short": "Isa 56:9",
                    "name": "Isaiah 56:9",
                    "scripture": "All ye beasts of the field, come to devour, yea, all ye beasts in the forest."
                },
                "isa56.10": {
                    "id": 10,
                    "short": "Isa 56:10",
                    "name": "Isaiah 56:10",
                    "scripture": "His watchmen are blind: they are all ignorant, they are all dumb dogs, they cannot bark; sleeping, lying down, loving to slumber."
                },
                "isa56.11": {
                    "id": 11,
                    "short": "Isa 56:11",
                    "name": "Isaiah 56:11",
                    "scripture": "Yea, they are greedy dogs which can never have enough, and they are shepherds that cannot understand: they all look to their own way, every one for his gain, from his quarter."
                },
                "isa56.12": {
                    "id": 12,
                    "short": "Isa 56:12",
                    "name": "Isaiah 56:12",
                    "scripture": "Come ye, say they, I will fetch wine, and we will fill ourselves with strong drink; and to morrow shall be as this day, and much more abundant."
                }
            }
        },
        "isa57": {
            "id": 57,
            "short": "Isa 57",
            "name": "Isaiah 57",
            "verses": {
                "isa57.1": {
                    "id": 1,
                    "short": "Isa 57:1",
                    "name": "Isaiah 57:1",
                    "scripture": "The righteous perisheth, and no man layeth it to heart: and merciful men are taken away, none considering that the righteous is taken away from the evil to come."
                },
                "isa57.2": {
                    "id": 2,
                    "short": "Isa 57:2",
                    "name": "Isaiah 57:2",
                    "scripture": "He shall enter into peace: they shall rest in their beds, each one walking in his uprightness."
                },
                "isa57.3": {
                    "id": 3,
                    "short": "Isa 57:3",
                    "name": "Isaiah 57:3",
                    "scripture": "But draw near hither, ye sons of the sorceress, the seed of the adulterer and the whore."
                },
                "isa57.4": {
                    "id": 4,
                    "short": "Isa 57:4",
                    "name": "Isaiah 57:4",
                    "scripture": "Against whom do ye sport yourselves? against whom make ye a wide mouth, and draw out the tongue? are ye not children of transgression, a seed of falsehood,"
                },
                "isa57.5": {
                    "id": 5,
                    "short": "Isa 57:5",
                    "name": "Isaiah 57:5",
                    "scripture": "Enflaming yourselves with idols under every green tree, slaying the children in the valleys under the clifts of the rocks?"
                },
                "isa57.6": {
                    "id": 6,
                    "short": "Isa 57:6",
                    "name": "Isaiah 57:6",
                    "scripture": "Among the smooth stones of the stream is thy portion; they, they are thy lot: even to them hast thou poured a drink offering, thou hast offered a meat offering. Should I receive comfort in these?"
                },
                "isa57.7": {
                    "id": 7,
                    "short": "Isa 57:7",
                    "name": "Isaiah 57:7",
                    "scripture": "Upon a lofty and high mountain hast thou set thy bed: even thither wentest thou up to offer sacrifice."
                },
                "isa57.8": {
                    "id": 8,
                    "short": "Isa 57:8",
                    "name": "Isaiah 57:8",
                    "scripture": "Behind the doors also and the posts hast thou set up thy remembrance: for thou hast discovered thyself to another than me, and art gone up; thou hast enlarged thy bed, and made thee a covenant with them; thou lovedst their bed where thou sawest it."
                },
                "isa57.9": {
                    "id": 9,
                    "short": "Isa 57:9",
                    "name": "Isaiah 57:9",
                    "scripture": "And thou wentest to the king with ointment, and didst increase thy perfumes, and didst send thy messengers far off, and didst debase thyself even unto hell."
                },
                "isa57.10": {
                    "id": 10,
                    "short": "Isa 57:10",
                    "name": "Isaiah 57:10",
                    "scripture": "Thou art wearied in the greatness of thy way; yet saidst thou not, There is no hope: thou hast found the life of thine hand; therefore thou wast not grieved."
                },
                "isa57.11": {
                    "id": 11,
                    "short": "Isa 57:11",
                    "name": "Isaiah 57:11",
                    "scripture": "And of whom hast thou been afraid or feared, that thou hast lied, and hast not remembered me, nor laid it to thy heart? have not I held my peace even of old, and thou fearest me not?"
                },
                "isa57.12": {
                    "id": 12,
                    "short": "Isa 57:12",
                    "name": "Isaiah 57:12",
                    "scripture": "I will declare thy righteousness, and thy works; for they shall not profit thee."
                },
                "isa57.13": {
                    "id": 13,
                    "short": "Isa 57:13",
                    "name": "Isaiah 57:13",
                    "scripture": "When thou criest, let thy companies deliver thee; but the wind shall carry them all away; vanity shall take them: but he that putteth his trust in me shall possess the land, and shall inherit my holy mountain;"
                },
                "isa57.14": {
                    "id": 14,
                    "short": "Isa 57:14",
                    "name": "Isaiah 57:14",
                    "scripture": "And shall say, Cast ye up, cast ye up, prepare the way, take up the stumblingblock out of the way of my people."
                },
                "isa57.15": {
                    "id": 15,
                    "short": "Isa 57:15",
                    "name": "Isaiah 57:15",
                    "scripture": "For thus saith the high and lofty One that inhabiteth eternity, whose name is Holy; I dwell in the high and holy place, with him also that is of a contrite and humble spirit, to revive the spirit of the humble, and to revive the heart of the contrite ones."
                },
                "isa57.16": {
                    "id": 16,
                    "short": "Isa 57:16",
                    "name": "Isaiah 57:16",
                    "scripture": "For I will not contend for ever, neither will I be always wroth: for the spirit should fail before me, and the souls which I have made."
                },
                "isa57.17": {
                    "id": 17,
                    "short": "Isa 57:17",
                    "name": "Isaiah 57:17",
                    "scripture": "For the iniquity of his covetousness was I wroth, and smote him: I hid me, and was wroth, and he went on frowardly in the way of his heart."
                },
                "isa57.18": {
                    "id": 18,
                    "short": "Isa 57:18",
                    "name": "Isaiah 57:18",
                    "scripture": "I have seen his ways, and will heal him: I will lead him also, and restore comforts unto him and to his mourners."
                },
                "isa57.19": {
                    "id": 19,
                    "short": "Isa 57:19",
                    "name": "Isaiah 57:19",
                    "scripture": "I create the fruit of the lips; Peace, peace to him that is far off, and to him that is near, saith the Lord; and I will heal him."
                },
                "isa57.20": {
                    "id": 20,
                    "short": "Isa 57:20",
                    "name": "Isaiah 57:20",
                    "scripture": "But the wicked are like the troubled sea, when it cannot rest, whose waters cast up mire and dirt."
                },
                "isa57.21": {
                    "id": 21,
                    "short": "Isa 57:21",
                    "name": "Isaiah 57:21",
                    "scripture": "There is no peace, saith my God, to the wicked."
                }
            }
        },
        "isa58": {
            "id": 58,
            "short": "Isa 58",
            "name": "Isaiah 58",
            "verses": {
                "isa58.1": {
                    "id": 1,
                    "short": "Isa 58:1",
                    "name": "Isaiah 58:1",
                    "scripture": "Cry aloud, spare not, lift up thy voice like a trumpet, and shew my people their transgression, and the house of Jacob their sins."
                },
                "isa58.2": {
                    "id": 2,
                    "short": "Isa 58:2",
                    "name": "Isaiah 58:2",
                    "scripture": "Yet they seek me daily, and delight to know my ways, as a nation that did righteousness, and forsook not the ordinance of their God: they ask of me the ordinances of justice; they take delight in approaching to God."
                },
                "isa58.3": {
                    "id": 3,
                    "short": "Isa 58:3",
                    "name": "Isaiah 58:3",
                    "scripture": "Wherefore have we fasted, say they, and thou seest not? wherefore have we afflicted our soul, and thou takest no knowledge? Behold, in the day of your fast ye find pleasure, and exact all your labours."
                },
                "isa58.4": {
                    "id": 4,
                    "short": "Isa 58:4",
                    "name": "Isaiah 58:4",
                    "scripture": "Behold, ye fast for strife and debate, and to smite with the fist of wickedness: ye shall not fast as ye do this day, to make your voice to be heard on high."
                },
                "isa58.5": {
                    "id": 5,
                    "short": "Isa 58:5",
                    "name": "Isaiah 58:5",
                    "scripture": "Is it such a fast that I have chosen? a day for a man to afflict his soul? is it to bow down his head as a bulrush, and to spread sackcloth and ashes under him? wilt thou call this a fast, and an acceptable day to the Lord ?"
                },
                "isa58.6": {
                    "id": 6,
                    "short": "Isa 58:6",
                    "name": "Isaiah 58:6",
                    "scripture": "Is not this the fast that I have chosen? to loose the bands of wickedness, to undo the heavy burdens, and to let the oppressed go free, and that ye break every yoke?"
                },
                "isa58.7": {
                    "id": 7,
                    "short": "Isa 58:7",
                    "name": "Isaiah 58:7",
                    "scripture": "Is it not to deal thy bread to the hungry, and that thou bring the poor that are cast out to thy house? when thou seest the naked, that thou cover him; and that thou hide not thyself from thine own flesh?"
                },
                "isa58.8": {
                    "id": 8,
                    "short": "Isa 58:8",
                    "name": "Isaiah 58:8",
                    "scripture": "Then shall thy light break forth as the morning, and thine health shall spring forth speedily: and thy righteousness shall go before thee; the glory of the Lord shall be thy rearward."
                },
                "isa58.9": {
                    "id": 9,
                    "short": "Isa 58:9",
                    "name": "Isaiah 58:9",
                    "scripture": "Then shalt thou call, and the Lord shall answer; thou shalt cry, and he shall say, Here I am. If thou take away from the midst of thee the yoke, the putting forth of the finger, and speaking vanity;"
                },
                "isa58.10": {
                    "id": 10,
                    "short": "Isa 58:10",
                    "name": "Isaiah 58:10",
                    "scripture": "And if thou draw out thy soul to the hungry, and satisfy the afflicted soul; then shall thy light rise in obscurity, and thy darkness be as the noonday:"
                },
                "isa58.11": {
                    "id": 11,
                    "short": "Isa 58:11",
                    "name": "Isaiah 58:11",
                    "scripture": "And the Lord shall guide thee continually, and satisfy thy soul in drought, and make fat thy bones: and thou shalt be like a watered garden, and like a spring of water, whose waters fail not."
                },
                "isa58.12": {
                    "id": 12,
                    "short": "Isa 58:12",
                    "name": "Isaiah 58:12",
                    "scripture": "And they that shall be of thee shall build the old waste places: thou shalt raise up the foundations of many generations; and thou shalt be called, The repairer of the breach, The restorer of paths to dwell in."
                },
                "isa58.13": {
                    "id": 13,
                    "short": "Isa 58:13",
                    "name": "Isaiah 58:13",
                    "scripture": "If thou turn away thy foot from the sabbath, from doing thy pleasure on my holy day; and call the sabbath a delight, the holy of the Lord, honourable; and shalt honour him, not doing thine own ways, nor finding thine own pleasure, nor speaking thine own words:"
                },
                "isa58.14": {
                    "id": 14,
                    "short": "Isa 58:14",
                    "name": "Isaiah 58:14",
                    "scripture": "Then shalt thou delight thyself in the Lord; and I will cause thee to ride upon the high places of the earth, and feed thee with the heritage of Jacob thy father: for the mouth of the Lord hath spoken it."
                }
            }
        },
        "isa59": {
            "id": 59,
            "short": "Isa 59",
            "name": "Isaiah 59",
            "verses": {
                "isa59.1": {
                    "id": 1,
                    "short": "Isa 59:1",
                    "name": "Isaiah 59:1",
                    "scripture": "Behold, the Lord's hand is not shortened, that it cannot save; neither his ear heavy, that it cannot hear:"
                },
                "isa59.2": {
                    "id": 2,
                    "short": "Isa 59:2",
                    "name": "Isaiah 59:2",
                    "scripture": "But your iniquities have separated between you and your God, and your sins have hid his face from you, that he will not hear."
                },
                "isa59.3": {
                    "id": 3,
                    "short": "Isa 59:3",
                    "name": "Isaiah 59:3",
                    "scripture": "For your hands are defiled with blood, and your fingers with iniquity; your lips have spoken lies, your tongue hath muttered perverseness."
                },
                "isa59.4": {
                    "id": 4,
                    "short": "Isa 59:4",
                    "name": "Isaiah 59:4",
                    "scripture": "None calleth for justice, nor any pleadeth for truth: they trust in vanity, and speak lies; they conceive mischief, and bring forth iniquity."
                },
                "isa59.5": {
                    "id": 5,
                    "short": "Isa 59:5",
                    "name": "Isaiah 59:5",
                    "scripture": "They hatch cockatrice' eggs, and weave the spider's web: he that eateth of their eggs dieth, and that which is crushed breaketh out into a viper."
                },
                "isa59.6": {
                    "id": 6,
                    "short": "Isa 59:6",
                    "name": "Isaiah 59:6",
                    "scripture": "Their webs shall not become garments, neither shall they cover themselves with their works: their works are works of iniquity, and the act of violence is in their hands."
                },
                "isa59.7": {
                    "id": 7,
                    "short": "Isa 59:7",
                    "name": "Isaiah 59:7",
                    "scripture": "Their feet run to evil, and they make haste to shed innocent blood: their thoughts are thoughts of iniquity; wasting and destruction are in their paths."
                },
                "isa59.8": {
                    "id": 8,
                    "short": "Isa 59:8",
                    "name": "Isaiah 59:8",
                    "scripture": "The way of peace they know not; and there is no judgment in their goings: they have made them crooked paths: whosoever goeth therein shall not know peace."
                },
                "isa59.9": {
                    "id": 9,
                    "short": "Isa 59:9",
                    "name": "Isaiah 59:9",
                    "scripture": "Therefore is judgment far from us, neither doth justice overtake us: we wait for light, but behold obscurity; for brightness, but we walk in darkness."
                },
                "isa59.10": {
                    "id": 10,
                    "short": "Isa 59:10",
                    "name": "Isaiah 59:10",
                    "scripture": "We grope for the wall like the blind, and we grope as if we had no eyes: we stumble at noonday as in the night; we are in desolate places as dead men."
                },
                "isa59.11": {
                    "id": 11,
                    "short": "Isa 59:11",
                    "name": "Isaiah 59:11",
                    "scripture": "We roar all like bears, and mourn sore like doves: we look for judgment, but there is none; for salvation, but it is far off from us."
                },
                "isa59.12": {
                    "id": 12,
                    "short": "Isa 59:12",
                    "name": "Isaiah 59:12",
                    "scripture": "For our transgressions are multiplied before thee, and our sins testify against us: for our transgressions are with us; and as for our iniquities, we know them;"
                },
                "isa59.13": {
                    "id": 13,
                    "short": "Isa 59:13",
                    "name": "Isaiah 59:13",
                    "scripture": "In transgressing and lying against the Lord, and departing away from our God, speaking oppression and revolt, conceiving and uttering from the heart words of falsehood."
                },
                "isa59.14": {
                    "id": 14,
                    "short": "Isa 59:14",
                    "name": "Isaiah 59:14",
                    "scripture": "And judgment is turned away backward, and justice standeth afar off: for truth is fallen in the street, and equity cannot enter."
                },
                "isa59.15": {
                    "id": 15,
                    "short": "Isa 59:15",
                    "name": "Isaiah 59:15",
                    "scripture": "Yea, truth faileth; and he that departeth from evil maketh himself a prey: and the Lord saw it, and it displeased him that there was no judgment."
                },
                "isa59.16": {
                    "id": 16,
                    "short": "Isa 59:16",
                    "name": "Isaiah 59:16",
                    "scripture": "And he saw that there was no man, and wondered that there was no intercessor: therefore his arm brought salvation unto him; and his righteousness, it sustained him."
                },
                "isa59.17": {
                    "id": 17,
                    "short": "Isa 59:17",
                    "name": "Isaiah 59:17",
                    "scripture": "For he put on righteousness as a breastplate, and an helmet of salvation upon his head; and he put on the garments of vengeance for clothing, and was clad with zeal as a cloak."
                },
                "isa59.18": {
                    "id": 18,
                    "short": "Isa 59:18",
                    "name": "Isaiah 59:18",
                    "scripture": "According to their deeds, accordingly he will repay, fury to his adversaries, recompence to his enemies; to the islands he will repay recompence."
                },
                "isa59.19": {
                    "id": 19,
                    "short": "Isa 59:19",
                    "name": "Isaiah 59:19",
                    "scripture": "So shall they fear the name of the Lord from the west, and his glory from the rising of the sun. When the enemy shall come in like a flood, the Spirit of the Lord shall lift up a standard against him."
                },
                "isa59.20": {
                    "id": 20,
                    "short": "Isa 59:20",
                    "name": "Isaiah 59:20",
                    "scripture": "And the Redeemer shall come to Zion, and unto them that turn from transgression in Jacob, saith the Lord ."
                },
                "isa59.21": {
                    "id": 21,
                    "short": "Isa 59:21",
                    "name": "Isaiah 59:21",
                    "scripture": "As for me, this is my covenant with them, saith the Lord; My spirit that is upon thee, and my words which I have put in thy mouth, shall not depart out of thy mouth, nor out of the mouth of thy seed, nor out of the mouth of thy seed's seed, saith the Lord, from henceforth and for ever."
                }
            }
        },
        "isa60": {
            "id": 60,
            "short": "Isa 60",
            "name": "Isaiah 60",
            "verses": {
                "isa60.1": {
                    "id": 1,
                    "short": "Isa 60:1",
                    "name": "Isaiah 60:1",
                    "scripture": "Arise, shine; for thy light is come, and the glory of the Lord is risen upon thee."
                },
                "isa60.2": {
                    "id": 2,
                    "short": "Isa 60:2",
                    "name": "Isaiah 60:2",
                    "scripture": "For, behold, the darkness shall cover the earth, and gross darkness the people: but the Lord shall arise upon thee, and his glory shall be seen upon thee."
                },
                "isa60.3": {
                    "id": 3,
                    "short": "Isa 60:3",
                    "name": "Isaiah 60:3",
                    "scripture": "And the Gentiles shall come to thy light, and kings to the brightness of thy rising."
                },
                "isa60.4": {
                    "id": 4,
                    "short": "Isa 60:4",
                    "name": "Isaiah 60:4",
                    "scripture": "Lift up thine eyes round about, and see: all they gather themselves together, they come to thee: thy sons shall come from far, and thy daughters shall be nursed at thy side."
                },
                "isa60.5": {
                    "id": 5,
                    "short": "Isa 60:5",
                    "name": "Isaiah 60:5",
                    "scripture": "Then thou shalt see, and flow together, and thine heart shall fear, and be enlarged; because the abundance of the sea shall be converted unto thee, the forces of the Gentiles shall come unto thee."
                },
                "isa60.6": {
                    "id": 6,
                    "short": "Isa 60:6",
                    "name": "Isaiah 60:6",
                    "scripture": "The multitude of camels shall cover thee, the dromedaries of Midian and Ephah; all they from Sheba shall come: they shall bring gold and incense; and they shall shew forth the praises of the Lord ."
                },
                "isa60.7": {
                    "id": 7,
                    "short": "Isa 60:7",
                    "name": "Isaiah 60:7",
                    "scripture": "All the flocks of Kedar shall be gathered together unto thee, the rams of Nebaioth shall minister unto thee: they shall come up with acceptance on mine altar, and I will glorify the house of my glory."
                },
                "isa60.8": {
                    "id": 8,
                    "short": "Isa 60:8",
                    "name": "Isaiah 60:8",
                    "scripture": "Who are these that fly as a cloud, and as the doves to their windows?"
                },
                "isa60.9": {
                    "id": 9,
                    "short": "Isa 60:9",
                    "name": "Isaiah 60:9",
                    "scripture": "Surely the isles shall wait for me, and the ships of Tarshish first, to bring thy sons from far, their silver and their gold with them, unto the name of the Lord thy God, and to the Holy One of Israel, because he hath glorified thee."
                },
                "isa60.10": {
                    "id": 10,
                    "short": "Isa 60:10",
                    "name": "Isaiah 60:10",
                    "scripture": "And the sons of strangers shall build up thy walls, and their kings shall minister unto thee: for in my wrath I smote thee, but in my favour have I had mercy on thee."
                },
                "isa60.11": {
                    "id": 11,
                    "short": "Isa 60:11",
                    "name": "Isaiah 60:11",
                    "scripture": "Therefore thy gates shall be open continually; they shall not be shut day nor night; that men may bring unto thee the forces of the Gentiles, and that their kings may be brought."
                },
                "isa60.12": {
                    "id": 12,
                    "short": "Isa 60:12",
                    "name": "Isaiah 60:12",
                    "scripture": "For the nation and kingdom that will not serve thee shall perish; yea, those nations shall be utterly wasted."
                },
                "isa60.13": {
                    "id": 13,
                    "short": "Isa 60:13",
                    "name": "Isaiah 60:13",
                    "scripture": "The glory of Lebanon shall come unto thee, the fir tree, the pine tree, and the box together, to beautify the place of my sanctuary; and I will make the place of my feet glorious."
                },
                "isa60.14": {
                    "id": 14,
                    "short": "Isa 60:14",
                    "name": "Isaiah 60:14",
                    "scripture": "The sons also of them that afflicted thee shall come bending unto thee; and all they that despised thee shall bow themselves down at the soles of thy feet; and they shall call thee, The city of the Lord, The Zion of the Holy One of Israel."
                },
                "isa60.15": {
                    "id": 15,
                    "short": "Isa 60:15",
                    "name": "Isaiah 60:15",
                    "scripture": "Whereas thou hast been forsaken and hated, so that no man went through thee, I will make thee an eternal excellency, a joy of many generations."
                },
                "isa60.16": {
                    "id": 16,
                    "short": "Isa 60:16",
                    "name": "Isaiah 60:16",
                    "scripture": "Thou shalt also suck the milk of the Gentiles, and shalt suck the breast of kings: and thou shalt know that I the Lord am thy Saviour and thy Redeemer, the mighty One of Jacob."
                },
                "isa60.17": {
                    "id": 17,
                    "short": "Isa 60:17",
                    "name": "Isaiah 60:17",
                    "scripture": "For brass I will bring gold, and for iron I will bring silver, and for wood brass, and for stones iron: I will also make thy officers peace, and thine exactors righteousness."
                },
                "isa60.18": {
                    "id": 18,
                    "short": "Isa 60:18",
                    "name": "Isaiah 60:18",
                    "scripture": "Violence shall no more be heard in thy land, wasting nor destruction within thy borders; but thou shalt call thy walls Salvation, and thy gates Praise."
                },
                "isa60.19": {
                    "id": 19,
                    "short": "Isa 60:19",
                    "name": "Isaiah 60:19",
                    "scripture": "The sun shall be no more thy light by day; neither for brightness shall the moon give light unto thee: but the Lord shall be unto thee an everlasting light, and thy God thy glory."
                },
                "isa60.20": {
                    "id": 20,
                    "short": "Isa 60:20",
                    "name": "Isaiah 60:20",
                    "scripture": "Thy sun shall no more go down; neither shall thy moon withdraw itself: for the Lord shall be thine everlasting light, and the days of thy mourning shall be ended."
                },
                "isa60.21": {
                    "id": 21,
                    "short": "Isa 60:21",
                    "name": "Isaiah 60:21",
                    "scripture": "Thy people also shall be all righteous: they shall inherit the land for ever, the branch of my planting, the work of my hands, that I may be glorified."
                },
                "isa60.22": {
                    "id": 22,
                    "short": "Isa 60:22",
                    "name": "Isaiah 60:22",
                    "scripture": "A little one shall become a thousand, and a small one a strong nation: I the Lord will hasten it in his time."
                }
            }
        },
        "isa61": {
            "id": 61,
            "short": "Isa 61",
            "name": "Isaiah 61",
            "verses": {
                "isa61.1": {
                    "id": 1,
                    "short": "Isa 61:1",
                    "name": "Isaiah 61:1",
                    "scripture": "The Spirit of the Lord God is upon me; because the Lord hath anointed me to preach good tidings unto the meek; he hath sent me to bind up the brokenhearted, to proclaim liberty to the captives, and the opening of the prison to them that are bound;"
                },
                "isa61.2": {
                    "id": 2,
                    "short": "Isa 61:2",
                    "name": "Isaiah 61:2",
                    "scripture": "To proclaim the acceptable year of the Lord, and the day of vengeance of our God; to comfort all that mourn;"
                },
                "isa61.3": {
                    "id": 3,
                    "short": "Isa 61:3",
                    "name": "Isaiah 61:3",
                    "scripture": "To appoint unto them that mourn in Zion, to give unto them beauty for ashes, the oil of joy for mourning, the garment of praise for the spirit of heaviness; that they might be called trees of righteousness, the planting of the Lord, that he might be glorified."
                },
                "isa61.4": {
                    "id": 4,
                    "short": "Isa 61:4",
                    "name": "Isaiah 61:4",
                    "scripture": "And they shall build the old wastes, they shall raise up the former desolations, and they shall repair the waste cities, the desolations of many generations."
                },
                "isa61.5": {
                    "id": 5,
                    "short": "Isa 61:5",
                    "name": "Isaiah 61:5",
                    "scripture": "And strangers shall stand and feed your flocks, and the sons of the alien shall be your plowmen and your vinedressers."
                },
                "isa61.6": {
                    "id": 6,
                    "short": "Isa 61:6",
                    "name": "Isaiah 61:6",
                    "scripture": "But ye shall be named the Priests of the Lord : men shall call you the Ministers of our God: ye shall eat the riches of the Gentiles, and in their glory shall ye boast yourselves."
                },
                "isa61.7": {
                    "id": 7,
                    "short": "Isa 61:7",
                    "name": "Isaiah 61:7",
                    "scripture": "For your shame ye shall have double; and for confusion they shall rejoice in their portion: therefore in their land they shall possess the double: everlasting joy shall be unto them."
                },
                "isa61.8": {
                    "id": 8,
                    "short": "Isa 61:8",
                    "name": "Isaiah 61:8",
                    "scripture": "For I the Lord love judgment, I hate robbery for burnt offering; and I will direct their work in truth, and I will make an everlasting covenant with them."
                },
                "isa61.9": {
                    "id": 9,
                    "short": "Isa 61:9",
                    "name": "Isaiah 61:9",
                    "scripture": "And their seed shall be known among the Gentiles, and their offspring among the people: all that see them shall acknowledge them, that they are the seed which the Lord hath blessed."
                },
                "isa61.10": {
                    "id": 10,
                    "short": "Isa 61:10",
                    "name": "Isaiah 61:10",
                    "scripture": "I will greatly rejoice in the Lord, my soul shall be joyful in my God; for he hath clothed me with the garments of salvation, he hath covered me with the robe of righteousness, as a bridegroom decketh himself with ornaments, and as a bride adorneth herself with her jewels."
                },
                "isa61.11": {
                    "id": 11,
                    "short": "Isa 61:11",
                    "name": "Isaiah 61:11",
                    "scripture": "For as the earth bringeth forth her bud, and as the garden causeth the things that are sown in it to spring forth; so the Lord God will cause righteousness and praise to spring forth before all the nations."
                }
            }
        },
        "isa62": {
            "id": 62,
            "short": "Isa 62",
            "name": "Isaiah 62",
            "verses": {
                "isa62.1": {
                    "id": 1,
                    "short": "Isa 62:1",
                    "name": "Isaiah 62:1",
                    "scripture": "For Zion's sake will I not hold my peace, and for Jerusalem's sake I will not rest, until the righteousness thereof go forth as brightness, and the salvation thereof as a lamp that burneth."
                },
                "isa62.2": {
                    "id": 2,
                    "short": "Isa 62:2",
                    "name": "Isaiah 62:2",
                    "scripture": "And the Gentiles shall see thy righteousness, and all kings thy glory: and thou shalt be called by a new name, which the mouth of the Lord shall name."
                },
                "isa62.3": {
                    "id": 3,
                    "short": "Isa 62:3",
                    "name": "Isaiah 62:3",
                    "scripture": "Thou shalt also be a crown of glory in the hand of the Lord, and a royal diadem in the hand of thy God."
                },
                "isa62.4": {
                    "id": 4,
                    "short": "Isa 62:4",
                    "name": "Isaiah 62:4",
                    "scripture": "Thou shalt no more be termed Forsaken; neither shall thy land any more be termed Desolate: but thou shalt be called Hephziâ€“bah, and thy land Beulah: for the Lord delighteth in thee, and thy land shall be married."
                },
                "isa62.5": {
                    "id": 5,
                    "short": "Isa 62:5",
                    "name": "Isaiah 62:5",
                    "scripture": "For as a young man marrieth a virgin, so shall thy sons marry thee: and as the bridegroom rejoiceth over the bride, so shall thy God rejoice over thee."
                },
                "isa62.6": {
                    "id": 6,
                    "short": "Isa 62:6",
                    "name": "Isaiah 62:6",
                    "scripture": "I have set watchmen upon thy walls, O Jerusalem, which shall never hold their peace day nor night: ye that make mention of the Lord, keep not silence,"
                },
                "isa62.7": {
                    "id": 7,
                    "short": "Isa 62:7",
                    "name": "Isaiah 62:7",
                    "scripture": "And give him no rest, till he establish, and till he make Jerusalem a praise in the earth."
                },
                "isa62.8": {
                    "id": 8,
                    "short": "Isa 62:8",
                    "name": "Isaiah 62:8",
                    "scripture": "The Lord hath sworn by his right hand, and by the arm of his strength, Surely I will no more give thy corn to be meat for thine enemies; and the sons of the stranger shall not drink thy wine, for the which thou hast laboured:"
                },
                "isa62.9": {
                    "id": 9,
                    "short": "Isa 62:9",
                    "name": "Isaiah 62:9",
                    "scripture": "But they that have gathered it shall eat it, and praise the Lord; and they that have brought it together shall drink it in the courts of my holiness."
                },
                "isa62.10": {
                    "id": 10,
                    "short": "Isa 62:10",
                    "name": "Isaiah 62:10",
                    "scripture": "Go through, go through the gates; prepare ye the way of the people; cast up, cast up the highway; gather out the stones; lift up a standard for the people."
                },
                "isa62.11": {
                    "id": 11,
                    "short": "Isa 62:11",
                    "name": "Isaiah 62:11",
                    "scripture": "Behold, the Lord hath proclaimed unto the end of the world, Say ye to the daughter of Zion, Behold, thy salvation cometh; behold, his reward is with him, and his work before him."
                },
                "isa62.12": {
                    "id": 12,
                    "short": "Isa 62:12",
                    "name": "Isaiah 62:12",
                    "scripture": "And they shall call them, The holy people, The redeemed of the Lord : and thou shalt be called, Sought out, A city not forsaken."
                }
            }
        },
        "isa63": {
            "id": 63,
            "short": "Isa 63",
            "name": "Isaiah 63",
            "verses": {
                "isa63.1": {
                    "id": 1,
                    "short": "Isa 63:1",
                    "name": "Isaiah 63:1",
                    "scripture": "Who is this that cometh from Edom, with dyed garments from Bozrah? this that is glorious in his apparel, travelling in the greatness of his strength? I that speak in righteousness, mighty to save."
                },
                "isa63.2": {
                    "id": 2,
                    "short": "Isa 63:2",
                    "name": "Isaiah 63:2",
                    "scripture": "Wherefore art thou red in thine apparel, and thy garments like him that treadeth in the winefat?"
                },
                "isa63.3": {
                    "id": 3,
                    "short": "Isa 63:3",
                    "name": "Isaiah 63:3",
                    "scripture": "I have trodden the winepress alone; and of the people there was none with me: for I will tread them in mine anger, and trample them in my fury; and their blood shall be sprinkled upon my garments, and I will stain all my raiment."
                },
                "isa63.4": {
                    "id": 4,
                    "short": "Isa 63:4",
                    "name": "Isaiah 63:4",
                    "scripture": "For the day of vengeance is in mine heart, and the year of my redeemed is come."
                },
                "isa63.5": {
                    "id": 5,
                    "short": "Isa 63:5",
                    "name": "Isaiah 63:5",
                    "scripture": "And I looked, and there was none to help; and I wondered that there was none to uphold: therefore mine own arm brought salvation unto me; and my fury, it upheld me."
                },
                "isa63.6": {
                    "id": 6,
                    "short": "Isa 63:6",
                    "name": "Isaiah 63:6",
                    "scripture": "And I will tread down the people in mine anger, and make them drunk in my fury, and I will bring down their strength to the earth."
                },
                "isa63.7": {
                    "id": 7,
                    "short": "Isa 63:7",
                    "name": "Isaiah 63:7",
                    "scripture": "I will mention the lovingkindnesses of the Lord, and the praises of the Lord, according to all that the Lord hath bestowed on us, and the great goodness toward the house of Israel, which he hath bestowed on them according to his mercies, and according to the multitude of his lovingkindnesses."
                },
                "isa63.8": {
                    "id": 8,
                    "short": "Isa 63:8",
                    "name": "Isaiah 63:8",
                    "scripture": "For he said, Surely they are my people, children that will not lie: so he was their Saviour."
                },
                "isa63.9": {
                    "id": 9,
                    "short": "Isa 63:9",
                    "name": "Isaiah 63:9",
                    "scripture": "In all their affliction he was afflicted, and the angel of his presence saved them: in his love and in his pity he redeemed them; and he bare them, and carried them all the days of old."
                },
                "isa63.10": {
                    "id": 10,
                    "short": "Isa 63:10",
                    "name": "Isaiah 63:10",
                    "scripture": "But they rebelled, and vexed his holy Spirit: therefore he was turned to be their enemy, and he fought against them."
                },
                "isa63.11": {
                    "id": 11,
                    "short": "Isa 63:11",
                    "name": "Isaiah 63:11",
                    "scripture": "Then he remembered the days of old, Moses, and his people, saying, Where is he that brought them up out of the sea with the shepherd of his flock? where is he that put his holy Spirit within him?"
                },
                "isa63.12": {
                    "id": 12,
                    "short": "Isa 63:12",
                    "name": "Isaiah 63:12",
                    "scripture": "That led them by the right hand of Moses with his glorious arm, dividing the water before them, to make himself an everlasting name?"
                },
                "isa63.13": {
                    "id": 13,
                    "short": "Isa 63:13",
                    "name": "Isaiah 63:13",
                    "scripture": "That led them through the deep, as an horse in the wilderness, that they should not stumble?"
                },
                "isa63.14": {
                    "id": 14,
                    "short": "Isa 63:14",
                    "name": "Isaiah 63:14",
                    "scripture": "As a beast goeth down into the valley, the Spirit of the Lord caused him to rest: so didst thou lead thy people, to make thyself a glorious name."
                },
                "isa63.15": {
                    "id": 15,
                    "short": "Isa 63:15",
                    "name": "Isaiah 63:15",
                    "scripture": "Look down from heaven, and behold from the habitation of thy holiness and of thy glory: where is thy zeal and thy strength, the sounding of thy bowels and of thy mercies toward me? are they restrained?"
                },
                "isa63.16": {
                    "id": 16,
                    "short": "Isa 63:16",
                    "name": "Isaiah 63:16",
                    "scripture": "Doubtless thou art our father, though Abraham be ignorant of us, and Israel acknowledge us not: thou, O Lord, art our father, our redeemer; thy name is from everlasting."
                },
                "isa63.17": {
                    "id": 17,
                    "short": "Isa 63:17",
                    "name": "Isaiah 63:17",
                    "scripture": "O Lord, why hast thou made us to err from thy ways, and hardened our heart from thy fear? Return for thy servants' sake, the tribes of thine inheritance."
                },
                "isa63.18": {
                    "id": 18,
                    "short": "Isa 63:18",
                    "name": "Isaiah 63:18",
                    "scripture": "The people of thy holiness have possessed it but a little while: our adversaries have trodden down thy sanctuary."
                },
                "isa63.19": {
                    "id": 19,
                    "short": "Isa 63:19",
                    "name": "Isaiah 63:19",
                    "scripture": "We are thine: thou never barest rule over them; they were not called by thy name."
                }
            }
        },
        "isa64": {
            "id": 64,
            "short": "Isa 64",
            "name": "Isaiah 64",
            "verses": {
                "isa64.1": {
                    "id": 1,
                    "short": "Isa 64:1",
                    "name": "Isaiah 64:1",
                    "scripture": "Oh that thou wouldest rend the heavens, that thou wouldest come down, that the mountains might flow down at thy presence,"
                },
                "isa64.2": {
                    "id": 2,
                    "short": "Isa 64:2",
                    "name": "Isaiah 64:2",
                    "scripture": "As when the melting fire burneth, the fire causeth the waters to boil, to make thy name known to thine adversaries, that the nations may tremble at thy presence!"
                },
                "isa64.3": {
                    "id": 3,
                    "short": "Isa 64:3",
                    "name": "Isaiah 64:3",
                    "scripture": "When thou didst terrible things which we looked not for, thou camest down, the mountains flowed down at thy presence."
                },
                "isa64.4": {
                    "id": 4,
                    "short": "Isa 64:4",
                    "name": "Isaiah 64:4",
                    "scripture": "For since the beginning of the world men have not heard, nor perceived by the ear, neither hath the eye seen, O God, beside thee, what he hath prepared for him that waiteth for him."
                },
                "isa64.5": {
                    "id": 5,
                    "short": "Isa 64:5",
                    "name": "Isaiah 64:5",
                    "scripture": "Thou meetest him that rejoiceth and worketh righteousness, those that remember thee in thy ways: behold, thou art wroth; for we have sinned: in those is continuance, and we shall be saved."
                },
                "isa64.6": {
                    "id": 6,
                    "short": "Isa 64:6",
                    "name": "Isaiah 64:6",
                    "scripture": "But we are all as an unclean thing, and all our righteousnesses are as filthy rags; and we all do fade as a leaf; and our iniquities, like the wind, have taken us away."
                },
                "isa64.7": {
                    "id": 7,
                    "short": "Isa 64:7",
                    "name": "Isaiah 64:7",
                    "scripture": "And there is none that calleth upon thy name, that stirreth up himself to take hold of thee: for thou hast hid thy face from us, and hast consumed us, because of our iniquities."
                },
                "isa64.8": {
                    "id": 8,
                    "short": "Isa 64:8",
                    "name": "Isaiah 64:8",
                    "scripture": "But now, O Lord, thou art our father; we are the clay, and thou our potter; and we all are the work of thy hand."
                },
                "isa64.9": {
                    "id": 9,
                    "short": "Isa 64:9",
                    "name": "Isaiah 64:9",
                    "scripture": "Be not wroth very sore, O Lord, neither remember iniquity for ever: behold, see, we beseech thee, we are all thy people."
                },
                "isa64.10": {
                    "id": 10,
                    "short": "Isa 64:10",
                    "name": "Isaiah 64:10",
                    "scripture": "Thy holy cities are a wilderness, Zion is a wilderness, Jerusalem a desolation."
                },
                "isa64.11": {
                    "id": 11,
                    "short": "Isa 64:11",
                    "name": "Isaiah 64:11",
                    "scripture": "Our holy and our beautiful house, where our fathers praised thee, is burned up with fire: and all our pleasant things are laid waste."
                },
                "isa64.12": {
                    "id": 12,
                    "short": "Isa 64:12",
                    "name": "Isaiah 64:12",
                    "scripture": "Wilt thou refrain thyself for these things, O Lord ? wilt thou hold thy peace, and afflict us very sore?"
                }
            }
        },
        "isa65": {
            "id": 65,
            "short": "Isa 65",
            "name": "Isaiah 65",
            "verses": {
                "isa65.1": {
                    "id": 1,
                    "short": "Isa 65:1",
                    "name": "Isaiah 65:1",
                    "scripture": "I am sought of them that asked not for me; I am found of them that sought me not: I said, Behold me, behold me, unto a nation that was not called by my name."
                },
                "isa65.2": {
                    "id": 2,
                    "short": "Isa 65:2",
                    "name": "Isaiah 65:2",
                    "scripture": "I have spread out my hands all the day unto a rebellious people, which walketh in a way that was not good, after their own thoughts;"
                },
                "isa65.3": {
                    "id": 3,
                    "short": "Isa 65:3",
                    "name": "Isaiah 65:3",
                    "scripture": "A people that provoketh me to anger continually to my face; that sacrificeth in gardens, and burneth incense upon altars of brick;"
                },
                "isa65.4": {
                    "id": 4,
                    "short": "Isa 65:4",
                    "name": "Isaiah 65:4",
                    "scripture": "Which remain among the graves, and lodge in the monuments, which eat swine's flesh, and broth of abominable things is in their vessels;"
                },
                "isa65.5": {
                    "id": 5,
                    "short": "Isa 65:5",
                    "name": "Isaiah 65:5",
                    "scripture": "Which say, Stand by thyself, come not near to me; for I am holier than thou. These are a smoke in my nose, a fire that burneth all the day."
                },
                "isa65.6": {
                    "id": 6,
                    "short": "Isa 65:6",
                    "name": "Isaiah 65:6",
                    "scripture": "Behold, it is written before me: I will not keep silence, but will recompense, even recompense into their bosom,"
                },
                "isa65.7": {
                    "id": 7,
                    "short": "Isa 65:7",
                    "name": "Isaiah 65:7",
                    "scripture": "Your iniquities, and the iniquities of your fathers together, saith the Lord, which have burned incense upon the mountains, and blasphemed me upon the hills: therefore will I measure their former work into their bosom."
                },
                "isa65.8": {
                    "id": 8,
                    "short": "Isa 65:8",
                    "name": "Isaiah 65:8",
                    "scripture": "Thus saith the Lord, As the new wine is found in the cluster, and one saith, Destroy it not; for a blessing is in it: so will I do for my servants' sakes, that I may not destroy them all."
                },
                "isa65.9": {
                    "id": 9,
                    "short": "Isa 65:9",
                    "name": "Isaiah 65:9",
                    "scripture": "And I will bring forth a seed out of Jacob, and out of Judah an inheritor of my mountains: and mine elect shall inherit it, and my servants shall dwell there."
                },
                "isa65.10": {
                    "id": 10,
                    "short": "Isa 65:10",
                    "name": "Isaiah 65:10",
                    "scripture": "And Sharon shall be a fold of flocks, and the valley of Achor a place for the herds to lie down in, for my people that have sought me."
                },
                "isa65.11": {
                    "id": 11,
                    "short": "Isa 65:11",
                    "name": "Isaiah 65:11",
                    "scripture": "But ye are they that forsake the Lord, that forget my holy mountain, that prepare a table for that troop, and that furnish the drink offering unto that number."
                },
                "isa65.12": {
                    "id": 12,
                    "short": "Isa 65:12",
                    "name": "Isaiah 65:12",
                    "scripture": "Therefore will I number you to the sword, and ye shall all bow down to the slaughter: because when I called, ye did not answer; when I spake, ye did not hear; but did evil before mine eyes, and did choose that wherein I delighted not."
                },
                "isa65.13": {
                    "id": 13,
                    "short": "Isa 65:13",
                    "name": "Isaiah 65:13",
                    "scripture": "Therefore thus saith the Lord God, Behold, my servants shall eat, but ye shall be hungry: behold, my servants shall drink, but ye shall be thirsty: behold, my servants shall rejoice, but ye shall be ashamed:"
                },
                "isa65.14": {
                    "id": 14,
                    "short": "Isa 65:14",
                    "name": "Isaiah 65:14",
                    "scripture": "Behold, my servants shall sing for joy of heart, but ye shall cry for sorrow of heart, and shall howl for vexation of spirit."
                },
                "isa65.15": {
                    "id": 15,
                    "short": "Isa 65:15",
                    "name": "Isaiah 65:15",
                    "scripture": "And ye shall leave your name for a curse unto my chosen: for the Lord God shall slay thee, and call his servants by another name:"
                },
                "isa65.16": {
                    "id": 16,
                    "short": "Isa 65:16",
                    "name": "Isaiah 65:16",
                    "scripture": "That he who blesseth himself in the earth shall bless himself in the God of truth; and he that sweareth in the earth shall swear by the God of truth; because the former troubles are forgotten, and because they are hid from mine eyes."
                },
                "isa65.17": {
                    "id": 17,
                    "short": "Isa 65:17",
                    "name": "Isaiah 65:17",
                    "scripture": "For, behold, I create new heavens and a new earth: and the former shall not be remembered, nor come into mind."
                },
                "isa65.18": {
                    "id": 18,
                    "short": "Isa 65:18",
                    "name": "Isaiah 65:18",
                    "scripture": "But be ye glad and rejoice for ever in that which I create: for, behold, I create Jerusalem a rejoicing, and her people a joy."
                },
                "isa65.19": {
                    "id": 19,
                    "short": "Isa 65:19",
                    "name": "Isaiah 65:19",
                    "scripture": "And I will rejoice in Jerusalem, and joy in my people: and the voice of weeping shall be no more heard in her, nor the voice of crying."
                },
                "isa65.20": {
                    "id": 20,
                    "short": "Isa 65:20",
                    "name": "Isaiah 65:20",
                    "scripture": "There shall be no more thence an infant of days, nor an old man that hath not filled his days: for the child shall die an hundred years old; but the sinner being an hundred years old shall be accursed."
                },
                "isa65.21": {
                    "id": 21,
                    "short": "Isa 65:21",
                    "name": "Isaiah 65:21",
                    "scripture": "And they shall build houses, and inhabit them; and they shall plant vineyards, and eat the fruit of them."
                },
                "isa65.22": {
                    "id": 22,
                    "short": "Isa 65:22",
                    "name": "Isaiah 65:22",
                    "scripture": "They shall not build, and another inhabit; they shall not plant, and another eat: for as the days of a tree are the days of my people, and mine elect shall long enjoy the work of their hands."
                },
                "isa65.23": {
                    "id": 23,
                    "short": "Isa 65:23",
                    "name": "Isaiah 65:23",
                    "scripture": "They shall not labour in vain, nor bring forth for trouble; for they are the seed of the blessed of the Lord, and their offspring with them."
                },
                "isa65.24": {
                    "id": 24,
                    "short": "Isa 65:24",
                    "name": "Isaiah 65:24",
                    "scripture": "And it shall come to pass, that before they call, I will answer; and while they are yet speaking, I will hear."
                },
                "isa65.25": {
                    "id": 25,
                    "short": "Isa 65:25",
                    "name": "Isaiah 65:25",
                    "scripture": "The wolf and the lamb shall feed together, and the lion shall eat straw like the bullock: and dust shall be the serpent's meat. They shall not hurt nor destroy in all my holy mountain, saith the Lord ."
                }
            }
        },
        "isa66": {
            "id": 66,
            "short": "Isa 66",
            "name": "Isaiah 66",
            "verses": {
                "isa66.1": {
                    "id": 1,
                    "short": "Isa 66:1",
                    "name": "Isaiah 66:1",
                    "scripture": "Thus saith the Lord, The heaven is my throne, and the earth is my footstool: where is the house that ye build unto me? and where is the place of my rest?"
                },
                "isa66.2": {
                    "id": 2,
                    "short": "Isa 66:2",
                    "name": "Isaiah 66:2",
                    "scripture": "For all those things hath mine hand made, and all those things have been, saith the Lord : but to this man will I look, even to him that is poor and of a contrite spirit, and trembleth at my word."
                },
                "isa66.3": {
                    "id": 3,
                    "short": "Isa 66:3",
                    "name": "Isaiah 66:3",
                    "scripture": "He that killeth an ox is as if he slew a man; he that sacrificeth a lamb, as if he cut off a dog's neck; he that offereth an oblation, as if he offered swine's blood; he that burneth incense, as if he blessed an idol. Yea, they have chosen their own ways, and their soul delighteth in their abominations."
                },
                "isa66.4": {
                    "id": 4,
                    "short": "Isa 66:4",
                    "name": "Isaiah 66:4",
                    "scripture": "I also will choose their delusions, and will bring their fears upon them; because when I called, none did answer; when I spake, they did not hear: but they did evil before mine eyes, and chose that in which I delighted not."
                },
                "isa66.5": {
                    "id": 5,
                    "short": "Isa 66:5",
                    "name": "Isaiah 66:5",
                    "scripture": "Hear the word of the Lord, ye that tremble at his word; Your brethren that hated you, that cast you out for my name's sake, said, Let the Lord be glorified: but he shall appear to your joy, and they shall be ashamed."
                },
                "isa66.6": {
                    "id": 6,
                    "short": "Isa 66:6",
                    "name": "Isaiah 66:6",
                    "scripture": "A voice of noise from the city, a voice from the temple, a voice of the Lord that rendereth recompence to his enemies."
                },
                "isa66.7": {
                    "id": 7,
                    "short": "Isa 66:7",
                    "name": "Isaiah 66:7",
                    "scripture": "Before she travailed, she brought forth; before her pain came, she was delivered of a man child."
                },
                "isa66.8": {
                    "id": 8,
                    "short": "Isa 66:8",
                    "name": "Isaiah 66:8",
                    "scripture": "Who hath heard such a thing? who hath seen such things? Shall the earth be made to bring forth in one day? or shall a nation be born at once? for as soon as Zion travailed, she brought forth her children."
                },
                "isa66.9": {
                    "id": 9,
                    "short": "Isa 66:9",
                    "name": "Isaiah 66:9",
                    "scripture": "Shall I bring to the birth, and not cause to bring forth? saith the Lord : shall I cause to bring forth, and shut the womb? saith thy God."
                },
                "isa66.10": {
                    "id": 10,
                    "short": "Isa 66:10",
                    "name": "Isaiah 66:10",
                    "scripture": "Rejoice ye with Jerusalem, and be glad with her, all ye that love her: rejoice for joy with her, all ye that mourn for her:"
                },
                "isa66.11": {
                    "id": 11,
                    "short": "Isa 66:11",
                    "name": "Isaiah 66:11",
                    "scripture": "That ye may suck, and be satisfied with the breasts of her consolations; that ye may milk out, and be delighted with the abundance of her glory."
                },
                "isa66.12": {
                    "id": 12,
                    "short": "Isa 66:12",
                    "name": "Isaiah 66:12",
                    "scripture": "For thus saith the Lord, Behold, I will extend peace to her like a river, and the glory of the Gentiles like a flowing stream: then shall ye suck, ye shall be borne upon her sides, and be dandled upon her knees."
                },
                "isa66.13": {
                    "id": 13,
                    "short": "Isa 66:13",
                    "name": "Isaiah 66:13",
                    "scripture": "As one whom his mother comforteth, so will I comfort you; and ye shall be comforted in Jerusalem."
                },
                "isa66.14": {
                    "id": 14,
                    "short": "Isa 66:14",
                    "name": "Isaiah 66:14",
                    "scripture": "And when ye see this, your heart shall rejoice, and your bones shall flourish like an herb: and the hand of the Lord shall be known toward his servants, and his indignation toward his enemies."
                },
                "isa66.15": {
                    "id": 15,
                    "short": "Isa 66:15",
                    "name": "Isaiah 66:15",
                    "scripture": "For, behold, the Lord will come with fire, and with his chariots like a whirlwind, to render his anger with fury, and his rebuke with flames of fire."
                },
                "isa66.16": {
                    "id": 16,
                    "short": "Isa 66:16",
                    "name": "Isaiah 66:16",
                    "scripture": "For by fire and by his sword will the Lord plead with all flesh: and the slain of the Lord shall be many."
                },
                "isa66.17": {
                    "id": 17,
                    "short": "Isa 66:17",
                    "name": "Isaiah 66:17",
                    "scripture": "They that sanctify themselves, and purify themselves in the gardens behind one tree in the midst, eating swine's flesh, and the abomination, and the mouse, shall be consumed together, saith the Lord ."
                },
                "isa66.18": {
                    "id": 18,
                    "short": "Isa 66:18",
                    "name": "Isaiah 66:18",
                    "scripture": "For I know their works and their thoughts: it shall come, that I will gather all nations and tongues; and they shall come, and see my glory."
                },
                "isa66.19": {
                    "id": 19,
                    "short": "Isa 66:19",
                    "name": "Isaiah 66:19",
                    "scripture": "And I will set a sign among them, and I will send those that escape of them unto the nations, to Tarshish, Pul, and Lud, that draw the bow, to Tubal, and Javan, to the isles afar off, that have not heard my fame, neither have seen my glory; and they shall declare my glory among the Gentiles."
                },
                "isa66.20": {
                    "id": 20,
                    "short": "Isa 66:20",
                    "name": "Isaiah 66:20",
                    "scripture": "And they shall bring all your brethren for an offering unto the Lord out of all nations upon horses, and in chariots, and in litters, and upon mules, and upon swift beasts, to my holy mountain Jerusalem, saith the Lord, as the children of Israel bring an offering in a clean vessel into the house of the Lord ."
                },
                "isa66.21": {
                    "id": 21,
                    "short": "Isa 66:21",
                    "name": "Isaiah 66:21",
                    "scripture": "And I will also take of them for priests and for Levites, saith the Lord ."
                },
                "isa66.22": {
                    "id": 22,
                    "short": "Isa 66:22",
                    "name": "Isaiah 66:22",
                    "scripture": "For as the new heavens and the new earth, which I will make, shall remain before me, saith the Lord, so shall your seed and your name remain."
                },
                "isa66.23": {
                    "id": 23,
                    "short": "Isa 66:23",
                    "name": "Isaiah 66:23",
                    "scripture": "And it shall come to pass, that from one new moon to another, and from one sabbath to another, shall all flesh come to worship before me, saith the Lord ."
                },
                "isa66.24": {
                    "id": 24,
                    "short": "Isa 66:24",
                    "name": "Isaiah 66:24",
                    "scripture": "And they shall go forth, and look upon the carcases of the men that have transgressed against me: for their worm shall not die, neither shall their fire be quenched; and they shall be an abhorring unto all flesh."
                }
            }
        }

    
    }
},
"jer": {
    "short": "Jer",
    "name": "Jeremiah",
    "chapters": {
        "jer1": {
            "id": 1,
            "short": "Jer 1",
            "name": "Jeremiah 1",
            "verses": {
                "jer1.1": {
                    "id": 1,
                    "short": "Jer 1:1",
                    "name": "Jeremiah 1:1",
                    "scripture": "The words of Jeremiah the son of Hilkiah, of the priests that were in Anathoth in the land of Benjamin:"
                },
                "jer1.2": {
                    "id": 2,
                    "short": "Jer 1:2",
                    "name": "Jeremiah 1:2",
                    "scripture": "To whom the word of the Lord came in the days of Josiah the son of Amon king of Judah, in the thirteenth year of his reign."
                },
                "jer1.3": {
                    "id": 3,
                    "short": "Jer 1:3",
                    "name": "Jeremiah 1:3",
                    "scripture": "It came also in the days of Jehoiakim the son of Josiah king of Judah, unto the end of the eleventh year of Zedekiah the son of Josiah king of Judah, unto the carrying away of Jerusalem captive in the fifth month."
                },
                "jer1.4": {
                    "id": 4,
                    "short": "Jer 1:4",
                    "name": "Jeremiah 1:4",
                    "scripture": "Then the word of the Lord came unto me, saying,"
                },
                "jer1.5": {
                    "id": 5,
                    "short": "Jer 1:5",
                    "name": "Jeremiah 1:5",
                    "scripture": "Before I formed thee in the belly I knew thee; and before thou camest forth out of the womb I sanctified thee, and I ordained thee a prophet unto the nations."
                },
                "jer1.6": {
                    "id": 6,
                    "short": "Jer 1:6",
                    "name": "Jeremiah 1:6",
                    "scripture": "Then said I, Ah, Lord God ! behold, I cannot speak: for I am a child."
                },
                "jer1.7": {
                    "id": 7,
                    "short": "Jer 1:7",
                    "name": "Jeremiah 1:7",
                    "scripture": "But the Lord said unto me, Say not, I am a child: for thou shalt go to all that I shall send thee, and whatsoever I command thee thou shalt speak."
                },
                "jer1.8": {
                    "id": 8,
                    "short": "Jer 1:8",
                    "name": "Jeremiah 1:8",
                    "scripture": "Be not afraid of their faces: for I am with thee to deliver thee, saith the Lord ."
                },
                "jer1.9": {
                    "id": 9,
                    "short": "Jer 1:9",
                    "name": "Jeremiah 1:9",
                    "scripture": "Then the Lord put forth his hand, and touched my mouth. And the Lord said unto me, Behold, I have put my words in thy mouth."
                },
                "jer1.10": {
                    "id": 10,
                    "short": "Jer 1:10",
                    "name": "Jeremiah 1:10",
                    "scripture": "See, I have this day set thee over the nations and over the kingdoms, to root out, and to pull down, and to destroy, and to throw down, to build, and to plant."
                },
                "jer1.11": {
                    "id": 11,
                    "short": "Jer 1:11",
                    "name": "Jeremiah 1:11",
                    "scripture": "Moreover the word of the Lord came unto me, saying, Jeremiah, what seest thou? And I said, I see a rod of an almond tree."
                },
                "jer1.12": {
                    "id": 12,
                    "short": "Jer 1:12",
                    "name": "Jeremiah 1:12",
                    "scripture": "Then said the Lord unto me, Thou hast well seen: for I will hasten my word to perform it."
                },
                "jer1.13": {
                    "id": 13,
                    "short": "Jer 1:13",
                    "name": "Jeremiah 1:13",
                    "scripture": "And the word of the Lord came unto me the second time, saying, What seest thou? And I said, I see a seething pot; and the face thereof is toward the north."
                },
                "jer1.14": {
                    "id": 14,
                    "short": "Jer 1:14",
                    "name": "Jeremiah 1:14",
                    "scripture": "Then the Lord said unto me, Out of the north an evil shall break forth upon all the inhabitants of the land."
                },
                "jer1.15": {
                    "id": 15,
                    "short": "Jer 1:15",
                    "name": "Jeremiah 1:15",
                    "scripture": "For, lo, I will call all the families of the kingdoms of the north, saith the Lord; and they shall come, and they shall set every one his throne at the entering of the gates of Jerusalem, and against all the walls thereof round about, and against all the cities of Judah."
                },
                "jer1.16": {
                    "id": 16,
                    "short": "Jer 1:16",
                    "name": "Jeremiah 1:16",
                    "scripture": "And I will utter my judgments against them touching all their wickedness, who have forsaken me, and have burned incense unto other gods, and worshipped the works of their own hands."
                },
                "jer1.17": {
                    "id": 17,
                    "short": "Jer 1:17",
                    "name": "Jeremiah 1:17",
                    "scripture": "Thou therefore gird up thy loins, and arise, and speak unto them all that I command thee: be not dismayed at their faces, lest I confound thee before them."
                },
                "jer1.18": {
                    "id": 18,
                    "short": "Jer 1:18",
                    "name": "Jeremiah 1:18",
                    "scripture": "For, behold, I have made thee this day a defenced city, and an iron pillar, and brasen walls against the whole land, against the kings of Judah, against the princes thereof, against the priests thereof, and against the people of the land."
                },
                "jer1.19": {
                    "id": 19,
                    "short": "Jer 1:19",
                    "name": "Jeremiah 1:19",
                    "scripture": "And they shall fight against thee; but they shall not prevail against thee; for I am with thee, saith the Lord, to deliver thee."
                }
            }
        },
        "jer2": {
            "id": 2,
            "short": "Jer 2",
            "name": "Jeremiah 2",
            "verses": {
                "jer2.1": {
                    "id": 1,
                    "short": "Jer 2:1",
                    "name": "Jeremiah 2:1",
                    "scripture": "Moreover the word of the Lord came to me, saying,"
                },
                "jer2.2": {
                    "id": 2,
                    "short": "Jer 2:2",
                    "name": "Jeremiah 2:2",
                    "scripture": "Go and cry in the ears of Jerusalem, saying, Thus saith the Lord; I remember thee, the kindness of thy youth, the love of thine espousals, when thou wentest after me in the wilderness, in a land that was not sown."
                },
                "jer2.3": {
                    "id": 3,
                    "short": "Jer 2:3",
                    "name": "Jeremiah 2:3",
                    "scripture": "Israel was holiness unto the Lord, and the firstfruits of his increase: all that devour him shall offend; evil shall come upon them, saith the Lord ."
                },
                "jer2.4": {
                    "id": 4,
                    "short": "Jer 2:4",
                    "name": "Jeremiah 2:4",
                    "scripture": "Hear ye the word of the Lord, O house of Jacob, and all the families of the house of Israel:"
                },
                "jer2.5": {
                    "id": 5,
                    "short": "Jer 2:5",
                    "name": "Jeremiah 2:5",
                    "scripture": "Thus saith the Lord, What iniquity have your fathers found in me, that they are gone far from me, and have walked after vanity, and are become vain?"
                },
                "jer2.6": {
                    "id": 6,
                    "short": "Jer 2:6",
                    "name": "Jeremiah 2:6",
                    "scripture": "Neither said they, Where is the Lord that brought us up out of the land of Egypt, that led us through the wilderness, through a land of deserts and of pits, through a land of drought, and of the shadow of death, through a land that no man passed through, and where no man dwelt?"
                },
                "jer2.7": {
                    "id": 7,
                    "short": "Jer 2:7",
                    "name": "Jeremiah 2:7",
                    "scripture": "And I brought you into a plentiful country, to eat the fruit thereof and the goodness thereof; but when ye entered, ye defiled my land, and made mine heritage an abomination."
                },
                "jer2.8": {
                    "id": 8,
                    "short": "Jer 2:8",
                    "name": "Jeremiah 2:8",
                    "scripture": "The priests said not, Where is the Lord ? and they that handle the law knew me not: the pastors also transgressed against me, and the prophets prophesied by Baal, and walked after things that do not profit."
                },
                "jer2.9": {
                    "id": 9,
                    "short": "Jer 2:9",
                    "name": "Jeremiah 2:9",
                    "scripture": "Wherefore I will yet plead with you, saith the Lord, and with your children's children will I plead."
                },
                "jer2.10": {
                    "id": 10,
                    "short": "Jer 2:10",
                    "name": "Jeremiah 2:10",
                    "scripture": "For pass over the isles of Kittim, and see; and send unto Kedar, and consider diligently, and see if there be such a thing."
                },
                "jer2.11": {
                    "id": 11,
                    "short": "Jer 2:11",
                    "name": "Jeremiah 2:11",
                    "scripture": "Hath a nation changed their gods, which are yet no gods? but my people have changed their glory for that which doth not profit."
                },
                "jer2.12": {
                    "id": 12,
                    "short": "Jer 2:12",
                    "name": "Jeremiah 2:12",
                    "scripture": "Be astonished, O ye heavens, at this, and be horribly afraid, be ye very desolate, saith the Lord ."
                },
                "jer2.13": {
                    "id": 13,
                    "short": "Jer 2:13",
                    "name": "Jeremiah 2:13",
                    "scripture": "For my people have committed two evils; they have forsaken me the fountain of living waters, and hewed them out cisterns, broken cisterns, that can hold no water."
                },
                "jer2.14": {
                    "id": 14,
                    "short": "Jer 2:14",
                    "name": "Jeremiah 2:14",
                    "scripture": "Is Israel a servant? is he a homeborn slave? why is he spoiled?"
                },
                "jer2.15": {
                    "id": 15,
                    "short": "Jer 2:15",
                    "name": "Jeremiah 2:15",
                    "scripture": "The young lions roared upon him, and yelled, and they made his land waste: his cities are burned without inhabitant."
                },
                "jer2.16": {
                    "id": 16,
                    "short": "Jer 2:16",
                    "name": "Jeremiah 2:16",
                    "scripture": "Also the children of Memphis and Tahpanhes have broken the crown of thy head."
                },
                "jer2.17": {
                    "id": 17,
                    "short": "Jer 2:17",
                    "name": "Jeremiah 2:17",
                    "scripture": "Hast thou not procured this unto thyself, in that thou hast forsaken the Lord thy God, when he led thee by the way?"
                },
                "jer2.18": {
                    "id": 18,
                    "short": "Jer 2:18",
                    "name": "Jeremiah 2:18",
                    "scripture": "And now what hast thou to do in the way of Egypt, to drink the waters of Sihor? or what hast thou to do in the way of Assyria, to drink the waters of the river?"
                },
                "jer2.19": {
                    "id": 19,
                    "short": "Jer 2:19",
                    "name": "Jeremiah 2:19",
                    "scripture": "Thine own wickedness shall correct thee, and thy backslidings shall reprove thee: know therefore and see that it is an evil thing and bitter, that thou hast forsaken the Lord thy God, and that my fear is not in thee, saith the Lord God of hosts."
                },
                "jer2.20": {
                    "id": 20,
                    "short": "Jer 2:20",
                    "name": "Jeremiah 2:20",
                    "scripture": "For of old time I have broken thy yoke, and burst thy bands; and thou saidst, I will not transgress; when upon every high hill and under every green tree thou wanderest, playing the harlot."
                },
                "jer2.21": {
                    "id": 21,
                    "short": "Jer 2:21",
                    "name": "Jeremiah 2:21",
                    "scripture": "Yet I had planted thee a noble vine, wholly a right seed: how then art thou turned into the degenerate plant of a strange vine unto me?"
                },
                "jer2.22": {
                    "id": 22,
                    "short": "Jer 2:22",
                    "name": "Jeremiah 2:22",
                    "scripture": "For though thou wash thee with nitre, and take thee much soap, yet thine iniquity is marked before me, saith the Lord God ."
                },
                "jer2.23": {
                    "id": 23,
                    "short": "Jer 2:23",
                    "name": "Jeremiah 2:23",
                    "scripture": "How canst thou say, I am not polluted, I have not gone after Baalim? see thy way in the valley, know what thou hast done: thou art a swift dromedary traversing her ways;"
                },
                "jer2.24": {
                    "id": 24,
                    "short": "Jer 2:24",
                    "name": "Jeremiah 2:24",
                    "scripture": "A wild ass used to the wilderness, that snuffeth up the wind at her pleasure; in her occasion who can turn her away? all they that seek her will not weary themselves; in her month they shall find her."
                },
                "jer2.25": {
                    "id": 25,
                    "short": "Jer 2:25",
                    "name": "Jeremiah 2:25",
                    "scripture": "Withhold thy foot from being unshod, and thy throat from thirst: but thou saidst, There is no hope: no; for I have loved strangers, and after them will I go."
                },
                "jer2.26": {
                    "id": 26,
                    "short": "Jer 2:26",
                    "name": "Jeremiah 2:26",
                    "scripture": "As the thief is ashamed when he is found, so is the house of Israel ashamed; they, their kings, their princes, and their priests, and their prophets,"
                },
                "jer2.27": {
                    "id": 27,
                    "short": "Jer 2:27",
                    "name": "Jeremiah 2:27",
                    "scripture": "Saying to a stock, Thou art my father; and to a stone, Thou hast brought me forth: for they have turned their back unto me, and not their face: but in the time of their trouble they will say, Arise, and save us."
                },
                "jer2.28": {
                    "id": 28,
                    "short": "Jer 2:28",
                    "name": "Jeremiah 2:28",
                    "scripture": "But where are thy gods that thou hast made thee? let them arise, if they can save thee in the time of thy trouble: for according to the number of thy cities are thy gods, O Judah."
                },
                "jer2.29": {
                    "id": 29,
                    "short": "Jer 2:29",
                    "name": "Jeremiah 2:29",
                    "scripture": "Wherefore will ye plead with me? ye all have transgressed against me, saith the Lord ."
                },
                "jer2.30": {
                    "id": 30,
                    "short": "Jer 2:30",
                    "name": "Jeremiah 2:30",
                    "scripture": "In vain have I smitten your children; they received no correction: your own sword hath devoured your prophets, like a destroying lion."
                },
                "jer2.31": {
                    "id": 31,
                    "short": "Jer 2:31",
                    "name": "Jeremiah 2:31",
                    "scripture": "O generation, see ye the word of the Lord . Have I been a wilderness unto Israel? a land of darkness? wherefore say my people, We are lords; we will come no more unto thee?"
                },
                "jer2.32": {
                    "id": 32,
                    "short": "Jer 2:32",
                    "name": "Jeremiah 2:32",
                    "scripture": "Can a maid forget her ornaments, or a bride her attire? yet my people have forgotten me days without number."
                },
                "jer2.33": {
                    "id": 33,
                    "short": "Jer 2:33",
                    "name": "Jeremiah 2:33",
                    "scripture": "Why trimmest thou thy way to seek love? therefore hast thou also taught the wicked ones thy ways."
                },
                "jer2.34": {
                    "id": 34,
                    "short": "Jer 2:34",
                    "name": "Jeremiah 2:34",
                    "scripture": "Also in thy skirts is found the blood of the souls of the poor innocents: I have not found it by secret search, but upon all these."
                },
                "jer2.35": {
                    "id": 35,
                    "short": "Jer 2:35",
                    "name": "Jeremiah 2:35",
                    "scripture": "Yet thou sayest, Because I am innocent, surely his anger shall turn from me. Behold, I will plead with thee, because thou sayest, I have not sinned."
                },
                "jer2.36": {
                    "id": 36,
                    "short": "Jer 2:36",
                    "name": "Jeremiah 2:36",
                    "scripture": "Why gaddest thou about so much to change thy way? thou also shalt be ashamed of Egypt, as thou wast ashamed of Assyria."
                },
                "jer2.37": {
                    "id": 37,
                    "short": "Jer 2:37",
                    "name": "Jeremiah 2:37",
                    "scripture": "Yea, thou shalt go forth from him, and thine hands upon thine head: for the Lord hath rejected thy confidences, and thou shalt not prosper in them."
                }
            }
        },
        "jer3": {
            "id": 3,
            "short": "Jer 3",
            "name": "Jeremiah 3",
            "verses": {
                "jer3.1": {
                    "id": 1,
                    "short": "Jer 3:1",
                    "name": "Jeremiah 3:1",
                    "scripture": "They say, If a man put away his wife, and she go from him, and become another man's, shall he return unto her again? shall not that land be greatly polluted? but thou hast played the harlot with many lovers; yet return again to me, saith the Lord ."
                },
                "jer3.2": {
                    "id": 2,
                    "short": "Jer 3:2",
                    "name": "Jeremiah 3:2",
                    "scripture": "Lift up thine eyes unto the high places, and see where thou hast not been lien with. In the ways hast thou sat for them, as the Arabian in the wilderness; and thou hast polluted the land with thy whoredoms and with thy wickedness."
                },
                "jer3.3": {
                    "id": 3,
                    "short": "Jer 3:3",
                    "name": "Jeremiah 3:3",
                    "scripture": "Therefore the showers have been withholden, and there hath been no latter rain; and thou hadst a whore's forehead, thou refusedst to be ashamed."
                },
                "jer3.4": {
                    "id": 4,
                    "short": "Jer 3:4",
                    "name": "Jeremiah 3:4",
                    "scripture": "Wilt thou not from this time cry unto me, My father, thou art the guide of my youth?"
                },
                "jer3.5": {
                    "id": 5,
                    "short": "Jer 3:5",
                    "name": "Jeremiah 3:5",
                    "scripture": "Will he reserve his anger for ever? will he keep it to the end? Behold, thou hast spoken and done evil things as thou couldest."
                },
                "jer3.6": {
                    "id": 6,
                    "short": "Jer 3:6",
                    "name": "Jeremiah 3:6",
                    "scripture": "The Lord said also unto me in the days of Josiah the king, Hast thou seen that which backsliding Israel hath done? she is gone up upon every high mountain and under every green tree, and there hath played the harlot."
                },
                "jer3.7": {
                    "id": 7,
                    "short": "Jer 3:7",
                    "name": "Jeremiah 3:7",
                    "scripture": "And I said after she had done all these things, Turn thou unto me. But she returned not. And her treacherous sister Judah saw it."
                },
                "jer3.8": {
                    "id": 8,
                    "short": "Jer 3:8",
                    "name": "Jeremiah 3:8",
                    "scripture": "And I saw, when for all the causes whereby backsliding Israel committed adultery I had put her away, and given her a bill of divorce; yet her treacherous sister Judah feared not, but went and played the harlot also."
                },
                "jer3.9": {
                    "id": 9,
                    "short": "Jer 3:9",
                    "name": "Jeremiah 3:9",
                    "scripture": "And it came to pass through the lightness of her whoredom, that she defiled the land, and committed adultery with stones and with stocks."
                },
                "jer3.10": {
                    "id": 10,
                    "short": "Jer 3:10",
                    "name": "Jeremiah 3:10",
                    "scripture": "And yet for all this her treacherous sister Judah hath not turned unto me with her whole heart, but feignedly, saith the Lord ."
                },
                "jer3.11": {
                    "id": 11,
                    "short": "Jer 3:11",
                    "name": "Jeremiah 3:11",
                    "scripture": "And the Lord said unto me, The backsliding Israel hath justified herself more than treacherous Judah."
                },
                "jer3.12": {
                    "id": 12,
                    "short": "Jer 3:12",
                    "name": "Jeremiah 3:12",
                    "scripture": "Go and proclaim these words toward the north, and say, Return, thou backsliding Israel, saith the Lord; and I will not cause mine anger to fall upon you: for I am merciful, saith the Lord, and I will not keep anger for ever."
                },
                "jer3.13": {
                    "id": 13,
                    "short": "Jer 3:13",
                    "name": "Jeremiah 3:13",
                    "scripture": "Only acknowledge thine iniquity, that thou hast transgressed against the Lord thy God, and hast scattered thy ways to the strangers under every green tree, and ye have not obeyed my voice, saith the Lord ."
                },
                "jer3.14": {
                    "id": 14,
                    "short": "Jer 3:14",
                    "name": "Jeremiah 3:14",
                    "scripture": "Turn, O backsliding children, saith the Lord; for I am married unto you: and I will take you one of a city, and two of a family, and I will bring you to Zion:"
                },
                "jer3.15": {
                    "id": 15,
                    "short": "Jer 3:15",
                    "name": "Jeremiah 3:15",
                    "scripture": "And I will give you pastors according to mine heart, which shall feed you with knowledge and understanding."
                },
                "jer3.16": {
                    "id": 16,
                    "short": "Jer 3:16",
                    "name": "Jeremiah 3:16",
                    "scripture": "And it shall come to pass, when ye be multiplied and increased in the land, in those days, saith the Lord, they shall say no more, The ark of the covenant of the Lord : neither shall it come to mind: neither shall they remember it; neither shall they visit it; neither shall that be done any more."
                },
                "jer3.17": {
                    "id": 17,
                    "short": "Jer 3:17",
                    "name": "Jeremiah 3:17",
                    "scripture": "At that time they shall call Jerusalem the throne of the Lord; and all the nations shall be gathered unto it, to the name of the Lord, to Jerusalem: neither shall they walk any more after the imagination of their evil heart."
                },
                "jer3.18": {
                    "id": 18,
                    "short": "Jer 3:18",
                    "name": "Jeremiah 3:18",
                    "scripture": "In those days the house of Judah shall walk with the house of Israel, and they shall come together out of the land of the north to the land that I have given for an inheritance unto your fathers."
                },
                "jer3.19": {
                    "id": 19,
                    "short": "Jer 3:19",
                    "name": "Jeremiah 3:19",
                    "scripture": "But I said, How shall I put thee among the children, and give thee a pleasant land, a goodly heritage of the hosts of nations? and I said, Thou shalt call me, My father; and shalt not turn away from me."
                },
                "jer3.20": {
                    "id": 20,
                    "short": "Jer 3:20",
                    "name": "Jeremiah 3:20",
                    "scripture": "Surely as a wife treacherously departeth from her husband, so have ye dealt treacherously with me, O house of Israel, saith the Lord ."
                },
                "jer3.21": {
                    "id": 21,
                    "short": "Jer 3:21",
                    "name": "Jeremiah 3:21",
                    "scripture": "A voice was heard upon the high places, weeping and supplications of the children of Israel: for they have perverted their way, and they have forgotten the Lord their God."
                },
                "jer3.22": {
                    "id": 22,
                    "short": "Jer 3:22",
                    "name": "Jeremiah 3:22",
                    "scripture": "Return, ye backsliding children, and I will heal your backslidings. Behold, we come unto thee; for thou art the Lord our God."
                },
                "jer3.23": {
                    "id": 23,
                    "short": "Jer 3:23",
                    "name": "Jeremiah 3:23",
                    "scripture": "Truly in vain is salvation hoped for from the hills, and from the multitude of mountains: truly in the Lord our God is the salvation of Israel."
                },
                "jer3.24": {
                    "id": 24,
                    "short": "Jer 3:24",
                    "name": "Jeremiah 3:24",
                    "scripture": "For shame hath devoured the labour of our fathers from our youth; their flocks and their herds, their sons and their daughters."
                },
                "jer3.25": {
                    "id": 25,
                    "short": "Jer 3:25",
                    "name": "Jeremiah 3:25",
                    "scripture": "We lie down in our shame, and our confusion covereth us: for we have sinned against the Lord our God, we and our fathers, from our youth even unto this day, and have not obeyed the voice of the Lord our God."
                }
            }
        },
        "jer4": {
            "id": 4,
            "short": "Jer 4",
            "name": "Jeremiah 4",
            "verses": {
                "jer4.1": {
                    "id": 1,
                    "short": "Jer 4:1",
                    "name": "Jeremiah 4:1",
                    "scripture": "If thou wilt return, O Israel, saith the Lord, return unto me: and if thou wilt put away thine abominations out of my sight, then shalt thou not remove."
                },
                "jer4.2": {
                    "id": 2,
                    "short": "Jer 4:2",
                    "name": "Jeremiah 4:2",
                    "scripture": "And thou shalt swear, The Lord liveth, in truth, in judgment, and in righteousness; and the nations shall bless themselves in him, and in him shall they glory."
                },
                "jer4.3": {
                    "id": 3,
                    "short": "Jer 4:3",
                    "name": "Jeremiah 4:3",
                    "scripture": "For thus saith the Lord to the men of Judah and Jerusalem, Break up your fallow ground, and sow not among thorns."
                },
                "jer4.4": {
                    "id": 4,
                    "short": "Jer 4:4",
                    "name": "Jeremiah 4:4",
                    "scripture": "Circumcise yourselves to the Lord, and take away the foreskins of your heart, ye men of Judah and inhabitants of Jerusalem: lest my fury come forth like fire, and burn that none can quench it, because of the evil of your doings."
                },
                "jer4.5": {
                    "id": 5,
                    "short": "Jer 4:5",
                    "name": "Jeremiah 4:5",
                    "scripture": "Declare ye in Judah, and publish in Jerusalem; and say, Blow ye the trumpet in the land: cry, gather together, and say, Assemble yourselves, and let us go into the defenced cities."
                },
                "jer4.6": {
                    "id": 6,
                    "short": "Jer 4:6",
                    "name": "Jeremiah 4:6",
                    "scripture": "Set up the standard toward Zion: retire, stay not: for I will bring evil from the north, and a great destruction."
                },
                "jer4.7": {
                    "id": 7,
                    "short": "Jer 4:7",
                    "name": "Jeremiah 4:7",
                    "scripture": "The lion is come up from his thicket, and the destroyer of the Gentiles is on his way; he is gone forth from his place to make thy land desolate; and thy cities shall be laid waste, without an inhabitant."
                },
                "jer4.8": {
                    "id": 8,
                    "short": "Jer 4:8",
                    "name": "Jeremiah 4:8",
                    "scripture": "For this gird you with sackcloth, lament and howl: for the fierce anger of the Lord is not turned back from us."
                },
                "jer4.9": {
                    "id": 9,
                    "short": "Jer 4:9",
                    "name": "Jeremiah 4:9",
                    "scripture": "And it shall come to pass at that day, saith the Lord, that the heart of the king shall perish, and the heart of the princes; and the priests shall be astonished, and the prophets shall wonder."
                },
                "jer4.10": {
                    "id": 10,
                    "short": "Jer 4:10",
                    "name": "Jeremiah 4:10",
                    "scripture": "Then said I, Ah, Lord God ! surely thou hast greatly deceived this people and Jerusalem, saying, Ye shall have peace; whereas the sword reacheth unto the soul."
                },
                "jer4.11": {
                    "id": 11,
                    "short": "Jer 4:11",
                    "name": "Jeremiah 4:11",
                    "scripture": "At that time shall it be said to this people and to Jerusalem, A dry wind of the high places in the wilderness toward the daughter of my people, not to fan, nor to cleanse,"
                },
                "jer4.12": {
                    "id": 12,
                    "short": "Jer 4:12",
                    "name": "Jeremiah 4:12",
                    "scripture": "Even a full wind from those places shall come unto me: now also will I give sentence against them."
                },
                "jer4.13": {
                    "id": 13,
                    "short": "Jer 4:13",
                    "name": "Jeremiah 4:13",
                    "scripture": "Behold, he shall come up as clouds, and his chariots shall be as a whirlwind: his horses are swifter than eagles. Woe unto us! for we are spoiled."
                },
                "jer4.14": {
                    "id": 14,
                    "short": "Jer 4:14",
                    "name": "Jeremiah 4:14",
                    "scripture": "O Jerusalem, wash thine heart from wickedness, that thou mayest be saved. How long shall thy vain thoughts lodge within thee?"
                },
                "jer4.15": {
                    "id": 15,
                    "short": "Jer 4:15",
                    "name": "Jeremiah 4:15",
                    "scripture": "For a voice declareth from Dan, and publisheth affliction from mount Ephraim."
                },
                "jer4.16": {
                    "id": 16,
                    "short": "Jer 4:16",
                    "name": "Jeremiah 4:16",
                    "scripture": "Make ye mention to the nations; behold, publish against Jerusalem, that watchers come from a far country, and give out their voice against the cities of Judah."
                },
                "jer4.17": {
                    "id": 17,
                    "short": "Jer 4:17",
                    "name": "Jeremiah 4:17",
                    "scripture": "As keepers of a field, are they against her round about; because she hath been rebellious against me, saith the Lord ."
                },
                "jer4.18": {
                    "id": 18,
                    "short": "Jer 4:18",
                    "name": "Jeremiah 4:18",
                    "scripture": "Thy way and thy doings have procured these things unto thee; this is thy wickedness, because it is bitter, because it reacheth unto thine heart."
                },
                "jer4.19": {
                    "id": 19,
                    "short": "Jer 4:19",
                    "name": "Jeremiah 4:19",
                    "scripture": "My bowels, my bowels! I am pained at my very heart; my heart maketh a noise in me; I cannot hold my peace, because thou hast heard, O my soul, the sound of the trumpet, the alarm of war."
                },
                "jer4.20": {
                    "id": 20,
                    "short": "Jer 4:20",
                    "name": "Jeremiah 4:20",
                    "scripture": "Destruction upon destruction is cried; for the whole land is spoiled: suddenly are my tents spoiled, and my curtains in a moment."
                },
                "jer4.21": {
                    "id": 21,
                    "short": "Jer 4:21",
                    "name": "Jeremiah 4:21",
                    "scripture": "How long shall I see the standard, and hear the sound of the trumpet?"
                },
                "jer4.22": {
                    "id": 22,
                    "short": "Jer 4:22",
                    "name": "Jeremiah 4:22",
                    "scripture": "For my people is foolish, they have not known me; they are sottish children, and they have none understanding: they are wise to do evil, but to do good they have no knowledge."
                },
                "jer4.23": {
                    "id": 23,
                    "short": "Jer 4:23",
                    "name": "Jeremiah 4:23",
                    "scripture": "I beheld the earth, and, lo, it was without form, and void; and the heavens, and they had no light."
                },
                "jer4.24": {
                    "id": 24,
                    "short": "Jer 4:24",
                    "name": "Jeremiah 4:24",
                    "scripture": "I beheld the mountains, and, lo, they trembled, and all the hills moved lightly."
                },
                "jer4.25": {
                    "id": 25,
                    "short": "Jer 4:25",
                    "name": "Jeremiah 4:25",
                    "scripture": "I beheld, and, lo, there was no man, and all the birds of the heavens were fled."
                },
                "jer4.26": {
                    "id": 26,
                    "short": "Jer 4:26",
                    "name": "Jeremiah 4:26",
                    "scripture": "I beheld, and, lo, the fruitful place was a wilderness, and all the cities thereof were broken down at the presence of the Lord, and by his fierce anger."
                },
                "jer4.27": {
                    "id": 27,
                    "short": "Jer 4:27",
                    "name": "Jeremiah 4:27",
                    "scripture": "For thus hath the Lord said, The whole land shall be desolate; yet will I not make a full end."
                },
                "jer4.28": {
                    "id": 28,
                    "short": "Jer 4:28",
                    "name": "Jeremiah 4:28",
                    "scripture": "For this shall the earth mourn, and the heavens above be black: because I have spoken it, I have purposed it, and will not repent, neither will I turn back from it."
                },
                "jer4.29": {
                    "id": 29,
                    "short": "Jer 4:29",
                    "name": "Jeremiah 4:29",
                    "scripture": "The whole city shall flee for the noise of the horsemen and bowmen; they shall go into thickets, and climb up upon the rocks: every city shall be forsaken, and not a man dwell therein."
                },
                "jer4.30": {
                    "id": 30,
                    "short": "Jer 4:30",
                    "name": "Jeremiah 4:30",
                    "scripture": "And when thou art spoiled, what wilt thou do? Though thou clothest thyself with crimson, though thou deckest thee with ornaments of gold, though thou rentest thy face with painting, in vain shalt thou make thyself fair; thy lovers will despise thee, they will seek thy life."
                },
                "jer4.31": {
                    "id": 31,
                    "short": "Jer 4:31",
                    "name": "Jeremiah 4:31",
                    "scripture": "For I have heard a voice as of a woman in travail, and the anguish as of her that bringeth forth her first child, the voice of the daughter of Zion, that bewaileth herself, that spreadeth her hands, saying, Woe is me now! for my soul is wearied because of murderers."
                }
            }
        },
        "jer5": {
            "id": 5,
            "short": "Jer 5",
            "name": "Jeremiah 5"
            "verses": {
                "jer5.1": {
                    "id": 1,
                    "short": "Jer 5:1",
                    "name": "Jeremiah 5:1",
                    "scripture": "Run ye to and fro through the streets of Jerusalem, and see now, and know, and seek in the broad places thereof, if ye can find a man, if there be any that executeth judgment, that seeketh the truth; and I will pardon it."
                },
                "jer5.2": {
                    "id": 2,
                    "short": "Jer 5:2",
                    "name": "Jeremiah 5:2",
                    "scripture": "And though they say, The Lord liveth; surely they swear falsely."
                },
                "jer5.3": {
                    "id": 3,
                    "short": "Jer 5:3",
                    "name": "Jeremiah 5:3",
                    "scripture": "O Lord, are not thine eyes upon the truth? thou hast stricken them, but they have not grieved; thou hast consumed them, but they have refused to receive correction: they have made their faces harder than a rock; they have refused to return."
                },
                "jer5.4": {
                    "id": 4,
                    "short": "Jer 5:4",
                    "name": "Jeremiah 5:4",
                    "scripture": "Therefore I said, Surely these are poor; they are foolish: for they know not the way of the Lord, nor the judgment of their God."
                },
                "jer5.5": {
                    "id": 5,
                    "short": "Jer 5:5",
                    "name": "Jeremiah 5:5",
                    "scripture": "I will get me unto the great men, and will speak unto them; for they have known the way of the Lord, and the judgment of their God: but these have altogether broken the yoke, and burst the bonds."
                },
                "jer5.6": {
                    "id": 6,
                    "short": "Jer 5:6",
                    "name": "Jeremiah 5:6",
                    "scripture": "Wherefore a lion out of the forest shall slay them, and a wolf of the evenings shall spoil them, a leopard shall watch over their cities: every one that goeth out thence shall be torn in pieces: because their transgressions are many, and their backslidings are increased."
                },
                "jer5.7": {
                    "id": 7,
                    "short": "Jer 5:7",
                    "name": "Jeremiah 5:7",
                    "scripture": "How shall I pardon thee for this? thy children have forsaken me, and sworn by them that are no gods: when I had fed them to the full, they then committed adultery, and assembled themselves by troops in the harlots' houses."
                },
                "jer5.8": {
                    "id": 8,
                    "short": "Jer 5:8",
                    "name": "Jeremiah 5:8",
                    "scripture": "They were as fed horses in the morning: every one neighed after his neighbour's wife."
                },
                "jer5.9": {
                    "id": 9,
                    "short": "Jer 5:9",
                    "name": "Jeremiah 5:9",
                    "scripture": "Shall I not visit for these things? saith the Lord : and shall not my soul be avenged on such a nation as this?"
                },
                "jer5.10": {
                    "id": 10,
                    "short": "Jer 5:10",
                    "name": "Jeremiah 5:10",
                    "scripture": "Go ye up upon her walls, and destroy; but make not a full end: take away her battlements; for they are not the Lord's ."
                },
                "jer5.11": {
                    "id": 11,
                    "short": "Jer 5:11",
                    "name": "Jeremiah 5:11",
                    "scripture": "For the house of Israel and the house of Judah have dealt very treacherously against me, saith the Lord ."
                },
                "jer5.12": {
                    "id": 12,
                    "short": "Jer 5:12",
                    "name": "Jeremiah 5:12",
                    "scripture": "They have belied the Lord, and said, It is not he; neither shall evil come upon us; neither shall we see sword nor famine:"
                },
                "jer5.13": {
                    "id": 13,
                    "short": "Jer 5:13",
                    "name": "Jeremiah 5:13",
                    "scripture": "And the prophets shall become wind, and the word is not in them: thus shall it be done unto them."
                },
                "jer5.14": {
                    "id": 14,
                    "short": "Jer 5:14",
                    "name": "Jeremiah 5:14",
                    "scripture": "Wherefore thus saith the Lord God of hosts, Because ye speak this word, behold, I will make my words in thy mouth fire, and this people wood, and it shall devour them."
                },
                "jer5.15": {
                    "id": 15,
                    "short": "Jer 5:15",
                    "name": "Jeremiah 5:15",
                    "scripture": "Lo, I will bring a nation upon you from far, O house of Israel, saith the Lord : it is a mighty nation, it is an ancient nation, a nation whose language thou knowest not, neither understandest what they say."
                },
                "jer5.16": {
                    "id": 16,
                    "short": "Jer 5:16",
                    "name": "Jeremiah 5:16",
                    "scripture": "Their quiver is as an open sepulchre, they are all mighty men."
                },
                "jer5.17": {
                    "id": 17,
                    "short": "Jer 5:17",
                    "name": "Jeremiah 5:17",
                    "scripture": "And they shall eat up thine harvest, and thy bread, which thy sons and thy daughters should eat: they shall eat up thy flocks and thine herds: they shall eat up thy vines and thy fig trees: they shall impoverish thy fenced cities, wherein thou trustedst, with the sword."
                },
                "jer5.18": {
                    "id": 18,
                    "short": "Jer 5:18",
                    "name": "Jeremiah 5:18",
                    "scripture": "Nevertheless in those days, saith the Lord, I will not make a full end with you."
                },
                "jer5.19": {
                    "id": 19,
                    "short": "Jer 5:19",
                    "name": "Jeremiah 5:19",
                    "scripture": "And it shall come to pass, when ye shall say, Wherefore doeth the Lord our God all these things unto us? then shalt thou answer them, Like as ye have forsaken me, and served strange gods in your land, so shall ye serve strangers in a land that is not yours."
                },
                "jer5.20": {
                    "id": 20,
                    "short": "Jer 5:20",
                    "name": "Jeremiah 5:20",
                    "scripture": "Declare this in the house of Jacob, and publish it in Judah, saying,"
                },
                "jer5.21": {
                    "id": 21,
                    "short": "Jer 5:21",
                    "name": "Jeremiah 5:21",
                    "scripture": "Hear now this, O foolish people, and without understanding; which have eyes, and see not; which have ears, and hear not:"
                },
                "jer5.22": {
                    "id": 22,
                    "short": "Jer 5:22",
                    "name": "Jeremiah 5:22",
                    "scripture": "Fear ye not me? saith the Lord : will ye not tremble at my presence, which have placed the sand for the bound of the sea by a perpetual decree, that it cannot pass it: and though the waves thereof toss themselves, yet can they not prevail; though they roar, yet can they not pass over it?"
                },
                "jer5.23": {
                    "id": 23,
                    "short": "Jer 5:23",
                    "name": "Jeremiah 5:23",
                    "scripture": "But this people hath a revolting and a rebellious heart; they are revolted and gone."
                },
                "jer5.24": {
                    "id": 24,
                    "short": "Jer 5:24",
                    "name": "Jeremiah 5:24",
                    "scripture": "Neither say they in their heart, Let us now fear the Lord our God, that giveth rain, both the former and the latter, in his season: he reserveth unto us the appointed weeks of the harvest."
                },
                "jer5.25": {
                    "id": 25,
                    "short": "Jer 5:25",
                    "name": "Jeremiah 5:25",
                    "scripture": "Your iniquities have turned away these things, and your sins have withholden good things from you."
                },
                "jer5.26": {
                    "id": 26,
                    "short": "Jer 5:26",
                    "name": "Jeremiah 5:26",
                    "scripture": "For among my people are found wicked men: they lay wait, as he that setteth snares; they set a trap, they catch men."
                },
                "jer5.27": {
                    "id": 27,
                    "short": "Jer 5:27",
                    "name": "Jeremiah 5:27",
                    "scripture": "As a cage is full of birds, so are their houses full of deceit: therefore they are become great, and waxen rich."
                },
                "jer5.28": {
                    "id": 28,
                    "short": "Jer 5:28",
                    "name": "Jeremiah 5:28",
                    "scripture": "They are waxen fat, they shine: yea, they overpass the deeds of the wicked: they judge not the cause, the cause of the fatherless, yet they prosper; and the right of the needy do they not judge."
                },
                "jer5.29": {
                    "id": 29,
                    "short": "Jer 5:29",
                    "name": "Jeremiah 5:29",
                    "scripture": "Shall I not visit for these things? saith the Lord : shall not my soul be avenged on such a nation as this?"
                },
                "jer5.30": {
                    "id": 30,
                    "short": "Jer 5:30",
                    "name": "Jeremiah 5:30",
                    "scripture": "A wonderful and horrible thing is committed in the land;"
                },
                "jer5.31": {
                    "id": 31,
                    "short": "Jer 5:31",
                    "name": "Jeremiah 5:31",
                    "scripture": "The prophets prophesy falsely, and the priests bear rule by their means; and my people love to have it so: and what will ye do in the end thereof?"
                }
            }
        },
        "jer6": {
            "id": 6,
            "short": "Jer 6",
            "name": "Jeremiah 6",
            "verses": {
                "jer6.1": {
                    "id": 1,
                    "short": "Jer 6:1",
                    "name": "Jeremiah 6:1",
                    "scripture": "O ye children of Benjamin, gather yourselves to flee out of the midst of Jerusalem, and blow the trumpet in Tekoa, and set up a sign of fire in Bethâ€“haccerem: for evil appeareth out of the north, and great destruction."
                },
                "jer6.2": {
                    "id": 2,
                    "short": "Jer 6:2",
                    "name": "Jeremiah 6:2",
                    "scripture": "I have likened the daughter of Zion to a comely and delicate woman."
                },
                "jer6.3": {
                    "id": 3,
                    "short": "Jer 6:3",
                    "name": "Jeremiah 6:3",
                    "scripture": "The shepherds with their flocks shall come unto her; they shall pitch their tents against her round about; they shall feed every one in his place."
                },
                "jer6.4": {
                    "id": 4,
                    "short": "Jer 6:4",
                    "name": "Jeremiah 6:4",
                    "scripture": "Prepare ye war against her; arise, and let us go up at noon. Woe unto us! for the day goeth away, for the shadows of the evening are stretched out."
                },
                "jer6.5": {
                    "id": 5,
                    "short": "Jer 6:5",
                    "name": "Jeremiah 6:5",
                    "scripture": "Arise, and let us go by night, and let us destroy her palaces."
                },
                "jer6.6": {
                    "id": 6,
                    "short": "Jer 6:6",
                    "name": "Jeremiah 6:6",
                    "scripture": "For thus hath the Lord of hosts said, Hew ye down trees, and cast a mount against Jerusalem: this is the city to be visited; she is wholly oppression in the midst of her."
                },
                "jer6.7": {
                    "id": 7,
                    "short": "Jer 6:7",
                    "name": "Jeremiah 6:7",
                    "scripture": "As a fountain casteth out her waters, so she casteth out her wickedness: violence and spoil is heard in her; before me continually is grief and wounds."
                },
                "jer6.8": {
                    "id": 8,
                    "short": "Jer 6:8",
                    "name": "Jeremiah 6:8",
                    "scripture": "Be thou instructed, O Jerusalem, lest my soul depart from thee; lest I make thee desolate, a land not inhabited."
                },
                "jer6.9": {
                    "id": 9,
                    "short": "Jer 6:9",
                    "name": "Jeremiah 6:9",
                    "scripture": "Thus saith the Lord of hosts, They shall thoroughly glean the remnant of Israel as a vine: turn back thine hand as a grapegatherer into the baskets."
                },
                "jer6.10": {
                    "id": 10,
                    "short": "Jer 6:10",
                    "name": "Jeremiah 6:10",
                    "scripture": "To whom shall I speak, and give warning, that they may hear? behold, their ear is uncircumcised, and they cannot hearken: behold, the word of the Lord is unto them a reproach; they have no delight in it."
                },
                "jer6.11": {
                    "id": 11,
                    "short": "Jer 6:11",
                    "name": "Jeremiah 6:11",
                    "scripture": "Therefore I am full of the fury of the Lord; I am weary with holding in: I will pour it out upon the children abroad, and upon the assembly of young men together: for even the husband with the wife shall be taken, the aged with him that is full of days."
                },
                "jer6.12": {
                    "id": 12,
                    "short": "Jer 6:12",
                    "name": "Jeremiah 6:12",
                    "scripture": "And their houses shall be turned unto others, with their fields and wives together: for I will stretch out my hand upon the inhabitants of the land, saith the Lord ."
                },
                "jer6.13": {
                    "id": 13,
                    "short": "Jer 6:13",
                    "name": "Jeremiah 6:13",
                    "scripture": "For from the least of them even unto the greatest of them every one is given to covetousness; and from the prophet even unto the priest every one dealeth falsely."
                },
                "jer6.14": {
                    "id": 14,
                    "short": "Jer 6:14",
                    "name": "Jeremiah 6:14",
                    "scripture": "They have healed also the hurt of the daughter of my people slightly, saying, Peace, peace; when there is no peace."
                },
                "jer6.15": {
                    "id": 15,
                    "short": "Jer 6:15",
                    "name": "Jeremiah 6:15",
                    "scripture": "Were they ashamed when they had committed abomination? nay, they were not at all ashamed, neither could they blush: therefore they shall fall among them that fall: at the time that I visit them they shall be cast down, saith the Lord ."
                },
                "jer6.16": {
                    "id": 16,
                    "short": "Jer 6:16",
                    "name": "Jeremiah 6:16",
                    "scripture": "Thus saith the Lord, Stand ye in the ways, and see, and ask for the old paths, where is the good way, and walk therein, and ye shall find rest for your souls. But they said, We will not walk therein."
                },
                "jer6.17": {
                    "id": 17,
                    "short": "Jer 6:17",
                    "name": "Jeremiah 6:17",
                    "scripture": "Also I set watchmen over you, saying, Hearken to the sound of the trumpet. But they said, We will not hearken."
                },
                "jer6.18": {
                    "id": 18,
                    "short": "Jer 6:18",
                    "name": "Jeremiah 6:18",
                    "scripture": "Therefore hear, ye nations, and know, O congregation, what is among them."
                },
                "jer6.19": {
                    "id": 19,
                    "short": "Jer 6:19",
                    "name": "Jeremiah 6:19",
                    "scripture": "Hear, O earth: behold, I will bring evil upon this people, even the fruit of their thoughts, because they have not hearkened unto my words, nor to my law, but rejected it."
                },
                "jer6.20": {
                    "id": 20,
                    "short": "Jer 6:20",
                    "name": "Jeremiah 6:20",
                    "scripture": "To what purpose cometh there to me incense from Sheba, and the sweet cane from a far country? your burnt offerings are not acceptable, nor your sacrifices sweet unto me."
                },
                "jer6.21": {
                    "id": 21,
                    "short": "Jer 6:21",
                    "name": "Jeremiah 6:21",
                    "scripture": "Therefore thus saith the Lord, Behold, I will lay stumblingblocks before this people, and the fathers and the sons together shall fall upon them; the neighbour and his friend shall perish."
                },
                "jer6.22": {
                    "id": 22,
                    "short": "Jer 6:22",
                    "name": "Jeremiah 6:22",
                    "scripture": "Thus saith the Lord, Behold, a people cometh from the north country, and a great nation shall be raised from the sides of the earth."
                },
                "jer6.23": {
                    "id": 23,
                    "short": "Jer 6:23",
                    "name": "Jeremiah 6:23",
                    "scripture": "They shall lay hold on bow and spear; they are cruel, and have no mercy; their voice roareth like the sea; and they ride upon horses, set in array as men for war against thee, O daughter of Zion."
                },
                "jer6.24": {
                    "id": 24,
                    "short": "Jer 6:24",
                    "name": "Jeremiah 6:24",
                    "scripture": "We have heard the fame thereof: our hands wax feeble: anguish hath taken hold of us, and pain, as of a woman in travail."
                },
                "jer6.25": {
                    "id": 25,
                    "short": "Jer 6:25",
                    "name": "Jeremiah 6:25",
                    "scripture": "Go not forth into the field, nor walk by the way; for the sword of the enemy and fear is on every side."
                },
                "jer6.26": {
                    "id": 26,
                    "short": "Jer 6:26",
                    "name": "Jeremiah 6:26",
                    "scripture": "O daughter of my people, gird thee with sackcloth, and wallow thyself in ashes: make thee mourning, as for an only son, most bitter lamentation: for the spoiler shall suddenly come upon us."
                },
                "jer6.27": {
                    "id": 27,
                    "short": "Jer 6:27",
                    "name": "Jeremiah 6:27",
                    "scripture": "I have set thee for a tower and a fortress among my people, that thou mayest know and try their way."
                },
                "jer6.28": {
                    "id": 28,
                    "short": "Jer 6:28",
                    "name": "Jeremiah 6:28",
                    "scripture": "They are all grievous revolters, walking with slanders: they are brass and iron; they are all corrupters."
                },
                "jer6.29": {
                    "id": 29,
                    "short": "Jer 6:29",
                    "name": "Jeremiah 6:29",
                    "scripture": "The bellows are burned, the lead is consumed of the fire; the founder melteth in vain: for the wicked are not plucked away."
                },
                "jer6.30": {
                    "id": 30,
                    "short": "Jer 6:30",
                    "name": "Jeremiah 6:30",
                    "scripture": "Reprobate silver shall men call them, because the Lord hath rejected them."
                }
            }
        },
        "jer7": {
            "id": 7,
            "short": "Jer 7",
            "name": "Jeremiah 7",
            "verses": {
                "jer7.1": {
                    "id": 1,
                    "short": "Jer 7:1",
                    "name": "Jeremiah 7:1",
                    "scripture": "The word that came to Jeremiah from the Lord, saying,"
                },
                "jer7.2": {
                    "id": 2,
                    "short": "Jer 7:2",
                    "name": "Jeremiah 7:2",
                    "scripture": "Stand in the gate of the Lord's house, and proclaim there this word, and say, Hear the word of the Lord, all ye of Judah, that enter in at these gates to worship the Lord ."
                },
                "jer7.3": {
                    "id": 3,
                    "short": "Jer 7:3",
                    "name": "Jeremiah 7:3",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel, Amend your ways and your doings, and I will cause you to dwell in this place."
                },
                "jer7.4": {
                    "id": 4,
                    "short": "Jer 7:4",
                    "name": "Jeremiah 7:4",
                    "scripture": "Trust ye not in lying words, saying, The temple of the Lord, The temple of the Lord, The temple of the Lord, are these."
                },
                "jer7.5": {
                    "id": 5,
                    "short": "Jer 7:5",
                    "name": "Jeremiah 7:5",
                    "scripture": "For if ye thoroughly amend your ways and your doings; if ye thoroughly execute judgment between a man and his neighbour;"
                },
                "jer7.6": {
                    "id": 6,
                    "short": "Jer 7:6",
                    "name": "Jeremiah 7:6",
                    "scripture": "If ye oppress not the stranger, the fatherless, and the widow, and shed not innocent blood in this place, neither walk after other gods to your hurt:"
                },
                "jer7.7": {
                    "id": 7,
                    "short": "Jer 7:7",
                    "name": "Jeremiah 7:7",
                    "scripture": "Then will I cause you to dwell in this place, in the land that I gave to your fathers, for ever and ever."
                },
                "jer7.8": {
                    "id": 8,
                    "short": "Jer 7:8",
                    "name": "Jeremiah 7:8",
                    "scripture": "Behold, ye trust in lying words, that cannot profit."
                },
                "jer7.9": {
                    "id": 9,
                    "short": "Jer 7:9",
                    "name": "Jeremiah 7:9",
                    "scripture": "Will ye steal, murder, and commit adultery, and swear falsely, and burn incense unto Baal, and walk after other gods whom ye know not;"
                },
                "jer7.10": {
                    "id": 10,
                    "short": "Jer 7:10",
                    "name": "Jeremiah 7:10",
                    "scripture": "And come and stand before me in this house, which is called by my name, and say, We are delivered to do all these abominations?"
                },
                "jer7.11": {
                    "id": 11,
                    "short": "Jer 7:11",
                    "name": "Jeremiah 7:11",
                    "scripture": "Is this house, which is called by my name, become a den of robbers in your eyes? Behold, even I have seen it, saith the Lord ."
                },
                "jer7.12": {
                    "id": 12,
                    "short": "Jer 7:12",
                    "name": "Jeremiah 7:12",
                    "scripture": "But go ye now unto my place which was in Shiloh, where I set my name at the first, and see what I did to it for the wickedness of my people Israel."
                },
                "jer7.13": {
                    "id": 13,
                    "short": "Jer 7:13",
                    "name": "Jeremiah 7:13",
                    "scripture": "And now, because ye have done all these works, saith the Lord, and I spake unto you, rising up early and speaking, but ye heard not; and I called you, but ye answered not;"
                },
                "jer7.14": {
                    "id": 14,
                    "short": "Jer 7:14",
                    "name": "Jeremiah 7:14",
                    "scripture": "Therefore will I do unto this house, which is called by my name, wherein ye trust, and unto the place which I gave to you and to your fathers, as I have done to Shiloh."
                },
                "jer7.15": {
                    "id": 15,
                    "short": "Jer 7:15",
                    "name": "Jeremiah 7:15",
                    "scripture": "And I will cast you out of my sight, as I have cast out all your brethren, even the whole seed of Ephraim."
                },
                "jer7.16": {
                    "id": 16,
                    "short": "Jer 7:16",
                    "name": "Jeremiah 7:16",
                    "scripture": "Therefore pray not thou for this people, neither lift up cry nor prayer for them, neither make intercession to me: for I will not hear thee."
                },
                "jer7.17": {
                    "id": 17,
                    "short": "Jer 7:17",
                    "name": "Jeremiah 7:17",
                    "scripture": "Seest thou not what they do in the cities of Judah and in the streets of Jerusalem?"
                },
                "jer7.18": {
                    "id": 18,
                    "short": "Jer 7:18",
                    "name": "Jeremiah 7:18",
                    "scripture": "The children gather wood, and the fathers kindle the fire, and the women knead their dough, to make cakes to the queen of heaven, and to pour out drink offerings unto other gods, that they may provoke me to anger."
                },
                "jer7.19": {
                    "id": 19,
                    "short": "Jer 7:19",
                    "name": "Jeremiah 7:19",
                    "scripture": "Do they provoke me to anger? saith the Lord : do they not provoke themselves to the confusion of their own faces?"
                },
                "jer7.20": {
                    "id": 20,
                    "short": "Jer 7:20",
                    "name": "Jeremiah 7:20",
                    "scripture": "Therefore thus saith the Lord God; Behold, mine anger and my fury shall be poured out upon this place, upon man, and upon beast, and upon the trees of the field, and upon the fruit of the ground; and it shall burn, and shall not be quenched."
                },
                "jer7.21": {
                    "id": 21,
                    "short": "Jer 7:21",
                    "name": "Jeremiah 7:21",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel; Put your burnt offerings unto your sacrifices, and eat flesh."
                },
                "jer7.22": {
                    "id": 22,
                    "short": "Jer 7:22",
                    "name": "Jeremiah 7:22",
                    "scripture": "For I spake not unto your fathers, nor commanded them in the day that I brought them out of the land of Egypt, concerning burnt offerings or sacrifices:"
                },
                "jer7.23": {
                    "id": 23,
                    "short": "Jer 7:23",
                    "name": "Jeremiah 7:23",
                    "scripture": "But this thing commanded I them, saying, Obey my voice, and I will be your God, and ye shall be my people: and walk ye in all the ways that I have commanded you, that it may be well unto you."
                },
                "jer7.24": {
                    "id": 24,
                    "short": "Jer 7:24",
                    "name": "Jeremiah 7:24",
                    "scripture": "But they hearkened not, nor inclined their ear, but walked in the counsels and in the imagination of their evil heart, and went backward, and not forward."
                },
                "jer7.25": {
                    "id": 25,
                    "short": "Jer 7:25",
                    "name": "Jeremiah 7:25",
                    "scripture": "Since the day that your fathers came forth out of the land of Egypt unto this day I have even sent unto you all my servants the prophets, daily rising up early and sending them:"
                },
                "jer7.26": {
                    "id": 26,
                    "short": "Jer 7:26",
                    "name": "Jeremiah 7:26",
                    "scripture": "Yet they hearkened not unto me, nor inclined their ear, but hardened their neck: they did worse than their fathers."
                },
                "jer7.27": {
                    "id": 27,
                    "short": "Jer 7:27",
                    "name": "Jeremiah 7:27",
                    "scripture": "Therefore thou shalt speak all these words unto them; but they will not hearken to thee: thou shalt also call unto them; but they will not answer thee."
                },
                "jer7.28": {
                    "id": 28,
                    "short": "Jer 7:28",
                    "name": "Jeremiah 7:28",
                    "scripture": "But thou shalt say unto them, This is a nation that obeyeth not the voice of the Lord their God, nor receiveth correction: truth is perished, and is cut off from their mouth."
                },
                "jer7.29": {
                    "id": 29,
                    "short": "Jer 7:29",
                    "name": "Jeremiah 7:29",
                    "scripture": "Cut off thine hair, O Jerusalem, and cast it away, and take up a lamentation on high places; for the Lord hath rejected and forsaken the generation of his wrath."
                },
                "jer7.30": {
                    "id": 30,
                    "short": "Jer 7:30",
                    "name": "Jeremiah 7:30",
                    "scripture": "For the children of Judah have done evil in my sight, saith the Lord : they have set their abominations in the house which is called by my name, to pollute it."
                },
                "jer7.31": {
                    "id": 31,
                    "short": "Jer 7:31",
                    "name": "Jeremiah 7:31",
                    "scripture": "And they have built the high places of Topheth, which is in the valley of the son of Hinnom, to burn their sons and their daughters in the fire; which I commanded them not, neither came it into my heart."
                },
                "jer7.32": {
                    "id": 32,
                    "short": "Jer 7:32",
                    "name": "Jeremiah 7:32",
                    "scripture": "Therefore, behold, the days come, saith the Lord, that it shall no more be called Topheth, nor the valley of the son of Hinnom, but the valley of slaughter: for they shall bury in Topheth, till there be no place."
                },
                "jer7.33": {
                    "id": 33,
                    "short": "Jer 7:33",
                    "name": "Jeremiah 7:33",
                    "scripture": "And the carcases of this people shall be meat for the fowls of the heaven, and for the beasts of the earth; and none shall fray them away."
                },
                "jer7.34": {
                    "id": 34,
                    "short": "Jer 7:34",
                    "name": "Jeremiah 7:34",
                    "scripture": "Then will I cause to cease from the cities of Judah, and from the streets of Jerusalem, the voice of mirth, and the voice of gladness, the voice of the bridegroom, and the voice of the bride: for the land shall be desolate."
                }
            }
        },
        "jer8": {
            "id": 8,
            "short": "Jer 8",
            "name": "Jeremiah 8",
            "verses": {
                "jer8.1": {
                    "id": 1,
                    "short": "Jer 8:1",
                    "name": "Jeremiah 8:1",
                    "scripture": "At that time, saith the Lord, they shall bring out the bones of the kings of Judah, and the bones of his princes, and the bones of the priests, and the bones of the prophets, and the bones of the inhabitants of Jerusalem, out of their graves:"
                },
                "jer8.2": {
                    "id": 2,
                    "short": "Jer 8:2",
                    "name": "Jeremiah 8:2",
                    "scripture": "And they shall spread them before the sun, and the moon, and all the host of heaven, whom they have loved, and whom they have served, and after whom they have walked, and whom they have sought, and whom they have worshipped: they shall not be gathered, nor be buried; they shall be for dung upon the face of the earth."
                },
                "jer8.3": {
                    "id": 3,
                    "short": "Jer 8:3",
                    "name": "Jeremiah 8:3",
                    "scripture": "And death shall be chosen rather than life by all the residue of them that remain of this evil family, which remain in all the places whither I have driven them, saith the Lord of hosts."
                },
                "jer8.4": {
                    "id": 4,
                    "short": "Jer 8:4",
                    "name": "Jeremiah 8:4",
                    "scripture": "Moreover thou shalt say unto them, Thus saith the Lord; Shall they fall, and not arise? shall he turn away, and not return?"
                },
                "jer8.5": {
                    "id": 5,
                    "short": "Jer 8:5",
                    "name": "Jeremiah 8:5",
                    "scripture": "Why then is this people of Jerusalem slidden back by a perpetual backsliding? they hold fast deceit, they refuse to return."
                },
                "jer8.6": {
                    "id": 6,
                    "short": "Jer 8:6",
                    "name": "Jeremiah 8:6",
                    "scripture": "I hearkened and heard, but they spake not aright: no man repented him of his wickedness, saying, What have I done? every one turned to his course, as the horse rusheth into the battle."
                },
                "jer8.7": {
                    "id": 7,
                    "short": "Jer 8:7",
                    "name": "Jeremiah 8:7",
                    "scripture": "Yea, the stork in the heaven knoweth her appointed times; and the turtle and the crane and the swallow observe the time of their coming; but my people know not the judgment of the Lord ."
                },
                "jer8.8": {
                    "id": 8,
                    "short": "Jer 8:8",
                    "name": "Jeremiah 8:8",
                    "scripture": "How do ye say, We are wise, and the law of the Lord is with us? Lo, certainly in vain made he it; the pen of the scribes is in vain."
                },
                "jer8.9": {
                    "id": 9,
                    "short": "Jer 8:9",
                    "name": "Jeremiah 8:9",
                    "scripture": "The wise men are ashamed, they are dismayed and taken: lo, they have rejected the word of the Lord; and what wisdom is in them?"
                },
                "jer8.10": {
                    "id": 10,
                    "short": "Jer 8:10",
                    "name": "Jeremiah 8:10",
                    "scripture": "Therefore will I give their wives unto others, and their fields to them that shall inherit them: for every one from the least even unto the greatest is given to covetousness, from the prophet even unto the priest every one dealeth falsely."
                },
                "jer8.11": {
                    "id": 11,
                    "short": "Jer 8:11",
                    "name": "Jeremiah 8:11",
                    "scripture": "For they have healed the hurt of the daughter of my people slightly, saying, Peace, peace; when there is no peace."
                },
                "jer8.12": {
                    "id": 12,
                    "short": "Jer 8:12",
                    "name": "Jeremiah 8:12",
                    "scripture": "Were they ashamed when they had committed abomination? nay, they were not at all ashamed, neither could they blush: therefore shall they fall among them that fall: in the time of their visitation they shall be cast down, saith the Lord ."
                },
                "jer8.13": {
                    "id": 13,
                    "short": "Jer 8:13",
                    "name": "Jeremiah 8:13",
                    "scripture": "I will surely consume them, saith the Lord : there shall be no grapes on the vine, nor figs on the fig tree, and the leaf shall fade; and the things that I have given them shall pass away from them."
                },
                "jer8.14": {
                    "id": 14,
                    "short": "Jer 8:14",
                    "name": "Jeremiah 8:14",
                    "scripture": "Why do we sit still? assemble yourselves, and let us enter into the defenced cities, and let us be silent there: for the Lord our God hath put us to silence, and given us water of gall to drink, because we have sinned against the Lord ."
                },
                "jer8.15": {
                    "id": 15,
                    "short": "Jer 8:15",
                    "name": "Jeremiah 8:15",
                    "scripture": "We looked for peace, but no good came; and for a time of health, and behold trouble!"
                },
                "jer8.16": {
                    "id": 16,
                    "short": "Jer 8:16",
                    "name": "Jeremiah 8:16",
                    "scripture": "The snorting of his horses was heard from Dan: the whole land trembled at the sound of the neighing of his strong ones; for they are come, and have devoured the land, and all that is in it; the city, and those that dwell therein."
                },
                "jer8.17": {
                    "id": 17,
                    "short": "Jer 8:17",
                    "name": "Jeremiah 8:17",
                    "scripture": "For, behold, I will send serpents, cockatrices, among you, which will not be charmed, and they shall bite you, saith the Lord ."
                },
                "jer8.18": {
                    "id": 18,
                    "short": "Jer 8:18",
                    "name": "Jeremiah 8:18",
                    "scripture": "When I would comfort myself against sorrow, my heart is faint in me."
                },
                "jer8.19": {
                    "id": 19,
                    "short": "Jer 8:19",
                    "name": "Jeremiah 8:19",
                    "scripture": "Behold the voice of the cry of the daughter of my people because of them that dwell in a far country: Is not the Lord in Zion? is not her king in her? Why have they provoked me to anger with their graven images, and with strange vanities?"
                },
                "jer8.20": {
                    "id": 20,
                    "short": "Jer 8:20",
                    "name": "Jeremiah 8:20",
                    "scripture": "The harvest is past, the summer is ended, and we are not saved."
                },
                "jer8.21": {
                    "id": 21,
                    "short": "Jer 8:21",
                    "name": "Jeremiah 8:21",
                    "scripture": "For the hurt of the daughter of my people am I hurt; I am black; astonishment hath taken hold on me."
                },
                "jer8.22": {
                    "id": 22,
                    "short": "Jer 8:22",
                    "name": "Jeremiah 8:22",
                    "scripture": "Is there no balm in Gilead; is there no physician there? why then is not the health of the daughter of my people recovered?"
                }
            }
        },
        "jer9": {
            "id": 9,
            "short": "Jer 9",
            "name": "Jeremiah 9",
            "verses": {
                "jer9.1": {
                    "id": 1,
                    "short": "Jer 9:1",
                    "name": "Jeremiah 9:1",
                    "scripture": "Oh that my head were waters, and mine eyes a fountain of tears, that I might weep day and night for the slain of the daughter of my people!"
                },
                "jer9.2": {
                    "id": 2,
                    "short": "Jer 9:2",
                    "name": "Jeremiah 9:2",
                    "scripture": "Oh that I had in the wilderness a lodging place of wayfaring men; that I might leave my people, and go from them! for they be all adulterers, an assembly of treacherous men."
                },
                "jer9.3": {
                    "id": 3,
                    "short": "Jer 9:3",
                    "name": "Jeremiah 9:3",
                    "scripture": "And they bend their tongues like their bow for lies: but they are not valiant for the truth upon the earth; for they proceed from evil to evil, and they know not me, saith the Lord ."
                },
                "jer9.4": {
                    "id": 4,
                    "short": "Jer 9:4",
                    "name": "Jeremiah 9:4",
                    "scripture": "Take ye heed every one of his neighbour, and trust ye not in any brother: for every brother will utterly supplant, and every neighbour will walk with slanders."
                },
                "jer9.5": {
                    "id": 5,
                    "short": "Jer 9:5",
                    "name": "Jeremiah 9:5",
                    "scripture": "And they will deceive every one his neighbour, and will not speak the truth: they have taught their tongue to speak lies, and weary themselves to commit iniquity."
                },
                "jer9.6": {
                    "id": 6,
                    "short": "Jer 9:6",
                    "name": "Jeremiah 9:6",
                    "scripture": "Thine habitation is in the midst of deceit; through deceit they refuse to know me, saith the Lord ."
                },
                "jer9.7": {
                    "id": 7,
                    "short": "Jer 9:7",
                    "name": "Jeremiah 9:7",
                    "scripture": "Therefore thus saith the Lord of hosts, Behold, I will melt them, and try them; for how shall I do for the daughter of my people?"
                },
                "jer9.8": {
                    "id": 8,
                    "short": "Jer 9:8",
                    "name": "Jeremiah 9:8",
                    "scripture": "Their tongue is as an arrow shot out; it speaketh deceit: one speaketh peaceably to his neighbour with his mouth, but in heart he layeth his wait."
                },
                "jer9.9": {
                    "id": 9,
                    "short": "Jer 9:9",
                    "name": "Jeremiah 9:9",
                    "scripture": "Shall I not visit them for these things? saith the Lord : shall not my soul be avenged on such a nation as this?"
                },
                "jer9.10": {
                    "id": 10,
                    "short": "Jer 9:10",
                    "name": "Jeremiah 9:10",
                    "scripture": "For the mountains will I take up a weeping and wailing, and for the habitations of the wilderness a lamentation, because they are burned up, so that none can pass through them; neither can men hear the voice of the cattle; both the fowl of the heavens and the beast are fled; they are gone."
                },
                "jer9.11": {
                    "id": 11,
                    "short": "Jer 9:11",
                    "name": "Jeremiah 9:11",
                    "scripture": "And I will make Jerusalem heaps, and a den of dragons; and I will make the cities of Judah desolate, without an inhabitant."
                },
                "jer9.12": {
                    "id": 12,
                    "short": "Jer 9:12",
                    "name": "Jeremiah 9:12",
                    "scripture": "Who is the wise man, that may understand this? and who is he to whom the mouth of the Lord hath spoken, that he may declare it, for what the land perisheth and is burned up like a wilderness, that none passeth through?"
                },
                "jer9.13": {
                    "id": 13,
                    "short": "Jer 9:13",
                    "name": "Jeremiah 9:13",
                    "scripture": "And the Lord saith, Because they have forsaken my law which I set before them, and have not obeyed my voice, neither walked therein;"
                },
                "jer9.14": {
                    "id": 14,
                    "short": "Jer 9:14",
                    "name": "Jeremiah 9:14",
                    "scripture": "But have walked after the imagination of their own heart, and after Baalim, which their fathers taught them:"
                },
                "jer9.15": {
                    "id": 15,
                    "short": "Jer 9:15",
                    "name": "Jeremiah 9:15",
                    "scripture": "Therefore thus saith the Lord of hosts, the God of Israel; Behold, I will feed them, even this people, with wormwood, and give them water of gall to drink."
                },
                "jer9.16": {
                    "id": 16,
                    "short": "Jer 9:16",
                    "name": "Jeremiah 9:16",
                    "scripture": "I will scatter them also among the heathen, whom neither they nor their fathers have known: and I will send a sword after them, till I have consumed them."
                },
                "jer9.17": {
                    "id": 17,
                    "short": "Jer 9:17",
                    "name": "Jeremiah 9:17",
                    "scripture": "Thus saith the Lord of hosts, Consider ye, and call for the mourning women, that they may come; and send for cunning women, that they may come:"
                },
                "jer9.18": {
                    "id": 18,
                    "short": "Jer 9:18",
                    "name": "Jeremiah 9:18",
                    "scripture": "And let them make haste, and take up a wailing for us, that our eyes may run down with tears, and our eyelids gush out with waters."
                },
                "jer9.19": {
                    "id": 19,
                    "short": "Jer 9:19",
                    "name": "Jeremiah 9:19",
                    "scripture": "For a voice of wailing is heard out of Zion, How are we spoiled! we are greatly confounded, because we have forsaken the land, because our dwellings have cast us out."
                },
                "jer9.20": {
                    "id": 20,
                    "short": "Jer 9:20",
                    "name": "Jeremiah 9:20",
                    "scripture": "Yet hear the word of the Lord, O ye women, and let your ear receive the word of his mouth, and teach your daughters wailing, and every one her neighbour lamentation."
                },
                "jer9.21": {
                    "id": 21,
                    "short": "Jer 9:21",
                    "name": "Jeremiah 9:21",
                    "scripture": "For death is come up into our windows, and is entered into our palaces, to cut off the children from without, and the young men from the streets."
                },
                "jer9.22": {
                    "id": 22,
                    "short": "Jer 9:22",
                    "name": "Jeremiah 9:22",
                    "scripture": "Speak, Thus saith the Lord, Even the carcases of men shall fall as dung upon the open field, and as the handful after the harvestman, and none shall gather them."
                },
                "jer9.23": {
                    "id": 23,
                    "short": "Jer 9:23",
                    "name": "Jeremiah 9:23",
                    "scripture": "Thus saith the Lord, Let not the wise man glory in his wisdom, neither let the mighty man glory in his might, let not the rich man glory in his riches:"
                },
                "jer9.24": {
                    "id": 24,
                    "short": "Jer 9:24",
                    "name": "Jeremiah 9:24",
                    "scripture": "But let him that glorieth glory in this, that he understandeth and knoweth me, that I am the Lord which exercise lovingkindness, judgment, and righteousness, in the earth: for in these things I delight, saith the Lord ."
                },
                "jer9.25": {
                    "id": 25,
                    "short": "Jer 9:25",
                    "name": "Jeremiah 9:25",
                    "scripture": "Behold, the days come, saith the Lord, that I will punish all them which are circumcised with the uncircumcised;"
                },
                "jer9.26": {
                    "id": 26,
                    "short": "Jer 9:26",
                    "name": "Jeremiah 9:26",
                    "scripture": "Egypt, and Judah, and Edom, and the children of Ammon, and Moab, and all that are in the utmost corners, that dwell in the wilderness: for all these nations are uncircumcised, and all the house of Israel are uncircumcised in the heart."
                }
            }
        },
        "jer10": {
            "id": 10,
            "short": "Jer 10",
            "name": "Jeremiah 10",
            "verses": {
                "jer10.1": {
                    "id": 1,
                    "short": "Jer 10:1",
                    "name": "Jeremiah 10:1",
                    "scripture": "Hear ye the word which the Lord speaketh unto you, O house of Israel:"
                },
                "jer10.2": {
                    "id": 2,
                    "short": "Jer 10:2",
                    "name": "Jeremiah 10:2",
                    "scripture": "Thus saith the Lord, Learn not the way of the heathen, and be not dismayed at the signs of heaven; for the heathen are dismayed at them."
                },
                "jer10.3": {
                    "id": 3,
                    "short": "Jer 10:3",
                    "name": "Jeremiah 10:3",
                    "scripture": "For the customs of the people are vain: for one cutteth a tree out of the forest, the work of the hands of the workman, with the axe."
                },
                "jer10.4": {
                    "id": 4,
                    "short": "Jer 10:4",
                    "name": "Jeremiah 10:4",
                    "scripture": "They deck it with silver and with gold; they fasten it with nails and with hammers, that it move not."
                },
                "jer10.5": {
                    "id": 5,
                    "short": "Jer 10:5",
                    "name": "Jeremiah 10:5",
                    "scripture": "They are upright as the palm tree, but speak not: they must needs be borne, because they cannot go. Be not afraid of them; for they cannot do evil, neither also is it in them to do good."
                },
                "jer10.6": {
                    "id": 6,
                    "short": "Jer 10:6",
                    "name": "Jeremiah 10:6",
                    "scripture": "Forasmuch as there is none like unto thee, O Lord; thou art great, and thy name is great in might."
                },
                "jer10.7": {
                    "id": 7,
                    "short": "Jer 10:7",
                    "name": "Jeremiah 10:7",
                    "scripture": "Who would not fear thee, O King of nations? for to thee doth it appertain: forasmuch as among all the wise men of the nations, and in all their kingdoms, there is none like unto thee."
                },
                "jer10.8": {
                    "id": 8,
                    "short": "Jer 10:8",
                    "name": "Jeremiah 10:8",
                    "scripture": "But they are altogether brutish and foolish: the stock is a doctrine of vanities."
                },
                "jer10.9": {
                    "id": 9,
                    "short": "Jer 10:9",
                    "name": "Jeremiah 10:9",
                    "scripture": "Silver spread into plates is brought from Tarshish, and gold from Uphaz, the work of the workman, and of the hands of the founder: blue and purple is their clothing: they are all the work of cunning men."
                },
                "jer10.10": {
                    "id": 10,
                    "short": "Jer 10:10",
                    "name": "Jeremiah 10:10",
                    "scripture": "But the Lord is the true God, he is the living God, and an everlasting king: at his wrath the earth shall tremble, and the nations shall not be able to abide his indignation."
                },
                "jer10.11": {
                    "id": 11,
                    "short": "Jer 10:11",
                    "name": "Jeremiah 10:11",
                    "scripture": "Thus shall ye say unto them, The gods that have not made the heavens and the earth, even they shall perish from the earth, and from under these heavens."
                },
                "jer10.12": {
                    "id": 12,
                    "short": "Jer 10:12",
                    "name": "Jeremiah 10:12",
                    "scripture": "He hath made the earth by his power, he hath established the world by his wisdom, and hath stretched out the heavens by his discretion."
                },
                "jer10.13": {
                    "id": 13,
                    "short": "Jer 10:13",
                    "name": "Jeremiah 10:13",
                    "scripture": "When he uttereth his voice, there is a multitude of waters in the heavens, and he causeth the vapours to ascend from the ends of the earth; he maketh lightnings with rain, and bringeth forth the wind out of his treasures."
                },
                "jer10.14": {
                    "id": 14,
                    "short": "Jer 10:14",
                    "name": "Jeremiah 10:14",
                    "scripture": "Every man is brutish in his knowledge: every founder is confounded by the graven image: for his molten image is falsehood, and there is no breath in them."
                },
                "jer10.15": {
                    "id": 15,
                    "short": "Jer 10:15",
                    "name": "Jeremiah 10:15",
                    "scripture": "They are vanity, and the work of errors: in the time of their visitation they shall perish."
                },
                "jer10.16": {
                    "id": 16,
                    "short": "Jer 10:16",
                    "name": "Jeremiah 10:16",
                    "scripture": "The portion of Jacob is not like them: for he is the former of all things; and Israel is the rod of his inheritance: The Lord of hosts is his name."
                },
                "jer10.17": {
                    "id": 17,
                    "short": "Jer 10:17",
                    "name": "Jeremiah 10:17",
                    "scripture": "Gather up thy wares out of the land, O inhabitant of the fortress."
                },
                "jer10.18": {
                    "id": 18,
                    "short": "Jer 10:18",
                    "name": "Jeremiah 10:18",
                    "scripture": "For thus saith the Lord, Behold, I will sling out the inhabitants of the land at this once, and will distress them, that they may find it so."
                },
                "jer10.19": {
                    "id": 19,
                    "short": "Jer 10:19",
                    "name": "Jeremiah 10:19",
                    "scripture": "Woe is me for my hurt! my wound is grievous: but I said, Truly this is a grief, and I must bear it."
                },
                "jer10.20": {
                    "id": 20,
                    "short": "Jer 10:20",
                    "name": "Jeremiah 10:20",
                    "scripture": "My tabernacle is spoiled, and all my cords are broken: my children are gone forth of me, and they are not: there is none to stretch forth my tent any more, and to set up my curtains."
                },
                "jer10.21": {
                    "id": 21,
                    "short": "Jer 10:21",
                    "name": "Jeremiah 10:21",
                    "scripture": "For the pastors are become brutish, and have not sought the Lord : therefore they shall not prosper, and all their flocks shall be scattered."
                },
                "jer10.22": {
                    "id": 22,
                    "short": "Jer 10:22",
                    "name": "Jeremiah 10:22",
                    "scripture": "Behold, the noise of the bruit is come, and a great commotion out of the north country, to make the cities of Judah desolate, and a den of dragons."
                },
                "jer10.23": {
                    "id": 23,
                    "short": "Jer 10:23",
                    "name": "Jeremiah 10:23",
                    "scripture": "O Lord, I know that the way of man is not in himself: it is not in man that walketh to direct his steps."
                },
                "jer10.24": {
                    "id": 24,
                    "short": "Jer 10:24",
                    "name": "Jeremiah 10:24",
                    "scripture": "O Lord, correct me, but with judgment; not in thine anger, lest thou bring me to nothing."
                },
                "jer10.25": {
                    "id": 25,
                    "short": "Jer 10:25",
                    "name": "Jeremiah 10:25",
                    "scripture": "Pour out thy fury upon the heathen that know thee not, and upon the families that call not on thy name: for they have eaten up Jacob, and devoured him, and consumed him, and have made his habitation desolate."
                }
            }
        },
        "jer11": {
            "id": 11,
            "short": "Jer 11",
            "name": "Jeremiah 11",
            "verses": {
                "jer11.1": {
                    "id": 1,
                    "short": "Jer 11:1",
                    "name": "Jeremiah 11:1",
                    "scripture": "The word that came to Jeremiah from the Lord, saying,"
                },
                "jer11.2": {
                    "id": 2,
                    "short": "Jer 11:2",
                    "name": "Jeremiah 11:2",
                    "scripture": "Hear ye the words of this covenant, and speak unto the men of Judah, and to the inhabitants of Jerusalem;"
                },
                "jer11.3": {
                    "id": 3,
                    "short": "Jer 11:3",
                    "name": "Jeremiah 11:3",
                    "scripture": "And say thou unto them, Thus saith the Lord God of Israel; Cursed be the man that obeyeth not the words of this covenant,"
                },
                "jer11.4": {
                    "id": 4,
                    "short": "Jer 11:4",
                    "name": "Jeremiah 11:4",
                    "scripture": "Which I commanded your fathers in the day that I brought them forth out of the land of Egypt, from the iron furnace, saying, Obey my voice, and do them, according to all which I command you: so shall ye be my people, and I will be your God:"
                },
                "jer11.5": {
                    "id": 5,
                    "short": "Jer 11:5",
                    "name": "Jeremiah 11:5",
                    "scripture": "That I may perform the oath which I have sworn unto your fathers, to give them a land flowing with milk and honey, as it is this day. Then answered I, and said, So be it, O Lord ."
                },
                "jer11.6": {
                    "id": 6,
                    "short": "Jer 11:6",
                    "name": "Jeremiah 11:6",
                    "scripture": "Then the Lord said unto me, Proclaim all these words in the cities of Judah, and in the streets of Jerusalem, saying, Hear ye the words of this covenant, and do them."
                },
                "jer11.7": {
                    "id": 7,
                    "short": "Jer 11:7",
                    "name": "Jeremiah 11:7",
                    "scripture": "For I earnestly protested unto your fathers in the day that I brought them up out of the land of Egypt, even unto this day, rising early and protesting, saying, Obey my voice."
                },
                "jer11.8": {
                    "id": 8,
                    "short": "Jer 11:8",
                    "name": "Jeremiah 11:8",
                    "scripture": "Yet they obeyed not, nor inclined their ear, but walked every one in the imagination of their evil heart: therefore I will bring upon them all the words of this covenant, which I commanded them to do; but they did them not."
                },
                "jer11.9": {
                    "id": 9,
                    "short": "Jer 11:9",
                    "name": "Jeremiah 11:9",
                    "scripture": "And the Lord said unto me, A conspiracy is found among the men of Judah, and among the inhabitants of Jerusalem."
                },
                "jer11.10": {
                    "id": 10,
                    "short": "Jer 11:10",
                    "name": "Jeremiah 11:10",
                    "scripture": "They are turned back to the iniquities of their forefathers, which refused to hear my words; and they went after other gods to serve them: the house of Israel and the house of Judah have broken my covenant which I made with their fathers."
                },
                "jer11.11": {
                    "id": 11,
                    "short": "Jer 11:11",
                    "name": "Jeremiah 11:11",
                    "scripture": "Therefore thus saith the Lord, Behold, I will bring evil upon them, which they shall not be able to escape; and though they shall cry unto me, I will not hearken unto them."
                },
                "jer11.12": {
                    "id": 12,
                    "short": "Jer 11:12",
                    "name": "Jeremiah 11:12",
                    "scripture": "Then shall the cities of Judah and inhabitants of Jerusalem go, and cry unto the gods unto whom they offer incense: but they shall not save them at all in the time of their trouble."
                },
                "jer11.13": {
                    "id": 13,
                    "short": "Jer 11:13",
                    "name": "Jeremiah 11:13",
                    "scripture": "For according to the number of thy cities were thy gods, O Judah; and according to the number of the streets of Jerusalem have ye set up altars to that shameful thing, even altars to burn incense unto Baal."
                },
                "jer11.14": {
                    "id": 14,
                    "short": "Jer 11:14",
                    "name": "Jeremiah 11:14",
                    "scripture": "Therefore pray not thou for this people, neither lift up a cry or prayer for them: for I will not hear them in the time that they cry unto me for their trouble."
                },
                "jer11.15": {
                    "id": 15,
                    "short": "Jer 11:15",
                    "name": "Jeremiah 11:15",
                    "scripture": "What hath my beloved to do in mine house, seeing she hath wrought lewdness with many, and the holy flesh is passed from thee? when thou doest evil, then thou rejoicest."
                },
                "jer11.16": {
                    "id": 16,
                    "short": "Jer 11:16",
                    "name": "Jeremiah 11:16",
                    "scripture": "The Lord called thy name, A green olive tree, fair, and of goodly fruit: with the noise of a great tumult he hath kindled fire upon it, and the branches of it are broken."
                },
                "jer11.17": {
                    "id": 17,
                    "short": "Jer 11:17",
                    "name": "Jeremiah 11:17",
                    "scripture": "For the Lord of hosts, that planted thee, hath pronounced evil against thee, for the evil of the house of Israel and of the house of Judah, which they have done against themselves to provoke me to anger in offering incense unto Baal."
                },
                "jer11.18": {
                    "id": 18,
                    "short": "Jer 11:18",
                    "name": "Jeremiah 11:18",
                    "scripture": "And the Lord hath given me knowledge of it, and I know it: then thou shewedst me their doings."
                },
                "jer11.19": {
                    "id": 19,
                    "short": "Jer 11:19",
                    "name": "Jeremiah 11:19",
                    "scripture": "But I was like a lamb or an ox that is brought to the slaughter; and I knew not that they had devised devices against me, saying, Let us destroy the tree with the fruit thereof, and let us cut him off from the land of the living, that his name may be no more remembered."
                },
                "jer11.20": {
                    "id": 20,
                    "short": "Jer 11:20",
                    "name": "Jeremiah 11:20",
                    "scripture": "But, O Lord of hosts, that judgest righteously, that triest the reins and the heart, let me see thy vengeance on them: for unto thee have I revealed my cause."
                },
                "jer11.21": {
                    "id": 21,
                    "short": "Jer 11:21",
                    "name": "Jeremiah 11:21",
                    "scripture": "Therefore thus saith the Lord of the men of Anathoth, that seek thy life, saying, Prophesy not in the name of the Lord, that thou die not by our hand:"
                },
                "jer11.22": {
                    "id": 22,
                    "short": "Jer 11:22",
                    "name": "Jeremiah 11:22",
                    "scripture": "Therefore thus saith the Lord of hosts, Behold, I will punish them: the young men shall die by the sword; their sons and their daughters shall die by famine:"
                },
                "jer11.23": {
                    "id": 23,
                    "short": "Jer 11:23",
                    "name": "Jeremiah 11:23",
                    "scripture": "And there shall be no remnant of them: for I will bring evil upon the men of Anathoth, even the year of their visitation."
                }
            }
        },
        "jer12": {
            "id": 12,
            "short": "Jer 12",
            "name": "Jeremiah 12",
            "verses": {
                "jer12.1": {
                    "id": 1,
                    "short": "Jer 12:1",
                    "name": "Jeremiah 12:1",
                    "scripture": "Righteous art thou, O Lord, when I plead with thee: yet let me talk with thee of thy judgments: Wherefore doth the way of the wicked prosper? wherefore are all they happy that deal very treacherously?"
                },
                "jer12.2": {
                    "id": 2,
                    "short": "Jer 12:2",
                    "name": "Jeremiah 12:2",
                    "scripture": "Thou hast planted them, yea, they have taken root: they grow, yea, they bring forth fruit: thou art near in their mouth, and far from their reins."
                },
                "jer12.3": {
                    "id": 3,
                    "short": "Jer 12:3",
                    "name": "Jeremiah 12:3",
                    "scripture": "But thou, O Lord, knowest me: thou hast seen me, and tried mine heart toward thee: pull them out like sheep for the slaughter, and prepare them for the day of slaughter."
                },
                "jer12.4": {
                    "id": 4,
                    "short": "Jer 12:4",
                    "name": "Jeremiah 12:4",
                    "scripture": "How long shall the land mourn, and the herbs of every field wither, for the wickedness of them that dwell therein? the beasts are consumed, and the birds; because they said, He shall not see our last end."
                },
                "jer12.5": {
                    "id": 5,
                    "short": "Jer 12:5",
                    "name": "Jeremiah 12:5",
                    "scripture": "If thou hast run with the footmen, and they have wearied thee, then how canst thou contend with horses? and if in the land of peace, wherein thou trustedst, they wearied thee, then how wilt thou do in the swelling of Jordan?"
                },
                "jer12.6": {
                    "id": 6,
                    "short": "Jer 12:6",
                    "name": "Jeremiah 12:6",
                    "scripture": "For even thy brethren, and the house of thy father, even they have dealt treacherously with thee; yea, they have called a multitude after thee: believe them not, though they speak fair words unto thee."
                },
                "jer12.7": {
                    "id": 7,
                    "short": "Jer 12:7",
                    "name": "Jeremiah 12:7",
                    "scripture": "I have forsaken mine house, I have left mine heritage; I have given the dearly beloved of my soul into the hand of her enemies."
                },
                "jer12.8": {
                    "id": 8,
                    "short": "Jer 12:8",
                    "name": "Jeremiah 12:8",
                    "scripture": "Mine heritage is unto me as a lion in the forest; it crieth out against me: therefore have I hated it."
                },
                "jer12.9": {
                    "id": 9,
                    "short": "Jer 12:9",
                    "name": "Jeremiah 12:9",
                    "scripture": "Mine heritage is unto me as a speckled bird, the birds round about are against her; come ye, assemble all the beasts of the field, come to devour."
                },
                "jer12.10": {
                    "id": 10,
                    "short": "Jer 12:10",
                    "name": "Jeremiah 12:10",
                    "scripture": "Many pastors have destroyed my vineyard, they have trodden my portion under foot, they have made my pleasant portion a desolate wilderness."
                },
                "jer12.11": {
                    "id": 11,
                    "short": "Jer 12:11",
                    "name": "Jeremiah 12:11",
                    "scripture": "They have made it desolate, and being desolate it mourneth unto me; the whole land is made desolate, because no man layeth it to heart."
                },
                "jer12.12": {
                    "id": 12,
                    "short": "Jer 12:12",
                    "name": "Jeremiah 12:12",
                    "scripture": "The spoilers are come upon all high places through the wilderness: for the sword of the Lord shall devour from the one end of the land even to the other end of the land: no flesh shall have peace."
                },
                "jer12.13": {
                    "id": 13,
                    "short": "Jer 12:13",
                    "name": "Jeremiah 12:13",
                    "scripture": "They have sown wheat, but shall reap thorns: they have put themselves to pain, but shall not profit: and they shall be ashamed of your revenues because of the fierce anger of the Lord ."
                },
                "jer12.14": {
                    "id": 14,
                    "short": "Jer 12:14",
                    "name": "Jeremiah 12:14",
                    "scripture": "Thus saith the Lord against all mine evil neighbours, that touch the inheritance which I have caused my people Israel to inherit; Behold, I will pluck them out of their land, and pluck out the house of Judah from among them."
                },
                "jer12.15": {
                    "id": 15,
                    "short": "Jer 12:15",
                    "name": "Jeremiah 12:15",
                    "scripture": "And it shall come to pass, after that I have plucked them out I will return, and have compassion on them, and will bring them again, every man to his heritage, and every man to his land."
                },
                "jer12.16": {
                    "id": 16,
                    "short": "Jer 12:16",
                    "name": "Jeremiah 12:16",
                    "scripture": "And it shall come to pass, if they will diligently learn the ways of my people, to swear by my name, The Lord liveth; as they taught my people to swear by Baal; then shall they be built in the midst of my people."
                },
                "jer12.17": {
                    "id": 17,
                    "short": "Jer 12:17",
                    "name": "Jeremiah 12:17",
                    "scripture": "But if they will not obey, I will utterly pluck up and destroy that nation, saith the Lord ."
                }
            }
        },
        "jer13": {
            "id": 13,
            "short": "Jer 13",
            "name": "Jeremiah 13",
            "verses": {
                "jer13.1": {
                    "id": 1,
                    "short": "Jer 13:1",
                    "name": "Jeremiah 13:1",
                    "scripture": "Thus saith the Lord unto me, Go and get thee a linen girdle, and put it upon thy loins, and put it not in water."
                },
                "jer13.2": {
                    "id": 2,
                    "short": "Jer 13:2",
                    "name": "Jeremiah 13:2",
                    "scripture": "So I got a girdle according to the word of the Lord, and put it on my loins."
                },
                "jer13.3": {
                    "id": 3,
                    "short": "Jer 13:3",
                    "name": "Jeremiah 13:3",
                    "scripture": "And the word of the Lord came unto me the second time, saying,"
                },
                "jer13.4": {
                    "id": 4,
                    "short": "Jer 13:4",
                    "name": "Jeremiah 13:4",
                    "scripture": "Take the girdle that thou hast got, which is upon thy loins, and arise, go to Euphrates, and hide it there in a hole of the rock."
                },
                "jer13.5": {
                    "id": 5,
                    "short": "Jer 13:5",
                    "name": "Jeremiah 13:5",
                    "scripture": "So I went, and hid it by Euphrates, as the Lord commanded me."
                },
                "jer13.6": {
                    "id": 6,
                    "short": "Jer 13:6",
                    "name": "Jeremiah 13:6",
                    "scripture": "And it came to pass after many days, that the Lord said unto me, Arise, go to Euphrates, and take the girdle from thence, which I commanded thee to hide there."
                },
                "jer13.7": {
                    "id": 7,
                    "short": "Jer 13:7",
                    "name": "Jeremiah 13:7",
                    "scripture": "Then I went to Euphrates, and digged, and took the girdle from the place where I had hid it: and, behold, the girdle was marred, it was profitable for nothing."
                },
                "jer13.8": {
                    "id": 8,
                    "short": "Jer 13:8",
                    "name": "Jeremiah 13:8",
                    "scripture": "Then the word of the Lord came unto me, saying,"
                },
                "jer13.9": {
                    "id": 9,
                    "short": "Jer 13:9",
                    "name": "Jeremiah 13:9",
                    "scripture": "Thus saith the Lord, After this manner will I mar the pride of Judah, and the great pride of Jerusalem."
                },
                "jer13.10": {
                    "id": 10,
                    "short": "Jer 13:10",
                    "name": "Jeremiah 13:10",
                    "scripture": "This evil people, which refuse to hear my words, which walk in the imagination of their heart, and walk after other gods, to serve them, and to worship them, shall even be as this girdle, which is good for nothing."
                },
                "jer13.11": {
                    "id": 11,
                    "short": "Jer 13:11",
                    "name": "Jeremiah 13:11",
                    "scripture": "For as the girdle cleaveth to the loins of a man, so have I caused to cleave unto me the whole house of Israel and the whole house of Judah, saith the Lord; that they might be unto me for a people, and for a name, and for a praise, and for a glory: but they would not hear."
                },
                "jer13.12": {
                    "id": 12,
                    "short": "Jer 13:12",
                    "name": "Jeremiah 13:12",
                    "scripture": "Therefore thou shalt speak unto them this word; Thus saith the Lord God of Israel, Every bottle shall be filled with wine: and they shall say unto thee, Do we not certainly know that every bottle shall be filled with wine?"
                },
                "jer13.13": {
                    "id": 13,
                    "short": "Jer 13:13",
                    "name": "Jeremiah 13:13",
                    "scripture": "Then shalt thou say unto them, Thus saith the Lord, Behold, I will fill all the inhabitants of this land, even the kings that sit upon David's throne, and the priests, and the prophets, and all the inhabitants of Jerusalem, with drunkenness."
                },
                "jer13.14": {
                    "id": 14,
                    "short": "Jer 13:14",
                    "name": "Jeremiah 13:14",
                    "scripture": "And I will dash them one against another, even the fathers and the sons together, saith the Lord : I will not pity, nor spare, nor have mercy, but destroy them."
                },
                "jer13.15": {
                    "id": 15,
                    "short": "Jer 13:15",
                    "name": "Jeremiah 13:15",
                    "scripture": "Hear ye, and give ear; be not proud: for the Lord hath spoken."
                },
                "jer13.16": {
                    "id": 16,
                    "short": "Jer 13:16",
                    "name": "Jeremiah 13:16",
                    "scripture": "Give glory to the Lord your God, before he cause darkness, and before your feet stumble upon the dark mountains, and, while ye look for light, he turn it into the shadow of death, and make it gross darkness."
                },
                "jer13.17": {
                    "id": 17,
                    "short": "Jer 13:17",
                    "name": "Jeremiah 13:17",
                    "scripture": "But if ye will not hear it, my soul shall weep in secret places for your pride; and mine eye shall weep sore, and run down with tears, because the Lord's flock is carried away captive."
                },
                "jer13.18": {
                    "id": 18,
                    "short": "Jer 13:18",
                    "name": "Jeremiah 13:18",
                    "scripture": "Say unto the king and to the queen, Humble yourselves, sit down: for your principalities shall come down, even the crown of your glory."
                },
                "jer13.19": {
                    "id": 19,
                    "short": "Jer 13:19",
                    "name": "Jeremiah 13:19",
                    "scripture": "The cities of the south shall be shut up, and none shall open them: Judah shall be carried away captive all of it, it shall be wholly carried away captive."
                },
                "jer13.20": {
                    "id": 20,
                    "short": "Jer 13:20",
                    "name": "Jeremiah 13:20",
                    "scripture": "Lift up your eyes, and behold them that come from the north: where is the flock that was given thee, thy beautiful flock?"
                },
                "jer13.21": {
                    "id": 21,
                    "short": "Jer 13:21",
                    "name": "Jeremiah 13:21",
                    "scripture": "What wilt thou say when he shall punish thee? for thou hast taught them to be captains, and as chief over thee: shall not sorrows take thee, as a woman in travail?"
                },
                "jer13.22": {
                    "id": 22,
                    "short": "Jer 13:22",
                    "name": "Jeremiah 13:22",
                    "scripture": "And if thou say in thine heart, Wherefore come these things upon me? For the greatness of thine iniquity are thy skirts discovered, and thy heels made bare."
                },
                "jer13.23": {
                    "id": 23,
                    "short": "Jer 13:23",
                    "name": "Jeremiah 13:23",
                    "scripture": "Can the Ethiopian change his skin, or the leopard his spots? then may ye also do good, that are accustomed to do evil."
                },
                "jer13.24": {
                    "id": 24,
                    "short": "Jer 13:24",
                    "name": "Jeremiah 13:24",
                    "scripture": "Therefore will I scatter them as the stubble that passeth away by the wind of the wilderness."
                },
                "jer13.25": {
                    "id": 25,
                    "short": "Jer 13:25",
                    "name": "Jeremiah 13:25",
                    "scripture": "This is thy lot, the portion of thy measures from me, saith the Lord; because thou hast forgotten me, and trusted in falsehood."
                },
                "jer13.26": {
                    "id": 26,
                    "short": "Jer 13:26",
                    "name": "Jeremiah 13:26",
                    "scripture": "Therefore will I discover thy skirts upon thy face, that thy shame may appear."
                },
                "jer13.27": {
                    "id": 27,
                    "short": "Jer 13:27",
                    "name": "Jeremiah 13:27",
                    "scripture": "I have seen thine adulteries, and thy neighings, the lewdness of thy whoredom, and thine abominations on the hills in the fields. Woe unto thee, O Jerusalem! wilt thou not be made clean? when shall it once be?"
                }
            }
        },
        "jer14": {
            "id": 14,
            "short": "Jer 14",
            "name": "Jeremiah 14",
            "verses": {
                "jer14.1": {
                    "id": 1,
                    "short": "Jer 14:1",
                    "name": "Jeremiah 14:1",
                    "scripture": "The word of the Lord that came to Jeremiah concerning the dearth."
                },
                "jer14.2": {
                    "id": 2,
                    "short": "Jer 14:2",
                    "name": "Jeremiah 14:2",
                    "scripture": "Judah mourneth, and the gates thereof languish; they are black unto the ground; and the cry of Jerusalem is gone up."
                },
                "jer14.3": {
                    "id": 3,
                    "short": "Jer 14:3",
                    "name": "Jeremiah 14:3",
                    "scripture": "And their nobles have sent their little ones to the waters: they came to the pits, and found no water; they returned with their vessels empty; they were ashamed and confounded, and covered their heads."
                },
                "jer14.4": {
                    "id": 4,
                    "short": "Jer 14:4",
                    "name": "Jeremiah 14:4",
                    "scripture": "Because the ground is chapt, for there was no rain in the earth, the plowmen were ashamed, they covered their heads."
                },
                "jer14.5": {
                    "id": 5,
                    "short": "Jer 14:5",
                    "name": "Jeremiah 14:5",
                    "scripture": "Yea, the hind also calved in the field, and forsook it, because there was no grass."
                },
                "jer14.6": {
                    "id": 6,
                    "short": "Jer 14:6",
                    "name": "Jeremiah 14:6",
                    "scripture": "And the wild asses did stand in the high places, they snuffed up the wind like dragons; their eyes did fail, because there was no grass."
                },
                "jer14.7": {
                    "id": 7,
                    "short": "Jer 14:7",
                    "name": "Jeremiah 14:7",
                    "scripture": "O Lord, though our iniquities testify against us, do thou it for thy name's sake: for our backslidings are many; we have sinned against thee."
                },
                "jer14.8": {
                    "id": 8,
                    "short": "Jer 14:8",
                    "name": "Jeremiah 14:8",
                    "scripture": "O the hope of Israel, the saviour thereof in time of trouble, why shouldest thou be as a stranger in the land, and as a wayfaring man that turneth aside to tarry for a night?"
                },
                "jer14.9": {
                    "id": 9,
                    "short": "Jer 14:9",
                    "name": "Jeremiah 14:9",
                    "scripture": "Why shouldest thou be as a man astonished, as a mighty man that cannot save? yet thou, O Lord, art in the midst of us, and we are called by thy name; leave us not."
                },
                "jer14.10": {
                    "id": 10,
                    "short": "Jer 14:10",
                    "name": "Jeremiah 14:10",
                    "scripture": "Thus saith the Lord unto this people, Thus have they loved to wander, they have not refrained their feet, therefore the Lord doth not accept them; he will now remember their iniquity, and visit their sins."
                },
                "jer14.11": {
                    "id": 11,
                    "short": "Jer 14:11",
                    "name": "Jeremiah 14:11",
                    "scripture": "Then said the Lord unto me, Pray not for this people for their good."
                },
                "jer14.12": {
                    "id": 12,
                    "short": "Jer 14:12",
                    "name": "Jeremiah 14:12",
                    "scripture": "When they fast, I will not hear their cry; and when they offer burnt offering and an oblation, I will not accept them: but I will consume them by the sword, and by the famine, and by the pestilence."
                },
                "jer14.13": {
                    "id": 13,
                    "short": "Jer 14:13",
                    "name": "Jeremiah 14:13",
                    "scripture": "Then said I, Ah, Lord God ! behold, the prophets say unto them, Ye shall not see the sword, neither shall ye have famine; but I will give you assured peace in this place."
                },
                "jer14.14": {
                    "id": 14,
                    "short": "Jer 14:14",
                    "name": "Jeremiah 14:14",
                    "scripture": "Then the Lord said unto me, The prophets prophesy lies in my name: I sent them not, neither have I commanded them, neither spake unto them: they prophesy unto you a false vision and divination, and a thing of nought, and the deceit of their heart."
                },
                "jer14.15": {
                    "id": 15,
                    "short": "Jer 14:15",
                    "name": "Jeremiah 14:15",
                    "scripture": "Therefore thus saith the Lord concerning the prophets that prophesy in my name, and I sent them not, yet they say, Sword and famine shall not be in this land; By sword and famine shall those prophets be consumed."
                },
                "jer14.16": {
                    "id": 16,
                    "short": "Jer 14:16",
                    "name": "Jeremiah 14:16",
                    "scripture": "And the people to whom they prophesy shall be cast out in the streets of Jerusalem because of the famine and the sword; and they shall have none to bury them, them, their wives, nor their sons, nor their daughters: for I will pour their wickedness upon them."
                },
                "jer14.17": {
                    "id": 17,
                    "short": "Jer 14:17",
                    "name": "Jeremiah 14:17",
                    "scripture": "Therefore thou shalt say this word unto them; Let mine eyes run down with tears night and day, and let them not cease: for the virgin daughter of my people is broken with a great breach, with a very grievous blow."
                },
                "jer14.18": {
                    "id": 18,
                    "short": "Jer 14:18",
                    "name": "Jeremiah 14:18",
                    "scripture": "If I go forth into the field, then behold the slain with the sword! and if I enter into the city, then behold them that are sick with famine! yea, both the prophet and the priest go about into a land that they know not."
                },
                "jer14.19": {
                    "id": 19,
                    "short": "Jer 14:19",
                    "name": "Jeremiah 14:19",
                    "scripture": "Hast thou utterly rejected Judah? hath thy soul lothed Zion? why hast thou smitten us, and there is no healing for us? we looked for peace, and there is no good; and for the time of healing, and behold trouble!"
                },
                "jer14.20": {
                    "id": 20,
                    "short": "Jer 14:20",
                    "name": "Jeremiah 14:20",
                    "scripture": "We acknowledge, O Lord, our wickedness, and the iniquity of our fathers: for we have sinned against thee."
                },
                "jer14.21": {
                    "id": 21,
                    "short": "Jer 14:21",
                    "name": "Jeremiah 14:21",
                    "scripture": "Do not abhor us, for thy name's sake, do not disgrace the throne of thy glory: remember, break not thy covenant with us."
                },
                "jer14.22": {
                    "id": 22,
                    "short": "Jer 14:22",
                    "name": "Jeremiah 14:22",
                    "scripture": "Are there any among the vanities of the Gentiles that can cause rain? or can the heavens give showers? art not thou he, O Lord our God? therefore we will wait upon thee: for thou hast made all these things."
                }
            }
        },
        "jer15": {
            "id": 15,
            "short": "Jer 15",
            "name": "Jeremiah 15",
            "verses": {
                "jer15.1": {
                    "id": 1,
                    "short": "Jer 15:1",
                    "name": "Jeremiah 15:1",
                    "scripture": "Then said the Lord unto me, Though Moses and Samuel stood before me, yet my mind could not be toward this people: cast them out of my sight, and let them go forth."
                },
                "jer15.2": {
                    "id": 2,
                    "short": "Jer 15:2",
                    "name": "Jeremiah 15:2",
                    "scripture": "And it shall come to pass, if they say unto thee, Whither shall we go forth? then thou shalt tell them, Thus saith the Lord; Such as are for death, to death; and such as are for the sword, to the sword; and such as are for the famine, to the famine; and such as are for the captivity, to the captivity."
                },
                "jer15.3": {
                    "id": 3,
                    "short": "Jer 15:3",
                    "name": "Jeremiah 15:3",
                    "scripture": "And I will appoint over them four kinds, saith the Lord : the sword to slay, and the dogs to tear, and the fowls of the heaven, and the beasts of the earth, to devour and destroy."
                },
                "jer15.4": {
                    "id": 4,
                    "short": "Jer 15:4",
                    "name": "Jeremiah 15:4",
                    "scripture": "And I will cause them to be removed into all kingdoms of the earth, because of Manasseh the son of Hezekiah king of Judah, for that which he did in Jerusalem."
                },
                "jer15.5": {
                    "id": 5,
                    "short": "Jer 15:5",
                    "name": "Jeremiah 15:5",
                    "scripture": "For who shall have pity upon thee, O Jerusalem? or who shall bemoan thee? or who shall go aside to ask how thou doest?"
                },
                "jer15.6": {
                    "id": 6,
                    "short": "Jer 15:6",
                    "name": "Jeremiah 15:6",
                    "scripture": "Thou hast forsaken me, saith the Lord, thou art gone backward: therefore will I stretch out my hand against thee, and destroy thee; I am weary with repenting."
                },
                "jer15.7": {
                    "id": 7,
                    "short": "Jer 15:7",
                    "name": "Jeremiah 15:7",
                    "scripture": "And I will fan them with a fan in the gates of the land; I will bereave them of children, I will destroy my people, since they return not from their ways."
                },
                "jer15.8": {
                    "id": 8,
                    "short": "Jer 15:8",
                    "name": "Jeremiah 15:8",
                    "scripture": "Their widows are increased to me above the sand of the seas: I have brought upon them against the mother of the young men a spoiler at noonday: I have caused him to fall upon it suddenly, and terrors upon the city."
                },
                "jer15.9": {
                    "id": 9,
                    "short": "Jer 15:9",
                    "name": "Jeremiah 15:9",
                    "scripture": "She that hath borne seven languisheth: she hath given up the ghost; her sun is gone down while it was yet day: she hath been ashamed and confounded: and the residue of them will I deliver to the sword before their enemies, saith the Lord ."
                },
                "jer15.10": {
                    "id": 10,
                    "short": "Jer 15:10",
                    "name": "Jeremiah 15:10",
                    "scripture": "Woe is me, my mother, that thou hast borne me a man of strife and a man of contention to the whole earth! I have neither lent on usury, nor men have lent to me on usury; yet every one of them doth curse me."
                },
                "jer15.11": {
                    "id": 11,
                    "short": "Jer 15:11",
                    "name": "Jeremiah 15:11",
                    "scripture": "The Lord said, Verily it shall be well with thy remnant; verily I will cause the enemy to entreat thee well in the time of evil and in the time of affliction."
                },
                "jer15.12": {
                    "id": 12,
                    "short": "Jer 15:12",
                    "name": "Jeremiah 15:12",
                    "scripture": "Shall iron break the northern iron and the steel?"
                },
                "jer15.13": {
                    "id": 13,
                    "short": "Jer 15:13",
                    "name": "Jeremiah 15:13",
                    "scripture": "Thy substance and thy treasures will I give to the spoil without price, and that for all thy sins, even in all thy borders."
                },
                "jer15.14": {
                    "id": 14,
                    "short": "Jer 15:14",
                    "name": "Jeremiah 15:14",
                    "scripture": "And I will make thee to pass with thine enemies into a land which thou knowest not: for a fire is kindled in mine anger, which shall burn upon you."
                },
                "jer15.15": {
                    "id": 15,
                    "short": "Jer 15:15",
                    "name": "Jeremiah 15:15",
                    "scripture": "O Lord, thou knowest: remember me, and visit me, and revenge me of my persecutors; take me not away in thy longsuffering: know that for thy sake I have suffered rebuke."
                },
                "jer15.16": {
                    "id": 16,
                    "short": "Jer 15:16",
                    "name": "Jeremiah 15:16",
                    "scripture": "Thy words were found, and I did eat them; and thy word was unto me the joy and rejoicing of mine heart: for I am called by thy name, O Lord God of hosts."
                },
                "jer15.17": {
                    "id": 17,
                    "short": "Jer 15:17",
                    "name": "Jeremiah 15:17",
                    "scripture": "I sat not in the assembly of the mockers, nor rejoiced; I sat alone because of thy hand: for thou hast filled me with indignation."
                },
                "jer15.18": {
                    "id": 18,
                    "short": "Jer 15:18",
                    "name": "Jeremiah 15:18",
                    "scripture": "Why is my pain perpetual, and my wound incurable, which refuseth to be healed? wilt thou be altogether unto me as a liar, and as waters that fail?"
                },
                "jer15.19": {
                    "id": 19,
                    "short": "Jer 15:19",
                    "name": "Jeremiah 15:19",
                    "scripture": "Therefore thus saith the Lord, If thou return, then will I bring thee again, and thou shalt stand before me: and if thou take forth the precious from the vile, thou shalt be as my mouth: let them return unto thee; but return not thou unto them."
                },
                "jer15.20": {
                    "id": 20,
                    "short": "Jer 15:20",
                    "name": "Jeremiah 15:20",
                    "scripture": "And I will make thee unto this people a fenced brasen wall: and they shall fight against thee, but they shall not prevail against thee: for I am with thee to save thee and to deliver thee, saith the Lord ."
                },
                "jer15.21": {
                    "id": 21,
                    "short": "Jer 15:21",
                    "name": "Jeremiah 15:21",
                    "scripture": "And I will deliver thee out of the hand of the wicked, and I will redeem thee out of the hand of the terrible."
                }
            }
        },
        "jer16": {
            "id": 16,
            "short": "Jer 16",
            "name": "Jeremiah 16",
            "verses": {
                "jer16.1": {
                    "id": 1,
                    "short": "Jer 16:1",
                    "name": "Jeremiah 16:1",
                    "scripture": "The word of the Lord came also unto me, saying,"
                },
                "jer16.2": {
                    "id": 2,
                    "short": "Jer 16:2",
                    "name": "Jeremiah 16:2",
                    "scripture": "Thou shalt not take thee a wife, neither shalt thou have sons or daughters in this place."
                },
                "jer16.3": {
                    "id": 3,
                    "short": "Jer 16:3",
                    "name": "Jeremiah 16:3",
                    "scripture": "For thus saith the Lord concerning the sons and concerning the daughters that are born in this place, and concerning their mothers that bare them, and concerning their fathers that begat them in this land;"
                },
                "jer16.4": {
                    "id": 4,
                    "short": "Jer 16:4",
                    "name": "Jeremiah 16:4",
                    "scripture": "They shall die of grievous deaths; they shall not be lamented; neither shall they be buried; but they shall be as dung upon the face of the earth: and they shall be consumed by the sword, and by famine; and their carcases shall be meat for the fowls of heaven, and for the beasts of the earth."
                },
                "jer16.5": {
                    "id": 5,
                    "short": "Jer 16:5",
                    "name": "Jeremiah 16:5",
                    "scripture": "For thus saith the Lord, Enter not into the house of mourning, neither go to lament nor bemoan them: for I have taken away my peace from this people, saith the Lord, even lovingkindness and mercies."
                },
                "jer16.6": {
                    "id": 6,
                    "short": "Jer 16:6",
                    "name": "Jeremiah 16:6",
                    "scripture": "Both the great and the small shall die in this land: they shall not be buried, neither shall men lament for them, nor cut themselves, nor make themselves bald for them:"
                },
                "jer16.7": {
                    "id": 7,
                    "short": "Jer 16:7",
                    "name": "Jeremiah 16:7",
                    "scripture": "Neither shall men tear themselves for them in mourning, to comfort them for the dead; neither shall men give them the cup of consolation to drink for their father or for their mother."
                },
                "jer16.8": {
                    "id": 8,
                    "short": "Jer 16:8",
                    "name": "Jeremiah 16:8",
                    "scripture": "Thou shalt not also go into the house of feasting, to sit with them to eat and to drink."
                },
                "jer16.9": {
                    "id": 9,
                    "short": "Jer 16:9",
                    "name": "Jeremiah 16:9",
                    "scripture": "For thus saith the Lord of hosts, the God of Israel; Behold, I will cause to cease out of this place in your eyes, and in your days, the voice of mirth, and the voice of gladness, the voice of the bridegroom, and the voice of the bride."
                },
                "jer16.10": {
                    "id": 10,
                    "short": "Jer 16:10",
                    "name": "Jeremiah 16:10",
                    "scripture": "And it shall come to pass, when thou shalt shew this people all these words, and they shall say unto thee, Wherefore hath the Lord pronounced all this great evil against us? or what is our iniquity? or what is our sin that we have committed against the Lord our God?"
                },
                "jer16.11": {
                    "id": 11,
                    "short": "Jer 16:11",
                    "name": "Jeremiah 16:11",
                    "scripture": "Then shalt thou say unto them, Because your fathers have forsaken me, saith the Lord, and have walked after other gods, and have served them, and have worshipped them, and have forsaken me, and have not kept my law;"
                },
                "jer16.12": {
                    "id": 12,
                    "short": "Jer 16:12",
                    "name": "Jeremiah 16:12",
                    "scripture": "And ye have done worse than your fathers; for, behold, ye walk every one after the imagination of his evil heart, that they may not hearken unto me:"
                },
                "jer16.13": {
                    "id": 13,
                    "short": "Jer 16:13",
                    "name": "Jeremiah 16:13",
                    "scripture": "Therefore will I cast you out of this land into a land that ye know not, neither ye nor your fathers; and there shall ye serve other gods day and night; where I will not shew you favour."
                },
                "jer16.14": {
                    "id": 14,
                    "short": "Jer 16:14",
                    "name": "Jeremiah 16:14",
                    "scripture": "Therefore, behold, the days come, saith the Lord, that it shall no more be said, The Lord liveth, that brought up the children of Israel out of the land of Egypt;"
                },
                "jer16.15": {
                    "id": 15,
                    "short": "Jer 16:15",
                    "name": "Jeremiah 16:15",
                    "scripture": "But, The Lord liveth, that brought up the children of Israel from the land of the north, and from all the lands whither he had driven them: and I will bring them again into their land that I gave unto their fathers."
                },
                "jer16.16": {
                    "id": 16,
                    "short": "Jer 16:16",
                    "name": "Jeremiah 16:16",
                    "scripture": "Behold, I will send for many fishers, saith the Lord, and they shall fish them; and after will I send for many hunters, and they shall hunt them from every mountain, and from every hill, and out of the holes of the rocks."
                },
                "jer16.17": {
                    "id": 17,
                    "short": "Jer 16:17",
                    "name": "Jeremiah 16:17",
                    "scripture": "For mine eyes are upon all their ways: they are not hid from my face, neither is their iniquity hid from mine eyes."
                },
                "jer16.18": {
                    "id": 18,
                    "short": "Jer 16:18",
                    "name": "Jeremiah 16:18",
                    "scripture": "And first I will recompense their iniquity and their sin double; because they have defiled my land, they have filled mine inheritance with the carcases of their detestable and abominable things."
                },
                "jer16.19": {
                    "id": 19,
                    "short": "Jer 16:19",
                    "name": "Jeremiah 16:19",
                    "scripture": "O Lord, my strength, and my fortress, and my refuge in the day of affliction, the Gentiles shall come unto thee from the ends of the earth, and shall say, Surely our fathers have inherited lies, vanity, and things wherein there is no profit."
                },
                "jer16.20": {
                    "id": 20,
                    "short": "Jer 16:20",
                    "name": "Jeremiah 16:20",
                    "scripture": "Shall a man make gods unto himself, and they are no gods?"
                },
                "jer16.21": {
                    "id": 21,
                    "short": "Jer 16:21",
                    "name": "Jeremiah 16:21",
                    "scripture": "Therefore, behold, I will this once cause them to know, I will cause them to know mine hand and my might; and they shall know that my name is The Lord ."
                }
            }
        },
        "jer17": {
            "id": 17,
            "short": "Jer 17",
            "name": "Jeremiah 17",
            "verses": {
                "jer17.1": {
                    "id": 1,
                    "short": "Jer 17:1",
                    "name": "Jeremiah 17:1",
                    "scripture": "The sin of Judah is written with a pen of iron, and with the point of a diamond: it is graven upon the table of their heart, and upon the horns of your altars;"
                },
                "jer17.2": {
                    "id": 2,
                    "short": "Jer 17:2",
                    "name": "Jeremiah 17:2",
                    "scripture": "Whilst their children remember their altars and their groves by the green trees upon the high hills."
                },
                "jer17.3": {
                    "id": 3,
                    "short": "Jer 17:3",
                    "name": "Jeremiah 17:3",
                    "scripture": "O my mountain in the field, I will give thy substance and all thy treasures to the spoil, and thy high places for sin, throughout all thy borders."
                },
                "jer17.4": {
                    "id": 4,
                    "short": "Jer 17:4",
                    "name": "Jeremiah 17:4",
                    "scripture": "And thou, even thyself, shalt discontinue from thine heritage that I gave thee; and I will cause thee to serve thine enemies in the land which thou knowest not: for ye have kindled a fire in mine anger, which shall burn for ever."
                },
                "jer17.5": {
                    "id": 5,
                    "short": "Jer 17:5",
                    "name": "Jeremiah 17:5",
                    "scripture": "Thus saith the Lord; Cursed be the man that trusteth in man, and maketh flesh his arm, and whose heart departeth from the Lord ."
                },
                "jer17.6": {
                    "id": 6,
                    "short": "Jer 17:6",
                    "name": "Jeremiah 17:6",
                    "scripture": "For he shall be like the heath in the desert, and shall not see when good cometh; but shall inhabit the parched places in the wilderness, in a salt land and not inhabited."
                },
                "jer17.7": {
                    "id": 7,
                    "short": "Jer 17:7",
                    "name": "Jeremiah 17:7",
                    "scripture": "Blessed is the man that trusteth in the Lord, and whose hope the Lord is."
                },
                "jer17.8": {
                    "id": 8,
                    "short": "Jer 17:8",
                    "name": "Jeremiah 17:8",
                    "scripture": "For he shall be as a tree planted by the waters, and that spreadeth out her roots by the river, and shall not see when heat cometh, but her leaf shall be green; and shall not be careful in the year of drought, neither shall cease from yielding fruit."
                },
                "jer17.9": {
                    "id": 9,
                    "short": "Jer 17:9",
                    "name": "Jeremiah 17:9",
                    "scripture": "The heart is deceitful above all things, and desperately wicked: who can know it?"
                },
                "jer17.10": {
                    "id": 10,
                    "short": "Jer 17:10",
                    "name": "Jeremiah 17:10",
                    "scripture": "I the Lord search the heart, I try the reins, even to give every man according to his ways, and according to the fruit of his doings."
                },
                "jer17.11": {
                    "id": 11,
                    "short": "Jer 17:11",
                    "name": "Jeremiah 17:11",
                    "scripture": "As the partridge sitteth on eggs, and hatcheth them not; so he that getteth riches, and not by right, shall leave them in the midst of his days, and at his end shall be a fool."
                },
                "jer17.12": {
                    "id": 12,
                    "short": "Jer 17:12",
                    "name": "Jeremiah 17:12",
                    "scripture": "A glorious high throne from the beginning is the place of our sanctuary."
                },
                "jer17.13": {
                    "id": 13,
                    "short": "Jer 17:13",
                    "name": "Jeremiah 17:13",
                    "scripture": "O Lord, the hope of Israel, all that forsake thee shall be ashamed, and they that depart from me shall be written in the earth, because they have forsaken the Lord, the fountain of living waters."
                },
                "jer17.14": {
                    "id": 14,
                    "short": "Jer 17:14",
                    "name": "Jeremiah 17:14",
                    "scripture": "Heal me, O Lord, and I shall be healed; save me, and I shall be saved: for thou art my praise."
                },
                "jer17.15": {
                    "id": 15,
                    "short": "Jer 17:15",
                    "name": "Jeremiah 17:15",
                    "scripture": "Behold, they say unto me, Where is the word of the Lord ? let it come now."
                },
                "jer17.16": {
                    "id": 16,
                    "short": "Jer 17:16",
                    "name": "Jeremiah 17:16",
                    "scripture": "As for me, I have not hastened from being a pastor to follow thee: neither have I desired the woeful day; thou knowest: that which came out of my lips was right before thee."
                },
                "jer17.17": {
                    "id": 17,
                    "short": "Jer 17:17",
                    "name": "Jeremiah 17:17",
                    "scripture": "Be not a terror unto me: thou art my hope in the day of evil."
                },
                "jer17.18": {
                    "id": 18,
                    "short": "Jer 17:18",
                    "name": "Jeremiah 17:18",
                    "scripture": "Let them be confounded that persecute me, but let not me be confounded: let them be dismayed, but let not me be dismayed: bring upon them the day of evil, and destroy them with double destruction."
                },
                "jer17.19": {
                    "id": 19,
                    "short": "Jer 17:19",
                    "name": "Jeremiah 17:19",
                    "scripture": "Thus said the Lord unto me; Go and stand in the gate of the children of the people, whereby the kings of Judah come in, and by the which they go out, and in all the gates of Jerusalem;"
                },
                "jer17.20": {
                    "id": 20,
                    "short": "Jer 17:20",
                    "name": "Jeremiah 17:20",
                    "scripture": "And say unto them, Hear ye the word of the Lord, ye kings of Judah, and all Judah, and all the inhabitants of Jerusalem, that enter in by these gates:"
                },
                "jer17.21": {
                    "id": 21,
                    "short": "Jer 17:21",
                    "name": "Jeremiah 17:21",
                    "scripture": "Thus saith the Lord; Take heed to yourselves, and bear no burden on the sabbath day, nor bring it in by the gates of Jerusalem;"
                },
                "jer17.22": {
                    "id": 22,
                    "short": "Jer 17:22",
                    "name": "Jeremiah 17:22",
                    "scripture": "Neither carry forth a burden out of your houses on the sabbath day, neither do ye any work, but hallow ye the sabbath day, as I commanded your fathers."
                },
                "jer17.23": {
                    "id": 23,
                    "short": "Jer 17:23",
                    "name": "Jeremiah 17:23",
                    "scripture": "But they obeyed not, neither inclined their ear, but made their neck stiff, that they might not hear, nor receive instruction."
                },
                "jer17.24": {
                    "id": 24,
                    "short": "Jer 17:24",
                    "name": "Jeremiah 17:24",
                    "scripture": "And it shall come to pass, if ye diligently hearken unto me, saith the Lord, to bring in no burden through the gates of this city on the sabbath day, but hallow the sabbath day, to do no work therein;"
                },
                "jer17.25": {
                    "id": 25,
                    "short": "Jer 17:25",
                    "name": "Jeremiah 17:25",
                    "scripture": "Then shall there enter into the gates of this city kings and princes sitting upon the throne of David, riding in chariots and on horses, they, and their princes, the men of Judah, and the inhabitants of Jerusalem: and this city shall remain for ever."
                },
                "jer17.26": {
                    "id": 26,
                    "short": "Jer 17:26",
                    "name": "Jeremiah 17:26",
                    "scripture": "And they shall come from the cities of Judah, and from the places about Jerusalem, and from the land of Benjamin, and from the plain, and from the mountains, and from the south, bringing burnt offerings, and sacrifices, and meat offerings, and incense, and bringing sacrifices of praise, unto the house of the Lord ."
                },
                "jer17.27": {
                    "id": 27,
                    "short": "Jer 17:27",
                    "name": "Jeremiah 17:27",
                    "scripture": "But if ye will not hearken unto me to hallow the sabbath day, and not to bear a burden, even entering in at the gates of Jerusalem on the sabbath day; then will I kindle a fire in the gates thereof, and it shall devour the palaces of Jerusalem, and it shall not be quenched."
                }
            }
        },
        "jer18": {
            "id": 18,
            "short": "Jer 18",
            "name": "Jeremiah 18",
            "verses": {
                "jer18.1": {
                    "id": 1,
                    "short": "Jer 18:1",
                    "name": "Jeremiah 18:1",
                    "scripture": "The word which came to Jeremiah from the Lord, saying,"
                },
                "jer18.2": {
                    "id": 2,
                    "short": "Jer 18:2",
                    "name": "Jeremiah 18:2",
                    "scripture": "Arise, and go down to the potter's house, and there I will cause thee to hear my words."
                },
                "jer18.3": {
                    "id": 3,
                    "short": "Jer 18:3",
                    "name": "Jeremiah 18:3",
                    "scripture": "Then I went down to the potter's house, and, behold, he wrought a work on the wheels."
                },
                "jer18.4": {
                    "id": 4,
                    "short": "Jer 18:4",
                    "name": "Jeremiah 18:4",
                    "scripture": "And the vessel that he made of clay was marred in the hand of the potter: so he made it again another vessel, as seemed good to the potter to make it."
                },
                "jer18.5": {
                    "id": 5,
                    "short": "Jer 18:5",
                    "name": "Jeremiah 18:5",
                    "scripture": "Then the word of the Lord came to me, saying,"
                },
                "jer18.6": {
                    "id": 6,
                    "short": "Jer 18:6",
                    "name": "Jeremiah 18:6",
                    "scripture": "O house of Israel, cannot I do with you as this potter? saith the Lord . Behold, as the clay is in the potter's hand, so are ye in mine hand, O house of Israel."
                },
                "jer18.7": {
                    "id": 7,
                    "short": "Jer 18:7",
                    "name": "Jeremiah 18:7",
                    "scripture": "At what instant I shall speak concerning a nation, and concerning a kingdom, to pluck up, and to pull down, and to destroy it;"
                },
                "jer18.8": {
                    "id": 8,
                    "short": "Jer 18:8",
                    "name": "Jeremiah 18:8",
                    "scripture": "If that nation, against whom I have pronounced, turn from their evil, I will repent of the evil that I thought to do unto them."
                },
                "jer18.9": {
                    "id": 9,
                    "short": "Jer 18:9",
                    "name": "Jeremiah 18:9",
                    "scripture": "And at what instant I shall speak concerning a nation, and concerning a kingdom, to build and to plant it;"
                },
                "jer18.10": {
                    "id": 10,
                    "short": "Jer 18:10",
                    "name": "Jeremiah 18:10",
                    "scripture": "If it do evil in my sight, that it obey not my voice, then I will repent of the good, wherewith I said I would benefit them."
                },
                "jer18.11": {
                    "id": 11,
                    "short": "Jer 18:11",
                    "name": "Jeremiah 18:11",
                    "scripture": "Now therefore go to, speak to the men of Judah, and to the inhabitants of Jerusalem, saying, Thus saith the Lord; Behold, I frame evil against you, and devise a device against you: return ye now every one from his evil way, and make your ways and your doings good."
                },
                "jer18.12": {
                    "id": 12,
                    "short": "Jer 18:12",
                    "name": "Jeremiah 18:12",
                    "scripture": "And they said, There is no hope: but we will walk after our own devices, and we will every one do the imagination of his evil heart."
                },
                "jer18.13": {
                    "id": 13,
                    "short": "Jer 18:13",
                    "name": "Jeremiah 18:13",
                    "scripture": "Therefore thus saith the Lord; Ask ye now among the heathen, who hath heard such things: the virgin of Israel hath done a very horrible thing."
                },
                "jer18.14": {
                    "id": 14,
                    "short": "Jer 18:14",
                    "name": "Jeremiah 18:14",
                    "scripture": "Will a man leave the snow of Lebanon which cometh from the rock of the field? or shall the cold flowing waters that come from another place be forsaken?"
                },
                "jer18.15": {
                    "id": 15,
                    "short": "Jer 18:15",
                    "name": "Jeremiah 18:15",
                    "scripture": "Because my people hath forgotten me, they have burned incense to vanity, and they have caused them to stumble in their ways from the ancient paths, to walk in paths, in a way not cast up;"
                },
                "jer18.16": {
                    "id": 16,
                    "short": "Jer 18:16",
                    "name": "Jeremiah 18:16",
                    "scripture": "To make their land desolate, and a perpetual hissing; every one that passeth thereby shall be astonished, and wag his head."
                },
                "jer18.17": {
                    "id": 17,
                    "short": "Jer 18:17",
                    "name": "Jeremiah 18:17",
                    "scripture": "I will scatter them as with an east wind before the enemy; I will shew them the back, and not the face, in the day of their calamity."
                },
                "jer18.18": {
                    "id": 18,
                    "short": "Jer 18:18",
                    "name": "Jeremiah 18:18",
                    "scripture": "Then said they, Come, and let us devise devices against Jeremiah; for the law shall not perish from the priest, nor counsel from the wise, nor the word from the prophet. Come, and let us smite him with the tongue, and let us not give heed to any of his words."
                },
                "jer18.19": {
                    "id": 19,
                    "short": "Jer 18:19",
                    "name": "Jeremiah 18:19",
                    "scripture": "Give heed to me, O Lord, and hearken to the voice of them that contend with me."
                },
                "jer18.20": {
                    "id": 20,
                    "short": "Jer 18:20",
                    "name": "Jeremiah 18:20",
                    "scripture": "Shall evil be recompensed for good? for they have digged a pit for my soul. Remember that I stood before thee to speak good for them, and to turn away thy wrath from them."
                },
                "jer18.21": {
                    "id": 21,
                    "short": "Jer 18:21",
                    "name": "Jeremiah 18:21",
                    "scripture": "Therefore deliver up their children to the famine, and pour out their blood by the force of the sword; and let their wives be bereaved of their children, and be widows; and let their men be put to death; let their young men be slain by the sword in battle."
                },
                "jer18.22": {
                    "id": 22,
                    "short": "Jer 18:22",
                    "name": "Jeremiah 18:22",
                    "scripture": "Let a cry be heard from their houses, when thou shalt bring a troop suddenly upon them: for they have digged a pit to take me, and hid snares for my feet."
                },
                "jer18.23": {
                    "id": 23,
                    "short": "Jer 18:23",
                    "name": "Jeremiah 18:23",
                    "scripture": "Yet, Lord, thou knowest all their counsel against me to slay me: forgive not their iniquity, neither blot out their sin from thy sight, but let them be overthrown before thee; deal thus with them in the time of thine anger."
                }
            }
        },
        "jer19": {
            "id": 19,
            "short": "Jer 19",
            "name": "Jeremiah 19",
            "verses": {
                "jer19.1": {
                    "id": 1,
                    "short": "Jer 19:1",
                    "name": "Jeremiah 19:1",
                    "scripture": "Thus saith the Lord, Go and get a potter's earthen bottle, and take of the ancients of the people, and of the ancients of the priests;"
                },
                "jer19.2": {
                    "id": 2,
                    "short": "Jer 19:2",
                    "name": "Jeremiah 19:2",
                    "scripture": "And go forth unto the valley of the son of Hinnom, which is by the entry of the east gate, and proclaim there the words that I shall tell thee,"
                },
                "jer19.3": {
                    "id": 3,
                    "short": "Jer 19:3",
                    "name": "Jeremiah 19:3",
                    "scripture": "And say, Hear ye the word of the Lord, O kings of Judah, and inhabitants of Jerusalem; Thus saith the Lord of hosts, the God of Israel; Behold, I will bring evil upon this place, the which whosoever heareth, his ears shall tingle."
                },
                "jer19.4": {
                    "id": 4,
                    "short": "Jer 19:4",
                    "name": "Jeremiah 19:4",
                    "scripture": "Because they have forsaken me, and have estranged this place, and have burned incense in it unto other gods, whom neither they nor their fathers have known, nor the kings of Judah, and have filled this place with the blood of innocents;"
                },
                "jer19.5": {
                    "id": 5,
                    "short": "Jer 19:5",
                    "name": "Jeremiah 19:5",
                    "scripture": "They have built also the high places of Baal, to burn their sons with fire for burnt offerings unto Baal, which I commanded not, nor spake it, neither came it into my mind:"
                },
                "jer19.6": {
                    "id": 6,
                    "short": "Jer 19:6",
                    "name": "Jeremiah 19:6",
                    "scripture": "Therefore, behold, the days come, saith the Lord, that this place shall no more be called Topheth, nor The valley of the son of Hinnom, but The valley of slaughter."
                },
                "jer19.7": {
                    "id": 7,
                    "short": "Jer 19:7",
                    "name": "Jeremiah 19:7",
                    "scripture": "And I will make void the counsel of Judah and Jerusalem in this place; and I will cause them to fall by the sword before their enemies, and by the hands of them that seek their lives: and their carcases will I give to be meat for the fowls of the heaven, and for the beasts of the earth."
                },
                "jer19.8": {
                    "id": 8,
                    "short": "Jer 19:8",
                    "name": "Jeremiah 19:8",
                    "scripture": "And I will make this city desolate, and an hissing; every one that passeth thereby shall be astonished and hiss because of all the plagues thereof."
                },
                "jer19.9": {
                    "id": 9,
                    "short": "Jer 19:9",
                    "name": "Jeremiah 19:9",
                    "scripture": "And I will cause them to eat the flesh of their sons and the flesh of their daughters, and they shall eat every one the flesh of his friend in the siege and straitness, wherewith their enemies, and they that seek their lives, shall straiten them."
                },
                "jer19.10": {
                    "id": 10,
                    "short": "Jer 19:10",
                    "name": "Jeremiah 19:10",
                    "scripture": "Then shalt thou break the bottle in the sight of the men that go with thee,"
                },
                "jer19.11": {
                    "id": 11,
                    "short": "Jer 19:11",
                    "name": "Jeremiah 19:11",
                    "scripture": "And shalt say unto them, Thus saith the Lord of hosts; Even so will I break this people and this city, as one breaketh a potter's vessel, that cannot be made whole again: and they shall bury them in Topheth, till there be no place to bury."
                },
                "jer19.12": {
                    "id": 12,
                    "short": "Jer 19:12",
                    "name": "Jeremiah 19:12",
                    "scripture": "Thus will I do unto this place, saith the Lord, and to the inhabitants thereof, and even make this city as Topheth:"
                },
                "jer19.13": {
                    "id": 13,
                    "short": "Jer 19:13",
                    "name": "Jeremiah 19:13",
                    "scripture": "And the houses of Jerusalem, and the houses of the kings of Judah, shall be defiled as the place of Topheth, because of all the houses upon whose roofs they have burned incense unto all the host of heaven, and have poured out drink offerings unto other gods."
                },
                "jer19.14": {
                    "id": 14,
                    "short": "Jer 19:14",
                    "name": "Jeremiah 19:14",
                    "scripture": "Then came Jeremiah from Topheth, whither the Lord had sent him to prophesy; and he stood in the court of the Lord's house; and said to all the people,"
                },
                "jer19.15": {
                    "id": 15,
                    "short": "Jer 19:15",
                    "name": "Jeremiah 19:15",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel; Behold, I will bring upon this city and upon all her towns all the evil that I have pronounced against it, because they have hardened their necks, that they might not hear my words."
                }
            }
        },
        "jer20": {
            "id": 20,
            "short": "Jer 20",
            "name": "Jeremiah 20",
            "verses": {
                "jer20.1": {
                    "id": 1,
                    "short": "Jer 20:1",
                    "name": "Jeremiah 20:1",
                    "scripture": "Now Pashur the son of Immer the priest, who was also chief governor in the house of the Lord, heard that Jeremiah prophesied these things."
                },
                "jer20.2": {
                    "id": 2,
                    "short": "Jer 20:2",
                    "name": "Jeremiah 20:2",
                    "scripture": "Then Pashur smote Jeremiah the prophet, and put him in the stocks that were in the high gate of Benjamin, which was by the house of the Lord ."
                },
                "jer20.3": {
                    "id": 3,
                    "short": "Jer 20:3",
                    "name": "Jeremiah 20:3",
                    "scripture": "And it came to pass on the morrow, that Pashur brought forth Jeremiah out of the stocks. Then said Jeremiah unto him, The Lord hath not called thy name Pashur, but Magorâ€“missabib."
                },
                "jer20.4": {
                    "id": 4,
                    "short": "Jer 20:4",
                    "name": "Jeremiah 20:4",
                    "scripture": "For thus saith the Lord, Behold, I will make thee a terror to thyself, and to all thy friends: and they shall fall by the sword of their enemies, and thine eyes shall behold it: and I will give all Judah into the hand of the king of Babylon, and he shall carry them captive into Babylon, and shall slay them with the sword."
                },
                "jer20.5": {
                    "id": 5,
                    "short": "Jer 20:5",
                    "name": "Jeremiah 20:5",
                    "scripture": "Moreover I will deliver all the strength of this city, and all the labours thereof, and all the precious things thereof, and all the treasures of the kings of Judah will I give into the hand of their enemies, which shall spoil them, and take them, and carry them to Babylon."
                },
                "jer20.6": {
                    "id": 6,
                    "short": "Jer 20:6",
                    "name": "Jeremiah 20:6",
                    "scripture": "And thou, Pashur, and all that dwell in thine house shall go into captivity: and thou shalt come to Babylon, and there thou shalt die, and shalt be buried there, thou, and all thy friends, to whom thou hast prophesied lies."
                },
                "jer20.7": {
                    "id": 7,
                    "short": "Jer 20:7",
                    "name": "Jeremiah 20:7",
                    "scripture": "O Lord, thou hast deceived me, and I was deceived: thou art stronger than I, and hast prevailed: I am in derision daily, every one mocketh me."
                },
                "jer20.8": {
                    "id": 8,
                    "short": "Jer 20:8",
                    "name": "Jeremiah 20:8",
                    "scripture": "For since I spake, I cried out, I cried violence and spoil; because the word of the Lord was made a reproach unto me, and a derision, daily."
                },
                "jer20.9": {
                    "id": 9,
                    "short": "Jer 20:9",
                    "name": "Jeremiah 20:9",
                    "scripture": "Then I said, I will not make mention of him, nor speak any more in his name. But his word was in mine heart as a burning fire shut up in my bones, and I was weary with forbearing, and I could not stay."
                },
                "jer20.10": {
                    "id": 10,
                    "short": "Jer 20:10",
                    "name": "Jeremiah 20:10",
                    "scripture": "For I heard the defaming of many, fear on every side. Report, say they, and we will report it. All my familiars watched for my halting, saying, Peradventure he will be enticed, and we shall prevail against him, and we shall take our revenge on him."
                },
                "jer20.11": {
                    "id": 11,
                    "short": "Jer 20:11",
                    "name": "Jeremiah 20:11",
                    "scripture": "But the Lord is with me as a mighty terrible one: therefore my persecutors shall stumble, and they shall not prevail: they shall be greatly ashamed; for they shall not prosper: their everlasting confusion shall never be forgotten."
                },
                "jer20.12": {
                    "id": 12,
                    "short": "Jer 20:12",
                    "name": "Jeremiah 20:12",
                    "scripture": "But, O Lord of hosts, that triest the righteous, and seest the reins and the heart, let me see thy vengeance on them: for unto thee have I opened my cause."
                },
                "jer20.13": {
                    "id": 13,
                    "short": "Jer 20:13",
                    "name": "Jeremiah 20:13",
                    "scripture": "Sing unto the Lord, praise ye the Lord : for he hath delivered the soul of the poor from the hand of evildoers."
                },
                "jer20.14": {
                    "id": 14,
                    "short": "Jer 20:14",
                    "name": "Jeremiah 20:14",
                    "scripture": "Cursed be the day wherein I was born: let not the day wherein my mother bare me be blessed."
                },
                "jer20.15": {
                    "id": 15,
                    "short": "Jer 20:15",
                    "name": "Jeremiah 20:15",
                    "scripture": "Cursed be the man who brought tidings to my father, saying, A man child is born unto thee; making him very glad."
                },
                "jer20.16": {
                    "id": 16,
                    "short": "Jer 20:16",
                    "name": "Jeremiah 20:16",
                    "scripture": "And let that man be as the cities which the Lord overthrew, and repented not: and let him hear the cry in the morning, and the shouting at noontide;"
                },
                "jer20.17": {
                    "id": 17,
                    "short": "Jer 20:17",
                    "name": "Jeremiah 20:17",
                    "scripture": "Because he slew me not from the womb; or that my mother might have been my grave, and her womb to be always great with me."
                },
                "jer20.18": {
                    "id": 18,
                    "short": "Jer 20:18",
                    "name": "Jeremiah 20:18",
                    "scripture": "Wherefore came I forth out of the womb to see labour and sorrow, that my days should be consumed with shame?"
                }
            }
        },
        "jer21": {
            "id": 21,
            "short": "Jer 21",
            "name": "Jeremiah 21",
            "verses": {
                "jer21.1": {
                    "id": 1,
                    "short": "Jer 21:1",
                    "name": "Jeremiah 21:1",
                    "scripture": "The word which came unto Jeremiah from the Lord, when king Zedekiah sent unto him Pashur the son of Malchijah, and Zephaniah the son of Maaseiah the priest, saying,"
                },
                "jer21.2": {
                    "id": 2,
                    "short": "Jer 21:2",
                    "name": "Jeremiah 21:2",
                    "scripture": "Enquire, I pray thee, of the Lord for us; for Nebuchadrezzar king of Babylon maketh war against us; if so be that the Lord will deal with us according to all his wondrous works, that he may go up from us."
                },
                "jer21.3": {
                    "id": 3,
                    "short": "Jer 21:3",
                    "name": "Jeremiah 21:3",
                    "scripture": "Then said Jeremiah unto them, Thus shall ye say to Zedekiah:"
                },
                "jer21.4": {
                    "id": 4,
                    "short": "Jer 21:4",
                    "name": "Jeremiah 21:4",
                    "scripture": "Thus saith the Lord God of Israel; Behold, I will turn back the weapons of war that are in your hands, wherewith ye fight against the king of Babylon, and against the Chaldeans, which besiege you without the walls, and I will assemble them into the midst of this city."
                },
                "jer21.5": {
                    "id": 5,
                    "short": "Jer 21:5",
                    "name": "Jeremiah 21:5",
                    "scripture": "And I myself will fight against you with an outstretched hand and with a strong arm, even in anger, and in fury, and in great wrath."
                },
                "jer21.6": {
                    "id": 6,
                    "short": "Jer 21:6",
                    "name": "Jeremiah 21:6",
                    "scripture": "And I will smite the inhabitants of this city, both man and beast: they shall die of a great pestilence."
                },
                "jer21.7": {
                    "id": 7,
                    "short": "Jer 21:7",
                    "name": "Jeremiah 21:7",
                    "scripture": "And afterward, saith the Lord, I will deliver Zedekiah king of Judah, and his servants, and the people, and such as are left in this city from the pestilence, from the sword, and from the famine, into the hand of Nebuchadrezzar king of Babylon, and into the hand of their enemies, and into the hand of those that seek their life: and he shall smite them with the edge of the sword; he shall not spare them, neither have pity, nor have mercy."
                },
                "jer21.8": {
                    "id": 8,
                    "short": "Jer 21:8",
                    "name": "Jeremiah 21:8",
                    "scripture": "And unto this people thou shalt say, Thus saith the Lord; Behold, I set before you the way of life, and the way of death."
                },
                "jer21.9": {
                    "id": 9,
                    "short": "Jer 21:9",
                    "name": "Jeremiah 21:9",
                    "scripture": "He that abideth in this city shall die by the sword, and by the famine, and by the pestilence: but he that goeth out, and falleth to the Chaldeans that besiege you, he shall live, and his life shall be unto him for a prey."
                },
                "jer21.10": {
                    "id": 10,
                    "short": "Jer 21:10",
                    "name": "Jeremiah 21:10",
                    "scripture": "For I have set my face against this city for evil, and not for good, saith the Lord : it shall be given into the hand of the king of Babylon, and he shall burn it with fire."
                },
                "jer21.11": {
                    "id": 11,
                    "short": "Jer 21:11",
                    "name": "Jeremiah 21:11",
                    "scripture": "And touching the house of the king of Judah, say, Hear ye the word of the Lord;"
                },
                "jer21.12": {
                    "id": 12,
                    "short": "Jer 21:12",
                    "name": "Jeremiah 21:12",
                    "scripture": "O house of David, thus saith the Lord; Execute judgment in the morning, and deliver him that is spoiled out of the hand of the oppressor, lest my fury go out like fire, and burn that none can quench it, because of the evil of your doings."
                },
                "jer21.13": {
                    "id": 13,
                    "short": "Jer 21:13",
                    "name": "Jeremiah 21:13",
                    "scripture": "Behold, I am against thee, O inhabitant of the valley, and rock of the plain, saith the Lord; which say, Who shall come down against us? or who shall enter into our habitations?"
                },
                "jer21.14": {
                    "id": 14,
                    "short": "Jer 21:14",
                    "name": "Jeremiah 21:14",
                    "scripture": "But I will punish you according to the fruit of your doings, saith the Lord : and I will kindle a fire in the forest thereof, and it shall devour all things round about it."
                }
            }
        },
        "jer22": {
            "id": 22,
            "short": "Jer 22",
            "name": "Jeremiah 22",
            "verses": {
                "jer22.1": {
                    "id": 1,
                    "short": "Jer 22:1",
                    "name": "Jeremiah 22:1",
                    "scripture": "Thus saith the Lord; Go down to the house of the king of Judah, and speak there this word,"
                },
                "jer22.2": {
                    "id": 2,
                    "short": "Jer 22:2",
                    "name": "Jeremiah 22:2",
                    "scripture": "And say, Hear the word of the Lord, O king of Judah, that sittest upon the throne of David, thou, and thy servants, and thy people that enter in by these gates:"
                },
                "jer22.3": {
                    "id": 3,
                    "short": "Jer 22:3",
                    "name": "Jeremiah 22:3",
                    "scripture": "Thus saith the Lord; Execute ye judgment and righteousness, and deliver the spoiled out of the hand of the oppressor: and do no wrong, do no violence to the stranger, the fatherless, nor the widow, neither shed innocent blood in this place."
                },
                "jer22.4": {
                    "id": 4,
                    "short": "Jer 22:4",
                    "name": "Jeremiah 22:4",
                    "scripture": "For if ye do this thing indeed, then shall there enter in by the gates of this house kings sitting upon the throne of David, riding in chariots and on horses, he, and his servants, and his people."
                },
                "jer22.5": {
                    "id": 5,
                    "short": "Jer 22:5",
                    "name": "Jeremiah 22:5",
                    "scripture": "But if ye will not hear these words, I swear by myself, saith the Lord, that this house shall become a desolation."
                },
                "jer22.6": {
                    "id": 6,
                    "short": "Jer 22:6",
                    "name": "Jeremiah 22:6",
                    "scripture": "For thus saith the Lord unto the king's house of Judah; Thou art Gilead unto me, and the head of Lebanon: yet surely I will make thee a wilderness, and cities which are not inhabited."
                },
                "jer22.7": {
                    "id": 7,
                    "short": "Jer 22:7",
                    "name": "Jeremiah 22:7",
                    "scripture": "And I will prepare destroyers against thee, every one with his weapons: and they shall cut down thy choice cedars, and cast them into the fire."
                },
                "jer22.8": {
                    "id": 8,
                    "short": "Jer 22:8",
                    "name": "Jeremiah 22:8",
                    "scripture": "And many nations shall pass by this city, and they shall say every man to his neighbour, Wherefore hath the Lord done thus unto this great city?"
                },
                "jer22.9": {
                    "id": 9,
                    "short": "Jer 22:9",
                    "name": "Jeremiah 22:9",
                    "scripture": "Then they shall answer, Because they have forsaken the covenant of the Lord their God, and worshipped other gods, and served them."
                },
                "jer22.10": {
                    "id": 10,
                    "short": "Jer 22:10",
                    "name": "Jeremiah 22:10",
                    "scripture": "Weep ye not for the dead, neither bemoan him: but weep sore for him that goeth away: for he shall return no more, nor see his native country."
                },
                "jer22.11": {
                    "id": 11,
                    "short": "Jer 22:11",
                    "name": "Jeremiah 22:11",
                    "scripture": "For thus saith the Lord touching Shallum the son of Josiah king of Judah, which reigned instead of Josiah his father, which went forth out of this place; He shall not return thither any more:"
                },
                "jer22.12": {
                    "id": 12,
                    "short": "Jer 22:12",
                    "name": "Jeremiah 22:12",
                    "scripture": "But he shall die in the place whither they have led him captive, and shall see this land no more."
                },
                "jer22.13": {
                    "id": 13,
                    "short": "Jer 22:13",
                    "name": "Jeremiah 22:13",
                    "scripture": "Woe unto him that buildeth his house by unrighteousness, and his chambers by wrong; that useth his neighbour's service without wages, and giveth him not for his work;"
                },
                "jer22.14": {
                    "id": 14,
                    "short": "Jer 22:14",
                    "name": "Jeremiah 22:14",
                    "scripture": "That saith, I will build me a wide house and large chambers, and cutteth him out windows; and it is ceiled with cedar, and painted with vermilion."
                },
                "jer22.15": {
                    "id": 15,
                    "short": "Jer 22:15",
                    "name": "Jeremiah 22:15",
                    "scripture": "Shalt thou reign, because thou closest thyself in cedar? did not thy father eat and drink, and do judgment and justice, and then it was well with him?"
                },
                "jer22.16": {
                    "id": 16,
                    "short": "Jer 22:16",
                    "name": "Jeremiah 22:16",
                    "scripture": "He judged the cause of the poor and needy; then it was well with him: was not this to know me? saith the Lord ."
                },
                "jer22.17": {
                    "id": 17,
                    "short": "Jer 22:17",
                    "name": "Jeremiah 22:17",
                    "scripture": "But thine eyes and thine heart are not but for thy covetousness, and for to shed innocent blood, and for oppression, and for violence, to do it."
                },
                "jer22.18": {
                    "id": 18,
                    "short": "Jer 22:18",
                    "name": "Jeremiah 22:18",
                    "scripture": "Therefore thus saith the Lord concerning Jehoiakim the son of Josiah king of Judah; They shall not lament for him, saying, Ah my brother! or, Ah sister! they shall not lament for him, saying, Ah lord! or, Ah his glory!"
                },
                "jer22.19": {
                    "id": 19,
                    "short": "Jer 22:19",
                    "name": "Jeremiah 22:19",
                    "scripture": "He shall be buried with the burial of an ass, drawn and cast forth beyond the gates of Jerusalem."
                },
                "jer22.20": {
                    "id": 20,
                    "short": "Jer 22:20",
                    "name": "Jeremiah 22:20",
                    "scripture": "Go up to Lebanon, and cry; and lift up thy voice in Bashan, and cry from the passages: for all thy lovers are destroyed."
                },
                "jer22.21": {
                    "id": 21,
                    "short": "Jer 22:21",
                    "name": "Jeremiah 22:21",
                    "scripture": "I spake unto thee in thy prosperity; but thou saidst, I will not hear. This hath been thy manner from thy youth, that thou obeyedst not my voice."
                },
                "jer22.22": {
                    "id": 22,
                    "short": "Jer 22:22",
                    "name": "Jeremiah 22:22",
                    "scripture": "The wind shall eat up all thy pastors, and thy lovers shall go into captivity: surely then shalt thou be ashamed and confounded for all thy wickedness."
                },
                "jer22.23": {
                    "id": 23,
                    "short": "Jer 22:23",
                    "name": "Jeremiah 22:23",
                    "scripture": "O inhabitant of Lebanon, that makest thy nest in the cedars, how gracious shalt thou be when pangs come upon thee, the pain as of a woman in travail!"
                },
                "jer22.24": {
                    "id": 24,
                    "short": "Jer 22:24",
                    "name": "Jeremiah 22:24",
                    "scripture": "As I live, saith the Lord, though Coniah the son of Jehoiakim king of Judah were the signet upon my right hand, yet would I pluck thee thence;"
                },
                "jer22.25": {
                    "id": 25,
                    "short": "Jer 22:25",
                    "name": "Jeremiah 22:25",
                    "scripture": "And I will give thee into the hand of them that seek thy life, and into the hand of them whose face thou fearest, even into the hand of Nebuchadrezzar king of Babylon, and into the hand of the Chaldeans."
                },
                "jer22.26": {
                    "id": 26,
                    "short": "Jer 22:26",
                    "name": "Jeremiah 22:26",
                    "scripture": "And I will cast thee out, and thy mother that bare thee, into another country, where ye were not born; and there shall ye die."
                },
                "jer22.27": {
                    "id": 27,
                    "short": "Jer 22:27",
                    "name": "Jeremiah 22:27",
                    "scripture": "But to the land whereunto they desire to return, thither shall they not return."
                },
                "jer22.28": {
                    "id": 28,
                    "short": "Jer 22:28",
                    "name": "Jeremiah 22:28",
                    "scripture": "Is this man Coniah a despised broken idol? is he a vessel wherein is no pleasure? wherefore are they cast out, he and his seed, and are cast into a land which they know not?"
                },
                "jer22.29": {
                    "id": 29,
                    "short": "Jer 22:29",
                    "name": "Jeremiah 22:29",
                    "scripture": "O earth, earth, earth, hear the word of the Lord ."
                },
                "jer22.30": {
                    "id": 30,
                    "short": "Jer 22:30",
                    "name": "Jeremiah 22:30",
                    "scripture": "Thus saith the Lord, Write ye this man childless, a man that shall not prosper in his days: for no man of his seed shall prosper, sitting upon the throne of David, and ruling any more in Judah."
                }
            }
        },
        "jer23": {
            "id": 23,
            "short": "Jer 23",
            "name": "Jeremiah 23",
            "verses": {
                "jer23.1": {
                    "id": 1,
                    "short": "Jer 23:1",
                    "name": "Jeremiah 23:1",
                    "scripture": "Woe be unto the pastors that destroy and scatter the sheep of my pasture! saith the Lord ."
                },
                "jer23.2": {
                    "id": 2,
                    "short": "Jer 23:2",
                    "name": "Jeremiah 23:2",
                    "scripture": "Therefore thus saith the Lord God of Israel against the pastors that feed my people; Ye have scattered my flock, and driven them away, and have not visited them: behold, I will visit upon you the evil of your doings, saith the Lord ."
                },
                "jer23.3": {
                    "id": 3,
                    "short": "Jer 23:3",
                    "name": "Jeremiah 23:3",
                    "scripture": "And I will gather the remnant of my flock out of all countries whither I have driven them, and will bring them again to their folds; and they shall be fruitful and increase."
                },
                "jer23.4": {
                    "id": 4,
                    "short": "Jer 23:4",
                    "name": "Jeremiah 23:4",
                    "scripture": "And I will set up shepherds over them which shall feed them: and they shall fear no more, nor be dismayed, neither shall they be lacking, saith the Lord ."
                },
                "jer23.5": {
                    "id": 5,
                    "short": "Jer 23:5",
                    "name": "Jeremiah 23:5",
                    "scripture": "Behold, the days come, saith the Lord, that I will raise unto David a righteous Branch, and a King shall reign and prosper, and shall execute judgment and justice in the earth."
                },
                "jer23.6": {
                    "id": 6,
                    "short": "Jer 23:6",
                    "name": "Jeremiah 23:6",
                    "scripture": "In his days Judah shall be saved, and Israel shall dwell safely: and this is his name whereby he shall be called, THE Lord OUR RIGHTEOUSNESS."
                },
                "jer23.7": {
                    "id": 7,
                    "short": "Jer 23:7",
                    "name": "Jeremiah 23:7",
                    "scripture": "Therefore, behold, the days come, saith the Lord, that they shall no more say, The Lord liveth, which brought up the children of Israel out of the land of Egypt;"
                },
                "jer23.8": {
                    "id": 8,
                    "short": "Jer 23:8",
                    "name": "Jeremiah 23:8",
                    "scripture": "But, The Lord liveth, which brought up and which led the seed of the house of Israel out of the north country, and from all countries whither I had driven them; and they shall dwell in their own land."
                },
                "jer23.9": {
                    "id": 9,
                    "short": "Jer 23:9",
                    "name": "Jeremiah 23:9",
                    "scripture": "Mine heart within me is broken because of the prophets; all my bones shake; I am like a drunken man, and like a man whom wine hath overcome, because of the Lord, and because of the words of his holiness."
                },
                "jer23.10": {
                    "id": 10,
                    "short": "Jer 23:10",
                    "name": "Jeremiah 23:10",
                    "scripture": "For the land is full of adulterers; for because of swearing the land mourneth; the pleasant places of the wilderness are dried up, and their course is evil, and their force is not right."
                },
                "jer23.11": {
                    "id": 11,
                    "short": "Jer 23:11",
                    "name": "Jeremiah 23:11",
                    "scripture": "For both prophet and priest are profane; yea, in my house have I found their wickedness, saith the Lord ."
                },
                "jer23.12": {
                    "id": 12,
                    "short": "Jer 23:12",
                    "name": "Jeremiah 23:12",
                    "scripture": "Wherefore their way shall be unto them as slippery ways in the darkness: they shall be driven on, and fall therein: for I will bring evil upon them, even the year of their visitation, saith the Lord ."
                },
                "jer23.13": {
                    "id": 13,
                    "short": "Jer 23:13",
                    "name": "Jeremiah 23:13",
                    "scripture": "And I have seen folly in the prophets of Samaria; they prophesied in Baal, and caused my people Israel to err."
                },
                "jer23.14": {
                    "id": 14,
                    "short": "Jer 23:14",
                    "name": "Jeremiah 23:14",
                    "scripture": "I have seen also in the prophets of Jerusalem an horrible thing: they commit adultery, and walk in lies: they strengthen also the hands of evildoers, that none doth return from his wickedness: they are all of them unto me as Sodom, and the inhabitants thereof as Gomorrah."
                },
                "jer23.15": {
                    "id": 15,
                    "short": "Jer 23:15",
                    "name": "Jeremiah 23:15",
                    "scripture": "Therefore thus saith the Lord of hosts concerning the prophets; Behold, I will feed them with wormwood, and make them drink the water of gall: for from the prophets of Jerusalem is profaneness gone forth into all the land."
                },
                "jer23.16": {
                    "id": 16,
                    "short": "Jer 23:16",
                    "name": "Jeremiah 23:16",
                    "scripture": "Thus saith the Lord of hosts, Hearken not unto the words of the prophets that prophesy unto you: they make you vain: they speak a vision of their own heart, and not out of the mouth of the Lord ."
                },
                "jer23.17": {
                    "id": 17,
                    "short": "Jer 23:17",
                    "name": "Jeremiah 23:17",
                    "scripture": "They say still unto them that despise me, The Lord hath said, Ye shall have peace; and they say unto every one that walketh after the imagination of his own heart, No evil shall come upon you."
                },
                "jer23.18": {
                    "id": 18,
                    "short": "Jer 23:18",
                    "name": "Jeremiah 23:18",
                    "scripture": "For who hath stood in the counsel of the Lord, and hath perceived and heard his word? who hath marked his word, and heard it?"
                },
                "jer23.19": {
                    "id": 19,
                    "short": "Jer 23:19",
                    "name": "Jeremiah 23:19",
                    "scripture": "Behold, a whirlwind of the Lord is gone forth in fury, even a grievous whirlwind: it shall fall grievously upon the head of the wicked."
                },
                "jer23.20": {
                    "id": 20,
                    "short": "Jer 23:20",
                    "name": "Jeremiah 23:20",
                    "scripture": "The anger of the Lord shall not return, until he have executed, and till he have performed the thoughts of his heart: in the latter days ye shall consider it perfectly."
                },
                "jer23.21": {
                    "id": 21,
                    "short": "Jer 23:21",
                    "name": "Jeremiah 23:21",
                    "scripture": "I have not sent these prophets, yet they ran: I have not spoken to them, yet they prophesied."
                },
                "jer23.22": {
                    "id": 22,
                    "short": "Jer 23:22",
                    "name": "Jeremiah 23:22",
                    "scripture": "But if they had stood in my counsel, and had caused my people to hear my words, then they should have turned them from their evil way, and from the evil of their doings."
                },
                "jer23.23": {
                    "id": 23,
                    "short": "Jer 23:23",
                    "name": "Jeremiah 23:23",
                    "scripture": "Am I a God at hand, saith the Lord, and not a God afar off?"
                },
                "jer23.24": {
                    "id": 24,
                    "short": "Jer 23:24",
                    "name": "Jeremiah 23:24",
                    "scripture": "Can any hide himself in secret places that I shall not see him? saith the Lord . Do not I fill heaven and earth? saith the Lord ."
                },
                "jer23.25": {
                    "id": 25,
                    "short": "Jer 23:25",
                    "name": "Jeremiah 23:25",
                    "scripture": "I have heard what the prophets said, that prophesy lies in my name, saying, I have dreamed, I have dreamed."
                },
                "jer23.26": {
                    "id": 26,
                    "short": "Jer 23:26",
                    "name": "Jeremiah 23:26",
                    "scripture": "How long shall this be in the heart of the prophets that prophesy lies? yea, they are prophets of the deceit of their own heart;"
                },
                "jer23.27": {
                    "id": 27,
                    "short": "Jer 23:27",
                    "name": "Jeremiah 23:27",
                    "scripture": "Which think to cause my people to forget my name by their dreams which they tell every man to his neighbour, as their fathers have forgotten my name for Baal."
                },
                "jer23.28": {
                    "id": 28,
                    "short": "Jer 23:28",
                    "name": "Jeremiah 23:28",
                    "scripture": "The prophet that hath a dream, let him tell a dream; and he that hath my word, let him speak my word faithfully. What is the chaff to the wheat? saith the Lord ."
                },
                "jer23.29": {
                    "id": 29,
                    "short": "Jer 23:29",
                    "name": "Jeremiah 23:29",
                    "scripture": "Is not my word like as a fire? saith the Lord; and like a hammer that breaketh the rock in pieces?"
                },
                "jer23.30": {
                    "id": 30,
                    "short": "Jer 23:30",
                    "name": "Jeremiah 23:30",
                    "scripture": "Therefore, behold, I am against the prophets, saith the Lord, that steal my words every one from his neighbour."
                },
                "jer23.31": {
                    "id": 31,
                    "short": "Jer 23:31",
                    "name": "Jeremiah 23:31",
                    "scripture": "Behold, I am against the prophets, saith the Lord, that use their tongues, and say, He saith."
                },
                "jer23.32": {
                    "id": 32,
                    "short": "Jer 23:32",
                    "name": "Jeremiah 23:32",
                    "scripture": "Behold, I am against them that prophesy false dreams, saith the Lord, and do tell them, and cause my people to err by their lies, and by their lightness; yet I sent them not, nor commanded them: therefore they shall not profit this people at all, saith the Lord ."
                },
                "jer23.33": {
                    "id": 33,
                    "short": "Jer 23:33",
                    "name": "Jeremiah 23:33",
                    "scripture": "And when this people, or the prophet, or a priest, shall ask thee, saying, What is the burden of the Lord ? thou shalt then say unto them, What burden? I will even forsake you, saith the Lord ."
                },
                "jer23.34": {
                    "id": 34,
                    "short": "Jer 23:34",
                    "name": "Jeremiah 23:34",
                    "scripture": "And as for the prophet, and the priest, and the people, that shall say, The burden of the Lord, I will even punish that man and his house."
                },
                "jer23.35": {
                    "id": 35,
                    "short": "Jer 23:35",
                    "name": "Jeremiah 23:35",
                    "scripture": "Thus shall ye say every one to his neighbour, and every one to his brother, What hath the Lord answered? and, What hath the Lord spoken?"
                },
                "jer23.36": {
                    "id": 36,
                    "short": "Jer 23:36",
                    "name": "Jeremiah 23:36",
                    "scripture": "And the burden of the Lord shall ye mention no more: for every man's word shall be his burden; for ye have perverted the words of the living God, of the Lord of hosts our God."
                },
                "jer23.37": {
                    "id": 37,
                    "short": "Jer 23:37",
                    "name": "Jeremiah 23:37",
                    "scripture": "Thus shalt thou say to the prophet, What hath the Lord answered thee? and, What hath the Lord spoken?"
                },
                "jer23.38": {
                    "id": 38,
                    "short": "Jer 23:38",
                    "name": "Jeremiah 23:38",
                    "scripture": "But since ye say, The burden of the Lord; therefore thus saith the Lord; Because ye say this word, The burden of the Lord, and I have sent unto you, saying, Ye shall not say, The burden of the Lord;"
                },
                "jer23.39": {
                    "id": 39,
                    "short": "Jer 23:39",
                    "name": "Jeremiah 23:39",
                    "scripture": "Therefore, behold, I, even I, will utterly forget you, and I will forsake you, and the city that I gave you and your fathers, and cast you out of my presence:"
                },
                "jer23.40": {
                    "id": 40,
                    "short": "Jer 23:40",
                    "name": "Jeremiah 23:40",
                    "scripture": "And I will bring an everlasting reproach upon you, and a perpetual shame, which shall not be forgotten."
                }
            }
        },
        "jer24": {
            "id": 24,
            "short": "Jer 24",
            "name": "Jeremiah 24",
            "verses": {
                "jer24.1": {
                    "id": 1,
                    "short": "Jer 24:1",
                    "name": "Jeremiah 24:1",
                    "scripture": "The Lord shewed me, and, behold, two baskets of figs were set before the temple of the Lord, after that Nebuchadrezzar king of Babylon had carried away captive Jeconiah the son of Jehoiakim king of Judah, and the princes of Judah, with the carpenters and smiths, from Jerusalem, and had brought them to Babylon."
                },
                "jer24.2": {
                    "id": 2,
                    "short": "Jer 24:2",
                    "name": "Jeremiah 24:2",
                    "scripture": "One basket had very good figs, even like the figs that are first ripe: and the other basket had very naughty figs, which could not be eaten, they were so bad."
                },
                "jer24.3": {
                    "id": 3,
                    "short": "Jer 24:3",
                    "name": "Jeremiah 24:3",
                    "scripture": "Then said the Lord unto me, What seest thou, Jeremiah? And I said, Figs; the good figs, very good; and the evil, very evil, that cannot be eaten, they are so evil."
                },
                "jer24.4": {
                    "id": 4,
                    "short": "Jer 24:4",
                    "name": "Jeremiah 24:4",
                    "scripture": "Again the word of the Lord came unto me, saying,"
                },
                "jer24.5": {
                    "id": 5,
                    "short": "Jer 24:5",
                    "name": "Jeremiah 24:5",
                    "scripture": "Thus saith the Lord, the God of Israel; Like these good figs, so will I acknowledge them that are carried away captive of Judah, whom I have sent out of this place into the land of the Chaldeans for their good."
                },
                "jer24.6": {
                    "id": 6,
                    "short": "Jer 24:6",
                    "name": "Jeremiah 24:6",
                    "scripture": "For I will set mine eyes upon them for good, and I will bring them again to this land: and I will build them, and not pull them down; and I will plant them, and not pluck them up."
                },
                "jer24.7": {
                    "id": 7,
                    "short": "Jer 24:7",
                    "name": "Jeremiah 24:7",
                    "scripture": "And I will give them an heart to know me, that I am the Lord : and they shall be my people, and I will be their God: for they shall return unto me with their whole heart."
                },
                "jer24.8": {
                    "id": 8,
                    "short": "Jer 24:8",
                    "name": "Jeremiah 24:8",
                    "scripture": "And as the evil figs, which cannot be eaten, they are so evil; surely thus saith the Lord, So will I give Zedekiah the king of Judah, and his princes, and the residue of Jerusalem, that remain in this land, and them that dwell in the land of Egypt:"
                },
                "jer24.9": {
                    "id": 9,
                    "short": "Jer 24:9",
                    "name": "Jeremiah 24:9",
                    "scripture": "And I will deliver them to be removed into all the kingdoms of the earth for their hurt, to be a reproach and a proverb, a taunt and a curse, in all places whither I shall drive them."
                },
                "jer24.10": {
                    "id": 10,
                    "short": "Jer 24:10",
                    "name": "Jeremiah 24:10",
                    "scripture": "And I will send the sword, the famine, and the pestilence, among them, till they be consumed from off the land that I gave unto them and to their fathers."
                }
            }
        },
        "jer25": {
            "id": 25,
            "short": "Jer 25",
            "name": "Jeremiah 25",
            "verses": {
                "jer25.1": {
                    "id": 1,
                    "short": "Jer 25:1",
                    "name": "Jeremiah 25:1",
                    "scripture": "The word that came to Jeremiah concerning all the people of Judah in the fourth year of Jehoiakim the son of Josiah king of Judah, that was the first year of Nebuchadrezzar king of Babylon;"
                },
                "jer25.2": {
                    "id": 2,
                    "short": "Jer 25:2",
                    "name": "Jeremiah 25:2",
                    "scripture": "The which Jeremiah the prophet spake unto all the people of Judah, and to all the inhabitants of Jerusalem, saying,"
                },
                "jer25.3": {
                    "id": 3,
                    "short": "Jer 25:3",
                    "name": "Jeremiah 25:3",
                    "scripture": "From the thirteenth year of Josiah the son of Amon king of Judah, even unto this day, that is the three and twentieth year, the word of the Lord hath come unto me, and I have spoken unto you, rising early and speaking; but ye have not hearkened."
                },
                "jer25.4": {
                    "id": 4,
                    "short": "Jer 25:4",
                    "name": "Jeremiah 25:4",
                    "scripture": "And the Lord hath sent unto you all his servants the prophets, rising early and sending them; but ye have not hearkened, nor inclined your ear to hear."
                },
                "jer25.5": {
                    "id": 5,
                    "short": "Jer 25:5",
                    "name": "Jeremiah 25:5",
                    "scripture": "They said, Turn ye again now every one from his evil way, and from the evil of your doings, and dwell in the land that the Lord hath given unto you and to your fathers for ever and ever:"
                },
                "jer25.6": {
                    "id": 6,
                    "short": "Jer 25:6",
                    "name": "Jeremiah 25:6",
                    "scripture": "And go not after other gods to serve them, and to worship them, and provoke me not to anger with the works of your hands; and I will do you no hurt."
                },
                "jer25.7": {
                    "id": 7,
                    "short": "Jer 25:7",
                    "name": "Jeremiah 25:7",
                    "scripture": "Yet ye have not hearkened unto me, saith the Lord; that ye might provoke me to anger with the works of your hands to your own hurt."
                },
                "jer25.8": {
                    "id": 8,
                    "short": "Jer 25:8",
                    "name": "Jeremiah 25:8",
                    "scripture": "Therefore thus saith the Lord of hosts; Because ye have not heard my words,"
                },
                "jer25.9": {
                    "id": 9,
                    "short": "Jer 25:9",
                    "name": "Jeremiah 25:9",
                    "scripture": "Behold, I will send and take all the families of the north, saith the Lord, and Nebuchadrezzar the king of Babylon, my servant, and will bring them against this land, and against the inhabitants thereof, and against all these nations round about, and will utterly destroy them, and make them an astonishment, and an hissing, and perpetual desolations."
                },
                "jer25.10": {
                    "id": 10,
                    "short": "Jer 25:10",
                    "name": "Jeremiah 25:10",
                    "scripture": "Moreover I will take from them the voice of mirth, and the voice of gladness, the voice of the bridegroom, and the voice of the bride, the sound of the millstones, and the light of the candle."
                },
                "jer25.11": {
                    "id": 11,
                    "short": "Jer 25:11",
                    "name": "Jeremiah 25:11",
                    "scripture": "And this whole land shall be a desolation, and an astonishment; and these nations shall serve the king of Babylon seventy years."
                },
                "jer25.12": {
                    "id": 12,
                    "short": "Jer 25:12",
                    "name": "Jeremiah 25:12",
                    "scripture": "And it shall come to pass, when seventy years are accomplished, that I will punish the king of Babylon, and that nation, saith the Lord, for their iniquity, and the land of the Chaldeans, and will make it perpetual desolations."
                },
                "jer25.13": {
                    "id": 13,
                    "short": "Jer 25:13",
                    "name": "Jeremiah 25:13",
                    "scripture": "And I will bring upon that land all my words which I have pronounced against it, even all that is written in this book, which Jeremiah hath prophesied against all the nations."
                },
                "jer25.14": {
                    "id": 14,
                    "short": "Jer 25:14",
                    "name": "Jeremiah 25:14",
                    "scripture": "For many nations and great kings shall serve themselves of them also: and I will recompense them according to their deeds, and according to the works of their own hands."
                },
                "jer25.15": {
                    "id": 15,
                    "short": "Jer 25:15",
                    "name": "Jeremiah 25:15",
                    "scripture": "For thus saith the Lord God of Israel unto me; Take the wine cup of this fury at my hand, and cause all the nations, to whom I send thee, to drink it."
                },
                "jer25.16": {
                    "id": 16,
                    "short": "Jer 25:16",
                    "name": "Jeremiah 25:16",
                    "scripture": "And they shall drink, and be moved, and be mad, because of the sword that I will send among them."
                },
                "jer25.17": {
                    "id": 17,
                    "short": "Jer 25:17",
                    "name": "Jeremiah 25:17",
                    "scripture": "Then took I the cup at the Lord's hand, and made all the nations to drink, unto whom the Lord had sent me:"
                },
                "jer25.18": {
                    "id": 18,
                    "short": "Jer 25:18",
                    "name": "Jeremiah 25:18",
                    "scripture": "To wit, Jerusalem, and the cities of Judah, and the kings thereof, and the princes thereof, to make them a desolation, an astonishment, an hissing, and a curse; as it is this day;"
                },
                "jer25.19": {
                    "id": 19,
                    "short": "Jer 25:19",
                    "name": "Jeremiah 25:19",
                    "scripture": "Pharaoh king of Egypt, and his servants, and his princes, and all his people;"
                },
                "jer25.20": {
                    "id": 20,
                    "short": "Jer 25:20",
                    "name": "Jeremiah 25:20",
                    "scripture": "And all the mingled people, and all the kings of the land of Uz, and all the kings of the land of the Philistines, and Ashkelon, and Gaza, and Ekron, and the remnant of Ashdod,"
                },
                "jer25.21": {
                    "id": 21,
                    "short": "Jer 25:21",
                    "name": "Jeremiah 25:21",
                    "scripture": "Edom, and Moab, and the children of Ammon,"
                },
                "jer25.22": {
                    "id": 22,
                    "short": "Jer 25:22",
                    "name": "Jeremiah 25:22",
                    "scripture": "And all the kings of Tyre, and all the kings of Zidon, and the kings of the isles which are beyond the sea,"
                },
                "jer25.23": {
                    "id": 23,
                    "short": "Jer 25:23",
                    "name": "Jeremiah 25:23",
                    "scripture": "Dedan, and Tema, and Buz, and all that are in the utmost corners,"
                },
                "jer25.24": {
                    "id": 24,
                    "short": "Jer 25:24",
                    "name": "Jeremiah 25:24",
                    "scripture": "And all the kings of Arabia, and all the kings of the mingled people that dwell in the desert,"
                },
                "jer25.25": {
                    "id": 25,
                    "short": "Jer 25:25",
                    "name": "Jeremiah 25:25",
                    "scripture": "And all the kings of Zimri, and all the kings of Elam, and all the kings of the Medes,"
                },
                "jer25.26": {
                    "id": 26,
                    "short": "Jer 25:26",
                    "name": "Jeremiah 25:26",
                    "scripture": "And all the kings of the north, far and near, one with another, and all the kingdoms of the world, which are upon the face of the earth: and the king of Sheshach shall drink after them."
                },
                "jer25.27": {
                    "id": 27,
                    "short": "Jer 25:27",
                    "name": "Jeremiah 25:27",
                    "scripture": "Therefore thou shalt say unto them, Thus saith the Lord of hosts, the God of Israel; Drink ye, and be drunken, and spue, and fall, and rise no more, because of the sword which I will send among you."
                },
                "jer25.28": {
                    "id": 28,
                    "short": "Jer 25:28",
                    "name": "Jeremiah 25:28",
                    "scripture": "And it shall be, if they refuse to take the cup at thine hand to drink, then shalt thou say unto them, Thus saith the Lord of hosts; Ye shall certainly drink."
                },
                "jer25.29": {
                    "id": 29,
                    "short": "Jer 25:29",
                    "name": "Jeremiah 25:29",
                    "scripture": "For, lo, I begin to bring evil on the city which is called by my name, and should ye be utterly unpunished? Ye shall not be unpunished: for I will call for a sword upon all the inhabitants of the earth, saith the Lord of hosts."
                },
                "jer25.30": {
                    "id": 30,
                    "short": "Jer 25:30",
                    "name": "Jeremiah 25:30",
                    "scripture": "Therefore prophesy thou against them all these words, and say unto them, The Lord shall roar from on high, and utter his voice from his holy habitation; he shall mightily roar upon his habitation; he shall give a shout, as they that tread the grapes, against all the inhabitants of the earth."
                },
                "jer25.31": {
                    "id": 31,
                    "short": "Jer 25:31",
                    "name": "Jeremiah 25:31",
                    "scripture": "A noise shall come even to the ends of the earth; for the Lord hath a controversy with the nations, he will plead with all flesh; he will give them that are wicked to the sword, saith the Lord ."
                },
                "jer25.32": {
                    "id": 32,
                    "short": "Jer 25:32",
                    "name": "Jeremiah 25:32",
                    "scripture": "Thus saith the Lord of hosts, Behold, evil shall go forth from nation to nation, and a great whirlwind shall be raised up from the coasts of the earth."
                },
                "jer25.33": {
                    "id": 33,
                    "short": "Jer 25:33",
                    "name": "Jeremiah 25:33",
                    "scripture": "And the slain of the Lord shall be at that day from one end of the earth even unto the other end of the earth: they shall not be lamented, neither gathered, nor buried; they shall be dung upon the ground."
                },
                "jer25.34": {
                    "id": 34,
                    "short": "Jer 25:34",
                    "name": "Jeremiah 25:34",
                    "scripture": "Howl, ye shepherds, and cry; and wallow yourselves in the ashes, ye principal of the flock: for the days of your slaughter and of your dispersions are accomplished; and ye shall fall like a pleasant vessel."
                },
                "jer25.35": {
                    "id": 35,
                    "short": "Jer 25:35",
                    "name": "Jeremiah 25:35",
                    "scripture": "And the shepherds shall have no way to flee, nor the principal of the flock to escape."
                },
                "jer25.36": {
                    "id": 36,
                    "short": "Jer 25:36",
                    "name": "Jeremiah 25:36",
                    "scripture": "A voice of the cry of the shepherds, and an howling of the principal of the flock, shall be heard: for the Lord hath spoiled their pasture."
                },
                "jer25.37": {
                    "id": 37,
                    "short": "Jer 25:37",
                    "name": "Jeremiah 25:37",
                    "scripture": "And the peaceable habitations are cut down because of the fierce anger of the Lord ."
                },
                "jer25.38": {
                    "id": 38,
                    "short": "Jer 25:38",
                    "name": "Jeremiah 25:38",
                    "scripture": "He hath forsaken his covert, as the lion: for their land is desolate because of the fierceness of the oppressor, and because of his fierce anger."
                }
            }
        },
        "jer26": {
            "id": 26,
            "short": "Jer 26",
            "name": "Jeremiah 26",
            "verses": {
                "jer26.1": {
                    "id": 1,
                    "short": "Jer 26:1",
                    "name": "Jeremiah 26:1",
                    "scripture": "In the beginning of the reign of Jehoiakim the son of Josiah king of Judah came this word from the Lord, saying,"
                },
                "jer26.2": {
                    "id": 2,
                    "short": "Jer 26:2",
                    "name": "Jeremiah 26:2",
                    "scripture": "Thus saith the Lord; Stand in the court of the Lord's house, and speak unto all the cities of Judah, which come to worship in the Lord's house, all the words that I command thee to speak unto them; diminish not a word:"
                },
                "jer26.3": {
                    "id": 3,
                    "short": "Jer 26:3",
                    "name": "Jeremiah 26:3",
                    "scripture": "If so be they will hearken, and turn every man from his evil way, that I may repent me of the evil, which I purpose to do unto them because of the evil of their doings."
                },
                "jer26.4": {
                    "id": 4,
                    "short": "Jer 26:4",
                    "name": "Jeremiah 26:4",
                    "scripture": "And thou shalt say unto them, Thus saith the Lord; If ye will not hearken to me, to walk in my law, which I have set before you,"
                },
                "jer26.5": {
                    "id": 5,
                    "short": "Jer 26:5",
                    "name": "Jeremiah 26:5",
                    "scripture": "To hearken to the words of my servants the prophets, whom I sent unto you, both rising up early, and sending them, but ye have not hearkened;"
                },
                "jer26.6": {
                    "id": 6,
                    "short": "Jer 26:6",
                    "name": "Jeremiah 26:6",
                    "scripture": "Then will I make this house like Shiloh, and will make this city a curse to all the nations of the earth."
                },
                "jer26.7": {
                    "id": 7,
                    "short": "Jer 26:7",
                    "name": "Jeremiah 26:7",
                    "scripture": "So the priests and the prophets and all the people heard Jeremiah speaking these words in the house of the Lord ."
                },
                "jer26.8": {
                    "id": 8,
                    "short": "Jer 26:8",
                    "name": "Jeremiah 26:8",
                    "scripture": "Now it came to pass, when Jeremiah had made an end of speaking all that the Lord had commanded him to speak unto all the people, that the priests and the prophets and all the people took him, saying, Thou shalt surely die."
                },
                "jer26.9": {
                    "id": 9,
                    "short": "Jer 26:9",
                    "name": "Jeremiah 26:9",
                    "scripture": "Why hast thou prophesied in the name of the Lord, saying, This house shall be like Shiloh, and this city shall be desolate without an inhabitant? And all the people were gathered against Jeremiah in the house of the Lord ."
                },
                "jer26.10": {
                    "id": 10,
                    "short": "Jer 26:10",
                    "name": "Jeremiah 26:10",
                    "scripture": "When the princes of Judah heard these things, then they came up from the king's house unto the house of the Lord, and sat down in the entry of the new gate of the Lord's house."
                },
                "jer26.11": {
                    "id": 11,
                    "short": "Jer 26:11",
                    "name": "Jeremiah 26:11",
                    "scripture": "Then spake the priests and the prophets unto the princes and to all the people, saying, This man is worthy to die; for he hath prophesied against this city, as ye have heard with your ears."
                },
                "jer26.12": {
                    "id": 12,
                    "short": "Jer 26:12",
                    "name": "Jeremiah 26:12",
                    "scripture": "Then spake Jeremiah unto all the princes and to all the people, saying, The Lord sent me to prophesy against this house and against this city all the words that ye have heard."
                },
                "jer26.13": {
                    "id": 13,
                    "short": "Jer 26:13",
                    "name": "Jeremiah 26:13",
                    "scripture": "Therefore now amend your ways and your doings, and obey the voice of the Lord your God; and the Lord will repent him of the evil that he hath pronounced against you."
                },
                "jer26.14": {
                    "id": 14,
                    "short": "Jer 26:14",
                    "name": "Jeremiah 26:14",
                    "scripture": "As for me, behold, I am in your hand: do with me as seemeth good and meet unto you."
                },
                "jer26.15": {
                    "id": 15,
                    "short": "Jer 26:15",
                    "name": "Jeremiah 26:15",
                    "scripture": "But know ye for certain, that if ye put me to death, ye shall surely bring innocent blood upon yourselves, and upon this city, and upon the inhabitants thereof: for of a truth the Lord hath sent me unto you to speak all these words in your ears."
                },
                "jer26.16": {
                    "id": 16,
                    "short": "Jer 26:16",
                    "name": "Jeremiah 26:16",
                    "scripture": "Then said the princes and all the people unto the priests and to the prophets; This man is not worthy to die: for he hath spoken to us in the name of the Lord our God."
                },
                "jer26.17": {
                    "id": 17,
                    "short": "Jer 26:17",
                    "name": "Jeremiah 26:17",
                    "scripture": "Then rose up certain of the elders of the land, and spake to all the assembly of the people, saying,"
                },
                "jer26.18": {
                    "id": 18,
                    "short": "Jer 26:18",
                    "name": "Jeremiah 26:18",
                    "scripture": "Micah the Morasthite prophesied in the days of Hezekiah king of Judah, and spake to all the people of Judah, saying, Thus saith the Lord of hosts; Zion shall be plowed like a field, and Jerusalem shall become heaps, and the mountain of the house as the high places of a forest."
                },
                "jer26.19": {
                    "id": 19,
                    "short": "Jer 26:19",
                    "name": "Jeremiah 26:19",
                    "scripture": "Did Hezekiah king of Judah and all Judah put him at all to death? did he not fear the Lord, and besought the Lord, and the Lord repented him of the evil which he had pronounced against them? Thus might we procure great evil against our souls."
                },
                "jer26.20": {
                    "id": 20,
                    "short": "Jer 26:20",
                    "name": "Jeremiah 26:20",
                    "scripture": "And there was also a man that prophesied in the name of the Lord, Urijah the son of Shemaiah of Kirjathâ€“jearim, who prophesied against this city and against this land according to all the words of Jeremiah:"
                },
                "jer26.21": {
                    "id": 21,
                    "short": "Jer 26:21",
                    "name": "Jeremiah 26:21",
                    "scripture": "And when Jehoiakim the king, with all his mighty men, and all the princes, heard his words, the king sought to put him to death: but when Urijah heard it, he was afraid, and fled, and went into Egypt;"
                },
                "jer26.22": {
                    "id": 22,
                    "short": "Jer 26:22",
                    "name": "Jeremiah 26:22",
                    "scripture": "And Jehoiakim the king sent men into Egypt, namely, Elnathan the son of Achbor, and certain men with him into Egypt."
                },
                "jer26.23": {
                    "id": 23,
                    "short": "Jer 26:23",
                    "name": "Jeremiah 26:23",
                    "scripture": "And they fetched forth Urijah out of Egypt, and brought him unto Jehoiakim the king; who slew him with the sword, and cast his dead body into the graves of the common people."
                },
                "jer26.24": {
                    "id": 24,
                    "short": "Jer 26:24",
                    "name": "Jeremiah 26:24",
                    "scripture": "Nevertheless the hand of Ahikam the son of Shaphan was with Jeremiah, that they should not give him into the hand of the people to put him to death."
                }
            }
        },
        "jer27": {
            "id": 27,
            "short": "Jer 27",
            "name": "Jeremiah 27",
            "verses": {
                "jer27.1": {
                    "id": 1,
                    "short": "Jer 27:1",
                    "name": "Jeremiah 27:1",
                    "scripture": "In the beginning of the reign of Jehoiakim the son of Josiah king of Judah came this word unto Jeremiah from the Lord, saying,"
                },
                "jer27.2": {
                    "id": 2,
                    "short": "Jer 27:2",
                    "name": "Jeremiah 27:2",
                    "scripture": "Thus saith the Lord to me; Make thee bonds and yokes, and put them upon thy neck,"
                },
                "jer27.3": {
                    "id": 3,
                    "short": "Jer 27:3",
                    "name": "Jeremiah 27:3",
                    "scripture": "And send them to the king of Edom, and to the king of Moab, and to the king of the Ammonites, and to the king of Tyre, and to the king of Zidon, by the hand of the messengers which come to Jerusalem unto Zedekiah king of Judah;"
                },
                "jer27.4": {
                    "id": 4,
                    "short": "Jer 27:4",
                    "name": "Jeremiah 27:4",
                    "scripture": "And command them to say unto their masters, Thus saith the Lord of hosts, the God of Israel; Thus shall ye say unto your masters;"
                },
                "jer27.5": {
                    "id": 5,
                    "short": "Jer 27:5",
                    "name": "Jeremiah 27:5",
                    "scripture": "I have made the earth, the man and the beast that are upon the ground, by my great power and by my outstretched arm, and have given it unto whom it seemed meet unto me."
                },
                "jer27.6": {
                    "id": 6,
                    "short": "Jer 27:6",
                    "name": "Jeremiah 27:6",
                    "scripture": "And now have I given all these lands into the hand of Nebuchadnezzar the king of Babylon, my servant; and the beasts of the field have I given him also to serve him."
                },
                "jer27.7": {
                    "id": 7,
                    "short": "Jer 27:7",
                    "name": "Jeremiah 27:7",
                    "scripture": "And all nations shall serve him, and his son, and his son's son, until the very time of his land come: and then many nations and great kings shall serve themselves of him."
                },
                "jer27.8": {
                    "id": 8,
                    "short": "Jer 27:8",
                    "name": "Jeremiah 27:8",
                    "scripture": "And it shall come to pass, that the nation and kingdom which will not serve the same Nebuchadnezzar the king of Babylon, and that will not put their neck under the yoke of the king of Babylon, that nation will I punish, saith the Lord, with the sword, and with the famine, and with the pestilence, until I have consumed them by his hand."
                },
                "jer27.9": {
                    "id": 9,
                    "short": "Jer 27:9",
                    "name": "Jeremiah 27:9",
                    "scripture": "Therefore hearken not ye to your prophets, nor to your diviners, nor to your dreamers, nor to your enchanters, nor to your sorcerers, which speak unto you, saying, Ye shall not serve the king of Babylon:"
                },
                "jer27.10": {
                    "id": 10,
                    "short": "Jer 27:10",
                    "name": "Jeremiah 27:10",
                    "scripture": "For they prophesy a lie unto you, to remove you far from your land; and that I should drive you out, and ye should perish."
                },
                "jer27.11": {
                    "id": 11,
                    "short": "Jer 27:11",
                    "name": "Jeremiah 27:11",
                    "scripture": "But the nations that bring their neck under the yoke of the king of Babylon, and serve him, those will I let remain still in their own land, saith the Lord; and they shall till it, and dwell therein."
                },
                "jer27.12": {
                    "id": 12,
                    "short": "Jer 27:12",
                    "name": "Jeremiah 27:12",
                    "scripture": "I spake also to Zedekiah king of Judah according to all these words, saying, Bring your necks under the yoke of the king of Babylon, and serve him and his people, and live."
                },
                "jer27.13": {
                    "id": 13,
                    "short": "Jer 27:13",
                    "name": "Jeremiah 27:13",
                    "scripture": "Why will ye die, thou and thy people, by the sword, by the famine, and by the pestilence, as the Lord hath spoken against the nation that will not serve the king of Babylon?"
                },
                "jer27.14": {
                    "id": 14,
                    "short": "Jer 27:14",
                    "name": "Jeremiah 27:14",
                    "scripture": "Therefore hearken not unto the words of the prophets that speak unto you, saying, Ye shall not serve the king of Babylon: for they prophesy a lie unto you."
                },
                "jer27.15": {
                    "id": 15,
                    "short": "Jer 27:15",
                    "name": "Jeremiah 27:15",
                    "scripture": "For I have not sent them, saith the Lord, yet they prophesy a lie in my name; that I might drive you out, and that ye might perish, ye, and the prophets that prophesy unto you."
                },
                "jer27.16": {
                    "id": 16,
                    "short": "Jer 27:16",
                    "name": "Jeremiah 27:16",
                    "scripture": "Also I spake to the priests and to all this people, saying, Thus saith the Lord; Hearken not to the words of your prophets that prophesy unto you, saying, Behold, the vessels of the Lord's house shall now shortly be brought again from Babylon: for they prophesy a lie unto you."
                },
                "jer27.17": {
                    "id": 17,
                    "short": "Jer 27:17",
                    "name": "Jeremiah 27:17",
                    "scripture": "Hearken not unto them; serve the king of Babylon, and live: wherefore should this city be laid waste?"
                },
                "jer27.18": {
                    "id": 18,
                    "short": "Jer 27:18",
                    "name": "Jeremiah 27:18",
                    "scripture": "But if they be prophets, and if the word of the Lord be with them, let them now make intercession to the Lord of hosts, that the vessels which are left in the house of the Lord, and in the house of the king of Judah, and at Jerusalem, go not to Babylon."
                },
                "jer27.19": {
                    "id": 19,
                    "short": "Jer 27:19",
                    "name": "Jeremiah 27:19",
                    "scripture": "For thus saith the Lord of hosts concerning the pillars, and concerning the sea, and concerning the bases, and concerning the residue of the vessels that remain in this city,"
                },
                "jer27.20": {
                    "id": 20,
                    "short": "Jer 27:20",
                    "name": "Jeremiah 27:20",
                    "scripture": "Which Nebuchadnezzar king of Babylon took not, when he carried away captive Jeconiah the son of Jehoiakim king of Judah from Jerusalem to Babylon, and all the nobles of Judah and Jerusalem;"
                },
                "jer27.21": {
                    "id": 21,
                    "short": "Jer 27:21",
                    "name": "Jeremiah 27:21",
                    "scripture": "Yea, thus saith the Lord of hosts, the God of Israel, concerning the vessels that remain in the house of the Lord, and in the house of the king of Judah and of Jerusalem;"
                },
                "jer27.22": {
                    "id": 22,
                    "short": "Jer 27:22",
                    "name": "Jeremiah 27:22",
                    "scripture": "They shall be carried to Babylon, and there shall they be until the day that I visit them, saith the Lord; then will I bring them up, and restore them to this place."
                }
            }
        },
        "jer28": {
            "id": 28,
            "short": "Jer 28",
            "name": "Jeremiah 28",
            "verses": {
                "jer28.1": {
                    "id": 1,
                    "short": "Jer 28:1",
                    "name": "Jeremiah 28:1",
                    "scripture": "And it came to pass the same year, in the beginning of the reign of Zedekiah king of Judah, in the fourth year, and in the fifth month, that Hananiah the son of Azur the prophet, which was of Gibeon, spake unto me in the house of the Lord, in the presence of the priests and of all the people, saying,"
                },
                "jer28.2": {
                    "id": 2,
                    "short": "Jer 28:2",
                    "name": "Jeremiah 28:2",
                    "scripture": "Thus speaketh the Lord of hosts, the God of Israel, saying, I have broken the yoke of the king of Babylon."
                },
                "jer28.3": {
                    "id": 3,
                    "short": "Jer 28:3",
                    "name": "Jeremiah 28:3",
                    "scripture": "Within two full years will I bring again into this place all the vessels of the Lord's house, that Nebuchadnezzar king of Babylon took away from this place, and carried them to Babylon:"
                },
                "jer28.4": {
                    "id": 4,
                    "short": "Jer 28:4",
                    "name": "Jeremiah 28:4",
                    "scripture": "And I will bring again to this place Jeconiah the son of Jehoiakim king of Judah, with all the captives of Judah, that went into Babylon, saith the Lord : for I will break the yoke of the king of Babylon."
                },
                "jer28.5": {
                    "id": 5,
                    "short": "Jer 28:5",
                    "name": "Jeremiah 28:5",
                    "scripture": "Then the prophet Jeremiah said unto the prophet Hananiah in the presence of the priests, and in the presence of all the people that stood in the house of the Lord,"
                },
                "jer28.6": {
                    "id": 6,
                    "short": "Jer 28:6",
                    "name": "Jeremiah 28:6",
                    "scripture": "Even the prophet Jeremiah said, Amen: the Lord do so: the Lord perform thy words which thou hast prophesied, to bring again the vessels of the Lord's house, and all that is carried away captive, from Babylon into this place."
                },
                "jer28.7": {
                    "id": 7,
                    "short": "Jer 28:7",
                    "name": "Jeremiah 28:7",
                    "scripture": "Nevertheless hear thou now this word that I speak in thine ears, and in the ears of all the people;"
                },
                "jer28.8": {
                    "id": 8,
                    "short": "Jer 28:8",
                    "name": "Jeremiah 28:8",
                    "scripture": "The prophets that have been before me and before thee of old prophesied both against many countries, and against great kingdoms, of war, and of evil, and of pestilence."
                },
                "jer28.9": {
                    "id": 9,
                    "short": "Jer 28:9",
                    "name": "Jeremiah 28:9",
                    "scripture": "The prophet which prophesieth of peace, when the word of the prophet shall come to pass, then shall the prophet be known, that the Lord hath truly sent him."
                },
                "jer28.10": {
                    "id": 10,
                    "short": "Jer 28:10",
                    "name": "Jeremiah 28:10",
                    "scripture": "Then Hananiah the prophet took the yoke from off the prophet Jeremiah's neck, and brake it."
                },
                "jer28.11": {
                    "id": 11,
                    "short": "Jer 28:11",
                    "name": "Jeremiah 28:11",
                    "scripture": "And Hananiah spake in the presence of all the people, saying, Thus saith the Lord; Even so will I break the yoke of Nebuchadnezzar king of Babylon from the neck of all nations within the space of two full years. And the prophet Jeremiah went his way."
                },
                "jer28.12": {
                    "id": 12,
                    "short": "Jer 28:12",
                    "name": "Jeremiah 28:12",
                    "scripture": "Then the word of the Lord came unto Jeremiah the prophet, after that Hananiah the prophet had broken the yoke from off the neck of the prophet Jeremiah, saying,"
                },
                "jer28.13": {
                    "id": 13,
                    "short": "Jer 28:13",
                    "name": "Jeremiah 28:13",
                    "scripture": "Go and tell Hananiah, saying, Thus saith the Lord; Thou hast broken the yokes of wood; but thou shalt make for them yokes of iron."
                },
                "jer28.14": {
                    "id": 14,
                    "short": "Jer 28:14",
                    "name": "Jeremiah 28:14",
                    "scripture": "For thus saith the Lord of hosts, the God of Israel; I have put a yoke of iron upon the neck of all these nations, that they may serve Nebuchadnezzar king of Babylon; and they shall serve him: and I have given him the beasts of the field also."
                },
                "jer28.15": {
                    "id": 15,
                    "short": "Jer 28:15",
                    "name": "Jeremiah 28:15",
                    "scripture": "Then said the prophet Jeremiah unto Hananiah the prophet, Hear now, Hananiah; The Lord hath not sent thee; but thou makest this people to trust in a lie."
                },
                "jer28.16": {
                    "id": 16,
                    "short": "Jer 28:16",
                    "name": "Jeremiah 28:16",
                    "scripture": "Therefore thus saith the Lord; Behold, I will cast thee from off the face of the earth: this year thou shalt die, because thou hast taught rebellion against the Lord ."
                },
                "jer28.17": {
                    "id": 17,
                    "short": "Jer 28:17",
                    "name": "Jeremiah 28:17",
                    "scripture": "So Hananiah the prophet died the same year in the seventh month."
                }
            }
        },
        "jer29": {
            "id": 29,
            "short": "Jer 29",
            "name": "Jeremiah 29",
            "verses": {
                "jer29.1": {
                    "id": 1,
                    "short": "Jer 29:1",
                    "name": "Jeremiah 29:1",
                    "scripture": "Now these are the words of the letter that Jeremiah the prophet sent from Jerusalem unto the residue of the elders which were carried away captives, and to the priests, and to the prophets, and to all the people whom Nebuchadnezzar had carried away captive from Jerusalem to Babylon;"
                },
                "jer29.2": {
                    "id": 2,
                    "short": "Jer 29:2",
                    "name": "Jeremiah 29:2",
                    "scripture": "(After that Jeconiah the king, and the queen, and the eunuchs, the princes of Judah and Jerusalem, and the carpenters, and the smiths, were departed from Jerusalem;)"
                },
                "jer29.3": {
                    "id": 3,
                    "short": "Jer 29:3",
                    "name": "Jeremiah 29:3",
                    "scripture": "By the hand of Elasah the son of Shaphan, and Gemariah the son of Hilkiah, (whom Zedekiah king of Judah sent unto Babylon to Nebuchadnezzar king of Babylon) saying,"
                },
                "jer29.4": {
                    "id": 4,
                    "short": "Jer 29:4",
                    "name": "Jeremiah 29:4",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel, unto all that are carried away captives, whom I have caused to be carried away from Jerusalem unto Babylon;"
                },
                "jer29.5": {
                    "id": 5,
                    "short": "Jer 29:5",
                    "name": "Jeremiah 29:5",
                    "scripture": "Build ye houses, and dwell in them; and plant gardens, and eat the fruit of them;"
                },
                "jer29.6": {
                    "id": 6,
                    "short": "Jer 29:6",
                    "name": "Jeremiah 29:6",
                    "scripture": "Take ye wives, and beget sons and daughters; and take wives for your sons, and give your daughters to husbands, that they may bear sons and daughters; that ye may be increased there, and not diminished."
                },
                "jer29.7": {
                    "id": 7,
                    "short": "Jer 29:7",
                    "name": "Jeremiah 29:7",
                    "scripture": "And seek the peace of the city whither I have caused you to be carried away captives, and pray unto the Lord for it: for in the peace thereof shall ye have peace."
                },
                "jer29.8": {
                    "id": 8,
                    "short": "Jer 29:8",
                    "name": "Jeremiah 29:8",
                    "scripture": "For thus saith the Lord of hosts, the God of Israel; Let not your prophets and your diviners, that be in the midst of you, deceive you, neither hearken to your dreams which ye cause to be dreamed."
                },
                "jer29.9": {
                    "id": 9,
                    "short": "Jer 29:9",
                    "name": "Jeremiah 29:9",
                    "scripture": "For they prophesy falsely unto you in my name: I have not sent them, saith the Lord ."
                },
                "jer29.10": {
                    "id": 10,
                    "short": "Jer 29:10",
                    "name": "Jeremiah 29:10",
                    "scripture": "For thus saith the Lord, That after seventy years be accomplished at Babylon I will visit you, and perform my good word toward you, in causing you to return to this place."
                },
                "jer29.11": {
                    "id": 11,
                    "short": "Jer 29:11",
                    "name": "Jeremiah 29:11",
                    "scripture": "For I know the thoughts that I think toward you, saith the Lord, thoughts of peace, and not of evil, to give you an expected end."
                },
                "jer29.12": {
                    "id": 12,
                    "short": "Jer 29:12",
                    "name": "Jeremiah 29:12",
                    "scripture": "Then shall ye call upon me, and ye shall go and pray unto me, and I will hearken unto you."
                },
                "jer29.13": {
                    "id": 13,
                    "short": "Jer 29:13",
                    "name": "Jeremiah 29:13",
                    "scripture": "And ye shall seek me, and find me, when ye shall search for me with all your heart."
                },
                "jer29.14": {
                    "id": 14,
                    "short": "Jer 29:14",
                    "name": "Jeremiah 29:14",
                    "scripture": "And I will be found of you, saith the Lord : and I will turn away your captivity, and I will gather you from all the nations, and from all the places whither I have driven you, saith the Lord; and I will bring you again into the place whence I caused you to be carried away captive."
                },
                "jer29.15": {
                    "id": 15,
                    "short": "Jer 29:15",
                    "name": "Jeremiah 29:15",
                    "scripture": "Because ye have said, The Lord hath raised us up prophets in Babylon;"
                },
                "jer29.16": {
                    "id": 16,
                    "short": "Jer 29:16",
                    "name": "Jeremiah 29:16",
                    "scripture": "Know that thus saith the Lord of the king that sitteth upon the throne of David, and of all the people that dwelleth in this city, and of your brethren that are not gone forth with you into captivity;"
                },
                "jer29.17": {
                    "id": 17,
                    "short": "Jer 29:17",
                    "name": "Jeremiah 29:17",
                    "scripture": "Thus saith the Lord of hosts; Behold, I will send upon them the sword, the famine, and the pestilence, and will make them like vile figs, that cannot be eaten, they are so evil."
                },
                "jer29.18": {
                    "id": 18,
                    "short": "Jer 29:18",
                    "name": "Jeremiah 29:18",
                    "scripture": "And I will persecute them with the sword, with the famine, and with the pestilence, and will deliver them to be removed to all the kingdoms of the earth, to be a curse, and an astonishment, and an hissing, and a reproach, among all the nations whither I have driven them:"
                },
                "jer29.19": {
                    "id": 19,
                    "short": "Jer 29:19",
                    "name": "Jeremiah 29:19",
                    "scripture": "Because they have not hearkened to my words, saith the Lord, which I sent unto them by my servants the prophets, rising up early and sending them; but ye would not hear, saith the Lord ."
                },
                "jer29.20": {
                    "id": 20,
                    "short": "Jer 29:20",
                    "name": "Jeremiah 29:20",
                    "scripture": "Hear ye therefore the word of the Lord, all ye of the captivity, whom I have sent from Jerusalem to Babylon:"
                },
                "jer29.21": {
                    "id": 21,
                    "short": "Jer 29:21",
                    "name": "Jeremiah 29:21",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel, of Ahab the son of Kolaiah, and of Zedekiah the son of Maaseiah, which prophesy a lie unto you in my name; Behold, I will deliver them into the hand of Nebuchadrezzar king of Babylon; and he shall slay them before your eyes;"
                },
                "jer29.22": {
                    "id": 22,
                    "short": "Jer 29:22",
                    "name": "Jeremiah 29:22",
                    "scripture": "And of them shall be taken up a curse by all the captivity of Judah which are in Babylon, saying, The Lord make thee like Zedekiah and like Ahab, whom the king of Babylon roasted in the fire;"
                },
                "jer29.23": {
                    "id": 23,
                    "short": "Jer 29:23",
                    "name": "Jeremiah 29:23",
                    "scripture": "Because they have committed villany in Israel, and have committed adultery with their neighbours' wives, and have spoken lying words in my name, which I have not commanded them; even I know, and am a witness, saith the Lord ."
                },
                "jer29.24": {
                    "id": 24,
                    "short": "Jer 29:24",
                    "name": "Jeremiah 29:24",
                    "scripture": "Thus shalt thou also speak to Shemaiah the Nehelamite, saying,"
                },
                "jer29.25": {
                    "id": 25,
                    "short": "Jer 29:25",
                    "name": "Jeremiah 29:25",
                    "scripture": "Thus speaketh the Lord of hosts, the God of Israel, saying, Because thou hast sent letters in thy name unto all the people that are at Jerusalem, and to Zephaniah the son of Maaseiah the priest, and to all the priests, saying,"
                },
                "jer29.26": {
                    "id": 26,
                    "short": "Jer 29:26",
                    "name": "Jeremiah 29:26",
                    "scripture": "The Lord hath made thee priest in the stead of Jehoiada the priest, that ye should be officers in the house of the Lord, for every man that is mad, and maketh himself a prophet, that thou shouldest put him in prison, and in the stocks."
                },
                "jer29.27": {
                    "id": 27,
                    "short": "Jer 29:27",
                    "name": "Jeremiah 29:27",
                    "scripture": "Now therefore why hast thou not reproved Jeremiah of Anathoth, which maketh himself a prophet to you?"
                },
                "jer29.28": {
                    "id": 28,
                    "short": "Jer 29:28",
                    "name": "Jeremiah 29:28",
                    "scripture": "For therefore he sent unto us in Babylon, saying, This captivity is long: build ye houses, and dwell in them; and plant gardens, and eat the fruit of them."
                },
                "jer29.29": {
                    "id": 29,
                    "short": "Jer 29:29",
                    "name": "Jeremiah 29:29",
                    "scripture": "And Zephaniah the priest read this letter in the ears of Jeremiah the prophet."
                },
                "jer29.30": {
                    "id": 30,
                    "short": "Jer 29:30",
                    "name": "Jeremiah 29:30",
                    "scripture": "Then came the word of the Lord unto Jeremiah, saying,"
                },
                "jer29.31": {
                    "id": 31,
                    "short": "Jer 29:31",
                    "name": "Jeremiah 29:31",
                    "scripture": "Send to all them of the captivity, saying, Thus saith the Lord concerning Shemaiah the Nehelamite; Because that Shemaiah hath prophesied unto you, and I sent him not, and he caused you to trust in a lie:"
                },
                "jer29.32": {
                    "id": 32,
                    "short": "Jer 29:32",
                    "name": "Jeremiah 29:32",
                    "scripture": "Therefore thus saith the Lord; Behold, I will punish Shemaiah the Nehelamite, and his seed: he shall not have a man to dwell among this people; neither shall he behold the good that I will do for my people, saith the Lord; because he hath taught rebellion against the Lord ."
                }
            }
        },
        "jer30": {
            "id": 30,
            "short": "Jer 30",
            "name": "Jeremiah 30",
            "verses": {
                "jer30.1": {
                    "id": 1,
                    "short": "Jer 30:1",
                    "name": "Jeremiah 30:1",
                    "scripture": "The word that came to Jeremiah from the Lord, saying,"
                },
                "jer30.2": {
                    "id": 2,
                    "short": "Jer 30:2",
                    "name": "Jeremiah 30:2",
                    "scripture": "Thus speaketh the Lord God of Israel, saying, Write thee all the words that I have spoken unto thee in a book."
                },
                "jer30.3": {
                    "id": 3,
                    "short": "Jer 30:3",
                    "name": "Jeremiah 30:3",
                    "scripture": "For, lo, the days come, saith the Lord, that I will bring again the captivity of my people Israel and Judah, saith the Lord : and I will cause them to return to the land that I gave to their fathers, and they shall possess it."
                },
                "jer30.4": {
                    "id": 4,
                    "short": "Jer 30:4",
                    "name": "Jeremiah 30:4",
                    "scripture": "And these are the words that the Lord spake concerning Israel and concerning Judah."
                },
                "jer30.5": {
                    "id": 5,
                    "short": "Jer 30:5",
                    "name": "Jeremiah 30:5",
                    "scripture": "For thus saith the Lord; We have heard a voice of trembling, of fear, and not of peace."
                },
                "jer30.6": {
                    "id": 6,
                    "short": "Jer 30:6",
                    "name": "Jeremiah 30:6",
                    "scripture": "Ask ye now, and see whether a man doth travail with child? wherefore do I see every man with his hands on his loins, as a woman in travail, and all faces are turned into paleness?"
                },
                "jer30.7": {
                    "id": 7,
                    "short": "Jer 30:7",
                    "name": "Jeremiah 30:7",
                    "scripture": "Alas! for that day is great, so that none is like it: it is even the time of Jacob's trouble; but he shall be saved out of it."
                },
                "jer30.8": {
                    "id": 8,
                    "short": "Jer 30:8",
                    "name": "Jeremiah 30:8",
                    "scripture": "For it shall come to pass in that day, saith the Lord of hosts, that I will break his yoke from off thy neck, and will burst thy bonds, and strangers shall no more serve themselves of him:"
                },
                "jer30.9": {
                    "id": 9,
                    "short": "Jer 30:9",
                    "name": "Jeremiah 30:9",
                    "scripture": "But they shall serve the Lord their God, and David their king, whom I will raise up unto them."
                },
                "jer30.10": {
                    "id": 10,
                    "short": "Jer 30:10",
                    "name": "Jeremiah 30:10",
                    "scripture": "Therefore fear thou not, O my servant Jacob, saith the Lord; neither be dismayed, O Israel: for, lo, I will save thee from afar, and thy seed from the land of their captivity; and Jacob shall return, and shall be in rest, and be quiet, and none shall make him afraid."
                },
                "jer30.11": {
                    "id": 11,
                    "short": "Jer 30:11",
                    "name": "Jeremiah 30:11",
                    "scripture": "For I am with thee, saith the Lord, to save thee: though I make a full end of all nations whither I have scattered thee, yet will I not make a full end of thee: but I will correct thee in measure, and will not leave thee altogether unpunished."
                },
                "jer30.12": {
                    "id": 12,
                    "short": "Jer 30:12",
                    "name": "Jeremiah 30:12",
                    "scripture": "For thus saith the Lord, Thy bruise is incurable, and thy wound is grievous."
                },
                "jer30.13": {
                    "id": 13,
                    "short": "Jer 30:13",
                    "name": "Jeremiah 30:13",
                    "scripture": "There is none to plead thy cause, that thou mayest be bound up: thou hast no healing medicines."
                },
                "jer30.14": {
                    "id": 14,
                    "short": "Jer 30:14",
                    "name": "Jeremiah 30:14",
                    "scripture": "All thy lovers have forgotten thee; they seek thee not; for I have wounded thee with the wound of an enemy, with the chastisement of a cruel one, for the multitude of thine iniquity; because thy sins were increased."
                },
                "jer30.15": {
                    "id": 15,
                    "short": "Jer 30:15",
                    "name": "Jeremiah 30:15",
                    "scripture": "Why criest thou for thine affliction? thy sorrow is incurable for the multitude of thine iniquity: because thy sins were increased, I have done these things unto thee."
                },
                "jer30.16": {
                    "id": 16,
                    "short": "Jer 30:16",
                    "name": "Jeremiah 30:16",
                    "scripture": "Therefore all they that devour thee shall be devoured; and all thine adversaries, every one of them, shall go into captivity; and they that spoil thee shall be a spoil, and all that prey upon thee will I give for a prey."
                },
                "jer30.17": {
                    "id": 17,
                    "short": "Jer 30:17",
                    "name": "Jeremiah 30:17",
                    "scripture": "For I will restore health unto thee, and I will heal thee of thy wounds, saith the Lord; because they called thee an Outcast, saying, This is Zion, whom no man seeketh after."
                },
                "jer30.18": {
                    "id": 18,
                    "short": "Jer 30:18",
                    "name": "Jeremiah 30:18",
                    "scripture": "Thus saith the Lord; Behold, I will bring again the captivity of Jacob's tents, and have mercy on his dwellingplaces; and the city shall be builded upon her own heap, and the palace shall remain after the manner thereof."
                },
                "jer30.19": {
                    "id": 19,
                    "short": "Jer 30:19",
                    "name": "Jeremiah 30:19",
                    "scripture": "And out of them shall proceed thanksgiving and the voice of them that make merry: and I will multiply them, and they shall not be few; I will also glorify them, and they shall not be small."
                },
                "jer30.20": {
                    "id": 20,
                    "short": "Jer 30:20",
                    "name": "Jeremiah 30:20",
                    "scripture": "Their children also shall be as aforetime, and their congregation shall be established before me, and I will punish all that oppress them."
                },
                "jer30.21": {
                    "id": 21,
                    "short": "Jer 30:21",
                    "name": "Jeremiah 30:21",
                    "scripture": "And their nobles shall be of themselves, and their governor shall proceed from the midst of them; and I will cause him to draw near, and he shall approach unto me: for who is this that engaged his heart to approach unto me? saith the Lord ."
                },
                "jer30.22": {
                    "id": 22,
                    "short": "Jer 30:22",
                    "name": "Jeremiah 30:22",
                    "scripture": "And ye shall be my people, and I will be your God."
                },
                "jer30.23": {
                    "id": 23,
                    "short": "Jer 30:23",
                    "name": "Jeremiah 30:23",
                    "scripture": "Behold, the whirlwind of the Lord goeth forth with fury, a continuing whirlwind: it shall fall with pain upon the head of the wicked."
                },
                "jer30.24": {
                    "id": 24,
                    "short": "Jer 30:24",
                    "name": "Jeremiah 30:24",
                    "scripture": "The fierce anger of the Lord shall not return, until he have done it, and until he have performed the intents of his heart: in the latter days ye shall consider it."
                }
            }
        },
        "jer31": {
            "id": 31,
            "short": "Jer 31",
            "name": "Jeremiah 31",
            "verses": {
                "jer31.1": {
                    "id": 1,
                    "short": "Jer 31:1",
                    "name": "Jeremiah 31:1",
                    "scripture": "At the same time, saith the Lord, will I be the God of all the families of Israel, and they shall be my people."
                },
                "jer31.2": {
                    "id": 2,
                    "short": "Jer 31:2",
                    "name": "Jeremiah 31:2",
                    "scripture": "Thus saith the Lord, The people which were left of the sword found grace in the wilderness; even Israel, when I went to cause him to rest."
                },
                "jer31.3": {
                    "id": 3,
                    "short": "Jer 31:3",
                    "name": "Jeremiah 31:3",
                    "scripture": "The Lord hath appeared of old unto me, saying, Yea, I have loved thee with an everlasting love: therefore with lovingkindness have I drawn thee."
                },
                "jer31.4": {
                    "id": 4,
                    "short": "Jer 31:4",
                    "name": "Jeremiah 31:4",
                    "scripture": "Again I will build thee, and thou shalt be built, O virgin of Israel: thou shalt again be adorned with thy tabrets, and shalt go forth in the dances of them that make merry."
                },
                "jer31.5": {
                    "id": 5,
                    "short": "Jer 31:5",
                    "name": "Jeremiah 31:5",
                    "scripture": "Thou shalt yet plant vines upon the mountains of Samaria: the planters shall plant, and shall eat them as common things."
                },
                "jer31.6": {
                    "id": 6,
                    "short": "Jer 31:6",
                    "name": "Jeremiah 31:6",
                    "scripture": "For there shall be a day, that the watchmen upon the mount Ephraim shall cry, Arise ye, and let us go up to Zion unto the Lord our God."
                },
                "jer31.7": {
                    "id": 7,
                    "short": "Jer 31:7",
                    "name": "Jeremiah 31:7",
                    "scripture": "For thus saith the Lord; Sing with gladness for Jacob, and shout among the chief of the nations: publish ye, praise ye, and say, O Lord, save thy people, the remnant of Israel."
                },
                "jer31.8": {
                    "id": 8,
                    "short": "Jer 31:8",
                    "name": "Jeremiah 31:8",
                    "scripture": "Behold, I will bring them from the north country, and gather them from the coasts of the earth, and with them the blind and the lame, the woman with child and her that travaileth with child together: a great company shall return thither."
                },
                "jer31.9": {
                    "id": 9,
                    "short": "Jer 31:9",
                    "name": "Jeremiah 31:9",
                    "scripture": "They shall come with weeping, and with supplications will I lead them: I will cause them to walk by the rivers of waters in a straight way, wherein they shall not stumble: for I am a father to Israel, and Ephraim is my firstborn."
                },
                "jer31.10": {
                    "id": 10,
                    "short": "Jer 31:10",
                    "name": "Jeremiah 31:10",
                    "scripture": "Hear the word of the Lord, O ye nations, and declare it in the isles afar off, and say, He that scattered Israel will gather him, and keep him, as a shepherd doth his flock."
                },
                "jer31.11": {
                    "id": 11,
                    "short": "Jer 31:11",
                    "name": "Jeremiah 31:11",
                    "scripture": "For the Lord hath redeemed Jacob, and ransomed him from the hand of him that was stronger than he."
                },
                "jer31.12": {
                    "id": 12,
                    "short": "Jer 31:12",
                    "name": "Jeremiah 31:12",
                    "scripture": "Therefore they shall come and sing in the height of Zion, and shall flow together to the goodness of the Lord, for wheat, and for wine, and for oil, and for the young of the flock and of the herd: and their soul shall be as a watered garden; and they shall not sorrow any more at all."
                },
                "jer31.13": {
                    "id": 13,
                    "short": "Jer 31:13",
                    "name": "Jeremiah 31:13",
                    "scripture": "Then shall the virgin rejoice in the dance, both young men and old together: for I will turn their mourning into joy, and will comfort them, and make them rejoice from their sorrow."
                },
                "jer31.14": {
                    "id": 14,
                    "short": "Jer 31:14",
                    "name": "Jeremiah 31:14",
                    "scripture": "And I will satiate the soul of the priests with fatness, and my people shall be satisfied with my goodness, saith the Lord ."
                },
                "jer31.15": {
                    "id": 15,
                    "short": "Jer 31:15",
                    "name": "Jeremiah 31:15",
                    "scripture": "Thus saith the Lord; A voice was heard in Ramah, lamentation, and bitter weeping; Rachel weeping for her children refused to be comforted for her children, because they were not."
                },
                "jer31.16": {
                    "id": 16,
                    "short": "Jer 31:16",
                    "name": "Jeremiah 31:16",
                    "scripture": "Thus saith the Lord; Refrain thy voice from weeping, and thine eyes from tears: for thy work shall be rewarded, saith the Lord; and they shall come again from the land of the enemy."
                },
                "jer31.17": {
                    "id": 17,
                    "short": "Jer 31:17",
                    "name": "Jeremiah 31:17",
                    "scripture": "And there is hope in thine end, saith the Lord, that thy children shall come again to their own border."
                },
                "jer31.18": {
                    "id": 18,
                    "short": "Jer 31:18",
                    "name": "Jeremiah 31:18",
                    "scripture": "I have surely heard Ephraim bemoaning himself thus; Thou hast chastised me, and I was chastised, as a bullock unaccustomed to the yoke: turn thou me, and I shall be turned; for thou art the Lord my God."
                },
                "jer31.19": {
                    "id": 19,
                    "short": "Jer 31:19",
                    "name": "Jeremiah 31:19",
                    "scripture": "Surely after that I was turned, I repented; and after that I was instructed, I smote upon my thigh: I was ashamed, yea, even confounded, because I did bear the reproach of my youth."
                },
                "jer31.20": {
                    "id": 20,
                    "short": "Jer 31:20",
                    "name": "Jeremiah 31:20",
                    "scripture": "Is Ephraim my dear son? is he a pleasant child? for since I spake against him, I do earnestly remember him still: therefore my bowels are troubled for him; I will surely have mercy upon him, saith the Lord ."
                },
                "jer31.21": {
                    "id": 21,
                    "short": "Jer 31:21",
                    "name": "Jeremiah 31:21",
                    "scripture": "Set thee up waymarks, make thee high heaps: set thine heart toward the highway, even the way which thou wentest: turn again, O virgin of Israel, turn again to these thy cities."
                },
                "jer31.22": {
                    "id": 22,
                    "short": "Jer 31:22",
                    "name": "Jeremiah 31:22",
                    "scripture": "How long wilt thou go about, O thou backsliding daughter? for the Lord hath created a new thing in the earth, A woman shall compass a man."
                },
                "jer31.23": {
                    "id": 23,
                    "short": "Jer 31:23",
                    "name": "Jeremiah 31:23",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel; As yet they shall use this speech in the land of Judah and in the cities thereof, when I shall bring again their captivity; The Lord bless thee, O habitation of justice, and mountain of holiness."
                },
                "jer31.24": {
                    "id": 24,
                    "short": "Jer 31:24",
                    "name": "Jeremiah 31:24",
                    "scripture": "And there shall dwell in Judah itself, and in all the cities thereof together, husbandmen, and they that go forth with flocks."
                },
                "jer31.25": {
                    "id": 25,
                    "short": "Jer 31:25",
                    "name": "Jeremiah 31:25",
                    "scripture": "For I have satiated the weary soul, and I have replenished every sorrowful soul."
                },
                "jer31.26": {
                    "id": 26,
                    "short": "Jer 31:26",
                    "name": "Jeremiah 31:26",
                    "scripture": "Upon this I awaked, and beheld; and my sleep was sweet unto me."
                },
                "jer31.27": {
                    "id": 27,
                    "short": "Jer 31:27",
                    "name": "Jeremiah 31:27",
                    "scripture": "Behold, the days come, saith the Lord, that I will sow the house of Israel and the house of Judah with the seed of man, and with the seed of beast."
                },
                "jer31.28": {
                    "id": 28,
                    "short": "Jer 31:28",
                    "name": "Jeremiah 31:28",
                    "scripture": "And it shall come to pass, that like as I have watched over them, to pluck up, and to break down, and to throw down, and to destroy, and to afflict; so will I watch over them, to build, and to plant, saith the Lord ."
                },
                "jer31.29": {
                    "id": 29,
                    "short": "Jer 31:29",
                    "name": "Jeremiah 31:29",
                    "scripture": "In those days they shall say no more, The fathers have eaten a sour grape, and the children's teeth are set on edge."
                },
                "jer31.30": {
                    "id": 30,
                    "short": "Jer 31:30",
                    "name": "Jeremiah 31:30",
                    "scripture": "But every one shall die for his own iniquity: every man that eateth the sour grape, his teeth shall be set on edge."
                },
                "jer31.31": {
                    "id": 31,
                    "short": "Jer 31:31",
                    "name": "Jeremiah 31:31",
                    "scripture": "Behold, the days come, saith the Lord, that I will make a new covenant with the house of Israel, and with the house of Judah:"
                },
                "jer31.32": {
                    "id": 32,
                    "short": "Jer 31:32",
                    "name": "Jeremiah 31:32",
                    "scripture": "Not according to the covenant that I made with their fathers in the day that I took them by the hand to bring them out of the land of Egypt; which my covenant they brake, although I was an husband unto them, saith the Lord :"
                },
                "jer31.33": {
                    "id": 33,
                    "short": "Jer 31:33",
                    "name": "Jeremiah 31:33",
                    "scripture": "But this shall be the covenant that I will make with the house of Israel; After those days, saith the Lord, I will put my law in their inward parts, and write it in their hearts; and will be their God, and they shall be my people."
                },
                "jer31.34": {
                    "id": 34,
                    "short": "Jer 31:34",
                    "name": "Jeremiah 31:34",
                    "scripture": "And they shall teach no more every man his neighbour, and every man his brother, saying, Know the Lord : for they shall all know me, from the least of them unto the greatest of them, saith the Lord : for I will forgive their iniquity, and I will remember their sin no more."
                },
                "jer31.35": {
                    "id": 35,
                    "short": "Jer 31:35",
                    "name": "Jeremiah 31:35",
                    "scripture": "Thus saith the Lord, which giveth the sun for a light by day, and the ordinances of the moon and of the stars for a light by night, which divideth the sea when the waves thereof roar; The Lord of hosts is his name:"
                },
                "jer31.36": {
                    "id": 36,
                    "short": "Jer 31:36",
                    "name": "Jeremiah 31:36",
                    "scripture": "If those ordinances depart from before me, saith the Lord, then the seed of Israel also shall cease from being a nation before me for ever."
                },
                "jer31.37": {
                    "id": 37,
                    "short": "Jer 31:37",
                    "name": "Jeremiah 31:37",
                    "scripture": "Thus saith the Lord; If heaven above can be measured, and the foundations of the earth searched out beneath, I will also cast off all the seed of Israel for all that they have done, saith the Lord ."
                },
                "jer31.38": {
                    "id": 38,
                    "short": "Jer 31:38",
                    "name": "Jeremiah 31:38",
                    "scripture": "Behold, the days come, saith the Lord, that the city shall be built to the Lord from the tower of Hananeel unto the gate of the corner."
                },
                "jer31.39": {
                    "id": 39,
                    "short": "Jer 31:39",
                    "name": "Jeremiah 31:39",
                    "scripture": "And the measuring line shall yet go forth over against it upon the hill Gareb, and shall compass about to Goath."
                },
                "jer31.40": {
                    "id": 40,
                    "short": "Jer 31:40",
                    "name": "Jeremiah 31:40",
                    "scripture": "And the whole valley of the dead bodies, and of the ashes, and all the fields unto the brook of Kidron, unto the corner of the horse gate toward the east, shall be holy unto the Lord; it shall not be plucked up, nor thrown down any more for ever."
                }
            }
        },
        "jer32": {
            "id": 32,
            "short": "Jer 32",
            "name": "Jeremiah 32",
            "verses": {
                "jer32.1": {
                    "id": 1,
                    "short": "Jer 32:1",
                    "name": "Jeremiah 32:1",
                    "scripture": "The word that came to Jeremiah from the Lord in the tenth year of Zedekiah king of Judah, which was the eighteenth year of Nebuchadrezzar."
                },
                "jer32.2": {
                    "id": 2,
                    "short": "Jer 32:2",
                    "name": "Jeremiah 32:2",
                    "scripture": "For then the king of Babylon's army besieged Jerusalem: and Jeremiah the prophet was shut up in the court of the prison, which was in the king of Judah's house."
                },
                "jer32.3": {
                    "id": 3,
                    "short": "Jer 32:3",
                    "name": "Jeremiah 32:3",
                    "scripture": "For Zedekiah king of Judah had shut him up, saying, Wherefore dost thou prophesy, and say, Thus saith the Lord, Behold, I will give this city into the hand of the king of Babylon, and he shall take it;"
                },
                "jer32.4": {
                    "id": 4,
                    "short": "Jer 32:4",
                    "name": "Jeremiah 32:4",
                    "scripture": "And Zedekiah king of Judah shall not escape out of the hand of the Chaldeans, but shall surely be delivered into the hand of the king of Babylon, and shall speak with him mouth to mouth, and his eyes shall behold his eyes;"
                },
                "jer32.5": {
                    "id": 5,
                    "short": "Jer 32:5",
                    "name": "Jeremiah 32:5",
                    "scripture": "And he shall lead Zedekiah to Babylon, and there shall he be until I visit him, saith the Lord : though ye fight with the Chaldeans, ye shall not prosper."
                },
                "jer32.6": {
                    "id": 6,
                    "short": "Jer 32:6",
                    "name": "Jeremiah 32:6",
                    "scripture": "And Jeremiah said, The word of the Lord came unto me, saying,"
                },
                "jer32.7": {
                    "id": 7,
                    "short": "Jer 32:7",
                    "name": "Jeremiah 32:7",
                    "scripture": "Behold, Hanameel the son of Shallum thine uncle shall come unto thee, saying, Buy thee my field that is in Anathoth: for the right of redemption is thine to buy it."
                },
                "jer32.8": {
                    "id": 8,
                    "short": "Jer 32:8",
                    "name": "Jeremiah 32:8",
                    "scripture": "So Hanameel mine uncle's son came to me in the court of the prison according to the word of the Lord, and said unto me, Buy my field, I pray thee, that is in Anathoth, which is in the country of Benjamin: for the right of inheritance is thine, and the redemption is thine; buy it for thyself. Then I knew that this was the word of the Lord ."
                },
                "jer32.9": {
                    "id": 9,
                    "short": "Jer 32:9",
                    "name": "Jeremiah 32:9",
                    "scripture": "And I bought the field of Hanameel my uncle's son, that was in Anathoth, and weighed him the money, even seventeen shekels of silver."
                },
                "jer32.10": {
                    "id": 10,
                    "short": "Jer 32:10",
                    "name": "Jeremiah 32:10",
                    "scripture": "And I subscribed the evidence, and sealed it, and took witnesses, and weighed him the money in the balances."
                },
                "jer32.11": {
                    "id": 11,
                    "short": "Jer 32:11",
                    "name": "Jeremiah 32:11",
                    "scripture": "So I took the evidence of the purchase, both that which was sealed according to the law and custom, and that which was open:"
                },
                "jer32.12": {
                    "id": 12,
                    "short": "Jer 32:12",
                    "name": "Jeremiah 32:12",
                    "scripture": "And I gave the evidence of the purchase unto Baruch the son of Neriah, the son of Maaseiah, in the sight of Hanameel mine uncle's son, and in the presence of the witnesses that subscribed the book of the purchase, before all the Jews that sat in the court of the prison."
                },
                "jer32.13": {
                    "id": 13,
                    "short": "Jer 32:13",
                    "name": "Jeremiah 32:13",
                    "scripture": "And I charged Baruch before them, saying,"
                },
                "jer32.14": {
                    "id": 14,
                    "short": "Jer 32:14",
                    "name": "Jeremiah 32:14",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel; Take these evidences, this evidence of the purchase, both which is sealed, and this evidence which is open; and put them in an earthen vessel, that they may continue many days."
                },
                "jer32.15": {
                    "id": 15,
                    "short": "Jer 32:15",
                    "name": "Jeremiah 32:15",
                    "scripture": "For thus saith the Lord of hosts, the God of Israel; Houses and fields and vineyards shall be possessed again in this land."
                },
                "jer32.16": {
                    "id": 16,
                    "short": "Jer 32:16",
                    "name": "Jeremiah 32:16",
                    "scripture": "Now when I had delivered the evidence of the purchase unto Baruch the son of Neriah, I prayed unto the Lord, saying,"
                },
                "jer32.17": {
                    "id": 17,
                    "short": "Jer 32:17",
                    "name": "Jeremiah 32:17",
                    "scripture": "Ah Lord God ! behold, thou hast made the heaven and the earth by thy great power and stretched out arm, and there is nothing too hard for thee:"
                },
                "jer32.18": {
                    "id": 18,
                    "short": "Jer 32:18",
                    "name": "Jeremiah 32:18",
                    "scripture": "Thou shewest lovingkindness unto thousands, and recompensest the iniquity of the fathers into the bosom of their children after them: the Great, the Mighty God, the Lord of hosts, is his name,"
                },
                "jer32.19": {
                    "id": 19,
                    "short": "Jer 32:19",
                    "name": "Jeremiah 32:19",
                    "scripture": "Great in counsel, and mighty in work: for thine eyes are open upon all the ways of the sons of men: to give every one according to his ways, and according to the fruit of his doings:"
                },
                "jer32.20": {
                    "id": 20,
                    "short": "Jer 32:20",
                    "name": "Jeremiah 32:20",
                    "scripture": "Which hast set signs and wonders in the land of Egypt, even unto this day, and in Israel, and among other men; and hast made thee a name, as at this day;"
                },
                "jer32.21": {
                    "id": 21,
                    "short": "Jer 32:21",
                    "name": "Jeremiah 32:21",
                    "scripture": "And hast brought forth thy people Israel out of the land of Egypt with signs, and with wonders, and with a strong hand, and with a stretched out arm, and with great terror;"
                },
                "jer32.22": {
                    "id": 22,
                    "short": "Jer 32:22",
                    "name": "Jeremiah 32:22",
                    "scripture": "And hast given them this land, which thou didst swear to their fathers to give them, a land flowing with milk and honey;"
                },
                "jer32.23": {
                    "id": 23,
                    "short": "Jer 32:23",
                    "name": "Jeremiah 32:23",
                    "scripture": "And they came in, and possessed it; but they obeyed not thy voice, neither walked in thy law; they have done nothing of all that thou commandedst them to do: therefore thou hast caused all this evil to come upon them:"
                },
                "jer32.24": {
                    "id": 24,
                    "short": "Jer 32:24",
                    "name": "Jeremiah 32:24",
                    "scripture": "Behold the mounts, they are come unto the city to take it; and the city is given into the hand of the Chaldeans, that fight against it, because of the sword, and of the famine, and of the pestilence: and what thou hast spoken is come to pass; and, behold, thou seest it."
                },
                "jer32.25": {
                    "id": 25,
                    "short": "Jer 32:25",
                    "name": "Jeremiah 32:25",
                    "scripture": "And thou hast said unto me, O Lord God, Buy thee the field for money, and take witnesses; for the city is given into the hand of the Chaldeans."
                },
                "jer32.26": {
                    "id": 26,
                    "short": "Jer 32:26",
                    "name": "Jeremiah 32:26",
                    "scripture": "Then came the word of the Lord unto Jeremiah, saying,"
                },
                "jer32.27": {
                    "id": 27,
                    "short": "Jer 32:27",
                    "name": "Jeremiah 32:27",
                    "scripture": "Behold, I am the Lord, the God of all flesh: is there any thing too hard for me?"
                },
                "jer32.28": {
                    "id": 28,
                    "short": "Jer 32:28",
                    "name": "Jeremiah 32:28",
                    "scripture": "Therefore thus saith the Lord; Behold, I will give this city into the hand of the Chaldeans, and into the hand of Nebuchadrezzar king of Babylon, and he shall take it:"
                },
                "jer32.29": {
                    "id": 29,
                    "short": "Jer 32:29",
                    "name": "Jeremiah 32:29",
                    "scripture": "And the Chaldeans, that fight against this city, shall come and set fire on this city, and burn it with the houses, upon whose roofs they have offered incense unto Baal, and poured out drink offerings unto other gods, to provoke me to anger."
                },
                "jer32.30": {
                    "id": 30,
                    "short": "Jer 32:30",
                    "name": "Jeremiah 32:30",
                    "scripture": "For the children of Israel and the children of Judah have only done evil before me from their youth: for the children of Israel have only provoked me to anger with the work of their hands, saith the Lord ."
                },
                "jer32.31": {
                    "id": 31,
                    "short": "Jer 32:31",
                    "name": "Jeremiah 32:31",
                    "scripture": "For this city hath been to me as a provocation of mine anger and of my fury from the day that they built it even unto this day; that I should remove it from before my face,"
                },
                "jer32.32": {
                    "id": 32,
                    "short": "Jer 32:32",
                    "name": "Jeremiah 32:32",
                    "scripture": "Because of all the evil of the children of Israel and of the children of Judah, which they have done to provoke me to anger, they, their kings, their princes, their priests, and their prophets, and the men of Judah, and the inhabitants of Jerusalem."
                },
                "jer32.33": {
                    "id": 33,
                    "short": "Jer 32:33",
                    "name": "Jeremiah 32:33",
                    "scripture": "And they have turned unto me the back, and not the face: though I taught them, rising up early and teaching them, yet they have not hearkened to receive instruction."
                },
                "jer32.34": {
                    "id": 34,
                    "short": "Jer 32:34",
                    "name": "Jeremiah 32:34",
                    "scripture": "But they set their abominations in the house, which is called by my name, to defile it."
                },
                "jer32.35": {
                    "id": 35,
                    "short": "Jer 32:35",
                    "name": "Jeremiah 32:35",
                    "scripture": "And they built the high places of Baal, which are in the valley of the son of Hinnom, to cause their sons and their daughters to pass through the fire unto Molech; which I commanded them not, neither came it into my mind, that they should do this abomination, to cause Judah to sin."
                },
                "jer32.36": {
                    "id": 36,
                    "short": "Jer 32:36",
                    "name": "Jeremiah 32:36",
                    "scripture": "And now therefore thus saith the Lord, the God of Israel, concerning this city, whereof ye say, It shall be delivered into the hand of the king of Babylon by the sword, and by the famine, and by the pestilence;"
                },
                "jer32.37": {
                    "id": 37,
                    "short": "Jer 32:37",
                    "name": "Jeremiah 32:37",
                    "scripture": "Behold, I will gather them out of all countries, whither I have driven them in mine anger, and in my fury, and in great wrath; and I will bring them again unto this place, and I will cause them to dwell safely:"
                },
                "jer32.38": {
                    "id": 38,
                    "short": "Jer 32:38",
                    "name": "Jeremiah 32:38",
                    "scripture": "And they shall be my people, and I will be their God:"
                },
                "jer32.39": {
                    "id": 39,
                    "short": "Jer 32:39",
                    "name": "Jeremiah 32:39",
                    "scripture": "And I will give them one heart, and one way, that they may fear me for ever, for the good of them, and of their children after them:"
                },
                "jer32.40": {
                    "id": 40,
                    "short": "Jer 32:40",
                    "name": "Jeremiah 32:40",
                    "scripture": "And I will make an everlasting covenant with them, that I will not turn away from them, to do them good; but I will put my fear in their hearts, that they shall not depart from me."
                },
                "jer32.41": {
                    "id": 41,
                    "short": "Jer 32:41",
                    "name": "Jeremiah 32:41",
                    "scripture": "Yea, I will rejoice over them to do them good, and I will plant them in this land assuredly with my whole heart and with my whole soul."
                },
                "jer32.42": {
                    "id": 42,
                    "short": "Jer 32:42",
                    "name": "Jeremiah 32:42",
                    "scripture": "For thus saith the Lord; Like as I have brought all this great evil upon this people, so will I bring upon them all the good that I have promised them."
                },
                "jer32.43": {
                    "id": 43,
                    "short": "Jer 32:43",
                    "name": "Jeremiah 32:43",
                    "scripture": "And fields shall be bought in this land, whereof ye say, It is desolate without man or beast; it is given into the hand of the Chaldeans."
                },
                "jer32.44": {
                    "id": 44,
                    "short": "Jer 32:44",
                    "name": "Jeremiah 32:44",
                    "scripture": "Men shall buy fields for money, and subscribe evidences, and seal them, and take witnesses in the land of Benjamin, and in the places about Jerusalem, and in the cities of Judah, and in the cities of the mountains, and in the cities of the valley, and in the cities of the south: for I will cause their captivity to return, saith the Lord ."
                }
            }
        },
        "jer33": {
            "id": 33,
            "short": "Jer 33",
            "name": "Jeremiah 33",
            "verses": {
                "jer33.1": {
                    "id": 1,
                    "short": "Jer 33:1",
                    "name": "Jeremiah 33:1",
                    "scripture": "Moreover the word of the Lord came unto Jeremiah the second time, while he was yet shut up in the court of the prison, saying,"
                },
                "jer33.2": {
                    "id": 2,
                    "short": "Jer 33:2",
                    "name": "Jeremiah 33:2",
                    "scripture": "Thus saith the Lord the maker thereof, the Lord that formed it, to establish it; the Lord is his name;"
                },
                "jer33.3": {
                    "id": 3,
                    "short": "Jer 33:3",
                    "name": "Jeremiah 33:3",
                    "scripture": "Call unto me, and I will answer thee, and shew thee great and mighty things, which thou knowest not."
                },
                "jer33.4": {
                    "id": 4,
                    "short": "Jer 33:4",
                    "name": "Jeremiah 33:4",
                    "scripture": "For thus saith the Lord, the God of Israel, concerning the houses of this city, and concerning the houses of the kings of Judah, which are thrown down by the mounts, and by the sword;"
                },
                "jer33.5": {
                    "id": 5,
                    "short": "Jer 33:5",
                    "name": "Jeremiah 33:5",
                    "scripture": "They come to fight with the Chaldeans, but it is to fill them with the dead bodies of men, whom I have slain in mine anger and in my fury, and for all whose wickedness I have hid my face from this city."
                },
                "jer33.6": {
                    "id": 6,
                    "short": "Jer 33:6",
                    "name": "Jeremiah 33:6",
                    "scripture": "Behold, I will bring it health and cure, and I will cure them, and will reveal unto them the abundance of peace and truth."
                },
                "jer33.7": {
                    "id": 7,
                    "short": "Jer 33:7",
                    "name": "Jeremiah 33:7",
                    "scripture": "And I will cause the captivity of Judah and the captivity of Israel to return, and will build them, as at the first."
                },
                "jer33.8": {
                    "id": 8,
                    "short": "Jer 33:8",
                    "name": "Jeremiah 33:8",
                    "scripture": "And I will cleanse them from all their iniquity, whereby they have sinned against me; and I will pardon all their iniquities, whereby they have sinned, and whereby they have transgressed against me."
                },
                "jer33.9": {
                    "id": 9,
                    "short": "Jer 33:9",
                    "name": "Jeremiah 33:9",
                    "scripture": "And it shall be to me a name of joy, a praise and an honour before all the nations of the earth, which shall hear all the good that I do unto them: and they shall fear and tremble for all the goodness and for all the prosperity that I procure unto it."
                },
                "jer33.10": {
                    "id": 10,
                    "short": "Jer 33:10",
                    "name": "Jeremiah 33:10",
                    "scripture": "Thus saith the Lord; Again there shall be heard in this place, which ye say shall be desolate without man and without beast, even in the cities of Judah, and in the streets of Jerusalem, that are desolate, without man, and without inhabitant, and without beast,"
                },
                "jer33.11": {
                    "id": 11,
                    "short": "Jer 33:11",
                    "name": "Jeremiah 33:11",
                    "scripture": "The voice of joy, and the voice of gladness, the voice of the bridegroom, and the voice of the bride, the voice of them that shall say, Praise the Lord of hosts: for the Lord is good; for his mercy endureth for ever: and of them that shall bring the sacrifice of praise into the house of the Lord . For I will cause to return the captivity of the land, as at the first, saith the Lord ."
                },
                "jer33.12": {
                    "id": 12,
                    "short": "Jer 33:12",
                    "name": "Jeremiah 33:12",
                    "scripture": "Thus saith the Lord of hosts; Again in this place, which is desolate without man and without beast, and in all the cities thereof, shall be an habitation of shepherds causing their flocks to lie down."
                },
                "jer33.13": {
                    "id": 13,
                    "short": "Jer 33:13",
                    "name": "Jeremiah 33:13",
                    "scripture": "In the cities of the mountains, in the cities of the vale, and in the cities of the south, and in the land of Benjamin, and in the places about Jerusalem, and in the cities of Judah, shall the flocks pass again under the hands of him that telleth them, saith the Lord ."
                },
                "jer33.14": {
                    "id": 14,
                    "short": "Jer 33:14",
                    "name": "Jeremiah 33:14",
                    "scripture": "Behold, the days come, saith the Lord, that I will perform that good thing which I have promised unto the house of Israel and to the house of Judah."
                },
                "jer33.15": {
                    "id": 15,
                    "short": "Jer 33:15",
                    "name": "Jeremiah 33:15",
                    "scripture": "In those days, and at that time, will I cause the Branch of righteousness to grow up unto David; and he shall execute judgment and righteousness in the land."
                },
                "jer33.16": {
                    "id": 16,
                    "short": "Jer 33:16",
                    "name": "Jeremiah 33:16",
                    "scripture": "In those days shall Judah be saved, and Jerusalem shall dwell safely: and this is the name wherewith she shall be called, The Lord our righteousness."
                },
                "jer33.17": {
                    "id": 17,
                    "short": "Jer 33:17",
                    "name": "Jeremiah 33:17",
                    "scripture": "For thus saith the Lord; David shall never want a man to sit upon the throne of the house of Israel;"
                },
                "jer33.18": {
                    "id": 18,
                    "short": "Jer 33:18",
                    "name": "Jeremiah 33:18",
                    "scripture": "Neither shall the priests the Levites want a man before me to offer burnt offerings, and to kindle meat offerings, and to do sacrifice continually."
                },
                "jer33.19": {
                    "id": 19,
                    "short": "Jer 33:19",
                    "name": "Jeremiah 33:19",
                    "scripture": "And the word of the Lord came unto Jeremiah, saying,"
                },
                "jer33.20": {
                    "id": 20,
                    "short": "Jer 33:20",
                    "name": "Jeremiah 33:20",
                    "scripture": "Thus saith the Lord; If ye can break my covenant of the day, and my covenant of the night, and that there should not be day and night in their season;"
                },
                "jer33.21": {
                    "id": 21,
                    "short": "Jer 33:21",
                    "name": "Jeremiah 33:21",
                    "scripture": "Then may also my covenant be broken with David my servant, that he should not have a son to reign upon his throne; and with the Levites the priests, my ministers."
                },
                "jer33.22": {
                    "id": 22,
                    "short": "Jer 33:22",
                    "name": "Jeremiah 33:22",
                    "scripture": "As the host of heaven cannot be numbered, neither the sand of the sea measured: so will I multiply the seed of David my servant, and the Levites that minister unto me."
                },
                "jer33.23": {
                    "id": 23,
                    "short": "Jer 33:23",
                    "name": "Jeremiah 33:23",
                    "scripture": "Moreover the word of the Lord came to Jeremiah, saying,"
                },
                "jer33.24": {
                    "id": 24,
                    "short": "Jer 33:24",
                    "name": "Jeremiah 33:24",
                    "scripture": "Considerest thou not what this people have spoken, saying, The two families which the Lord hath chosen, he hath even cast them off? thus they have despised my people, that they should be no more a nation before them."
                },
                "jer33.25": {
                    "id": 25,
                    "short": "Jer 33:25",
                    "name": "Jeremiah 33:25",
                    "scripture": "Thus saith the Lord; If my covenant be not with day and night, and if I have not appointed the ordinances of heaven and earth;"
                },
                "jer33.26": {
                    "id": 26,
                    "short": "Jer 33:26",
                    "name": "Jeremiah 33:26",
                    "scripture": "Then will I cast away the seed of Jacob, and David my servant, so that I will not take any of his seed to be rulers over the seed of Abraham, Isaac, and Jacob: for I will cause their captivity to return, and have mercy on them."
                }
            }
        },
        "jer34": {
            "id": 34,
            "short": "Jer 34",
            "name": "Jeremiah 34",
            "verses": {
                "jer34.1": {
                    "id": 1,
                    "short": "Jer 34:1",
                    "name": "Jeremiah 34:1",
                    "scripture": "The word which came unto Jeremiah from the Lord, when Nebuchadrezzar king of Babylon, and all his army, and all the kingdoms of the earth of his dominion, and all the people, fought against Jerusalem, and against all the cities thereof, saying,"
                },
                "jer34.2": {
                    "id": 2,
                    "short": "Jer 34:2",
                    "name": "Jeremiah 34:2",
                    "scripture": "Thus saith the Lord, the God of Israel; Go and speak to Zedekiah king of Judah, and tell him, Thus saith the Lord; Behold, I will give this city into the hand of the king of Babylon, and he shall burn it with fire:"
                },
                "jer34.3": {
                    "id": 3,
                    "short": "Jer 34:3",
                    "name": "Jeremiah 34:3",
                    "scripture": "And thou shalt not escape out of his hand, but shalt surely be taken, and delivered into his hand; and thine eyes shall behold the eyes of the king of Babylon, and he shall speak with thee mouth to mouth, and thou shalt go to Babylon."
                },
                "jer34.4": {
                    "id": 4,
                    "short": "Jer 34:4",
                    "name": "Jeremiah 34:4",
                    "scripture": "Yet hear the word of the Lord, O Zedekiah king of Judah; Thus saith the Lord of thee, Thou shalt not die by the sword:"
                },
                "jer34.5": {
                    "id": 5,
                    "short": "Jer 34:5",
                    "name": "Jeremiah 34:5",
                    "scripture": "But thou shalt die in peace: and with the burnings of thy fathers, the former kings which were before thee, so shall they burn odours for thee; and they will lament thee, saying, Ah lord! for I have pronounced the word, saith the Lord ."
                },
                "jer34.6": {
                    "id": 6,
                    "short": "Jer 34:6",
                    "name": "Jeremiah 34:6",
                    "scripture": "Then Jeremiah the prophet spake all these words unto Zedekiah king of Judah in Jerusalem,"
                },
                "jer34.7": {
                    "id": 7,
                    "short": "Jer 34:7",
                    "name": "Jeremiah 34:7",
                    "scripture": "When the king of Babylon's army fought against Jerusalem, and against all the cities of Judah that were left, against Lachish, and against Azekah: for these defenced cities remained of the cities of Judah."
                },
                "jer34.8": {
                    "id": 8,
                    "short": "Jer 34:8",
                    "name": "Jeremiah 34:8",
                    "scripture": "This is the word that came unto Jeremiah from the Lord, after that the king Zedekiah had made a covenant with all the people which were at Jerusalem, to proclaim liberty unto them;"
                },
                "jer34.9": {
                    "id": 9,
                    "short": "Jer 34:9",
                    "name": "Jeremiah 34:9",
                    "scripture": "That every man should let his manservant, and every man his maidservant, being an Hebrew or an Hebrewess, go free; that none should serve himself of them, to wit, of a Jew his brother."
                },
                "jer34.10": {
                    "id": 10,
                    "short": "Jer 34:10",
                    "name": "Jeremiah 34:10",
                    "scripture": "Now when all the princes, and all the people, which had entered into the covenant, heard that every one should let his manservant, and every one his maidservant, go free, that none should serve themselves of them any more, then they obeyed, and let them go."
                },
                "jer34.11": {
                    "id": 11,
                    "short": "Jer 34:11",
                    "name": "Jeremiah 34:11",
                    "scripture": "But afterward they turned, and caused the servants and the handmaids, whom they had let go free, to return, and brought them into subjection for servants and for handmaids."
                },
                "jer34.12": {
                    "id": 12,
                    "short": "Jer 34:12",
                    "name": "Jeremiah 34:12",
                    "scripture": "Therefore the word of the Lord came to Jeremiah from the Lord, saying,"
                },
                "jer34.13": {
                    "id": 13,
                    "short": "Jer 34:13",
                    "name": "Jeremiah 34:13",
                    "scripture": "Thus saith the Lord, the God of Israel; I made a covenant with your fathers in the day that I brought them forth out of the land of Egypt, out of the house of bondmen, saying,"
                },
                "jer34.14": {
                    "id": 14,
                    "short": "Jer 34:14",
                    "name": "Jeremiah 34:14",
                    "scripture": "At the end of seven years let ye go every man his brother an Hebrew, which hath been sold unto thee; and when he hath served thee six years, thou shalt let him go free from thee: but your fathers hearkened not unto me, neither inclined their ear."
                },
                "jer34.15": {
                    "id": 15,
                    "short": "Jer 34:15",
                    "name": "Jeremiah 34:15",
                    "scripture": "And ye were now turned, and had done right in my sight, in proclaiming liberty every man to his neighbour; and ye had made a covenant before me in the house which is called by my name:"
                },
                "jer34.16": {
                    "id": 16,
                    "short": "Jer 34:16",
                    "name": "Jeremiah 34:16",
                    "scripture": "But ye turned and polluted my name, and caused every man his servant, and every man his handmaid, whom ye had set at liberty at their pleasure, to return, and brought them into subjection, to be unto you for servants and for handmaids."
                },
                "jer34.17": {
                    "id": 17,
                    "short": "Jer 34:17",
                    "name": "Jeremiah 34:17",
                    "scripture": "Therefore thus saith the Lord; Ye have not hearkened unto me, in proclaiming liberty, every one to his brother, and every man to his neighbour: behold, I proclaim a liberty for you, saith the Lord, to the sword, to the pestilence, and to the famine; and I will make you to be removed into all the kingdoms of the earth."
                },
                "jer34.18": {
                    "id": 18,
                    "short": "Jer 34:18",
                    "name": "Jeremiah 34:18",
                    "scripture": "And I will give the men that have transgressed my covenant, which have not performed the words of the covenant which they had made before me, when they cut the calf in twain, and passed between the parts thereof,"
                },
                "jer34.19": {
                    "id": 19,
                    "short": "Jer 34:19",
                    "name": "Jeremiah 34:19",
                    "scripture": "The princes of Judah, and the princes of Jerusalem, the eunuchs, and the priests, and all the people of the land, which passed between the parts of the calf;"
                },
                "jer34.20": {
                    "id": 20,
                    "short": "Jer 34:20",
                    "name": "Jeremiah 34:20",
                    "scripture": "I will even give them into the hand of their enemies, and into the hand of them that seek their life: and their dead bodies shall be for meat unto the fowls of the heaven, and to the beasts of the earth."
                },
                "jer34.21": {
                    "id": 21,
                    "short": "Jer 34:21",
                    "name": "Jeremiah 34:21",
                    "scripture": "And Zedekiah king of Judah and his princes will I give into the hand of their enemies, and into the hand of them that seek their life, and into the hand of the king of Babylon's army, which are gone up from you."
                },
                "jer34.22": {
                    "id": 22,
                    "short": "Jer 34:22",
                    "name": "Jeremiah 34:22",
                    "scripture": "Behold, I will command, saith the Lord, and cause them to return to this city; and they shall fight against it, and take it, and burn it with fire: and I will make the cities of Judah a desolation without an inhabitant."
                }
            }
        },
        "jer35": {
            "id": 35,
            "short": "Jer 35",
            "name": "Jeremiah 35",
            "verses": {
                "jer35.1": {
                    "id": 1,
                    "short": "Jer 35:1",
                    "name": "Jeremiah 35:1",
                    "scripture": "The word which came unto Jeremiah from the Lord in the days of Jehoiakim the son of Josiah king of Judah, saying,"
                },
                "jer35.2": {
                    "id": 2,
                    "short": "Jer 35:2",
                    "name": "Jeremiah 35:2",
                    "scripture": "Go unto the house of the Rechabites, and speak unto them, and bring them into the house of the Lord, into one of the chambers, and give them wine to drink."
                },
                "jer35.3": {
                    "id": 3,
                    "short": "Jer 35:3",
                    "name": "Jeremiah 35:3",
                    "scripture": "Then I took Jaazaniah the son of Jeremiah, the son of Habaziniah, and his brethren, and all his sons, and the whole house of the Rechabites;"
                },
                "jer35.4": {
                    "id": 4,
                    "short": "Jer 35:4",
                    "name": "Jeremiah 35:4",
                    "scripture": "And I brought them into the house of the Lord, into the chamber of the sons of Hanan, the son of Igdaliah, a man of God, which was by the chamber of the princes, which was above the chamber of Maaseiah the son of Shallum, the keeper of the door:"
                },
                "jer35.5": {
                    "id": 5,
                    "short": "Jer 35:5",
                    "name": "Jeremiah 35:5",
                    "scripture": "And I set before the sons of the house of the Rechabites pots full of wine, and cups, and I said unto them, Drink ye wine."
                },
                "jer35.6": {
                    "id": 6,
                    "short": "Jer 35:6",
                    "name": "Jeremiah 35:6",
                    "scripture": "But they said, We will drink no wine: for Jonadab the son of Rechab our father commanded us, saying, Ye shall drink no wine, neither ye, nor your sons for ever:"
                },
                "jer35.7": {
                    "id": 7,
                    "short": "Jer 35:7",
                    "name": "Jeremiah 35:7",
                    "scripture": "Neither shall ye build house, nor sow seed, nor plant vineyard, nor have any: but all your days ye shall dwell in tents; that ye may live many days in the land where ye be strangers."
                },
                "jer35.8": {
                    "id": 8,
                    "short": "Jer 35:8",
                    "name": "Jeremiah 35:8",
                    "scripture": "Thus have we obeyed the voice of Jehonadab the son of Rechab our father in all that he hath charged us, to drink no wine all our days, we, our wives, our sons, nor our daughters;"
                },
                "jer35.9": {
                    "id": 9,
                    "short": "Jer 35:9",
                    "name": "Jeremiah 35:9",
                    "scripture": "Nor to build houses for us to dwell in: neither have we vineyard, nor field, nor seed:"
                },
                "jer35.10": {
                    "id": 10,
                    "short": "Jer 35:10",
                    "name": "Jeremiah 35:10",
                    "scripture": "But we have dwelt in tents, and have obeyed, and done according to all that Jonadab our father commanded us."
                },
                "jer35.11": {
                    "id": 11,
                    "short": "Jer 35:11",
                    "name": "Jeremiah 35:11",
                    "scripture": "But it came to pass, when Nebuchadrezzar king of Babylon came up into the land, that we said, Come, and let us go to Jerusalem for fear of the army of the Chaldeans, and for fear of the army of the Syrians: so we dwell at Jerusalem."
                },
                "jer35.12": {
                    "id": 12,
                    "short": "Jer 35:12",
                    "name": "Jeremiah 35:12",
                    "scripture": "Then came the word of the Lord unto Jeremiah, saying,"
                },
                "jer35.13": {
                    "id": 13,
                    "short": "Jer 35:13",
                    "name": "Jeremiah 35:13",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel; Go and tell the men of Judah and the inhabitants of Jerusalem, Will ye not receive instruction to hearken to my words? saith the Lord ."
                },
                "jer35.14": {
                    "id": 14,
                    "short": "Jer 35:14",
                    "name": "Jeremiah 35:14",
                    "scripture": "The words of Jehonadab the son of Rechab, that he commanded his sons not to drink wine, are performed; for unto this day they drink none, but obey their father's commandment: notwithstanding I have spoken unto you, rising early and speaking; but ye hearkened not unto me."
                },
                "jer35.15": {
                    "id": 15,
                    "short": "Jer 35:15",
                    "name": "Jeremiah 35:15",
                    "scripture": "I have sent also unto you all my servants the prophets, rising up early and sending them, saying, Return ye now every man from his evil way, and amend your doings, and go not after other gods to serve them, and ye shall dwell in the land which I have given to you and to your fathers: but ye have not inclined your ear, nor hearkened unto me."
                },
                "jer35.16": {
                    "id": 16,
                    "short": "Jer 35:16",
                    "name": "Jeremiah 35:16",
                    "scripture": "Because the sons of Jehonadab the son of Rechab have performed the commandment of their father, which he commanded them; but this people hath not hearkened unto me:"
                },
                "jer35.17": {
                    "id": 17,
                    "short": "Jer 35:17",
                    "name": "Jeremiah 35:17",
                    "scripture": "Therefore thus saith the Lord God of hosts, the God of Israel; Behold, I will bring upon Judah and upon all the inhabitants of Jerusalem all the evil that I have pronounced against them: because I have spoken unto them, but they have not heard; and I have called unto them, but they have not answered."
                },
                "jer35.18": {
                    "id": 18,
                    "short": "Jer 35:18",
                    "name": "Jeremiah 35:18",
                    "scripture": "And Jeremiah said unto the house of the Rechabites, Thus saith the Lord of hosts, the God of Israel; Because ye have obeyed the commandment of Jehonadab your father, and kept all his precepts, and done according unto all that he hath commanded you:"
                },
                "jer35.19": {
                    "id": 19,
                    "short": "Jer 35:19",
                    "name": "Jeremiah 35:19",
                    "scripture": "Therefore thus saith the Lord of hosts, the God of Israel; Jonadab the son of Rechab shall not want a man to stand before me for ever."
                }
            }
        },
        "jer36": {
            "id": 36,
            "short": "Jer 36",
            "name": "Jeremiah 36",
            "verses": {
                "jer36.1": {
                    "id": 1,
                    "short": "Jer 36:1",
                    "name": "Jeremiah 36:1",
                    "scripture": "And it came to pass in the fourth year of Jehoiakim the son of Josiah king of Judah, that this word came unto Jeremiah from the Lord, saying,"
                },
                "jer36.2": {
                    "id": 2,
                    "short": "Jer 36:2",
                    "name": "Jeremiah 36:2",
                    "scripture": "Take thee a roll of a book, and write therein all the words that I have spoken unto thee against Israel, and against Judah, and against all the nations, from the day I spake unto thee, from the days of Josiah, even unto this day."
                },
                "jer36.3": {
                    "id": 3,
                    "short": "Jer 36:3",
                    "name": "Jeremiah 36:3",
                    "scripture": "It may be that the house of Judah will hear all the evil which I purpose to do unto them; that they may return every man from his evil way; that I may forgive their iniquity and their sin."
                },
                "jer36.4": {
                    "id": 4,
                    "short": "Jer 36:4",
                    "name": "Jeremiah 36:4",
                    "scripture": "Then Jeremiah called Baruch the son of Neriah: and Baruch wrote from the mouth of Jeremiah all the words of the Lord, which he had spoken unto him, upon a roll of a book."
                },
                "jer36.5": {
                    "id": 5,
                    "short": "Jer 36:5",
                    "name": "Jeremiah 36:5",
                    "scripture": "And Jeremiah commanded Baruch, saying, I am shut up; I cannot go into the house of the Lord :"
                },
                "jer36.6": {
                    "id": 6,
                    "short": "Jer 36:6",
                    "name": "Jeremiah 36:6",
                    "scripture": "Therefore go thou, and read in the roll, which thou hast written from my mouth, the words of the Lord in the ears of the people in the Lord's house upon the fasting day: and also thou shalt read them in the ears of all Judah that come out of their cities."
                },
                "jer36.7": {
                    "id": 7,
                    "short": "Jer 36:7",
                    "name": "Jeremiah 36:7",
                    "scripture": "It may be they will present their supplication before the Lord, and will return every one from his evil way: for great is the anger and the fury that the Lord hath pronounced against this people."
                },
                "jer36.8": {
                    "id": 8,
                    "short": "Jer 36:8",
                    "name": "Jeremiah 36:8",
                    "scripture": "And Baruch the son of Neriah did according to all that Jeremiah the prophet commanded him, reading in the book the words of the Lord in the Lord's house."
                },
                "jer36.9": {
                    "id": 9,
                    "short": "Jer 36:9",
                    "name": "Jeremiah 36:9",
                    "scripture": "And it came to pass in the fifth year of Jehoiakim the son of Josiah king of Judah, in the ninth month, that they proclaimed a fast before the Lord to all the people in Jerusalem, and to all the people that came from the cities of Judah unto Jerusalem."
                },
                "jer36.10": {
                    "id": 10,
                    "short": "Jer 36:10",
                    "name": "Jeremiah 36:10",
                    "scripture": "Then read Baruch in the book the words of Jeremiah in the house of the Lord, in the chamber of Gemariah the son of Shaphan the scribe, in the higher court, at the entry of the new gate of the Lord's house, in the ears of all the people."
                },
                "jer36.11": {
                    "id": 11,
                    "short": "Jer 36:11",
                    "name": "Jeremiah 36:11",
                    "scripture": "When Michaiah the son of Gemariah, the son of Shaphan, had heard out of the book all the words of the Lord,"
                },
                "jer36.12": {
                    "id": 12,
                    "short": "Jer 36:12",
                    "name": "Jeremiah 36:12",
                    "scripture": "Then he went down into the king's house, into the scribe's chamber: and, lo, all the princes sat there, even Elishama the scribe, and Delaiah the son of Shemaiah, and Elnathan the son of Achbor, and Gemariah the son of Shaphan, and Zedekiah the son of Hananiah, and all the princes."
                },
                "jer36.13": {
                    "id": 13,
                    "short": "Jer 36:13",
                    "name": "Jeremiah 36:13",
                    "scripture": "Then Michaiah declared unto them all the words that he had heard, when Baruch read the book in the ears of the people."
                },
                "jer36.14": {
                    "id": 14,
                    "short": "Jer 36:14",
                    "name": "Jeremiah 36:14",
                    "scripture": "Therefore all the princes sent Jehudi the son of Nethaniah, the son of Shelemiah, the son of Cushi, unto Baruch, saying, Take in thine hand the roll wherein thou hast read in the ears of the people, and come. So Baruch the son of Neriah took the roll in his hand, and came unto them."
                },
                "jer36.15": {
                    "id": 15,
                    "short": "Jer 36:15",
                    "name": "Jeremiah 36:15",
                    "scripture": "And they said unto him, Sit down now, and read it in our ears. So Baruch read it in their ears."
                },
                "jer36.16": {
                    "id": 16,
                    "short": "Jer 36:16",
                    "name": "Jeremiah 36:16",
                    "scripture": "Now it came to pass, when they had heard all the words, they were afraid both one and other, and said unto Baruch, We will surely tell the king of all these words."
                },
                "jer36.17": {
                    "id": 17,
                    "short": "Jer 36:17",
                    "name": "Jeremiah 36:17",
                    "scripture": "And they asked Baruch, saying, Tell us now, How didst thou write all these words at his mouth?"
                },
                "jer36.18": {
                    "id": 18,
                    "short": "Jer 36:18",
                    "name": "Jeremiah 36:18",
                    "scripture": "Then Baruch answered them, He pronounced all these words unto me with his mouth, and I wrote them with ink in the book."
                },
                "jer36.19": {
                    "id": 19,
                    "short": "Jer 36:19",
                    "name": "Jeremiah 36:19",
                    "scripture": "Then said the princes unto Baruch, Go, hide thee, thou and Jeremiah; and let no man know where ye be."
                },
                "jer36.20": {
                    "id": 20,
                    "short": "Jer 36:20",
                    "name": "Jeremiah 36:20",
                    "scripture": "And they went in to the king into the court, but they laid up the roll in the chamber of Elishama the scribe, and told all the words in the ears of the king."
                },
                "jer36.21": {
                    "id": 21,
                    "short": "Jer 36:21",
                    "name": "Jeremiah 36:21",
                    "scripture": "So the king sent Jehudi to fetch the roll: and he took it out of Elishama the scribe's chamber. And Jehudi read it in the ears of the king, and in the ears of all the princes which stood beside the king."
                },
                "jer36.22": {
                    "id": 22,
                    "short": "Jer 36:22",
                    "name": "Jeremiah 36:22",
                    "scripture": "Now the king sat in the winterhouse in the ninth month: and there was a fire on the hearth burning before him."
                },
                "jer36.23": {
                    "id": 23,
                    "short": "Jer 36:23",
                    "name": "Jeremiah 36:23",
                    "scripture": "And it came to pass, that when Jehudi had read three or four leaves, he cut it with the penknife, and cast it into the fire that was on the hearth, until all the roll was consumed in the fire that was on the hearth."
                },
                "jer36.24": {
                    "id": 24,
                    "short": "Jer 36:24",
                    "name": "Jeremiah 36:24",
                    "scripture": "Yet they were not afraid, nor rent their garments, neither the king, nor any of his servants that heard all these words."
                },
                "jer36.25": {
                    "id": 25,
                    "short": "Jer 36:25",
                    "name": "Jeremiah 36:25",
                    "scripture": "Nevertheless Elnathan and Delaiah and Gemariah had made intercession to the king that he would not burn the roll: but he would not hear them."
                },
                "jer36.26": {
                    "id": 26,
                    "short": "Jer 36:26",
                    "name": "Jeremiah 36:26",
                    "scripture": "But the king commanded Jerahmeel the son of Hammelech, and Seraiah the son of Azriel, and Shelemiah the son of Abdeel, to take Baruch the scribe and Jeremiah the prophet: but the Lord hid them."
                },
                "jer36.27": {
                    "id": 27,
                    "short": "Jer 36:27",
                    "name": "Jeremiah 36:27",
                    "scripture": "Then the word of the Lord came to Jeremiah, after that the king had burned the roll, and the words which Baruch wrote at the mouth of Jeremiah, saying,"
                },
                "jer36.28": {
                    "id": 28,
                    "short": "Jer 36:28",
                    "name": "Jeremiah 36:28",
                    "scripture": "Take thee again another roll, and write in it all the former words that were in the first roll, which Jehoiakim the king of Judah hath burned."
                },
                "jer36.29": {
                    "id": 29,
                    "short": "Jer 36:29",
                    "name": "Jeremiah 36:29",
                    "scripture": "And thou shalt say to Jehoiakim king of Judah, Thus saith the Lord; Thou hast burned this roll, saying, Why hast thou written therein, saying, The king of Babylon shall certainly come and destroy this land, and shall cause to cease from thence man and beast?"
                },
                "jer36.30": {
                    "id": 30,
                    "short": "Jer 36:30",
                    "name": "Jeremiah 36:30",
                    "scripture": "Therefore thus saith the Lord of Jehoiakim king of Judah; He shall have none to sit upon the throne of David: and his dead body shall be cast out in the day to the heat, and in the night to the frost."
                },
                "jer36.31": {
                    "id": 31,
                    "short": "Jer 36:31",
                    "name": "Jeremiah 36:31",
                    "scripture": "And I will punish him and his seed and his servants for their iniquity; and I will bring upon them, and upon the inhabitants of Jerusalem, and upon the men of Judah, all the evil that I have pronounced against them; but they hearkened not."
                },
                "jer36.32": {
                    "id": 32,
                    "short": "Jer 36:32",
                    "name": "Jeremiah 36:32",
                    "scripture": "Then took Jeremiah another roll, and gave it to Baruch the scribe, the son of Neriah; who wrote therein from the mouth of Jeremiah all the words of the book which Jehoiakim king of Judah had burned in the fire: and there were added besides unto them many like words."
                }
            }
        },
        "jer37": {
            "id": 37,
            "short": "Jer 37",
            "name": "Jeremiah 37",
            "verses": {
                "jer37.1": {
                    "id": 1,
                    "short": "Jer 37:1",
                    "name": "Jeremiah 37:1",
                    "scripture": "And king Zedekiah the son of Josiah reigned instead of Coniah the son of Jehoiakim, whom Nebuchadrezzar king of Babylon made king in the land of Judah."
                },
                "jer37.2": {
                    "id": 2,
                    "short": "Jer 37:2",
                    "name": "Jeremiah 37:2",
                    "scripture": "But neither he, nor his servants, nor the people of the land, did hearken unto the words of the Lord, which he spake by the prophet Jeremiah."
                },
                "jer37.3": {
                    "id": 3,
                    "short": "Jer 37:3",
                    "name": "Jeremiah 37:3",
                    "scripture": "And Zedekiah the king sent Jehucal the son of Shelemiah and Zephaniah the son of Maaseiah the priest to the prophet Jeremiah, saying, Pray now unto the Lord our God for us."
                },
                "jer37.4": {
                    "id": 4,
                    "short": "Jer 37:4",
                    "name": "Jeremiah 37:4",
                    "scripture": "Now Jeremiah came in and went out among the people: for they had not put him into prison."
                },
                "jer37.5": {
                    "id": 5,
                    "short": "Jer 37:5",
                    "name": "Jeremiah 37:5",
                    "scripture": "Then Pharaoh's army was come forth out of Egypt: and when the Chaldeans that besieged Jerusalem heard tidings of them, they departed from Jerusalem."
                },
                "jer37.6": {
                    "id": 6,
                    "short": "Jer 37:6",
                    "name": "Jeremiah 37:6",
                    "scripture": "Then came the word of the Lord unto the prophet Jeremiah, saying,"
                },
                "jer37.7": {
                    "id": 7,
                    "short": "Jer 37:7",
                    "name": "Jeremiah 37:7",
                    "scripture": "Thus saith the Lord, the God of Israel; Thus shall ye say to the king of Judah, that sent you unto me to enquire of me; Behold, Pharaoh's army, which is come forth to help you, shall return to Egypt into their own land."
                },
                "jer37.8": {
                    "id": 8,
                    "short": "Jer 37:8",
                    "name": "Jeremiah 37:8",
                    "scripture": "And the Chaldeans shall come again, and fight against this city, and take it, and burn it with fire."
                },
                "jer37.9": {
                    "id": 9,
                    "short": "Jer 37:9",
                    "name": "Jeremiah 37:9",
                    "scripture": "Thus saith the Lord; Deceive not yourselves, saying, The Chaldeans shall surely depart from us: for they shall not depart."
                },
                "jer37.10": {
                    "id": 10,
                    "short": "Jer 37:10",
                    "name": "Jeremiah 37:10",
                    "scripture": "For though ye had smitten the whole army of the Chaldeans that fight against you, and there remained but wounded men among them, yet should they rise up every man in his tent, and burn this city with fire."
                },
                "jer37.11": {
                    "id": 11,
                    "short": "Jer 37:11",
                    "name": "Jeremiah 37:11",
                    "scripture": "And it came to pass, that when the army of the Chaldeans was broken up from Jerusalem for fear of Pharaoh's army,"
                },
                "jer37.12": {
                    "id": 12,
                    "short": "Jer 37:12",
                    "name": "Jeremiah 37:12",
                    "scripture": "Then Jeremiah went forth out of Jerusalem to go into the land of Benjamin, to separate himself thence in the midst of the people."
                },
                "jer37.13": {
                    "id": 13,
                    "short": "Jer 37:13",
                    "name": "Jeremiah 37:13",
                    "scripture": "And when he was in the gate of Benjamin, a captain of the ward was there, whose name was Irijah, the son of Shelemiah, the son of Hananiah; and he took Jeremiah the prophet, saying, Thou fallest away to the Chaldeans."
                },
                "jer37.14": {
                    "id": 14,
                    "short": "Jer 37:14",
                    "name": "Jeremiah 37:14",
                    "scripture": "Then said Jeremiah, It is false; I fall not away to the Chaldeans. But he hearkened not to him: so Irijah took Jeremiah, and brought him to the princes."
                },
                "jer37.15": {
                    "id": 15,
                    "short": "Jer 37:15",
                    "name": "Jeremiah 37:15",
                    "scripture": "Wherefore the princes were wroth with Jeremiah, and smote him, and put him in prison in the house of Jonathan the scribe: for they had made that the prison."
                },
                "jer37.16": {
                    "id": 16,
                    "short": "Jer 37:16",
                    "name": "Jeremiah 37:16",
                    "scripture": "When Jeremiah was entered into the dungeon, and into the cabins, and Jeremiah had remained there many days;"
                },
                "jer37.17": {
                    "id": 17,
                    "short": "Jer 37:17",
                    "name": "Jeremiah 37:17",
                    "scripture": "Then Zedekiah the king sent, and took him out: and the king asked him secretly in his house, and said, Is there any word from the Lord ? And Jeremiah said, There is: for, said he, thou shalt be delivered into the hand of the king of Babylon."
                },
                "jer37.18": {
                    "id": 18,
                    "short": "Jer 37:18",
                    "name": "Jeremiah 37:18",
                    "scripture": "Moreover Jeremiah said unto king Zedekiah, What have I offended against thee, or against thy servants, or against this people, that ye have put me in prison?"
                },
                "jer37.19": {
                    "id": 19,
                    "short": "Jer 37:19",
                    "name": "Jeremiah 37:19",
                    "scripture": "Where are now your prophets which prophesied unto you, saying, The king of Babylon shall not come against you, nor against this land?"
                },
                "jer37.20": {
                    "id": 20,
                    "short": "Jer 37:20",
                    "name": "Jeremiah 37:20",
                    "scripture": "Therefore hear now, I pray thee, O my lord the king: let my supplication, I pray thee, be accepted before thee; that thou cause me not to return to the house of Jonathan the scribe, lest I die there."
                },
                "jer37.21": {
                    "id": 21,
                    "short": "Jer 37:21",
                    "name": "Jeremiah 37:21",
                    "scripture": "Then Zedekiah the king commanded that they should commit Jeremiah into the court of the prison, and that they should give him daily a piece of bread out of the bakers' street, until all the bread in the city were spent. Thus Jeremiah remained in the court of the prison."
                }
            }
        },
        "jer38": {
            "id": 38,
            "short": "Jer 38",
            "name": "Jeremiah 38",
            "verses": {
                "jer38.1": {
                    "id": 1,
                    "short": "Jer 38:1",
                    "name": "Jeremiah 38:1",
                    "scripture": "Then Shephatiah the son of Mattan, and Gedaliah the son of Pashur, and Jucal the son of Shelemiah, and Pashur the son of Malchijah, heard the words that Jeremiah had spoken unto all the people, saying,"
                },
                "jer38.2": {
                    "id": 2,
                    "short": "Jer 38:2",
                    "name": "Jeremiah 38:2",
                    "scripture": "Thus saith the Lord, He that remaineth in this city shall die by the sword, by the famine, and by the pestilence: but he that goeth forth to the Chaldeans shall live; for he shall have his life for a prey, and shall live."
                },
                "jer38.3": {
                    "id": 3,
                    "short": "Jer 38:3",
                    "name": "Jeremiah 38:3",
                    "scripture": "Thus saith the Lord, This city shall surely be given into the hand of the king of Babylon's army, which shall take it."
                },
                "jer38.4": {
                    "id": 4,
                    "short": "Jer 38:4",
                    "name": "Jeremiah 38:4",
                    "scripture": "Therefore the princes said unto the king, We beseech thee, let this man be put to death: for thus he weakeneth the hands of the men of war that remain in this city, and the hands of all the people, in speaking such words unto them: for this man seeketh not the welfare of this people, but the hurt."
                },
                "jer38.5": {
                    "id": 5,
                    "short": "Jer 38:5",
                    "name": "Jeremiah 38:5",
                    "scripture": "Then Zedekiah the king said, Behold, he is in your hand: for the king is not he that can do any thing against you."
                },
                "jer38.6": {
                    "id": 6,
                    "short": "Jer 38:6",
                    "name": "Jeremiah 38:6",
                    "scripture": "Then took they Jeremiah, and cast him into the dungeon of Malchiah the son of Hammelech, that was in the court of the prison: and they let down Jeremiah with cords. And in the dungeon there was no water, but mire: so Jeremiah sunk in the mire."
                },
                "jer38.7": {
                    "id": 7,
                    "short": "Jer 38:7",
                    "name": "Jeremiah 38:7",
                    "scripture": "Now when Ebedâ€“melech the Ethiopian, one of the eunuchs which was in the king's house, heard that they had put Jeremiah in the dungeon; the king then sitting in the gate of Benjamin;"
                },
                "jer38.8": {
                    "id": 8,
                    "short": "Jer 38:8",
                    "name": "Jeremiah 38:8",
                    "scripture": "Ebedâ€“melech went forth out of the king's house, and spake to the king, saying,"
                },
                "jer38.9": {
                    "id": 9,
                    "short": "Jer 38:9",
                    "name": "Jeremiah 38:9",
                    "scripture": "My lord the king, these men have done evil in all that they have done to Jeremiah the prophet, whom they have cast into the dungeon; and he is like to die for hunger in the place where he is: for there is no more bread in the city."
                },
                "jer38.10": {
                    "id": 10,
                    "short": "Jer 38:10",
                    "name": "Jeremiah 38:10",
                    "scripture": "Then the king commanded Ebedâ€“melech the Ethiopian, saying, Take from hence thirty men with thee, and take up Jeremiah the prophet out of the dungeon, before he die."
                },
                "jer38.11": {
                    "id": 11,
                    "short": "Jer 38:11",
                    "name": "Jeremiah 38:11",
                    "scripture": "So Ebedâ€“melech took the men with him, and went into the house of the king under the treasury, and took thence old cast clouts and old rotten rags, and let them down by cords into the dungeon to Jeremiah."
                },
                "jer38.12": {
                    "id": 12,
                    "short": "Jer 38:12",
                    "name": "Jeremiah 38:12",
                    "scripture": "And Ebedâ€“melech the Ethiopian said unto Jeremiah, Put now these old cast clouts and rotten rags under thine armholes under the cords. And Jeremiah did so."
                },
                "jer38.13": {
                    "id": 13,
                    "short": "Jer 38:13",
                    "name": "Jeremiah 38:13",
                    "scripture": "So they drew up Jeremiah with cords, and took him up out of the dungeon: and Jeremiah remained in the court of the prison."
                },
                "jer38.14": {
                    "id": 14,
                    "short": "Jer 38:14",
                    "name": "Jeremiah 38:14",
                    "scripture": "Then Zedekiah the king sent, and took Jeremiah the prophet unto him into the third entry that is in the house of the Lord : and the king said unto Jeremiah, I will ask thee a thing; hide nothing from me."
                },
                "jer38.15": {
                    "id": 15,
                    "short": "Jer 38:15",
                    "name": "Jeremiah 38:15",
                    "scripture": "Then Jeremiah said unto Zedekiah, If I declare it unto thee, wilt thou not surely put me to death? and if I give thee counsel, wilt thou not hearken unto me?"
                },
                "jer38.16": {
                    "id": 16,
                    "short": "Jer 38:16",
                    "name": "Jeremiah 38:16",
                    "scripture": "So Zedekiah the king sware secretly unto Jeremiah, saying, As the Lord liveth, that made us this soul, I will not put thee to death, neither will I give thee into the hand of these men that seek thy life."
                },
                "jer38.17": {
                    "id": 17,
                    "short": "Jer 38:17",
                    "name": "Jeremiah 38:17",
                    "scripture": "Then said Jeremiah unto Zedekiah, Thus saith the Lord, the God of hosts, the God of Israel; If thou wilt assuredly go forth unto the king of Babylon's princes, then thy soul shall live, and this city shall not be burned with fire; and thou shalt live, and thine house:"
                },
                "jer38.18": {
                    "id": 18,
                    "short": "Jer 38:18",
                    "name": "Jeremiah 38:18",
                    "scripture": "But if thou wilt not go forth to the king of Babylon's princes, then shall this city be given into the hand of the Chaldeans, and they shall burn it with fire, and thou shalt not escape out of their hand."
                },
                "jer38.19": {
                    "id": 19,
                    "short": "Jer 38:19",
                    "name": "Jeremiah 38:19",
                    "scripture": "And Zedekiah the king said unto Jeremiah, I am afraid of the Jews that are fallen to the Chaldeans, lest they deliver me into their hand, and they mock me."
                },
                "jer38.20": {
                    "id": 20,
                    "short": "Jer 38:20",
                    "name": "Jeremiah 38:20",
                    "scripture": "But Jeremiah said, They shall not deliver thee. Obey, I beseech thee, the voice of the Lord, which I speak unto thee: so it shall be well unto thee, and thy soul shall live."
                },
                "jer38.21": {
                    "id": 21,
                    "short": "Jer 38:21",
                    "name": "Jeremiah 38:21",
                    "scripture": "But if thou refuse to go forth, this is the word that the Lord hath shewed me:"
                },
                "jer38.22": {
                    "id": 22,
                    "short": "Jer 38:22",
                    "name": "Jeremiah 38:22",
                    "scripture": "And, behold, all the women that are left in the king of Judah's house shall be brought forth to the king of Babylon's princes, and those women shall say, Thy friends have set thee on, and have prevailed against thee: thy feet are sunk in the mire, and they are turned away back."
                },
                "jer38.23": {
                    "id": 23,
                    "short": "Jer 38:23",
                    "name": "Jeremiah 38:23",
                    "scripture": "So they shall bring out all thy wives and thy children to the Chaldeans: and thou shalt not escape out of their hand, but shalt be taken by the hand of the king of Babylon: and thou shalt cause this city to be burned with fire."
                },
                "jer38.24": {
                    "id": 24,
                    "short": "Jer 38:24",
                    "name": "Jeremiah 38:24",
                    "scripture": "Then said Zedekiah unto Jeremiah, Let no man know of these words, and thou shalt not die."
                },
                "jer38.25": {
                    "id": 25,
                    "short": "Jer 38:25",
                    "name": "Jeremiah 38:25",
                    "scripture": "But if the princes hear that I have talked with thee, and they come unto thee, and say unto thee, Declare unto us now what thou hast said unto the king, hide it not from us, and we will not put thee to death; also what the king said unto thee:"
                },
                "jer38.26": {
                    "id": 26,
                    "short": "Jer 38:26",
                    "name": "Jeremiah 38:26",
                    "scripture": "Then thou shalt say unto them, I presented my supplication before the king, that he would not cause me to return to Jonathan's house, to die there."
                },
                "jer38.27": {
                    "id": 27,
                    "short": "Jer 38:27",
                    "name": "Jeremiah 38:27",
                    "scripture": "Then came all the princes unto Jeremiah, and asked him: and he told them according to all these words that the king had commanded. So they left off speaking with him; for the matter was not perceived."
                },
                "jer38.28": {
                    "id": 28,
                    "short": "Jer 38:28",
                    "name": "Jeremiah 38:28",
                    "scripture": "So Jeremiah abode in the court of the prison until the day that Jerusalem was taken: and he was there when Jerusalem was taken."
                }
            }
        },
        "jer39": {
            "id": 39,
            "short": "Jer 39",
            "name": "Jeremiah 39",
            "verses": {
                "jer39.1": {
                    "id": 1,
                    "short": "Jer 39:1",
                    "name": "Jeremiah 39:1",
                    "scripture": "In the ninth year of Zedekiah king of Judah, in the tenth month, came Nebuchadrezzar king of Babylon and all his army against Jerusalem, and they besieged it."
                },
                "jer39.2": {
                    "id": 2,
                    "short": "Jer 39:2",
                    "name": "Jeremiah 39:2",
                    "scripture": "And in the eleventh year of Zedekiah, in the fourth month, the ninth day of the month, the city was broken up."
                },
                "jer39.3": {
                    "id": 3,
                    "short": "Jer 39:3",
                    "name": "Jeremiah 39:3",
                    "scripture": "And all the princes of the king of Babylon came in, and sat in the middle gate, even Nergalâ€“sharezer, Samgarâ€“nebo, Sarsechim, Rabâ€“saris, Nergalâ€“sharezer, Rabâ€“mag, with all the residue of the princes of the king of Babylon."
                },
                "jer39.4": {
                    "id": 4,
                    "short": "Jer 39:4",
                    "name": "Jeremiah 39:4",
                    "scripture": "And it came to pass, that when Zedekiah the king of Judah saw them, and all the men of war, then they fled, and went forth out of the city by night, by the way of the king's garden, by the gate betwixt the two walls: and he went out the way of the plain."
                },
                "jer39.5": {
                    "id": 5,
                    "short": "Jer 39:5",
                    "name": "Jeremiah 39:5",
                    "scripture": "But the Chaldeans' army pursued after them, and overtook Zedekiah in the plains of Jericho: and when they had taken him, they brought him up to Nebuchadrezzar king of Babylon to Riblah in the land of Hamath, where he gave judgment upon him."
                },
                "jer39.6": {
                    "id": 6,
                    "short": "Jer 39:6",
                    "name": "Jeremiah 39:6",
                    "scripture": "Then the king of Babylon slew the sons of Zedekiah in Riblah before his eyes: also the king of Babylon slew all the nobles of Judah."
                },
                "jer39.7": {
                    "id": 7,
                    "short": "Jer 39:7",
                    "name": "Jeremiah 39:7",
                    "scripture": "Moreover he put out Zedekiah's eyes, and bound him with chains, to carry him to Babylon."
                },
                "jer39.8": {
                    "id": 8,
                    "short": "Jer 39:8",
                    "name": "Jeremiah 39:8",
                    "scripture": "And the Chaldeans burned the king's house, and the houses of the people, with fire, and brake down the walls of Jerusalem."
                },
                "jer39.9": {
                    "id": 9,
                    "short": "Jer 39:9",
                    "name": "Jeremiah 39:9",
                    "scripture": "Then Nebuzarâ€“adan the captain of the guard carried away captive into Babylon the remnant of the people that remained in the city, and those that fell away, that fell to him, with the rest of the people that remained."
                },
                "jer39.10": {
                    "id": 10,
                    "short": "Jer 39:10",
                    "name": "Jeremiah 39:10",
                    "scripture": "But Nebuzarâ€“adan the captain of the guard left of the poor of the people, which had nothing, in the land of Judah, and gave them vineyards and fields at the same time."
                },
                "jer39.11": {
                    "id": 11,
                    "short": "Jer 39:11",
                    "name": "Jeremiah 39:11",
                    "scripture": "Now Nebuchadrezzar king of Babylon gave charge concerning Jeremiah to Nebuzarâ€“adan the captain of the guard, saying,"
                },
                "jer39.12": {
                    "id": 12,
                    "short": "Jer 39:12",
                    "name": "Jeremiah 39:12",
                    "scripture": "Take him, and look well to him, and do him no harm; but do unto him even as he shall say unto thee."
                },
                "jer39.13": {
                    "id": 13,
                    "short": "Jer 39:13",
                    "name": "Jeremiah 39:13",
                    "scripture": "So Nebuzarâ€“adan the captain of the guard sent, and Nebushasban, Rabâ€“saris, and Nergalâ€“sharezer, Rabâ€“mag, and all the king of Babylon's princes;"
                },
                "jer39.14": {
                    "id": 14,
                    "short": "Jer 39:14",
                    "name": "Jeremiah 39:14",
                    "scripture": "Even they sent, and took Jeremiah out of the court of the prison, and committed him unto Gedaliah the son of Ahikam the son of Shaphan, that he should carry him home: so he dwelt among the people."
                },
                "jer39.15": {
                    "id": 15,
                    "short": "Jer 39:15",
                    "name": "Jeremiah 39:15",
                    "scripture": "Now the word of the Lord came unto Jeremiah, while he was shut up in the court of the prison, saying,"
                },
                "jer39.16": {
                    "id": 16,
                    "short": "Jer 39:16",
                    "name": "Jeremiah 39:16",
                    "scripture": "Go and speak to Ebedâ€“melech the Ethiopian, saying, Thus saith the Lord of hosts, the God of Israel; Behold, I will bring my words upon this city for evil, and not for good; and they shall be accomplished in that day before thee."
                },
                "jer39.17": {
                    "id": 17,
                    "short": "Jer 39:17",
                    "name": "Jeremiah 39:17",
                    "scripture": "But I will deliver thee in that day, saith the Lord : and thou shalt not be given into the hand of the men of whom thou art afraid."
                },
                "jer39.18": {
                    "id": 18,
                    "short": "Jer 39:18",
                    "name": "Jeremiah 39:18",
                    "scripture": "For I will surely deliver thee, and thou shalt not fall by the sword, but thy life shall be for a prey unto thee: because thou hast put thy trust in me, saith the Lord ."
                }
            }
        },
        "jer40": {
            "id": 40,
            "short": "Jer 40",
            "name": "Jeremiah 40",
            "verses": {
                "jer40.1": {
                    "id": 1,
                    "short": "Jer 40:1",
                    "name": "Jeremiah 40:1",
                    "scripture": "The word that came to Jeremiah from the Lord, after that Nebuzarâ€“adan the captain of the guard had let him go from Ramah, when he had taken him being bound in chains among all that were carried away captive of Jerusalem and Judah, which were carried away captive unto Babylon."
                },
                "jer40.2": {
                    "id": 2,
                    "short": "Jer 40:2",
                    "name": "Jeremiah 40:2",
                    "scripture": "And the captain of the guard took Jeremiah, and said unto him, The Lord thy God hath pronounced this evil upon this place."
                },
                "jer40.3": {
                    "id": 3,
                    "short": "Jer 40:3",
                    "name": "Jeremiah 40:3",
                    "scripture": "Now the Lord hath brought it, and done according as he hath said: because ye have sinned against the Lord, and have not obeyed his voice, therefore this thing is come upon you."
                },
                "jer40.4": {
                    "id": 4,
                    "short": "Jer 40:4",
                    "name": "Jeremiah 40:4",
                    "scripture": "And now, behold, I loose thee this day from the chains which were upon thine hand. If it seem good unto thee to come with me into Babylon, come; and I will look well unto thee: but if it seem ill unto thee to come with me into Babylon, forbear: behold, all the land is before thee: whither it seemeth good and convenient for thee to go, thither go."
                },
                "jer40.5": {
                    "id": 5,
                    "short": "Jer 40:5",
                    "name": "Jeremiah 40:5",
                    "scripture": "Now while he was not yet gone back, he said, Go back also to Gedaliah the son of Ahikam the son of Shaphan, whom the king of Babylon hath made governor over the cities of Judah, and dwell with him among the people: or go wheresoever it seemeth convenient unto thee to go. So the captain of the guard gave him victuals and a reward, and let him go."
                },
                "jer40.6": {
                    "id": 6,
                    "short": "Jer 40:6",
                    "name": "Jeremiah 40:6",
                    "scripture": "Then went Jeremiah unto Gedaliah the son of Ahikam to Mizpah; and dwelt with him among the people that were left in the land."
                },
                "jer40.7": {
                    "id": 7,
                    "short": "Jer 40:7",
                    "name": "Jeremiah 40:7",
                    "scripture": "Now when all the captains of the forces which were in the fields, even they and their men, heard that the king of Babylon had made Gedaliah the son of Ahikam governor in the land, and had committed unto him men, and women, and children, and of the poor of the land, of them that were not carried away captive to Babylon;"
                },
                "jer40.8": {
                    "id": 8,
                    "short": "Jer 40:8",
                    "name": "Jeremiah 40:8",
                    "scripture": "Then they came to Gedaliah to Mizpah, even Ishmael the son of Nethaniah, and Johanan and Jonathan the sons of Kareah, and Seraiah the son of Tanhumeth, and the sons of Ephai the Netophathite, and Jezaniah the son of a Maachathite, they and their men."
                },
                "jer40.9": {
                    "id": 9,
                    "short": "Jer 40:9",
                    "name": "Jeremiah 40:9",
                    "scripture": "And Gedaliah the son of Ahikam the son of Shaphan sware unto them and to their men, saying, Fear not to serve the Chaldeans: dwell in the land, and serve the king of Babylon, and it shall be well with you."
                },
                "jer40.10": {
                    "id": 10,
                    "short": "Jer 40:10",
                    "name": "Jeremiah 40:10",
                    "scripture": "As for me, behold, I will dwell at Mizpah to serve the Chaldeans, which will come unto us: but ye, gather ye wine, and summer fruits, and oil, and put them in your vessels, and dwell in your cities that ye have taken."
                },
                "jer40.11": {
                    "id": 11,
                    "short": "Jer 40:11",
                    "name": "Jeremiah 40:11",
                    "scripture": "Likewise when all the Jews that were in Moab, and among the Ammonites, and in Edom, and that were in all the countries, heard that the king of Babylon had left a remnant of Judah, and that he had set over them Gedaliah the son of Ahikam the son of Shaphan;"
                },
                "jer40.12": {
                    "id": 12,
                    "short": "Jer 40:12",
                    "name": "Jeremiah 40:12",
                    "scripture": "Even all the Jews returned out of all places whither they were driven, and came to the land of Judah, to Gedaliah, unto Mizpah, and gathered wine and summer fruits very much."
                },
                "jer40.13": {
                    "id": 13,
                    "short": "Jer 40:13",
                    "name": "Jeremiah 40:13",
                    "scripture": "Moreover Johanan the son of Kareah, and all the captains of the forces that were in the fields, came to Gedaliah to Mizpah,"
                },
                "jer40.14": {
                    "id": 14,
                    "short": "Jer 40:14",
                    "name": "Jeremiah 40:14",
                    "scripture": "And said unto him, Dost thou certainly know that Baalis the king of the Ammonites hath sent Ishmael the son of Nethaniah to slay thee? But Gedaliah the son of Ahikam believed them not."
                },
                "jer40.15": {
                    "id": 15,
                    "short": "Jer 40:15",
                    "name": "Jeremiah 40:15",
                    "scripture": "Then Johanan the son of Kareah spake to Gedaliah in Mizpah secretly, saying, Let me go, I pray thee, and I will slay Ishmael the son of Nethaniah, and no man shall know it: wherefore should he slay thee, that all the Jews which are gathered unto thee should be scattered, and the remnant in Judah perish?"
                },
                "jer40.16": {
                    "id": 16,
                    "short": "Jer 40:16",
                    "name": "Jeremiah 40:16",
                    "scripture": "But Gedaliah the son of Ahikam said unto Johanan the son of Kareah, Thou shalt not do this thing: for thou speakest falsely of Ishmael."
                }
            }
        },
        "jer41": {
            "id": 41,
            "short": "Jer 41",
            "name": "Jeremiah 41",
            "verses": {
                "jer41.1": {
                    "id": 1,
                    "short": "Jer 41:1",
                    "name": "Jeremiah 41:1",
                    "scripture": "Now it came to pass in the seventh month, that Ishmael the son of Nethaniah the son of Elishama, of the seed royal, and the princes of the king, even ten men with him, came unto Gedaliah the son of Ahikam to Mizpah; and there they did eat bread together in Mizpah."
                },
                "jer41.2": {
                    "id": 2,
                    "short": "Jer 41:2",
                    "name": "Jeremiah 41:2",
                    "scripture": "Then arose Ishmael the son of Nethaniah, and the ten men that were with him, and smote Gedaliah the son of Ahikam the son of Shaphan with the sword, and slew him, whom the king of Babylon had made governor over the land."
                },
                "jer41.3": {
                    "id": 3,
                    "short": "Jer 41:3",
                    "name": "Jeremiah 41:3",
                    "scripture": "Ishmael also slew all the Jews that were with him, even with Gedaliah, at Mizpah, and the Chaldeans that were found there, and the men of war."
                },
                "jer41.4": {
                    "id": 4,
                    "short": "Jer 41:4",
                    "name": "Jeremiah 41:4",
                    "scripture": "And it came to pass the second day after he had slain Gedaliah, and no man knew it,"
                },
                "jer41.5": {
                    "id": 5,
                    "short": "Jer 41:5",
                    "name": "Jeremiah 41:5",
                    "scripture": "That there came certain from Shechem, from Shiloh, and from Samaria, even fourscore men, having their beards shaven, and their clothes rent, and having cut themselves, with offerings and incense in their hand, to bring them to the house of the Lord ."
                },
                "jer41.6": {
                    "id": 6,
                    "short": "Jer 41:6",
                    "name": "Jeremiah 41:6",
                    "scripture": "And Ishmael the son of Nethaniah went forth from Mizpah to meet them, weeping all along as he went: and it came to pass, as he met them, he said unto them, Come to Gedaliah the son of Ahikam."
                },
                "jer41.7": {
                    "id": 7,
                    "short": "Jer 41:7",
                    "name": "Jeremiah 41:7",
                    "scripture": "And it was so, when they came into the midst of the city, that Ishmael the son of Nethaniah slew them, and cast them into the midst of the pit, he, and the men that were with him."
                },
                "jer41.8": {
                    "id": 8,
                    "short": "Jer 41:8",
                    "name": "Jeremiah 41:8",
                    "scripture": "But ten men were found among them that said unto Ishmael, Slay us not: for we have treasures in the field, of wheat, and of barley, and of oil, and of honey. So he forbare, and slew them not among their brethren."
                },
                "jer41.9": {
                    "id": 9,
                    "short": "Jer 41:9",
                    "name": "Jeremiah 41:9",
                    "scripture": "Now the pit wherein Ishmael had cast all the dead bodies of the men, whom he had slain because of Gedaliah, was it which Asa the king had made for fear of Baasha king of Israel: and Ishmael the son of Nethaniah filled it with them that were slain."
                },
                "jer41.10": {
                    "id": 10,
                    "short": "Jer 41:10",
                    "name": "Jeremiah 41:10",
                    "scripture": "Then Ishmael carried away captive all the residue of the people that were in Mizpah, even the king's daughters, and all the people that remained in Mizpah, whom Nebuzarâ€“adan the captain of the guard had committed to Gedaliah the son of Ahikam: and Ishmael the son of Nethaniah carried them away captive, and departed to go over to the Ammonites."
                },
                "jer41.11": {
                    "id": 11,
                    "short": "Jer 41:11",
                    "name": "Jeremiah 41:11",
                    "scripture": "But when Johanan the son of Kareah, and all the captains of the forces that were with him, heard of all the evil that Ishmael the son of Nethaniah had done,"
                },
                "jer41.12": {
                    "id": 12,
                    "short": "Jer 41:12",
                    "name": "Jeremiah 41:12",
                    "scripture": "Then they took all the men, and went to fight with Ishmael the son of Nethaniah, and found him by the great waters that are in Gibeon."
                },
                "jer41.13": {
                    "id": 13,
                    "short": "Jer 41:13",
                    "name": "Jeremiah 41:13",
                    "scripture": "Now it came to pass, that when all the people which were with Ishmael saw Johanan the son of Kareah, and all the captains of the forces that were with him, then they were glad."
                },
                "jer41.14": {
                    "id": 14,
                    "short": "Jer 41:14",
                    "name": "Jeremiah 41:14",
                    "scripture": "So all the people that Ishmael had carried away captive from Mizpah cast about and returned, and went unto Johanan the son of Kareah."
                },
                "jer41.15": {
                    "id": 15,
                    "short": "Jer 41:15",
                    "name": "Jeremiah 41:15",
                    "scripture": "But Ishmael the son of Nethaniah escaped from Johanan with eight men, and went to the Ammonites."
                },
                "jer41.16": {
                    "id": 16,
                    "short": "Jer 41:16",
                    "name": "Jeremiah 41:16",
                    "scripture": "Then took Johanan the son of Kareah, and all the captains of the forces that were with him, all the remnant of the people whom he had recovered from Ishmael the son of Nethaniah, from Mizpah, after that he had slain Gedaliah the son of Ahikam, even mighty men of war, and the women, and the children, and the eunuchs, whom he had brought again from Gibeon:"
                },
                "jer41.17": {
                    "id": 17,
                    "short": "Jer 41:17",
                    "name": "Jeremiah 41:17",
                    "scripture": "And they departed, and dwelt in the habitation of Chimham, which is by Bethâ€“lehem, to go to enter into Egypt,"
                },
                "jer41.18": {
                    "id": 18,
                    "short": "Jer 41:18",
                    "name": "Jeremiah 41:18",
                    "scripture": "Because of the Chaldeans: for they were afraid of them, because Ishmael the son of Nethaniah had slain Gedaliah the son of Ahikam, whom the king of Babylon made governor in the land."
                }
            }
        },
        "jer42": {
            "id": 42,
            "short": "Jer 42",
            "name": "Jeremiah 42",
            "verses": {
                "jer42.1": {
                    "id": 1,
                    "short": "Jer 42:1",
                    "name": "Jeremiah 42:1",
                    "scripture": "Then all the captains of the forces, and Johanan the son of Kareah, and Jezaniah the son of Hoshaiah, and all the people from the least even unto the greatest, came near,"
                },
                "jer42.2": {
                    "id": 2,
                    "short": "Jer 42:2",
                    "name": "Jeremiah 42:2",
                    "scripture": "And said unto Jeremiah the prophet, Let, we beseech thee, our supplication be accepted before thee, and pray for us unto the Lord thy God, even for all this remnant; (for we are left but a few of many, as thine eyes do behold us:)"
                },
                "jer42.3": {
                    "id": 3,
                    "short": "Jer 42:3",
                    "name": "Jeremiah 42:3",
                    "scripture": "That the Lord thy God may shew us the way wherein we may walk, and the thing that we may do."
                },
                "jer42.4": {
                    "id": 4,
                    "short": "Jer 42:4",
                    "name": "Jeremiah 42:4",
                    "scripture": "Then Jeremiah the prophet said unto them, I have heard you; behold, I will pray unto the Lord your God according to your words; and it shall come to pass, that whatsoever thing the Lord shall answer you, I will declare it unto you; I will keep nothing back from you."
                },
                "jer42.5": {
                    "id": 5,
                    "short": "Jer 42:5",
                    "name": "Jeremiah 42:5",
                    "scripture": "Then they said to Jeremiah, The Lord be a true and faithful witness between us, if we do not even according to all things for the which the Lord thy God shall send thee to us."
                },
                "jer42.6": {
                    "id": 6,
                    "short": "Jer 42:6",
                    "name": "Jeremiah 42:6",
                    "scripture": "Whether it be good, or whether it be evil, we will obey the voice of the Lord our God, to whom we send thee; that it may be well with us, when we obey the voice of the Lord our God."
                },
                "jer42.7": {
                    "id": 7,
                    "short": "Jer 42:7",
                    "name": "Jeremiah 42:7",
                    "scripture": "And it came to pass after ten days, that the word of the Lord came unto Jeremiah."
                },
                "jer42.8": {
                    "id": 8,
                    "short": "Jer 42:8",
                    "name": "Jeremiah 42:8",
                    "scripture": "Then called he Johanan the son of Kareah, and all the captains of the forces which were with him, and all the people from the least even to the greatest,"
                },
                "jer42.9": {
                    "id": 9,
                    "short": "Jer 42:9",
                    "name": "Jeremiah 42:9",
                    "scripture": "And said unto them, Thus saith the Lord, the God of Israel, unto whom ye sent me to present your supplication before him;"
                },
                "jer42.10": {
                    "id": 10,
                    "short": "Jer 42:10",
                    "name": "Jeremiah 42:10",
                    "scripture": "If ye will still abide in this land, then will I build you, and not pull you down, and I will plant you, and not pluck you up: for I repent me of the evil that I have done unto you."
                },
                "jer42.11": {
                    "id": 11,
                    "short": "Jer 42:11",
                    "name": "Jeremiah 42:11",
                    "scripture": "Be not afraid of the king of Babylon, of whom ye are afraid; be not afraid of him, saith the Lord : for I am with you to save you, and to deliver you from his hand."
                },
                "jer42.12": {
                    "id": 12,
                    "short": "Jer 42:12",
                    "name": "Jeremiah 42:12",
                    "scripture": "And I will shew mercies unto you, that he may have mercy upon you, and cause you to return to your own land."
                },
                "jer42.13": {
                    "id": 13,
                    "short": "Jer 42:13",
                    "name": "Jeremiah 42:13",
                    "scripture": "But if ye say, We will not dwell in this land, neither obey the voice of the Lord your God,"
                },
                "jer42.14": {
                    "id": 14,
                    "short": "Jer 42:14",
                    "name": "Jeremiah 42:14",
                    "scripture": "Saying, No; but we will go into the land of Egypt, where we shall see no war, nor hear the sound of the trumpet, nor have hunger of bread; and there will we dwell:"
                },
                "jer42.15": {
                    "id": 15,
                    "short": "Jer 42:15",
                    "name": "Jeremiah 42:15",
                    "scripture": "And now therefore hear the word of the Lord, ye remnant of Judah; Thus saith the Lord of hosts, the God of Israel; If ye wholly set your faces to enter into Egypt, and go to sojourn there;"
                },
                "jer42.16": {
                    "id": 16,
                    "short": "Jer 42:16",
                    "name": "Jeremiah 42:16",
                    "scripture": "Then it shall come to pass, that the sword, which ye feared, shall overtake you there in the land of Egypt, and the famine, whereof ye were afraid, shall follow close after you there in Egypt; and there ye shall die."
                },
                "jer42.17": {
                    "id": 17,
                    "short": "Jer 42:17",
                    "name": "Jeremiah 42:17",
                    "scripture": "So shall it be with all the men that set their faces to go into Egypt to sojourn there; they shall die by the sword, by the famine, and by the pestilence: and none of them shall remain or escape from the evil that I will bring upon them."
                },
                "jer42.18": {
                    "id": 18,
                    "short": "Jer 42:18",
                    "name": "Jeremiah 42:18",
                    "scripture": "For thus saith the Lord of hosts, the God of Israel; As mine anger and my fury hath been poured forth upon the inhabitants of Jerusalem; so shall my fury be poured forth upon you, when ye shall enter into Egypt: and ye shall be an execration, and an astonishment, and a curse, and a reproach; and ye shall see this place no more."
                },
                "jer42.19": {
                    "id": 19,
                    "short": "Jer 42:19",
                    "name": "Jeremiah 42:19",
                    "scripture": "The Lord hath said concerning you, O ye remnant of Judah; Go ye not into Egypt: know certainly that I have admonished you this day."
                },
                "jer42.20": {
                    "id": 20,
                    "short": "Jer 42:20",
                    "name": "Jeremiah 42:20",
                    "scripture": "For ye dissembled in your hearts, when ye sent me unto the Lord your God, saying, Pray for us unto the Lord our God; and according unto all that the Lord our God shall say, so declare unto us, and we will do it."
                },
                "jer42.21": {
                    "id": 21,
                    "short": "Jer 42:21",
                    "name": "Jeremiah 42:21",
                    "scripture": "And now I have this day declared it to you; but ye have not obeyed the voice of the Lord your God, nor any thing for the which he hath sent me unto you."
                },
                "jer42.22": {
                    "id": 22,
                    "short": "Jer 42:22",
                    "name": "Jeremiah 42:22",
                    "scripture": "Now therefore know certainly that ye shall die by the sword, by the famine, and by the pestilence, in the place whither ye desire to go and to sojourn."
                }
            }
        },
        "jer43": {
            "id": 43,
            "short": "Jer 43",
            "name": "Jeremiah 43",
            "verses": {
                "jer43.1": {
                    "id": 1,
                    "short": "Jer 43:1",
                    "name": "Jeremiah 43:1",
                    "scripture": "And it came to pass, that when Jeremiah had made an end of speaking unto all the people all the words of the Lord their God, for which the Lord their God had sent him to them, even all these words,"
                },
                "jer43.2": {
                    "id": 2,
                    "short": "Jer 43:2",
                    "name": "Jeremiah 43:2",
                    "scripture": "Then spake Azariah the son of Hoshaiah, and Johanan the son of Kareah, and all the proud men, saying unto Jeremiah, Thou speakest falsely: the Lord our God hath not sent thee to say, Go not into Egypt to sojourn there:"
                },
                "jer43.3": {
                    "id": 3,
                    "short": "Jer 43:3",
                    "name": "Jeremiah 43:3",
                    "scripture": "But Baruch the son of Neriah setteth thee on against us, for to deliver us into the hand of the Chaldeans, that they might put us to death, and carry us away captives into Babylon."
                },
                "jer43.4": {
                    "id": 4,
                    "short": "Jer 43:4",
                    "name": "Jeremiah 43:4",
                    "scripture": "So Johanan the son of Kareah, and all the captains of the forces, and all the people, obeyed not the voice of the Lord, to dwell in the land of Judah."
                },
                "jer43.5": {
                    "id": 5,
                    "short": "Jer 43:5",
                    "name": "Jeremiah 43:5",
                    "scripture": "But Johanan the son of Kareah, and all the captains of the forces, took all the remnant of Judah, that were returned from all nations, whither they had been driven, to dwell in the land of Judah;"
                },
                "jer43.6": {
                    "id": 6,
                    "short": "Jer 43:6",
                    "name": "Jeremiah 43:6",
                    "scripture": "Even men, and women, and children, and the king's daughters, and every person that Nebuzarâ€“adan the captain of the guard had left with Gedaliah the son of Ahikam the son of Shaphan, and Jeremiah the prophet, and Baruch the son of Neriah."
                },
                "jer43.7": {
                    "id": 7,
                    "short": "Jer 43:7",
                    "name": "Jeremiah 43:7",
                    "scripture": "So they came into the land of Egypt: for they obeyed not the voice of the Lord : thus came they even to Tahpanhes."
                },
                "jer43.8": {
                    "id": 8,
                    "short": "Jer 43:8",
                    "name": "Jeremiah 43:8",
                    "scripture": "Then came the word of the Lord unto Jeremiah in Tahpanhes, saying,"
                },
                "jer43.9": {
                    "id": 9,
                    "short": "Jer 43:9",
                    "name": "Jeremiah 43:9",
                    "scripture": "Take great stones in thine hand, and hide them in the clay in the brickkiln, which is at the entry of Pharaoh's house in Tahpanhes, in the sight of the men of Judah;"
                },
                "jer43.10": {
                    "id": 10,
                    "short": "Jer 43:10",
                    "name": "Jeremiah 43:10",
                    "scripture": "And say unto them, Thus saith the Lord of hosts, the God of Israel; Behold, I will send and take Nebuchadrezzar the king of Babylon, my servant, and will set his throne upon these stones that I have hid; and he shall spread his royal pavilion over them."
                },
                "jer43.11": {
                    "id": 11,
                    "short": "Jer 43:11",
                    "name": "Jeremiah 43:11",
                    "scripture": "And when he cometh, he shall smite the land of Egypt, and deliver such as are for death to death; and such as are for captivity to captivity; and such as are for the sword to the sword."
                },
                "jer43.12": {
                    "id": 12,
                    "short": "Jer 43:12",
                    "name": "Jeremiah 43:12",
                    "scripture": "And I will kindle a fire in the houses of the gods of Egypt; and he shall burn them, and carry them away captives: and he shall array himself with the land of Egypt, as a shepherd putteth on his garment; and he shall go forth from thence in peace."
                },
                "jer43.13": {
                    "id": 13,
                    "short": "Jer 43:13",
                    "name": "Jeremiah 43:13",
                    "scripture": "He shall break also the images of Bethâ€“shemesh, that is in the land of Egypt; and the houses of the gods of the Egyptians shall he burn with fire."
                }
            }
        },
        "jer44": {
            "id": 44,
            "short": "Jer 44",
            "name": "Jeremiah 44",
            "verses": {
                "jer44.1": {
                    "id": 1,
                    "short": "Jer 44:1",
                    "name": "Jeremiah 44:1",
                    "scripture": "The word that came to Jeremiah concerning all the Jews which dwell in the land of Egypt, which dwell at Migdol, and at Tahpanhes, and at Memphis, and in the country of Pathros, saying,"
                },
                "jer44.2": {
                    "id": 2,
                    "short": "Jer 44:2",
                    "name": "Jeremiah 44:2",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel; Ye have seen all the evil that I have brought upon Jerusalem, and upon all the cities of Judah; and, behold, this day they are a desolation, and no man dwelleth therein,"
                },
                "jer44.3": {
                    "id": 3,
                    "short": "Jer 44:3",
                    "name": "Jeremiah 44:3",
                    "scripture": "Because of their wickedness which they have committed to provoke me to anger, in that they went to burn incense, and to serve other gods, whom they knew not, neither they, ye, nor your fathers."
                },
                "jer44.4": {
                    "id": 4,
                    "short": "Jer 44:4",
                    "name": "Jeremiah 44:4",
                    "scripture": "Howbeit I sent unto you all my servants the prophets, rising early and sending them, saying, Oh, do not this abominable thing that I hate."
                },
                "jer44.5": {
                    "id": 5,
                    "short": "Jer 44:5",
                    "name": "Jeremiah 44:5",
                    "scripture": "But they hearkened not, nor inclined their ear to turn from their wickedness, to burn no incense unto other gods."
                },
                "jer44.6": {
                    "id": 6,
                    "short": "Jer 44:6",
                    "name": "Jeremiah 44:6",
                    "scripture": "Wherefore my fury and mine anger was poured forth, and was kindled in the cities of Judah and in the streets of Jerusalem; and they are wasted and desolate, as at this day."
                },
                "jer44.7": {
                    "id": 7,
                    "short": "Jer 44:7",
                    "name": "Jeremiah 44:7",
                    "scripture": "Therefore now thus saith the Lord, the God of hosts, the God of Israel; Wherefore commit ye this great evil against your souls, to cut off from you man and woman, child and suckling, out of Judah, to leave you none to remain;"
                },
                "jer44.8": {
                    "id": 8,
                    "short": "Jer 44:8",
                    "name": "Jeremiah 44:8",
                    "scripture": "In that ye provoke me unto wrath with the works of your hands, burning incense unto other gods in the land of Egypt, whither ye be gone to dwell, that ye might cut yourselves off, and that ye might be a curse and a reproach among all the nations of the earth?"
                },
                "jer44.9": {
                    "id": 9,
                    "short": "Jer 44:9",
                    "name": "Jeremiah 44:9",
                    "scripture": "Have ye forgotten the wickedness of your fathers, and the wickedness of the kings of Judah, and the wickedness of their wives, and your own wickedness, and the wickedness of your wives, which they have committed in the land of Judah, and in the streets of Jerusalem?"
                },
                "jer44.10": {
                    "id": 10,
                    "short": "Jer 44:10",
                    "name": "Jeremiah 44:10",
                    "scripture": "They are not humbled even unto this day, neither have they feared, nor walked in my law, nor in my statutes, that I set before you and before your fathers."
                },
                "jer44.11": {
                    "id": 11,
                    "short": "Jer 44:11",
                    "name": "Jeremiah 44:11",
                    "scripture": "Therefore thus saith the Lord of hosts, the God of Israel; Behold, I will set my face against you for evil, and to cut off all Judah."
                },
                "jer44.12": {
                    "id": 12,
                    "short": "Jer 44:12",
                    "name": "Jeremiah 44:12",
                    "scripture": "And I will take the remnant of Judah, that have set their faces to go into the land of Egypt to sojourn there, and they shall all be consumed, and fall in the land of Egypt; they shall even be consumed by the sword and by the famine: they shall die, from the least even unto the greatest, by the sword and by the famine: and they shall be an execration, and an astonishment, and a curse, and a reproach."
                },
                "jer44.13": {
                    "id": 13,
                    "short": "Jer 44:13",
                    "name": "Jeremiah 44:13",
                    "scripture": "For I will punish them that dwell in the land of Egypt, as I have punished Jerusalem, by the sword, by the famine, and by the pestilence:"
                },
                "jer44.14": {
                    "id": 14,
                    "short": "Jer 44:14",
                    "name": "Jeremiah 44:14",
                    "scripture": "So that none of the remnant of Judah, which are gone into the land of Egypt to sojourn there, shall escape or remain, that they should return into the land of Judah, to the which they have a desire to return to dwell there: for none shall return but such as shall escape."
                },
                "jer44.15": {
                    "id": 15,
                    "short": "Jer 44:15",
                    "name": "Jeremiah 44:15",
                    "scripture": "Then all the men which knew that their wives had burned incense unto other gods, and all the women that stood by, a great multitude, even all the people that dwelt in the land of Egypt, in Pathros, answered Jeremiah, saying,"
                },
                "jer44.16": {
                    "id": 16,
                    "short": "Jer 44:16",
                    "name": "Jeremiah 44:16",
                    "scripture": "As for the word that thou hast spoken unto us in the name of the Lord, we will not hearken unto thee."
                },
                "jer44.17": {
                    "id": 17,
                    "short": "Jer 44:17",
                    "name": "Jeremiah 44:17",
                    "scripture": "But we will certainly do whatsoever thing goeth forth out of our own mouth, to burn incense unto the queen of heaven, and to pour out drink offerings unto her, as we have done, we, and our fathers, our kings, and our princes, in the cities of Judah, and in the streets of Jerusalem: for then had we plenty of victuals, and were well, and saw no evil."
                },
                "jer44.18": {
                    "id": 18,
                    "short": "Jer 44:18",
                    "name": "Jeremiah 44:18",
                    "scripture": "But since we left off to burn incense to the queen of heaven, and to pour out drink offerings unto her, we have wanted all things, and have been consumed by the sword and by the famine."
                },
                "jer44.19": {
                    "id": 19,
                    "short": "Jer 44:19",
                    "name": "Jeremiah 44:19",
                    "scripture": "And when we burned incense to the queen of heaven, and poured out drink offerings unto her, did we make her cakes to worship her, and pour out drink offerings unto her, without our men?"
                },
                "jer44.20": {
                    "id": 20,
                    "short": "Jer 44:20",
                    "name": "Jeremiah 44:20",
                    "scripture": "Then Jeremiah said unto all the people, to the men, and to the women, and to all the people which had given him that answer, saying,"
                },
                "jer44.21": {
                    "id": 21,
                    "short": "Jer 44:21",
                    "name": "Jeremiah 44:21",
                    "scripture": "The incense that ye burned in the cities of Judah, and in the streets of Jerusalem, ye, and your fathers, your kings, and your princes, and the people of the land, did not the Lord remember them, and came it not into his mind?"
                },
                "jer44.22": {
                    "id": 22,
                    "short": "Jer 44:22",
                    "name": "Jeremiah 44:22",
                    "scripture": "So that the Lord could no longer bear, because of the evil of your doings, and because of the abominations which ye have committed; therefore is your land a desolation, and an astonishment, and a curse, without an inhabitant, as at this day."
                },
                "jer44.23": {
                    "id": 23,
                    "short": "Jer 44:23",
                    "name": "Jeremiah 44:23",
                    "scripture": "Because ye have burned incense, and because ye have sinned against the Lord, and have not obeyed the voice of the Lord, nor walked in his law, nor in his statutes, nor in his testimonies; therefore this evil is happened unto you, as at this day."
                },
                "jer44.24": {
                    "id": 24,
                    "short": "Jer 44:24",
                    "name": "Jeremiah 44:24",
                    "scripture": "Moreover Jeremiah said unto all the people, and to all the women, Hear the word of the Lord, all Judah that are in the land of Egypt:"
                },
                "jer44.25": {
                    "id": 25,
                    "short": "Jer 44:25",
                    "name": "Jeremiah 44:25",
                    "scripture": "Thus saith the Lord of hosts, the God of Israel, saying; Ye and your wives have both spoken with your mouths, and fulfilled with your hand, saying, We will surely perform our vows that we have vowed, to burn incense to the queen of heaven, and to pour out drink offerings unto her: ye will surely accomplish your vows, and surely perform your vows."
                },
                "jer44.26": {
                    "id": 26,
                    "short": "Jer 44:26",
                    "name": "Jeremiah 44:26",
                    "scripture": "Therefore hear ye the word of the Lord, all Judah that dwell in the land of Egypt; Behold, I have sworn by my great name, saith the Lord, that my name shall no more be named in the mouth of any man of Judah in all the land of Egypt, saying, The Lord God liveth."
                },
                "jer44.27": {
                    "id": 27,
                    "short": "Jer 44:27",
                    "name": "Jeremiah 44:27",
                    "scripture": "Behold, I will watch over them for evil, and not for good: and all the men of Judah that are in the land of Egypt shall be consumed by the sword and by the famine, until there be an end of them."
                },
                "jer44.28": {
                    "id": 28,
                    "short": "Jer 44:28",
                    "name": "Jeremiah 44:28",
                    "scripture": "Yet a small number that escape the sword shall return out of the land of Egypt into the land of Judah, and all the remnant of Judah, that are gone into the land of Egypt to sojourn there, shall know whose words shall stand, mine, or theirs."
                },
                "jer44.29": {
                    "id": 29,
                    "short": "Jer 44:29",
                    "name": "Jeremiah 44:29",
                    "scripture": "And this shall be a sign unto you, saith the Lord, that I will punish you in this place, that ye may know that my words shall surely stand against you for evil:"
                },
                "jer44.30": {
                    "id": 30,
                    "short": "Jer 44:30",
                    "name": "Jeremiah 44:30",
                    "scripture": "Thus saith the Lord; Behold, I will give Pharaohâ€“hophra king of Egypt into the hand of his enemies, and into the hand of them that seek his life; as I gave Zedekiah king of Judah into the hand of Nebuchadrezzar king of Babylon, his enemy, and that sought his life."
                }
            }
        },
        "jer45": {
            "id": 45,
            "short": "Jer 45",
            "name": "Jeremiah 45",
            "verses": {
                "jer45.1": {
                    "id": 1,
                    "short": "Jer 45:1",
                    "name": "Jeremiah 45:1",
                    "scripture": "The word that Jeremiah the prophet spake unto Baruch the son of Neriah, when he had written these words in a book at the mouth of Jeremiah, in the fourth year of Jehoiakim the son of Josiah king of Judah, saying,"
                },
                "jer45.2": {
                    "id": 2,
                    "short": "Jer 45:2",
                    "name": "Jeremiah 45:2",
                    "scripture": "Thus saith the Lord, the God of Israel, unto thee, O Baruch;"
                },
                "jer45.3": {
                    "id": 3,
                    "short": "Jer 45:3",
                    "name": "Jeremiah 45:3",
                    "scripture": "Thou didst say, Woe is me now! for the Lord hath added grief to my sorrow; I fainted in my sighing, and I find no rest."
                },
                "jer45.4": {
                    "id": 4,
                    "short": "Jer 45:4",
                    "name": "Jeremiah 45:4",
                    "scripture": "Thus shalt thou say unto him, The Lord saith thus; Behold, that which I have built will I break down, and that which I have planted I will pluck up, even this whole land."
                },
                "jer45.5": {
                    "id": 5,
                    "short": "Jer 45:5",
                    "name": "Jeremiah 45:5",
                    "scripture": "And seekest thou great things for thyself? seek them not: for, behold, I will bring evil upon all flesh, saith the Lord : but thy life will I give unto thee for a prey in all places whither thou goest."
                }
            }
        },
        "jer46": {
            "id": 46,
            "short": "Jer 46",
            "name": "Jeremiah 46",
            "verses": {
                "jer46.1": {
                    "id": 1,
                    "short": "Jer 46:1",
                    "name": "Jeremiah 46:1",
                    "scripture": "The word of the Lord which came to Jeremiah the prophet against the Gentiles;"
                },
                "jer46.2": {
                    "id": 2,
                    "short": "Jer 46:2",
                    "name": "Jeremiah 46:2",
                    "scripture": "Against Egypt, against the army of Pharaohâ€“neco king of Egypt, which was by the river Euphrates in Carchemish, which Nebuchadrezzar king of Babylon smote in the fourth year of Jehoiakim the son of Josiah king of Judah."
                },
                "jer46.3": {
                    "id": 3,
                    "short": "Jer 46:3",
                    "name": "Jeremiah 46:3",
                    "scripture": "Order ye the buckler and shield, and draw near to battle."
                },
                "jer46.4": {
                    "id": 4,
                    "short": "Jer 46:4",
                    "name": "Jeremiah 46:4",
                    "scripture": "Harness the horses; and get up, ye horsemen, and stand forth with your helmets; furbish the spears, and put on the brigandines."
                },
                "jer46.5": {
                    "id": 5,
                    "short": "Jer 46:5",
                    "name": "Jeremiah 46:5",
                    "scripture": "Wherefore have I seen them dismayed and turned away back? and their mighty ones are beaten down, and are fled apace, and look not back: for fear was round about, saith the Lord ."
                },
                "jer46.6": {
                    "id": 6,
                    "short": "Jer 46:6",
                    "name": "Jeremiah 46:6",
                    "scripture": "Let not the swift flee away, nor the mighty man escape; they shall stumble, and fall toward the north by the river Euphrates."
                },
                "jer46.7": {
                    "id": 7,
                    "short": "Jer 46:7",
                    "name": "Jeremiah 46:7",
                    "scripture": "Who is this that cometh up as a flood, whose waters are moved as the rivers?"
                },
                "jer46.8": {
                    "id": 8,
                    "short": "Jer 46:8",
                    "name": "Jeremiah 46:8",
                    "scripture": "Egypt riseth up like a flood, and his waters are moved like the rivers; and he saith, I will go up, and will cover the earth; I will destroy the city and the inhabitants thereof."
                },
                "jer46.9": {
                    "id": 9,
                    "short": "Jer 46:9",
                    "name": "Jeremiah 46:9",
                    "scripture": "Come up, ye horses; and rage, ye chariots; and let the mighty men come forth; the Ethiopians and the Libyans, that handle the shield; and the Ludim, that handle and bend the bow."
                },
                "jer46.10": {
                    "id": 10,
                    "short": "Jer 46:10",
                    "name": "Jeremiah 46:10",
                    "scripture": "For this is the day of the Lord God of hosts, a day of vengeance, that he may avenge him of his adversaries: and the sword shall devour, and it shall be satiate and made drunk with their blood: for the Lord God of hosts hath a sacrifice in the north country by the river Euphrates."
                },
                "jer46.11": {
                    "id": 11,
                    "short": "Jer 46:11",
                    "name": "Jeremiah 46:11",
                    "scripture": "Go up into Gilead, and take balm, O virgin, the daughter of Egypt: in vain shalt thou use many medicines; for thou shalt not be cured."
                },
                "jer46.12": {
                    "id": 12,
                    "short": "Jer 46:12",
                    "name": "Jeremiah 46:12",
                    "scripture": "The nations have heard of thy shame, and thy cry hath filled the land: for the mighty man hath stumbled against the mighty, and they are fallen both together."
                },
                "jer46.13": {
                    "id": 13,
                    "short": "Jer 46:13",
                    "name": "Jeremiah 46:13",
                    "scripture": "The word that the Lord spake to Jeremiah the prophet, how Nebuchadrezzar king of Babylon should come and smite the land of Egypt."
                },
                "jer46.14": {
                    "id": 14,
                    "short": "Jer 46:14",
                    "name": "Jeremiah 46:14",
                    "scripture": "Declare ye in Egypt, and publish in Migdol, and publish in Memphis and in Tahpanhes: say ye, Stand fast, and prepare thee; for the sword shall devour round about thee."
                },
                "jer46.15": {
                    "id": 15,
                    "short": "Jer 46:15",
                    "name": "Jeremiah 46:15",
                    "scripture": "Why are thy valiant men swept away? they stood not, because the Lord did drive them."
                },
                "jer46.16": {
                    "id": 16,
                    "short": "Jer 46:16",
                    "name": "Jeremiah 46:16",
                    "scripture": "He made many to fall, yea, one fell upon another: and they said, Arise, and let us go again to our own people, and to the land of our nativity, from the oppressing sword."
                },
                "jer46.17": {
                    "id": 17,
                    "short": "Jer 46:17",
                    "name": "Jeremiah 46:17",
                    "scripture": "They did cry there, Pharaoh king of Egypt is but a noise; he hath passed the time appointed."
                },
                "jer46.18": {
                    "id": 18,
                    "short": "Jer 46:18",
                    "name": "Jeremiah 46:18",
                    "scripture": "As I live, saith the King, whose name is the Lord of hosts, Surely as Tabor is among the mountains, and as Carmel by the sea, so shall he come."
                },
                "jer46.19": {
                    "id": 19,
                    "short": "Jer 46:19",
                    "name": "Jeremiah 46:19",
                    "scripture": "O thou daughter dwelling in Egypt, furnish thyself to go into captivity: for Memphis shall be waste and desolate without an inhabitant."
                },
                "jer46.20": {
                    "id": 20,
                    "short": "Jer 46:20",
                    "name": "Jeremiah 46:20",
                    "scripture": "Egypt is like a very fair heifer, but destruction cometh; it cometh out of the north."
                },
                "jer46.21": {
                    "id": 21,
                    "short": "Jer 46:21",
                    "name": "Jeremiah 46:21",
                    "scripture": "Also her hired men are in the midst of her like fatted bullocks; for they also are turned back, and are fled away together: they did not stand, because the day of their calamity was come upon them, and the time of their visitation."
                },
                "jer46.22": {
                    "id": 22,
                    "short": "Jer 46:22",
                    "name": "Jeremiah 46:22",
                    "scripture": "The voice thereof shall go like a serpent; for they shall march with an army, and come against her with axes, as hewers of wood."
                },
                "jer46.23": {
                    "id": 23,
                    "short": "Jer 46:23",
                    "name": "Jeremiah 46:23",
                    "scripture": "They shall cut down her forest, saith the Lord, though it cannot be searched; because they are more than the grasshoppers, and are innumerable."
                },
                "jer46.24": {
                    "id": 24,
                    "short": "Jer 46:24",
                    "name": "Jeremiah 46:24",
                    "scripture": "The daughter of Egypt shall be confounded; she shall be delivered into the hand of the people of the north."
                },
                "jer46.25": {
                    "id": 25,
                    "short": "Jer 46:25",
                    "name": "Jeremiah 46:25",
                    "scripture": "The Lord of hosts, the God of Israel, saith; Behold, I will punish the multitude of No, and Pharaoh, and Egypt, with their gods, and their kings; even Pharaoh, and all them that trust in him:"
                },
                "jer46.26": {
                    "id": 26,
                    "short": "Jer 46:26",
                    "name": "Jeremiah 46:26",
                    "scripture": "And I will deliver them into the hand of those that seek their lives, and into the hand of Nebuchadrezzar king of Babylon, and into the hand of his servants: and afterward it shall be inhabited, as in the days of old, saith the Lord ."
                },
                "jer46.27": {
                    "id": 27,
                    "short": "Jer 46:27",
                    "name": "Jeremiah 46:27",
                    "scripture": "But fear not thou, O my servant Jacob, and be not dismayed, O Israel: for, behold, I will save thee from afar off, and thy seed from the land of their captivity; and Jacob shall return, and be in rest and at ease, and none shall make him afraid."
                },
                "jer46.28": {
                    "id": 28,
                    "short": "Jer 46:28",
                    "name": "Jeremiah 46:28",
                    "scripture": "Fear thou not, O Jacob my servant, saith the Lord : for I am with thee; for I will make a full end of all the nations whither I have driven thee: but I will not make a full end of thee, but correct thee in measure; yet will I not leave thee wholly unpunished."
                }
            }
        },
        "jer47": {
            "id": 47,
            "short": "Jer 47",
            "name": "Jeremiah 47",
            "verses": {
                "jer47.1": {
                    "id": 1,
                    "short": "Jer 47:1",
                    "name": "Jeremiah 47:1",
                    "scripture": "The word of the Lord that came to Jeremiah the prophet against the Philistines, before that Pharaoh smote Gaza."
                },
                "jer47.2": {
                    "id": 2,
                    "short": "Jer 47:2",
                    "name": "Jeremiah 47:2",
                    "scripture": "Thus saith the Lord; Behold, waters rise up out of the north, and shall be an overflowing flood, and shall overflow the land, and all that is therein; the city, and them that dwell therein: then the men shall cry, and all the inhabitants of the land shall howl."
                },
                "jer47.3": {
                    "id": 3,
                    "short": "Jer 47:3",
                    "name": "Jeremiah 47:3",
                    "scripture": "At the noise of the stamping of the hoofs of his strong horses, at the rushing of his chariots, and at the rumbling of his wheels, the fathers shall not look back to their children for feebleness of hands;"
                },
                "jer47.4": {
                    "id": 4,
                    "short": "Jer 47:4",
                    "name": "Jeremiah 47:4",
                    "scripture": "Because of the day that cometh to spoil all the Philistines, and to cut off from Tyre and Zidon every helper that remaineth: for the Lord will spoil the Philistines, the remnant of the country of Caphtor."
                },
                "jer47.5": {
                    "id": 5,
                    "short": "Jer 47:5",
                    "name": "Jeremiah 47:5",
                    "scripture": "Baldness is come upon Gaza; Ashkelon is cut off with the remnant of their valley: how long wilt thou cut thyself?"
                },
                "jer47.6": {
                    "id": 6,
                    "short": "Jer 47:6",
                    "name": "Jeremiah 47:6",
                    "scripture": "O thou sword of the Lord, how long will it be ere thou be quiet? put up thyself into thy scabbard, rest, and be still."
                },
                "jer47.7": {
                    "id": 7,
                    "short": "Jer 47:7",
                    "name": "Jeremiah 47:7",
                    "scripture": "How can it be quiet, seeing the Lord hath given it a charge against Ashkelon, and against the sea shore? there hath he appointed it."
                }
            }
        },
        "jer48": {
            "id": 48,
            "short": "Jer 48",
            "name": "Jeremiah 48",
            "verses": {
                "jer48.1": {
                    "id": 1,
                    "short": "Jer 48:1",
                    "name": "Jeremiah 48:1",
                    "scripture": "Against Moab thus saith the Lord of hosts, the God of Israel; Woe unto Nebo! for it is spoiled: Kiriathaim is confounded and taken: Misgab is confounded and dismayed."
                },
                "jer48.2": {
                    "id": 2,
                    "short": "Jer 48:2",
                    "name": "Jeremiah 48:2",
                    "scripture": "There shall be no more praise of Moab: in Heshbon they have devised evil against it; come, and let us cut it off from being a nation. Also thou shalt be cut down, O Madmen; the sword shall pursue thee."
                },
                "jer48.3": {
                    "id": 3,
                    "short": "Jer 48:3",
                    "name": "Jeremiah 48:3",
                    "scripture": "A voice of crying shall be from Horonaim, spoiling and great destruction."
                },
                "jer48.4": {
                    "id": 4,
                    "short": "Jer 48:4",
                    "name": "Jeremiah 48:4",
                    "scripture": "Moab is destroyed; her little ones have caused a cry to be heard."
                },
                "jer48.5": {
                    "id": 5,
                    "short": "Jer 48:5",
                    "name": "Jeremiah 48:5",
                    "scripture": "For in the going up of Luhith continual weeping shall go up; for in the going down of Horonaim the enemies have heard a cry of destruction."
                },
                "jer48.6": {
                    "id": 6,
                    "short": "Jer 48:6",
                    "name": "Jeremiah 48:6",
                    "scripture": "Flee, save your lives, and be like the heath in the wilderness."
                },
                "jer48.7": {
                    "id": 7,
                    "short": "Jer 48:7",
                    "name": "Jeremiah 48:7",
                    "scripture": "For because thou hast trusted in thy works and in thy treasures, thou shalt also be taken: and Chemosh shall go forth into captivity with his priests and his princes together."
                },
                "jer48.8": {
                    "id": 8,
                    "short": "Jer 48:8",
                    "name": "Jeremiah 48:8",
                    "scripture": "And the spoiler shall come upon every city, and no city shall escape: the valley also shall perish, and the plain shall be destroyed, as the Lord hath spoken."
                },
                "jer48.9": {
                    "id": 9,
                    "short": "Jer 48:9",
                    "name": "Jeremiah 48:9",
                    "scripture": "Give wings unto Moab, that it may flee and get away: for the cities thereof shall be desolate, without any to dwell therein."
                },
                "jer48.10": {
                    "id": 10,
                    "short": "Jer 48:10",
                    "name": "Jeremiah 48:10",
                    "scripture": "Cursed be he that doeth the work of the Lord deceitfully, and cursed be he that keepeth back his sword from blood."
                },
                "jer48.11": {
                    "id": 11,
                    "short": "Jer 48:11",
                    "name": "Jeremiah 48:11",
                    "scripture": "Moab hath been at ease from his youth, and he hath settled on his lees, and hath not been emptied from vessel to vessel, neither hath he gone into captivity: therefore his taste remained in him, and his scent is not changed."
                },
                "jer48.12": {
                    "id": 12,
                    "short": "Jer 48:12",
                    "name": "Jeremiah 48:12",
                    "scripture": "Therefore, behold, the days come, saith the Lord, that I will send unto him wanderers, that shall cause him to wander, and shall empty his vessels, and break their bottles."
                },
                "jer48.13": {
                    "id": 13,
                    "short": "Jer 48:13",
                    "name": "Jeremiah 48:13",
                    "scripture": "And Moab shall be ashamed of Chemosh, as the house of Israel was ashamed of Bethâ€“el their confidence."
                },
                "jer48.14": {
                    "id": 14,
                    "short": "Jer 48:14",
                    "name": "Jeremiah 48:14",
                    "scripture": "How say ye, We are mighty and strong men for the war?"
                },
                "jer48.15": {
                    "id": 15,
                    "short": "Jer 48:15",
                    "name": "Jeremiah 48:15",
                    "scripture": "Moab is spoiled, and gone up out of her cities, and his chosen young men are gone down to the slaughter, saith the King, whose name is the Lord of hosts."
                },
                "jer48.16": {
                    "id": 16,
                    "short": "Jer 48:16",
                    "name": "Jeremiah 48:16",
                    "scripture": "The calamity of Moab is near to come, and his affliction hasteth fast."
                },
                "jer48.17": {
                    "id": 17,
                    "short": "Jer 48:17",
                    "name": "Jeremiah 48:17",
                    "scripture": "All ye that are about him, bemoan him; and all ye that know his name, say, How is the strong staff broken, and the beautiful rod!"
                },
                "jer48.18": {
                    "id": 18,
                    "short": "Jer 48:18",
                    "name": "Jeremiah 48:18",
                    "scripture": "Thou daughter that dost inhabit Dibon, come down from thy glory, and sit in thirst; for the spoiler of Moab shall come upon thee, and he shall destroy thy strong holds."
                },
                "jer48.19": {
                    "id": 19,
                    "short": "Jer 48:19",
                    "name": "Jeremiah 48:19",
                    "scripture": "O inhabitant of Aroer, stand by the way, and espy; ask him that fleeth, and her that escapeth, and say, What is done?"
                },
                "jer48.20": {
                    "id": 20,
                    "short": "Jer 48:20",
                    "name": "Jeremiah 48:20",
                    "scripture": "Moab is confounded; for it is broken down: howl and cry; tell ye it in Arnon, that Moab is spoiled,"
                },
                "jer48.21": {
                    "id": 21,
                    "short": "Jer 48:21",
                    "name": "Jeremiah 48:21",
                    "scripture": "And judgment is come upon the plain country; upon Holon, and upon Jahzah, and upon Mephaath,"
                },
                "jer48.22": {
                    "id": 22,
                    "short": "Jer 48:22",
                    "name": "Jeremiah 48:22",
                    "scripture": "And upon Dibon, and upon Nebo, and upon Bethâ€“diblathaim,"
                },
                "jer48.23": {
                    "id": 23,
                    "short": "Jer 48:23",
                    "name": "Jeremiah 48:23",
                    "scripture": "And upon Kiriathaim, and upon Bethâ€“gamul, and upon Bethâ€“meon,"
                },
                "jer48.24": {
                    "id": 24,
                    "short": "Jer 48:24",
                    "name": "Jeremiah 48:24",
                    "scripture": "And upon Kerioth, and upon Bozrah, and upon all the cities of the land of Moab, far or near."
                },
                "jer48.25": {
                    "id": 25,
                    "short": "Jer 48:25",
                    "name": "Jeremiah 48:25",
                    "scripture": "The horn of Moab is cut off, and his arm is broken, saith the Lord ."
                },
                "jer48.26": {
                    "id": 26,
                    "short": "Jer 48:26",
                    "name": "Jeremiah 48:26",
                    "scripture": "Make ye him drunken: for he magnified himself against the Lord : Moab also shall wallow in his vomit, and he also shall be in derision."
                },
                "jer48.27": {
                    "id": 27,
                    "short": "Jer 48:27",
                    "name": "Jeremiah 48:27",
                    "scripture": "For was not Israel a derision unto thee? was he found among thieves? for since thou spakest of him, thou skippedst for joy."
                },
                "jer48.28": {
                    "id": 28,
                    "short": "Jer 48:28",
                    "name": "Jeremiah 48:28",
                    "scripture": "O ye that dwell in Moab, leave the cities, and dwell in the rock, and be like the dove that maketh her nest in the sides of the hole's mouth."
                },
                "jer48.29": {
                    "id": 29,
                    "short": "Jer 48:29",
                    "name": "Jeremiah 48:29",
                    "scripture": "We have heard the pride of Moab, (he is exceeding proud) his loftiness, and his arrogancy, and his pride, and the haughtiness of his heart."
                },
                "jer48.30": {
                    "id": 30,
                    "short": "Jer 48:30",
                    "name": "Jeremiah 48:30",
                    "scripture": "I know his wrath, saith the Lord; but it shall not be so; his lies shall not so effect it."
                },
                "jer48.31": {
                    "id": 31,
                    "short": "Jer 48:31",
                    "name": "Jeremiah 48:31",
                    "scripture": "Therefore will I howl for Moab, and I will cry out for all Moab; mine heart shall mourn for the men of Kirâ€“heres."
                },
                "jer48.32": {
                    "id": 32,
                    "short": "Jer 48:32",
                    "name": "Jeremiah 48:32",
                    "scripture": "O vine of Sibmah, I will weep for thee with the weeping of Jazer: thy plants are gone over the sea, they reach even to the sea of Jazer: the spoiler is fallen upon thy summer fruits and upon thy vintage."
                },
                "jer48.33": {
                    "id": 33,
                    "short": "Jer 48:33",
                    "name": "Jeremiah 48:33",
                    "scripture": "And joy and gladness is taken from the plentiful field, and from the land of Moab; and I have caused wine to fail from the winepresses: none shall tread with shouting; their shouting shall be no shouting."
                },
                "jer48.34": {
                    "id": 34,
                    "short": "Jer 48:34",
                    "name": "Jeremiah 48:34",
                    "scripture": "From the cry of Heshbon even unto Elealeh, and even unto Jahaz, have they uttered their voice, from Zoar even unto Horonaim, as an heifer of three years old: for the waters also of Nimrim shall be desolate."
                },
                "jer48.35": {
                    "id": 35,
                    "short": "Jer 48:35",
                    "name": "Jeremiah 48:35",
                    "scripture": "Moreover I will cause to cease in Moab, saith the Lord, him that offereth in the high places, and him that burneth incense to his gods."
                },
                "jer48.36": {
                    "id": 36,
                    "short": "Jer 48:36",
                    "name": "Jeremiah 48:36",
                    "scripture": "Therefore mine heart shall sound for Moab like pipes, and mine heart shall sound like pipes for the men of Kirâ€“heres: because the riches that he hath gotten are perished."
                },
                "jer48.37": {
                    "id": 37,
                    "short": "Jer 48:37",
                    "name": "Jeremiah 48:37",
                    "scripture": "For every head shall be bald, and every beard clipped: upon all the hands shall be cuttings, and upon the loins sackcloth."
                },
                "jer48.38": {
                    "id": 38,
                    "short": "Jer 48:38",
                    "name": "Jeremiah 48:38",
                    "scripture": "There shall be lamentation generally upon all the housetops of Moab, and in the streets thereof: for I have broken Moab like a vessel wherein is no pleasure, saith the Lord ."
                },
                "jer48.39": {
                    "id": 39,
                    "short": "Jer 48:39",
                    "name": "Jeremiah 48:39",
                    "scripture": "They shall howl, saying, How is it broken down! how hath Moab turned the back with shame! so shall Moab be a derision and a dismaying to all them about him."
                },
                "jer48.40": {
                    "id": 40,
                    "short": "Jer 48:40",
                    "name": "Jeremiah 48:40",
                    "scripture": "For thus saith the Lord; Behold, he shall fly as an eagle, and shall spread his wings over Moab."
                },
                "jer48.41": {
                    "id": 41,
                    "short": "Jer 48:41",
                    "name": "Jeremiah 48:41",
                    "scripture": "Kerioth is taken, and the strong holds are surprised, and the mighty men's hearts in Moab at that day shall be as the heart of a woman in her pangs."
                },
                "jer48.42": {
                    "id": 42,
                    "short": "Jer 48:42",
                    "name": "Jeremiah 48:42",
                    "scripture": "And Moab shall be destroyed from being a people, because he hath magnified himself against the Lord ."
                },
                "jer48.43": {
                    "id": 43,
                    "short": "Jer 48:43",
                    "name": "Jeremiah 48:43",
                    "scripture": "Fear, and the pit, and the snare, shall be upon thee, O inhabitant of Moab, saith the Lord ."
                },
                "jer48.44": {
                    "id": 44,
                    "short": "Jer 48:44",
                    "name": "Jeremiah 48:44",
                    "scripture": "He that fleeth from the fear shall fall into the pit; and he that getteth up out of the pit shall be taken in the snare: for I will bring upon it, even upon Moab, the year of their visitation, saith the Lord ."
                },
                "jer48.45": {
                    "id": 45,
                    "short": "Jer 48:45",
                    "name": "Jeremiah 48:45",
                    "scripture": "They that fled stood under the shadow of Heshbon because of the force: but a fire shall come forth out of Heshbon, and a flame from the midst of Sihon, and shall devour the corner of Moab, and the crown of the head of the tumultuous ones."
                },
                "jer48.46": {
                    "id": 46,
                    "short": "Jer 48:46",
                    "name": "Jeremiah 48:46",
                    "scripture": "Woe be unto thee, O Moab! the people of Chemosh perisheth: for thy sons are taken captives, and thy daughters captives."
                },
                "jer48.47": {
                    "id": 47,
                    "short": "Jer 48:47",
                    "name": "Jeremiah 48:47",
                    "scripture": "Yet will I bring again the captivity of Moab in the latter days, saith the Lord . Thus far is the judgment of Moab."
                }
            }
        },
        "jer49": {
            "id": 49,
            "short": "Jer 49",
            "name": "Jeremiah 49",
            "verses": {
                "jer49.1": {
                    "id": 1,
                    "short": "Jer 49:1",
                    "name": "Jeremiah 49:1",
                    "scripture": "Concerning the Ammonites, thus saith the Lord; Hath Israel no sons? hath he no heir? why then doth their king inherit Gad, and his people dwell in his cities?"
                },
                "jer49.2": {
                    "id": 2,
                    "short": "Jer 49:2",
                    "name": "Jeremiah 49:2",
                    "scripture": "Therefore, behold, the days come, saith the Lord, that I will cause an alarm of war to be heard in Rabbah of the Ammonites; and it shall be a desolate heap, and her daughters shall be burned with fire: then shall Israel be heir unto them that were his heirs, saith the Lord ."
                },
                "jer49.3": {
                    "id": 3,
                    "short": "Jer 49:3",
                    "name": "Jeremiah 49:3",
                    "scripture": "Howl, O Heshbon, for Ai is spoiled: cry, ye daughters of Rabbah, gird you with sackcloth; lament, and run to and fro by the hedges; for their king shall go into captivity, and his priests and his princes together."
                },
                "jer49.4": {
                    "id": 4,
                    "short": "Jer 49:4",
                    "name": "Jeremiah 49:4",
                    "scripture": "Wherefore gloriest thou in the valleys, thy flowing valley, O backsliding daughter? that trusted in her treasures, saying, Who shall come unto me?"
                },
                "jer49.5": {
                    "id": 5,
                    "short": "Jer 49:5",
                    "name": "Jeremiah 49:5",
                    "scripture": "Behold, I will bring a fear upon thee, saith the Lord God of hosts, from all those that be about thee; and ye shall be driven out every man right forth; and none shall gather up him that wandereth."
                },
                "jer49.6": {
                    "id": 6,
                    "short": "Jer 49:6",
                    "name": "Jeremiah 49:6",
                    "scripture": "And afterward I will bring again the captivity of the children of Ammon, saith the Lord ."
                },
                "jer49.7": {
                    "id": 7,
                    "short": "Jer 49:7",
                    "name": "Jeremiah 49:7",
                    "scripture": "Concerning Edom, thus saith the Lord of hosts; Is wisdom no more in Teman? is counsel perished from the prudent? is their wisdom vanished?"
                },
                "jer49.8": {
                    "id": 8,
                    "short": "Jer 49:8",
                    "name": "Jeremiah 49:8",
                    "scripture": "Flee ye, turn back, dwell deep, O inhabitants of Dedan; for I will bring the calamity of Esau upon him, the time that I will visit him."
                },
                "jer49.9": {
                    "id": 9,
                    "short": "Jer 49:9",
                    "name": "Jeremiah 49:9",
                    "scripture": "If grapegatherers come to thee, would they not leave some gleaning grapes? if thieves by night, they will destroy till they have enough."
                },
                "jer49.10": {
                    "id": 10,
                    "short": "Jer 49:10",
                    "name": "Jeremiah 49:10",
                    "scripture": "But I have made Esau bare, I have uncovered his secret places, and he shall not be able to hide himself: his seed is spoiled, and his brethren, and his neighbours, and he is not."
                },
                "jer49.11": {
                    "id": 11,
                    "short": "Jer 49:11",
                    "name": "Jeremiah 49:11",
                    "scripture": "Leave thy fatherless children, I will preserve them alive; and let thy widows trust in me."
                },
                "jer49.12": {
                    "id": 12,
                    "short": "Jer 49:12",
                    "name": "Jeremiah 49:12",
                    "scripture": "For thus saith the Lord; Behold, they whose judgment was not to drink of the cup have assuredly drunken; and art thou he that shall altogether go unpunished? thou shalt not go unpunished, but thou shalt surely drink of it."
                },
                "jer49.13": {
                    "id": 13,
                    "short": "Jer 49:13",
                    "name": "Jeremiah 49:13",
                    "scripture": "For I have sworn by myself, saith the Lord, that Bozrah shall become a desolation, a reproach, a waste, and a curse; and all the cities thereof shall be perpetual wastes."
                },
                "jer49.14": {
                    "id": 14,
                    "short": "Jer 49:14",
                    "name": "Jeremiah 49:14",
                    "scripture": "I have heard a rumour from the Lord, and an ambassador is sent unto the heathen, saying, Gather ye together, and come against her, and rise up to the battle."
                },
                "jer49.15": {
                    "id": 15,
                    "short": "Jer 49:15",
                    "name": "Jeremiah 49:15",
                    "scripture": "For, lo, I will make thee small among the heathen, and despised among men."
                },
                "jer49.16": {
                    "id": 16,
                    "short": "Jer 49:16",
                    "name": "Jeremiah 49:16",
                    "scripture": "Thy terribleness hath deceived thee, and the pride of thine heart, O thou that dwellest in the clefts of the rock, that holdest the height of the hill: though thou shouldest make thy nest as high as the eagle, I will bring thee down from thence, saith the Lord ."
                },
                "jer49.17": {
                    "id": 17,
                    "short": "Jer 49:17",
                    "name": "Jeremiah 49:17",
                    "scripture": "Also Edom shall be a desolation: every one that goeth by it shall be astonished, and shall hiss at all the plagues thereof."
                },
                "jer49.18": {
                    "id": 18,
                    "short": "Jer 49:18",
                    "name": "Jeremiah 49:18",
                    "scripture": "As in the overthrow of Sodom and Gomorrah and the neighbour cities thereof, saith the Lord, no man shall abide there, neither shall a son of man dwell in it."
                },
                "jer49.19": {
                    "id": 19,
                    "short": "Jer 49:19",
                    "name": "Jeremiah 49:19",
                    "scripture": "Behold, he shall come up like a lion from the swelling of Jordan against the habitation of the strong: but I will suddenly make him run away from her: and who is a chosen man, that I may appoint over her? for who is like me? and who will appoint me the time? and who is that shepherd that will stand before me?"
                },
                "jer49.20": {
                    "id": 20,
                    "short": "Jer 49:20",
                    "name": "Jeremiah 49:20",
                    "scripture": "Therefore hear the counsel of the Lord, that he hath taken against Edom; and his purposes, that he hath purposed against the inhabitants of Teman: Surely the least of the flock shall draw them out: surely he shall make their habitations desolate with them."
                },
                "jer49.21": {
                    "id": 21,
                    "short": "Jer 49:21",
                    "name": "Jeremiah 49:21",
                    "scripture": "The earth is moved at the noise of their fall, at the cry the noise thereof was heard in the Red sea."
                },
                "jer49.22": {
                    "id": 22,
                    "short": "Jer 49:22",
                    "name": "Jeremiah 49:22",
                    "scripture": "Behold, he shall come up and fly as the eagle, and spread his wings over Bozrah: and at that day shall the heart of the mighty men of Edom be as the heart of a woman in her pangs."
                },
                "jer49.23": {
                    "id": 23,
                    "short": "Jer 49:23",
                    "name": "Jeremiah 49:23",
                    "scripture": "Concerning Damascus. Hamath is confounded, and Arpad: for they have heard evil tidings: they are fainthearted; there is sorrow on the sea; it cannot be quiet."
                },
                "jer49.24": {
                    "id": 24,
                    "short": "Jer 49:24",
                    "name": "Jeremiah 49:24",
                    "scripture": "Damascus is waxed feeble, and turneth herself to flee, and fear hath seized on her: anguish and sorrows have taken her, as a woman in travail."
                },
                "jer49.25": {
                    "id": 25,
                    "short": "Jer 49:25",
                    "name": "Jeremiah 49:25",
                    "scripture": "How is the city of praise not left, the city of my joy!"
                },
                "jer49.26": {
                    "id": 26,
                    "short": "Jer 49:26",
                    "name": "Jeremiah 49:26",
                    "scripture": "Therefore her young men shall fall in her streets, and all the men of war shall be cut off in that day, saith the Lord of hosts."
                },
                "jer49.27": {
                    "id": 27,
                    "short": "Jer 49:27",
                    "name": "Jeremiah 49:27",
                    "scripture": "And I will kindle a fire in the wall of Damascus, and it shall consume the palaces of Benâ€“hadad."
                },
                "jer49.28": {
                    "id": 28,
                    "short": "Jer 49:28",
                    "name": "Jeremiah 49:28",
                    "scripture": "Concerning Kedar, and concerning the kingdoms of Hazor, which Nebuchadrezzar king of Babylon shall smite, thus saith the Lord; Arise ye, go up to Kedar, and spoil the men of the east."
                },
                "jer49.29": {
                    "id": 29,
                    "short": "Jer 49:29",
                    "name": "Jeremiah 49:29",
                    "scripture": "Their tents and their flocks shall they take away: they shall take to themselves their curtains, and all their vessels, and their camels; and they shall cry unto them, Fear is on every side."
                },
                "jer49.30": {
                    "id": 30,
                    "short": "Jer 49:30",
                    "name": "Jeremiah 49:30",
                    "scripture": "Flee, get you far off, dwell deep, O ye inhabitants of Hazor, saith the Lord; for Nebuchadrezzar king of Babylon hath taken counsel against you, and hath conceived a purpose against you."
                },
                "jer49.31": {
                    "id": 31,
                    "short": "Jer 49:31",
                    "name": "Jeremiah 49:31",
                    "scripture": "Arise, get you up unto the wealthy nation, that dwelleth without care, saith the Lord, which have neither gates nor bars, which dwell alone."
                },
                "jer49.32": {
                    "id": 32,
                    "short": "Jer 49:32",
                    "name": "Jeremiah 49:32",
                    "scripture": "And their camels shall be a booty, and the multitude of their cattle a spoil: and I will scatter into all winds them that are in the utmost corners; and I will bring their calamity from all sides thereof, saith the Lord ."
                },
                "jer49.33": {
                    "id": 33,
                    "short": "Jer 49:33",
                    "name": "Jeremiah 49:33",
                    "scripture": "And Hazor shall be a dwelling for dragons, and a desolation for ever: there shall no man abide there, nor any son of man dwell in it."
                },
                "jer49.34": {
                    "id": 34,
                    "short": "Jer 49:34",
                    "name": "Jeremiah 49:34",
                    "scripture": "The word of the Lord that came to Jeremiah the prophet against Elam in the beginning of the reign of Zedekiah king of Judah, saying,"
                },
                "jer49.35": {
                    "id": 35,
                    "short": "Jer 49:35",
                    "name": "Jeremiah 49:35",
                    "scripture": "Thus saith the Lord of hosts; Behold, I will break the bow of Elam, the chief of their might."
                },
                "jer49.36": {
                    "id": 36,
                    "short": "Jer 49:36",
                    "name": "Jeremiah 49:36",
                    "scripture": "And upon Elam will I bring the four winds from the four quarters of heaven, and will scatter them toward all those winds; and there shall be no nation whither the outcasts of Elam shall not come."
                },
                "jer49.37": {
                    "id": 37,
                    "short": "Jer 49:37",
                    "name": "Jeremiah 49:37",
                    "scripture": "For I will cause Elam to be dismayed before their enemies, and before them that seek their life: and I will bring evil upon them, even my fierce anger, saith the Lord; and I will send the sword after them, till I have consumed them:"
                },
                "jer49.38": {
                    "id": 38,
                    "short": "Jer 49:38",
                    "name": "Jeremiah 49:38",
                    "scripture": "And I will set my throne in Elam, and will destroy from thence the king and the princes, saith the Lord ."
                },
                "jer49.39": {
                    "id": 39,
                    "short": "Jer 49:39",
                    "name": "Jeremiah 49:39",
                    "scripture": "But it shall come to pass in the latter days, that I will bring again the captivity of Elam, saith the Lord ."
                }
            }
        },
        "jer50": {
            "id": 50,
            "short": "Jer 50",
            "name": "Jeremiah 50",
            "verses": {
                "jer50.1": {
                    "id": 1,
                    "short": "Jer 50:1",
                    "name": "Jeremiah 50:1",
                    "scripture": "The word that the Lord spake against Babylon and against the land of the Chaldeans by Jeremiah the prophet."
                },
                "jer50.2": {
                    "id": 2,
                    "short": "Jer 50:2",
                    "name": "Jeremiah 50:2",
                    "scripture": "Declare ye among the nations, and publish, and set up a standard; publish, and conceal not: say, Babylon is taken, Bel is confounded, Merodach is broken in pieces; her idols are confounded, her images are broken in pieces."
                },
                "jer50.3": {
                    "id": 3,
                    "short": "Jer 50:3",
                    "name": "Jeremiah 50:3",
                    "scripture": "For out of the north there cometh up a nation against her, which shall make her land desolate, and none shall dwell therein: they shall remove, they shall depart, both man and beast."
                },
                "jer50.4": {
                    "id": 4,
                    "short": "Jer 50:4",
                    "name": "Jeremiah 50:4",
                    "scripture": "In those days, and in that time, saith the Lord, the children of Israel shall come, they and the children of Judah together, going and weeping: they shall go, and seek the Lord their God."
                },
                "jer50.5": {
                    "id": 5,
                    "short": "Jer 50:5",
                    "name": "Jeremiah 50:5",
                    "scripture": "They shall ask the way to Zion with their faces thitherward, saying, Come, and let us join ourselves to the Lord in a perpetual covenant that shall not be forgotten."
                },
                "jer50.6": {
                    "id": 6,
                    "short": "Jer 50:6",
                    "name": "Jeremiah 50:6",
                    "scripture": "My people hath been lost sheep: their shepherds have caused them to go astray, they have turned them away on the mountains: they have gone from mountain to hill, they have forgotten their restingplace."
                },
                "jer50.7": {
                    "id": 7,
                    "short": "Jer 50:7",
                    "name": "Jeremiah 50:7",
                    "scripture": "All that found them have devoured them: and their adversaries said, We offend not, because they have sinned against the Lord, the habitation of justice, even the Lord, the hope of their fathers."
                },
                "jer50.8": {
                    "id": 8,
                    "short": "Jer 50:8",
                    "name": "Jeremiah 50:8",
                    "scripture": "Remove out of the midst of Babylon, and go forth out of the land of the Chaldeans, and be as the he goats before the flocks."
                },
                "jer50.9": {
                    "id": 9,
                    "short": "Jer 50:9",
                    "name": "Jeremiah 50:9",
                    "scripture": "For, lo, I will raise and cause to come up against Babylon an assembly of great nations from the north country: and they shall set themselves in array against her; from thence she shall be taken: their arrows shall be as of a mighty expert man; none shall return in vain."
                },
                "jer50.10": {
                    "id": 10,
                    "short": "Jer 50:10",
                    "name": "Jeremiah 50:10",
                    "scripture": "And Chaldea shall be a spoil: all that spoil her shall be satisfied, saith the Lord ."
                },
                "jer50.11": {
                    "id": 11,
                    "short": "Jer 50:11",
                    "name": "Jeremiah 50:11",
                    "scripture": "Because ye were glad, because ye rejoiced, O ye destroyers of mine heritage, because ye are grown fat as the heifer at grass, and bellow as bulls;"
                },
                "jer50.12": {
                    "id": 12,
                    "short": "Jer 50:12",
                    "name": "Jeremiah 50:12",
                    "scripture": "Your mother shall be sore confounded; she that bare you shall be ashamed: behold, the hindermost of the nations shall be a wilderness, a dry land, and a desert."
                },
                "jer50.13": {
                    "id": 13,
                    "short": "Jer 50:13",
                    "name": "Jeremiah 50:13",
                    "scripture": "Because of the wrath of the Lord it shall not be inhabited, but it shall be wholly desolate: every one that goeth by Babylon shall be astonished, and hiss at all her plagues."
                },
                "jer50.14": {
                    "id": 14,
                    "short": "Jer 50:14",
                    "name": "Jeremiah 50:14",
                    "scripture": "Put yourselves in array against Babylon round about: all ye that bend the bow, shoot at her, spare no arrows: for she hath sinned against the Lord ."
                },
                "jer50.15": {
                    "id": 15,
                    "short": "Jer 50:15",
                    "name": "Jeremiah 50:15",
                    "scripture": "Shout against her round about: she hath given her hand: her foundations are fallen, her walls are thrown down: for it is the vengeance of the Lord : take vengeance upon her; as she hath done, do unto her."
                },
                "jer50.16": {
                    "id": 16,
                    "short": "Jer 50:16",
                    "name": "Jeremiah 50:16",
                    "scripture": "Cut off the sower from Babylon, and him that handleth the sickle in the time of harvest: for fear of the oppressing sword they shall turn every one to his people, and they shall flee every one to his own land."
                },
                "jer50.17": {
                    "id": 17,
                    "short": "Jer 50:17",
                    "name": "Jeremiah 50:17",
                    "scripture": "Israel is a scattered sheep; the lions have driven him away: first the king of Assyria hath devoured him; and last this Nebuchadrezzar king of Babylon hath broken his bones."
                },
                "jer50.18": {
                    "id": 18,
                    "short": "Jer 50:18",
                    "name": "Jeremiah 50:18",
                    "scripture": "Therefore thus saith the Lord of hosts, the God of Israel; Behold, I will punish the king of Babylon and his land, as I have punished the king of Assyria."
                },
                "jer50.19": {
                    "id": 19,
                    "short": "Jer 50:19",
                    "name": "Jeremiah 50:19",
                    "scripture": "And I will bring Israel again to his habitation, and he shall feed on Carmel and Bashan, and his soul shall be satisfied upon mount Ephraim and Gilead."
                },
                "jer50.20": {
                    "id": 20,
                    "short": "Jer 50:20",
                    "name": "Jeremiah 50:20",
                    "scripture": "In those days, and in that time, saith the Lord, the iniquity of Israel shall be sought for, and there shall be none; and the sins of Judah, and they shall not be found: for I will pardon them whom I reserve."
                },
                "jer50.21": {
                    "id": 21,
                    "short": "Jer 50:21",
                    "name": "Jeremiah 50:21",
                    "scripture": "Go up against the land of Merathaim, even against it, and against the inhabitants of Pekod: waste and utterly destroy after them, saith the Lord, and do according to all that I have commanded thee."
                },
                "jer50.22": {
                    "id": 22,
                    "short": "Jer 50:22",
                    "name": "Jeremiah 50:22",
                    "scripture": "A sound of battle is in the land, and of great destruction."
                },
                "jer50.23": {
                    "id": 23,
                    "short": "Jer 50:23",
                    "name": "Jeremiah 50:23",
                    "scripture": "How is the hammer of the whole earth cut asunder and broken! how is Babylon become a desolation among the nations!"
                },
                "jer50.24": {
                    "id": 24,
                    "short": "Jer 50:24",
                    "name": "Jeremiah 50:24",
                    "scripture": "I have laid a snare for thee, and thou art also taken, O Babylon, and thou wast not aware: thou art found, and also caught, because thou hast striven against the Lord ."
                },
                "jer50.25": {
                    "id": 25,
                    "short": "Jer 50:25",
                    "name": "Jeremiah 50:25",
                    "scripture": "The Lord hath opened his armoury, and hath brought forth the weapons of his indignation: for this is the work of the Lord God of hosts in the land of the Chaldeans."
                },
                "jer50.26": {
                    "id": 26,
                    "short": "Jer 50:26",
                    "name": "Jeremiah 50:26",
                    "scripture": "Come against her from the utmost border, open her storehouses: cast her up as heaps, and destroy her utterly: let nothing of her be left."
                },
                "jer50.27": {
                    "id": 27,
                    "short": "Jer 50:27",
                    "name": "Jeremiah 50:27",
                    "scripture": "Slay all her bullocks; let them go down to the slaughter: woe unto them! for their day is come, the time of their visitation."
                },
                "jer50.28": {
                    "id": 28,
                    "short": "Jer 50:28",
                    "name": "Jeremiah 50:28",
                    "scripture": "The voice of them that flee and escape out of the land of Babylon, to declare in Zion the vengeance of the Lord our God, the vengeance of his temple."
                },
                "jer50.29": {
                    "id": 29,
                    "short": "Jer 50:29",
                    "name": "Jeremiah 50:29",
                    "scripture": "Call together the archers against Babylon: all ye that bend the bow, camp against it round about; let none thereof escape: recompense her according to her work; according to all that she hath done, do unto her: for she hath been proud against the Lord, against the Holy One of Israel."
                },
                "jer50.30": {
                    "id": 30,
                    "short": "Jer 50:30",
                    "name": "Jeremiah 50:30",
                    "scripture": "Therefore shall her young men fall in the streets, and all her men of war shall be cut off in that day, saith the Lord ."
                },
                "jer50.31": {
                    "id": 31,
                    "short": "Jer 50:31",
                    "name": "Jeremiah 50:31",
                    "scripture": "Behold, I am against thee, O thou most proud, saith the Lord God of hosts: for thy day is come, the time that I will visit thee."
                },
                "jer50.32": {
                    "id": 32,
                    "short": "Jer 50:32",
                    "name": "Jeremiah 50:32",
                    "scripture": "And the most proud shall stumble and fall, and none shall raise him up: and I will kindle a fire in his cities, and it shall devour all round about him."
                },
                "jer50.33": {
                    "id": 33,
                    "short": "Jer 50:33",
                    "name": "Jeremiah 50:33",
                    "scripture": "Thus saith the Lord of hosts; The children of Israel and the children of Judah were oppressed together: and all that took them captives held them fast; they refused to let them go."
                },
                "jer50.34": {
                    "id": 34,
                    "short": "Jer 50:34",
                    "name": "Jeremiah 50:34",
                    "scripture": "Their Redeemer is strong; the Lord of hosts is his name: he shall thoroughly plead their cause, that he may give rest to the land, and disquiet the inhabitants of Babylon."
                },
                "jer50.35": {
                    "id": 35,
                    "short": "Jer 50:35",
                    "name": "Jeremiah 50:35",
                    "scripture": "A sword is upon the Chaldeans, saith the Lord, and upon the inhabitants of Babylon, and upon her princes, and upon her wise men."
                },
                "jer50.36": {
                    "id": 36,
                    "short": "Jer 50:36",
                    "name": "Jeremiah 50:36",
                    "scripture": "A sword is upon the liars; and they shall dote: a sword is upon her mighty men; and they shall be dismayed."
                },
                "jer50.37": {
                    "id": 37,
                    "short": "Jer 50:37",
                    "name": "Jeremiah 50:37",
                    "scripture": "A sword is upon their horses, and upon their chariots, and upon all the mingled people that are in the midst of her; and they shall become as women: a sword is upon her treasures; and they shall be robbed."
                },
                "jer50.38": {
                    "id": 38,
                    "short": "Jer 50:38",
                    "name": "Jeremiah 50:38",
                    "scripture": "A drought is upon her waters; and they shall be dried up: for it is the land of graven images, and they are mad upon their idols."
                },
                "jer50.39": {
                    "id": 39,
                    "short": "Jer 50:39",
                    "name": "Jeremiah 50:39",
                    "scripture": "Therefore the wild beasts of the desert with the wild beasts of the islands shall dwell there, and the owls shall dwell therein: and it shall be no more inhabited for ever; neither shall it be dwelt in from generation to generation."
                },
                "jer50.40": {
                    "id": 40,
                    "short": "Jer 50:40",
                    "name": "Jeremiah 50:40",
                    "scripture": "As God overthrew Sodom and Gomorrah and the neighbour cities thereof, saith the Lord; so shall no man abide there, neither shall any son of man dwell therein."
                },
                "jer50.41": {
                    "id": 41,
                    "short": "Jer 50:41",
                    "name": "Jeremiah 50:41",
                    "scripture": "Behold, a people shall come from the north, and a great nation, and many kings shall be raised up from the coasts of the earth."
                },
                "jer50.42": {
                    "id": 42,
                    "short": "Jer 50:42",
                    "name": "Jeremiah 50:42",
                    "scripture": "They shall hold the bow and the lance: they are cruel, and will not shew mercy: their voice shall roar like the sea, and they shall ride upon horses, every one put in array, like a man to the battle, against thee, O daughter of Babylon."
                },
                "jer50.43": {
                    "id": 43,
                    "short": "Jer 50:43",
                    "name": "Jeremiah 50:43",
                    "scripture": "The king of Babylon hath heard the report of them, and his hands waxed feeble: anguish took hold of him, and pangs as of a woman in travail."
                },
                "jer50.44": {
                    "id": 44,
                    "short": "Jer 50:44",
                    "name": "Jeremiah 50:44",
                    "scripture": "Behold, he shall come up like a lion from the swelling of Jordan unto the habitation of the strong: but I will make them suddenly run away from her: and who is a chosen man, that I may appoint over her? for who is like me? and who will appoint me the time? and who is that shepherd that will stand before me?"
                },
                "jer50.45": {
                    "id": 45,
                    "short": "Jer 50:45",
                    "name": "Jeremiah 50:45",
                    "scripture": "Therefore hear ye the counsel of the Lord, that he hath taken against Babylon; and his purposes, that he hath purposed against the land of the Chaldeans: Surely the least of the flock shall draw them out: surely he shall make their habitation desolate with them."
                },
                "jer50.46": {
                    "id": 46,
                    "short": "Jer 50:46",
                    "name": "Jeremiah 50:46",
                    "scripture": "At the noise of the taking of Babylon the earth is moved, and the cry is heard among the nations."
                }
            }
        },
        "jer51": {
            "id": 51,
            "short": "Jer 51",
            "name": "Jeremiah 51",
            "verses": {
                "jer51.1": {
                    "id": 1,
                    "short": "Jer 51:1",
                    "name": "Jeremiah 51:1",
                    "scripture": "Thus saith the Lord; Behold, I will raise up against Babylon, and against them that dwell in the midst of them that rise up against me, a destroying wind;"
                },
                "jer51.2": {
                    "id": 2,
                    "short": "Jer 51:2",
                    "name": "Jeremiah 51:2",
                    "scripture": "And will send unto Babylon fanners, that shall fan her, and shall empty her land: for in the day of trouble they shall be against her round about."
                },
                "jer51.3": {
                    "id": 3,
                    "short": "Jer 51:3",
                    "name": "Jeremiah 51:3",
                    "scripture": "Against him that bendeth let the archer bend his bow, and against him that lifteth himself up in his brigandine: and spare ye not her young men; destroy ye utterly all her host."
                },
                "jer51.4": {
                    "id": 4,
                    "short": "Jer 51:4",
                    "name": "Jeremiah 51:4",
                    "scripture": "Thus the slain shall fall in the land of the Chaldeans, and they that are thrust through in her streets."
                },
                "jer51.5": {
                    "id": 5,
                    "short": "Jer 51:5",
                    "name": "Jeremiah 51:5",
                    "scripture": "For Israel hath not been forsaken, nor Judah of his God, of the Lord of hosts; though their land was filled with sin against the Holy One of Israel."
                },
                "jer51.6": {
                    "id": 6,
                    "short": "Jer 51:6",
                    "name": "Jeremiah 51:6",
                    "scripture": "Flee out of the midst of Babylon, and deliver every man his soul: be not cut off in her iniquity; for this is the time of the Lord's vengeance; he will render unto her a recompence."
                },
                "jer51.7": {
                    "id": 7,
                    "short": "Jer 51:7",
                    "name": "Jeremiah 51:7",
                    "scripture": "Babylon hath been a golden cup in the Lord's hand, that made all the earth drunken: the nations have drunken of her wine; therefore the nations are mad."
                },
                "jer51.8": {
                    "id": 8,
                    "short": "Jer 51:8",
                    "name": "Jeremiah 51:8",
                    "scripture": "Babylon is suddenly fallen and destroyed: howl for her; take balm for her pain, if so be she may be healed."
                },
                "jer51.9": {
                    "id": 9,
                    "short": "Jer 51:9",
                    "name": "Jeremiah 51:9",
                    "scripture": "We would have healed Babylon, but she is not healed: forsake her, and let us go every one into his own country: for her judgment reacheth unto heaven, and is lifted up even to the skies."
                },
                "jer51.10": {
                    "id": 10,
                    "short": "Jer 51:10",
                    "name": "Jeremiah 51:10",
                    "scripture": "The Lord hath brought forth our righteousness: come, and let us declare in Zion the work of the Lord our God."
                },
                "jer51.11": {
                    "id": 11,
                    "short": "Jer 51:11",
                    "name": "Jeremiah 51:11",
                    "scripture": "Make bright the arrows; gather the shields: the Lord hath raised up the spirit of the kings of the Medes: for his device is against Babylon, to destroy it; because it is the vengeance of the Lord, the vengeance of his temple."
                },
                "jer51.12": {
                    "id": 12,
                    "short": "Jer 51:12",
                    "name": "Jeremiah 51:12",
                    "scripture": "Set up the standard upon the walls of Babylon, make the watch strong, set up the watchmen, prepare the ambushes: for the Lord hath both devised and done that which he spake against the inhabitants of Babylon."
                },
                "jer51.13": {
                    "id": 13,
                    "short": "Jer 51:13",
                    "name": "Jeremiah 51:13",
                    "scripture": "O thou that dwellest upon many waters, abundant in treasures, thine end is come, and the measure of thy covetousness."
                },
                "jer51.14": {
                    "id": 14,
                    "short": "Jer 51:14",
                    "name": "Jeremiah 51:14",
                    "scripture": "The Lord of hosts hath sworn by himself, saying, Surely I will fill thee with men, as with caterpillers; and they shall lift up a shout against thee."
                },
                "jer51.15": {
                    "id": 15,
                    "short": "Jer 51:15",
                    "name": "Jeremiah 51:15",
                    "scripture": "He hath made the earth by his power, he hath established the world by his wisdom, and hath stretched out the heaven by his understanding."
                },
                "jer51.16": {
                    "id": 16,
                    "short": "Jer 51:16",
                    "name": "Jeremiah 51:16",
                    "scripture": "When he uttereth his voice, there is a multitude of waters in the heavens; and he causeth the vapours to ascend from the ends of the earth: he maketh lightnings with rain, and bringeth forth the wind out of his treasures."
                },
                "jer51.17": {
                    "id": 17,
                    "short": "Jer 51:17",
                    "name": "Jeremiah 51:17",
                    "scripture": "Every man is brutish by his knowledge; every founder is confounded by the graven image: for his molten image is falsehood, and there is no breath in them."
                },
                "jer51.18": {
                    "id": 18,
                    "short": "Jer 51:18",
                    "name": "Jeremiah 51:18",
                    "scripture": "They are vanity, the work of errors: in the time of their visitation they shall perish."
                },
                "jer51.19": {
                    "id": 19,
                    "short": "Jer 51:19",
                    "name": "Jeremiah 51:19",
                    "scripture": "The portion of Jacob is not like them; for he is the former of all things: and Israel is the rod of his inheritance: the Lord of hosts is his name."
                },
                "jer51.20": {
                    "id": 20,
                    "short": "Jer 51:20",
                    "name": "Jeremiah 51:20",
                    "scripture": "Thou art my battle axe and weapons of war: for with thee will I break in pieces the nations, and with thee will I destroy kingdoms;"
                },
                "jer51.21": {
                    "id": 21,
                    "short": "Jer 51:21",
                    "name": "Jeremiah 51:21",
                    "scripture": "And with thee will I break in pieces the horse and his rider; and with thee will I break in pieces the chariot and his rider;"
                },
                "jer51.22": {
                    "id": 22,
                    "short": "Jer 51:22",
                    "name": "Jeremiah 51:22",
                    "scripture": "With thee also will I break in pieces man and woman; and with thee will I break in pieces old and young; and with thee will I break in pieces the young man and the maid;"
                },
                "jer51.23": {
                    "id": 23,
                    "short": "Jer 51:23",
                    "name": "Jeremiah 51:23",
                    "scripture": "I will also break in pieces with thee the shepherd and his flock; and with thee will I break in pieces the husbandman and his yoke of oxen; and with thee will I break in pieces captains and rulers."
                },
                "jer51.24": {
                    "id": 24,
                    "short": "Jer 51:24",
                    "name": "Jeremiah 51:24",
                    "scripture": "And I will render unto Babylon and to all the inhabitants of Chaldea all their evil that they have done in Zion in your sight, saith the Lord ."
                },
                "jer51.25": {
                    "id": 25,
                    "short": "Jer 51:25",
                    "name": "Jeremiah 51:25",
                    "scripture": "Behold, I am against thee, O destroying mountain, saith the Lord, which destroyest all the earth: and I will stretch out mine hand upon thee, and roll thee down from the rocks, and will make thee a burnt mountain."
                },
                "jer51.26": {
                    "id": 26,
                    "short": "Jer 51:26",
                    "name": "Jeremiah 51:26",
                    "scripture": "And they shall not take of thee a stone for a corner, nor a stone for foundations; but thou shalt be desolate for ever, saith the Lord ."
                },
                "jer51.27": {
                    "id": 27,
                    "short": "Jer 51:27",
                    "name": "Jeremiah 51:27",
                    "scripture": "Set ye up a standard in the land, blow the trumpet among the nations, prepare the nations against her, call together against her the kingdoms of Ararat, Minni, and Ashchenaz; appoint a captain against her; cause the horses to come up as the rough caterpillers."
                },
                "jer51.28": {
                    "id": 28,
                    "short": "Jer 51:28",
                    "name": "Jeremiah 51:28",
                    "scripture": "Prepare against her the nations with the kings of the Medes, the captains thereof, and all the rulers thereof, and all the land of his dominion."
                },
                "jer51.29": {
                    "id": 29,
                    "short": "Jer 51:29",
                    "name": "Jeremiah 51:29",
                    "scripture": "And the land shall tremble and sorrow: for every purpose of the Lord shall be performed against Babylon, to make the land of Babylon a desolation without an inhabitant."
                },
                "jer51.30": {
                    "id": 30,
                    "short": "Jer 51:30",
                    "name": "Jeremiah 51:30",
                    "scripture": "The mighty men of Babylon have forborn to fight, they have remained in their holds: their might hath failed; they became as women: they have burned her dwellingplaces; her bars are broken."
                },
                "jer51.31": {
                    "id": 31,
                    "short": "Jer 51:31",
                    "name": "Jeremiah 51:31",
                    "scripture": "One post shall run to meet another, and one messenger to meet another, to shew the king of Babylon that his city is taken at one end,"
                },
                "jer51.32": {
                    "id": 32,
                    "short": "Jer 51:32",
                    "name": "Jeremiah 51:32",
                    "scripture": "And that the passages are stopped, and the reeds they have burned with fire, and the men of war are affrighted."
                },
                "jer51.33": {
                    "id": 33,
                    "short": "Jer 51:33",
                    "name": "Jeremiah 51:33",
                    "scripture": "For thus saith the Lord of hosts, the God of Israel; The daughter of Babylon is like a threshingfloor, it is time to thresh her: yet a little while, and the time of her harvest shall come."
                },
                "jer51.34": {
                    "id": 34,
                    "short": "Jer 51:34",
                    "name": "Jeremiah 51:34",
                    "scripture": "Nebuchadrezzar the king of Babylon hath devoured me, he hath crushed me, he hath made me an empty vessel, he hath swallowed me up like a dragon, he hath filled his belly with my delicates, he hath cast me out."
                },
                "jer51.35": {
                    "id": 35,
                    "short": "Jer 51:35",
                    "name": "Jeremiah 51:35",
                    "scripture": "The violence done to me and to my flesh be upon Babylon, shall the inhabitant of Zion say; and my blood upon the inhabitants of Chaldea, shall Jerusalem say."
                },
                "jer51.36": {
                    "id": 36,
                    "short": "Jer 51:36",
                    "name": "Jeremiah 51:36",
                    "scripture": "Therefore thus saith the Lord; Behold, I will plead thy cause, and take vengeance for thee; and I will dry up her sea, and make her springs dry."
                },
                "jer51.37": {
                    "id": 37,
                    "short": "Jer 51:37",
                    "name": "Jeremiah 51:37",
                    "scripture": "And Babylon shall become heaps, a dwellingplace for dragons, an astonishment, and an hissing, without an inhabitant."
                },
                "jer51.38": {
                    "id": 38,
                    "short": "Jer 51:38",
                    "name": "Jeremiah 51:38",
                    "scripture": "They shall roar together like lions: they shall yell as lions' whelps."
                },
                "jer51.39": {
                    "id": 39,
                    "short": "Jer 51:39",
                    "name": "Jeremiah 51:39",
                    "scripture": "In their heat I will make their feasts, and I will make them drunken, that they may rejoice, and sleep a perpetual sleep, and not wake, saith the Lord ."
                },
                "jer51.40": {
                    "id": 40,
                    "short": "Jer 51:40",
                    "name": "Jeremiah 51:40",
                    "scripture": "I will bring them down like lambs to the slaughter, like rams with he goats."
                },
                "jer51.41": {
                    "id": 41,
                    "short": "Jer 51:41",
                    "name": "Jeremiah 51:41",
                    "scripture": "How is Sheshach taken! and how is the praise of the whole earth surprised! how is Babylon become an astonishment among the nations!"
                },
                "jer51.42": {
                    "id": 42,
                    "short": "Jer 51:42",
                    "name": "Jeremiah 51:42",
                    "scripture": "The sea is come up upon Babylon: she is covered with the multitude of the waves thereof."
                },
                "jer51.43": {
                    "id": 43,
                    "short": "Jer 51:43",
                    "name": "Jeremiah 51:43",
                    "scripture": "Her cities are a desolation, a dry land, and a wilderness, a land wherein no man dwelleth, neither doth any son of man pass thereby."
                },
                "jer51.44": {
                    "id": 44,
                    "short": "Jer 51:44",
                    "name": "Jeremiah 51:44",
                    "scripture": "And I will punish Bel in Babylon, and I will bring forth out of his mouth that which he hath swallowed up: and the nations shall not flow together any more unto him: yea, the wall of Babylon shall fall."
                },
                "jer51.45": {
                    "id": 45,
                    "short": "Jer 51:45",
                    "name": "Jeremiah 51:45",
                    "scripture": "My people, go ye out of the midst of her, and deliver ye every man his soul from the fierce anger of the Lord ."
                },
                "jer51.46": {
                    "id": 46,
                    "short": "Jer 51:46",
                    "name": "Jeremiah 51:46",
                    "scripture": "And lest your heart faint, and ye fear for the rumour that shall be heard in the land; a rumour shall both come one year, and after that in another year shall come a rumour, and violence in the land, ruler against ruler."
                },
                "jer51.47": {
                    "id": 47,
                    "short": "Jer 51:47",
                    "name": "Jeremiah 51:47",
                    "scripture": "Therefore, behold, the days come, that I will do judgment upon the graven images of Babylon: and her whole land shall be confounded, and all her slain shall fall in the midst of her."
                },
                "jer51.48": {
                    "id": 48,
                    "short": "Jer 51:48",
                    "name": "Jeremiah 51:48",
                    "scripture": "Then the heaven and the earth, and all that is therein, shall sing for Babylon: for the spoilers shall come unto her from the north, saith the Lord ."
                },
                "jer51.49": {
                    "id": 49,
                    "short": "Jer 51:49",
                    "name": "Jeremiah 51:49",
                    "scripture": "As Babylon hath caused the slain of Israel to fall, so at Babylon shall fall the slain of all the earth."
                },
                "jer51.50": {
                    "id": 50,
                    "short": "Jer 51:50",
                    "name": "Jeremiah 51:50",
                    "scripture": "Ye that have escaped the sword, go away, stand not still: remember the Lord afar off, and let Jerusalem come into your mind."
                },
                "jer51.51": {
                    "id": 51,
                    "short": "Jer 51:51",
                    "name": "Jeremiah 51:51",
                    "scripture": "We are confounded, because we have heard reproach: shame hath covered our faces: for strangers are come into the sanctuaries of the Lord's house."
                },
                "jer51.52": {
                    "id": 52,
                    "short": "Jer 51:52",
                    "name": "Jeremiah 51:52",
                    "scripture": "Wherefore, behold, the days come, saith the Lord, that I will do judgment upon her graven images: and through all her land the wounded shall groan."
                },
                "jer51.53": {
                    "id": 53,
                    "short": "Jer 51:53",
                    "name": "Jeremiah 51:53",
                    "scripture": "Though Babylon should mount up to heaven, and though she should fortify the height of her strength, yet from me shall spoilers come unto her, saith the Lord ."
                },
                "jer51.54": {
                    "id": 54,
                    "short": "Jer 51:54",
                    "name": "Jeremiah 51:54",
                    "scripture": "A sound of a cry cometh from Babylon, and great destruction from the land of the Chaldeans:"
                },
                "jer51.55": {
                    "id": 55,
                    "short": "Jer 51:55",
                    "name": "Jeremiah 51:55",
                    "scripture": "Because the Lord hath spoiled Babylon, and destroyed out of her the great voice; when her waves do roar like great waters, a noise of their voice is uttered:"
                },
                "jer51.56": {
                    "id": 56,
                    "short": "Jer 51:56",
                    "name": "Jeremiah 51:56",
                    "scripture": "Because the spoiler is come upon her, even upon Babylon, and her mighty men are taken, every one of their bows is broken: for the Lord God of recompences shall surely requite."
                },
                "jer51.57": {
                    "id": 57,
                    "short": "Jer 51:57",
                    "name": "Jeremiah 51:57",
                    "scripture": "And I will make drunk her princes, and her wise men, her captains, and her rulers, and her mighty men: and they shall sleep a perpetual sleep, and not wake, saith the King, whose name is the Lord of hosts."
                },
                "jer51.58": {
                    "id": 58,
                    "short": "Jer 51:58",
                    "name": "Jeremiah 51:58",
                    "scripture": "Thus saith the Lord of hosts; The broad walls of Babylon shall be utterly broken, and her high gates shall be burned with fire; and the people shall labour in vain, and the folk in the fire, and they shall be weary."
                },
                "jer51.59": {
                    "id": 59,
                    "short": "Jer 51:59",
                    "name": "Jeremiah 51:59",
                    "scripture": "The word which Jeremiah the prophet commanded Seraiah the son of Neriah, the son of Maaseiah, when he went with Zedekiah the king of Judah into Babylon in the fourth year of his reign. And this Seraiah was a quiet prince."
                },
                "jer51.60": {
                    "id": 60,
                    "short": "Jer 51:60",
                    "name": "Jeremiah 51:60",
                    "scripture": "So Jeremiah wrote in a book all the evil that should come upon Babylon, even all these words that are written against Babylon."
                },
                "jer51.61": {
                    "id": 61,
                    "short": "Jer 51:61",
                    "name": "Jeremiah 51:61",
                    "scripture": "And Jeremiah said to Seraiah, When thou comest to Babylon, and shalt see, and shalt read all these words;"
                },
                "jer51.62": {
                    "id": 62,
                    "short": "Jer 51:62",
                    "name": "Jeremiah 51:62",
                    "scripture": "Then shalt thou say, O Lord, thou hast spoken against this place, to cut it off, that none shall remain in it, neither man nor beast, but that it shall be desolate for ever."
                },
                "jer51.63": {
                    "id": 63,
                    "short": "Jer 51:63",
                    "name": "Jeremiah 51:63",
                    "scripture": "And it shall be, when thou hast made an end of reading this book, that thou shalt bind a stone to it, and cast it into the midst of Euphrates:"
                },
                "jer51.64": {
                    "id": 64,
                    "short": "Jer 51:64",
                    "name": "Jeremiah 51:64",
                    "scripture": "And thou shalt say, Thus shall Babylon sink, and shall not rise from the evil that I will bring upon her: and they shall be weary. Thus far are the words of Jeremiah."
                }
            }
        },
        "jer52": {
            "id": 52,
            "short": "Jer 52",
            "name": "Jeremiah 52",
            "verses": {
                "jer52.1": {
                    "id": 1,
                    "short": "Jer 52:1",
                    "name": "Jeremiah 52:1",
                    "scripture": "Zedekiah was one and twenty years old when he began to reign, and he reigned eleven years in Jerusalem. And his mother's name was Hamutal the daughter of Jeremiah of Libnah."
                },
                "jer52.2": {
                    "id": 2,
                    "short": "Jer 52:2",
                    "name": "Jeremiah 52:2",
                    "scripture": "And he did that which was evil in the eyes of the Lord, according to all that Jehoiakim had done."
                },
                "jer52.3": {
                    "id": 3,
                    "short": "Jer 52:3",
                    "name": "Jeremiah 52:3",
                    "scripture": "For through the anger of the Lord it came to pass in Jerusalem and Judah, till he had cast them out from his presence, that Zedekiah rebelled against the king of Babylon."
                },
                "jer52.4": {
                    "id": 4,
                    "short": "Jer 52:4",
                    "name": "Jeremiah 52:4",
                    "scripture": "And it came to pass in the ninth year of his reign, in the tenth month, in the tenth day of the month, that Nebuchadrezzar king of Babylon came, he and all his army, against Jerusalem, and pitched against it, and built forts against it round about."
                },
                "jer52.5": {
                    "id": 5,
                    "short": "Jer 52:5",
                    "name": "Jeremiah 52:5",
                    "scripture": "So the city was besieged unto the eleventh year of king Zedekiah."
                },
                "jer52.6": {
                    "id": 6,
                    "short": "Jer 52:6",
                    "name": "Jeremiah 52:6",
                    "scripture": "And in the fourth month, in the ninth day of the month, the famine was sore in the city, so that there was no bread for the people of the land."
                },
                "jer52.7": {
                    "id": 7,
                    "short": "Jer 52:7",
                    "name": "Jeremiah 52:7",
                    "scripture": "Then the city was broken up, and all the men of war fled, and went forth out of the city by night by the way of the gate between the two walls, which was by the king's garden; (now the Chaldeans were by the city round about:) and they went by the way of the plain."
                },
                "jer52.8": {
                    "id": 8,
                    "short": "Jer 52:8",
                    "name": "Jeremiah 52:8",
                    "scripture": "But the army of the Chaldeans pursued after the king, and overtook Zedekiah in the plains of Jericho; and all his army was scattered from him."
                },
                "jer52.9": {
                    "id": 9,
                    "short": "Jer 52:9",
                    "name": "Jeremiah 52:9",
                    "scripture": "Then they took the king, and carried him up unto the king of Babylon to Riblah in the land of Hamath; where he gave judgment upon him."
                },
                "jer52.10": {
                    "id": 10,
                    "short": "Jer 52:10",
                    "name": "Jeremiah 52:10",
                    "scripture": "And the king of Babylon slew the sons of Zedekiah before his eyes: he slew also all the princes of Judah in Riblah."
                },
                "jer52.11": {
                    "id": 11,
                    "short": "Jer 52:11",
                    "name": "Jeremiah 52:11",
                    "scripture": "Then he put out the eyes of Zedekiah; and the king of Babylon bound him in chains, and carried him to Babylon, and put him in prison till the day of his death."
                },
                "jer52.12": {
                    "id": 12,
                    "short": "Jer 52:12",
                    "name": "Jeremiah 52:12",
                    "scripture": "Now in the fifth month, in the tenth day of the month, which was the nineteenth year of Nebuchadrezzar king of Babylon, came Nebuzarâ€“adan, captain of the guard, which served the king of Babylon, into Jerusalem,"
                },
                "jer52.13": {
                    "id": 13,
                    "short": "Jer 52:13",
                    "name": "Jeremiah 52:13",
                    "scripture": "And burned the house of the Lord, and the king's house; and all the houses of Jerusalem, and all the houses of the great men, burned he with fire:"
                },
                "jer52.14": {
                    "id": 14,
                    "short": "Jer 52:14",
                    "name": "Jeremiah 52:14",
                    "scripture": "And all the army of the Chaldeans, that were with the captain of the guard, brake down all the walls of Jerusalem round about."
                },
                "jer52.15": {
                    "id": 15,
                    "short": "Jer 52:15",
                    "name": "Jeremiah 52:15",
                    "scripture": "Then Nebuzarâ€“adan the captain of the guard carried away captive certain of the poor of the people, and the residue of the people that remained in the city, and those that fell away, that fell to the king of Babylon, and the rest of the multitude."
                },
                "jer52.16": {
                    "id": 16,
                    "short": "Jer 52:16",
                    "name": "Jeremiah 52:16",
                    "scripture": "But Nebuzarâ€“adan the captain of the guard left certain of the poor of the land for vinedressers and for husbandmen."
                },
                "jer52.17": {
                    "id": 17,
                    "short": "Jer 52:17",
                    "name": "Jeremiah 52:17",
                    "scripture": "Also the pillars of brass that were in the house of the Lord, and the bases, and the brasen sea that was in the house of the Lord, the Chaldeans brake, and carried all the brass of them to Babylon."
                },
                "jer52.18": {
                    "id": 18,
                    "short": "Jer 52:18",
                    "name": "Jeremiah 52:18",
                    "scripture": "The caldrons also, and the shovels, and the snuffers, and the bowls, and the spoons, and all the vessels of brass wherewith they ministered, took they away."
                },
                "jer52.19": {
                    "id": 19,
                    "short": "Jer 52:19",
                    "name": "Jeremiah 52:19",
                    "scripture": "And the basins, and the firepans, and the bowls, and the caldrons, and the candlesticks, and the spoons, and the cups; that which was of gold in gold, and that which was of silver in silver, took the captain of the guard away."
                },
                "jer52.20": {
                    "id": 20,
                    "short": "Jer 52:20",
                    "name": "Jeremiah 52:20",
                    "scripture": "The two pillars, one sea, and twelve brasen bulls that were under the bases, which king Solomon had made in the house of the Lord : the brass of all these vessels was without weight."
                },
                "jer52.21": {
                    "id": 21,
                    "short": "Jer 52:21",
                    "name": "Jeremiah 52:21",
                    "scripture": "And concerning the pillars, the height of one pillar was eighteen cubits; and a fillet of twelve cubits did compass it; and the thickness thereof was four fingers: it was hollow."
                },
                "jer52.22": {
                    "id": 22,
                    "short": "Jer 52:22",
                    "name": "Jeremiah 52:22",
                    "scripture": "And a chapiter of brass was upon it; and the height of one chapiter was five cubits, with network and pomegranates upon the chapiters round about, all of brass. The second pillar also and the pomegranates were like unto these."
                },
                "jer52.23": {
                    "id": 23,
                    "short": "Jer 52:23",
                    "name": "Jeremiah 52:23",
                    "scripture": "And there were ninety and six pomegranates on a side; and all the pomegranates upon the network were an hundred round about."
                },
                "jer52.24": {
                    "id": 24,
                    "short": "Jer 52:24",
                    "name": "Jeremiah 52:24",
                    "scripture": "And the captain of the guard took Seraiah the chief priest, and Zephaniah the second priest, and the three keepers of the door:"
                },
                "jer52.25": {
                    "id": 25,
                    "short": "Jer 52:25",
                    "name": "Jeremiah 52:25",
                    "scripture": "He took also out of the city an eunuch, which had the charge of the men of war; and seven men of them that were near the king's person, which were found in the city; and the principal scribe of the host, who mustered the people of the land; and threescore men of the people of the land, that were found in the midst of the city."
                },
                "jer52.26": {
                    "id": 26,
                    "short": "Jer 52:26",
                    "name": "Jeremiah 52:26",
                    "scripture": "So Nebuzarâ€“adan the captain of the guard took them, and brought them to the king of Babylon to Riblah."
                },
                "jer52.27": {
                    "id": 27,
                    "short": "Jer 52:27",
                    "name": "Jeremiah 52:27",
                    "scripture": "And the king of Babylon smote them, and put them to death in Riblah in the land of Hamath. Thus Judah was carried away captive out of his own land."
                },
                "jer52.28": {
                    "id": 28,
                    "short": "Jer 52:28",
                    "name": "Jeremiah 52:28",
                    "scripture": "This is the people whom Nebuchadrezzar carried away captive: in the seventh year three thousand Jews and three and twenty:"
                },
                "jer52.29": {
                    "id": 29,
                    "short": "Jer 52:29",
                    "name": "Jeremiah 52:29",
                    "scripture": "In the eighteenth year of Nebuchadrezzar he carried away captive from Jerusalem eight hundred thirty and two persons:"
                },
                "jer52.30": {
                    "id": 30,
                    "short": "Jer 52:30",
                    "name": "Jeremiah 52:30",
                    "scripture": "In the three and twentieth year of Nebuchadrezzar Nebuzarâ€“adan the captain of the guard carried away captive of the Jews seven hundred forty and five persons: all the persons were four thousand and six hundred."
                },
                "jer52.31": {
                    "id": 31,
                    "short": "Jer 52:31",
                    "name": "Jeremiah 52:31",
                    "scripture": "And it came to pass in the seven and thirtieth year of the captivity of Jehoiachin king of Judah, in the twelfth month, in the five and twentieth day of the month, that Evilâ€“merodach king of Babylon in the first year of his reign lifted up the head of Jehoiachin king of Judah, and brought him forth out of prison,"
                },
                "jer52.32": {
                    "id": 32,
                    "short": "Jer 52:32",
                    "name": "Jeremiah 52:32",
                    "scripture": "And spake kindly unto him, and set his throne above the throne of the kings that were with him in Babylon,"
                },
                "jer52.33": {
                    "id": 33,
                    "short": "Jer 52:33",
                    "name": "Jeremiah 52:33",
                    "scripture": "And changed his prison garments: and he did continually eat bread before him all the days of his life."
                },
                "jer52.34": {
                    "id": 34,
                    "short": "Jer 52:34",
                    "name": "Jeremiah 52:34",
                    "scripture": "And for his diet, there was a continual diet given him of the king of Babylon, every day a portion until the day of his death, all the days of his life."
                }
            }
        }

